easyblock = 'RPackage'

name = 'rgeos'
version = '0.6-3'
versionsuffix = '-R-%(rver)s'

homepage = 'https://cran.r-project.org/web/packages/rgeos/'
description = """R interface to Geometry Engine - Open Source (GEOS) using the C API for topology operations
 on geometries"""

toolchain = {'name': 'foss', 'version': '2022a'}

source_urls = [
    'https://cran.r-project.org/src/contrib/Archive/%(name)s',  # package archive
    'https://cran.r-project.org/src/contrib/',  # current version of packages
]
sources = ['%(name)s_%(version)s.tar.gz']
checksums = ['1ebc5a99fdcf7d293811ce26379ba1525a2b9f23b11f1fb4a9c582bf27fc2b3c']

dependencies = [
    ('R', '4.2.1'),
    ('GEOS', '3.10.3'),
]

sanity_check_paths = {
    'files': [],
    'dirs': ['%(namelower)s'],
}

moduleclass = 'geo'
