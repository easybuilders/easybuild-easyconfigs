easyblock = 'CMakeMake'

name = 'RELION'
version = '3.0.4'

homepage = 'http://www2.mrc-lmb.cam.ac.uk/relion/index.php/Main_Page'
description = """RELION (for REgularised LIkelihood OptimisatioN, pronounce rely-on) is a stand-alone computer
 program that employs an empirical Bayesian approach to refinement of (multiple) 3D reconstructions or 2D class
 averages in electron cryo-microscopy (cryo-EM)."""

toolchain = {'name': 'fosscuda', 'version': '2018b'}
toolchainopts = {'openmp': True}

source_urls = ['https://github.com/3dem/relion/archive']
sources = [
    '%(version)s.tar.gz',
]
patches = [
    '%(name)s-%(version)s_no_which_cmd.patch',
    '%(name)s-3.0_beta_cuda_capabilities.patch',
    ('relion_sbatch_gpu.sh', '.'),
    ('relion_sbatch_cpu.sh', '.'),
]
checksums = [
    '2580d66088923a644bc7d3b02efd154b775a3ec3d010426f382bb3be5db9c98b',  # 3.0.4.tar.gz
    'bfdaf1ce856d20c27a5fcf50252394e81d08259899abc3564f6c7bcc2b4000de',  # RELION-3.0.4_no_which_cmd.patch
    'aedc0c7e1806094274d8442680aade810943648b08875148f5da226121753a0e',  # RELION-3.0_beta_cuda_capabilities.patch
    'eab8cf9c1fcc731386a14329e86c29350d9685fd944d76b643ab763559d1db18',  # relion_sbatch_gpu.sh
    '809b166600d371ea350ad4563ec97a9530e21ca63c950d097d914c7765203589',  # relion_sbatch_cpu.sh
]

builddependencies = [('CMake', '3.12.1')]

dependencies = [
    ('X11', '20180604'),
    ('FLTK', '1.3.4'),
    ('LibTIFF', '4.0.9'),
    ('tbb', '2018_U5'),
    ('ctffind', '4.1.10'),
    ('MotionCor2', '1.1.0', '', True),
    ('Gctf', '1.06', '', True),
]

# lowest supported capability is 3.5
cuda_compute_capabilities = ['3.5', '3.7', '5.0', '5.2', '5.3', '6.0', '6.1', '6.2', '7.0']
capabilities = [''.join(x.split('.')) for x in cuda_compute_capabilities]
cuda_arch = ';'.join(['-gencode arch=compute_%s,code=\"sm_%s,compute_%s\"' % (x, x, x) for x in capabilities])

configopts = "-DCMAKE_SHARED_LINKER_FLAGS='-lpthread' "
configopts += "-DCUDA=ON -DCudaTexture=ON "
configopts += '-DCUDA_ARCH=\'' + cuda_arch + '\''

postinstallcmds = [
    'cp relion_sbatch_cpu.sh relion_sbatch_gpu.sh %(installdir)s/bin',
    'chmod +x %(installdir)s/bin/relion_sbatch_cpu.sh %(installdir)s/bin/relion_sbatch_gpu.sh',
]

sanity_check_paths = {
    'files': ['bin/relion', 'bin/relion_refine_mpi'],
    'dirs': []
}

modextravars = {
    'RELION_QSUB_TEMPLATE': '%(installdir)s/bin/relion_sbatch_gpu.sh',
    'RELION_QUEUE_NAME': 'batch',
    'RELION_QSUB_COMMAND': 'sbatch',
    'RELION_QSUB_EXTRA_COUNT': '4',
    'RELION_QSUB_EXTRA1': 'Account',
    'RELION_QSUB_EXTRA2': 'Timelimit - format days-hh:mm:ss',
    'RELION_QSUB_EXTRA3': 'GPU - k80 or v100',
    'RELION_QSUB_EXTRA4': 'number of GPU cards, 1 or 2',
    'RELION_ERROR_LOCAL_MPI': '1',
    'RELION_CTFFIND_EXECUTABLE': 'ctffind',
    'RELION_GCTF_EXECUTABLE': 'Gctf',
    'RELION_MOTIONCOR2_EXECUTABLE': 'motioncor2',
}

moduleclass = 'bio'
