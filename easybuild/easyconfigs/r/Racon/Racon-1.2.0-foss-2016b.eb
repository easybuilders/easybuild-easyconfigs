easyblock = 'CMakeMake'

name = 'Racon'
version = '1.2.0'

homepage = 'https://github.com/isovic/racon'
description = 'Ultrafast consensus module for raw de novo genome assembly of long uncorrected reads'

toolchain = {'name': 'foss', 'version': '2016b'}

# no source_urls because the tarball has to be manually generated doing
# git clone --recursive https://github.com/isovic/racon.git racon
# cd racon
# git reset --hard 7295b9b  # specific to v1.2.0
# cd ..
# mv racon racon-1.2.0
# tar cfvz racon-1.2.0.tar.gz racon-1.2.0
sources = ['%(namelower)s-%(version)s.tar.gz']

unpack_options = '--strip-components=1'

builddependencies = [
    ('CMake', '3.5.2'),
]

sanity_check_paths = {
    'files': ['bin/racon'],
    'dirs': []
}

moduleclass = 'bio'
