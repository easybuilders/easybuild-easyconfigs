easyblock = 'PythonPackage'

name = 'Rtree'
version = '0.8.3'
versionsuffix = '-Python-%(pyver)s'

homepage = 'http://toblerity.org/rtree/'
description = """Rtree is a ctypes Python wrapper of libspatialindex that provides a number of advanced spatial
 indexing features for the spatially curious Python user."""

toolchain = {'name': 'intel', 'version': '2018a'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]
checksums = ['6cb9cf3000963ea6a3db777a597baee2bc55c4fc891e4f1967f262cc96148649']

dependencies = [
    ('Python', '2.7.14'),
    ('libspatialindex', '1.8.5'),
]

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'data'
