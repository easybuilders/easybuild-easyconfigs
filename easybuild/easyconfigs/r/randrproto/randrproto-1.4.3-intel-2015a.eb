easyblock = 'ConfigureMake'

name = 'randrproto'
version = '1.4.3'

description = "X Resize and Rotate Extension (RandR)"
 
toolchain = {'name': 'intel', 'version': '2015a'}

# The following are automatically calculated - cross fingers
sources = ['randrproto-1.4.0.tar.gz']
source_urls = ['http://ftp.x.org/pub/individual/proto/','download']
homepage = 'http://cgit.freedesktop.org/xorg/proto/randrproto/'


dependencies = [
    ('xproto', '7.0.27'),
    ('libXrender', '0.9.8'),
    ('libX11', '1.6.2', '-Python-2.7.9')
]

sanity_check_paths = {
    'files': [],
    'dirs': ['.'] # fixme when the compilation is successful
}

maxparallel = 1 # this is a conservative choice

moduleclass = 'vis'
