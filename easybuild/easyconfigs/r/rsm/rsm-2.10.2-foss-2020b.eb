easyblock = 'Bundle'

name = 'rsm'
version = '2.10.2'

homepage = 'https://cran.r-project.org/web/packages/rsm/index.html'
description = """Provides functions to generate response-surface designs, fit first- and second-order response-surface 
  models, make surface plots, obtain the path of steepest ascent, and do canonical analysis"""

toolchain = {'name': 'foss', 'version': '2020b'}

dependencies = [
    ('R', '4.0.3'),
    ('R-bundle-Bioconductor', '3.12', '-R-%(rver)s'),
]

exts_defaultclass = 'RPackage'

exts_default_options = {
    'source_tmpl': '%(name)s_%(version)s.tar.gz',
    'source_urls': ['https://cran.r-project.org/src/contrib/'],
}

exts_list = [
    (name, version, {
        'checksums': ['66446cfb4298f1b306be286d1f2cd8b7f68acc900d3cc0d9a054aa48e192091c'],
    }),
]

modextrapaths = {'R_LIBS': ''}

sanity_check_paths = {
    'files': [],
    'dirs': [name],
}

moduleclass = 'math'
