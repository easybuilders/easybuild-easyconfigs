easyblock = 'PythonBundle'

name = 'reikna'
version = '0.7.5'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://github.com/fjarri/reikna'
description = """Reikna is a library containing various GPU algorithms built on top of PyCUDA and PyOpenCL."""

toolchain = {'name': 'fosscuda', 'version': '2019b'}

dependencies = [
    ('Python', '3.7.4'),
    ('SciPy-bundle', '2019.10', versionsuffix),
    ('Mako', '1.1.0'),
]

use_pip = True

exts_default_options = {'source_urls': [PYPI_SOURCE]}

exts_list = [
    ('funcsigs', '1.0.2', {
        'checksums': ['a7bb0f2cf3a3fd1ab2732cb49eba4252c2af4240442415b4abce3b87022a8f50'],
    }),
    (name, version, {
        'modulename': 'reikna',
        'checksums': ['d01f4264c8379ef2962a93aacb002d491b92ef9b5b22b45f77e7821dfa87bef7'],
    }),
]

sanity_pip_check = True

moduleclass = 'lib'
