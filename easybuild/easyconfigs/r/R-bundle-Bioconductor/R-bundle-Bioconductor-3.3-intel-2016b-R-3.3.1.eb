easyblock = 'Bundle'

name = 'R-bundle-Bioconductor'
version = '3.3'
versionsuffix = '-R-%(rver)s'

homepage = 'https://www.r-project.org/'
description = """R is a free software environment for statistical computing and graphics."""

toolchain = {'name': 'intel', 'version': '2016b'}

dependencies = [
    ('R', '3.3.1'),
    ('HDF5', '1.8.17'),  # for rhdf5
]

local_name_tmpl = '%(name)s_%(version)s.tar.gz'
local_ext_options = {
    'source_urls': [
        'https://cran.r-project.org/src/contrib/Archive/%(name)s',  # package archive
        'https://cran.r-project.org/src/contrib/',  # current version of packages
        'https://cran.freestatistics.org/src/contrib',  # mirror alternative for current packages
    ],
    'source_tmpl': local_name_tmpl,
}
exts_default_options = {
    'source_urls': [
        'https://bioconductor.org/packages/3.3/bioc/src/contrib/',
        'https://bioconductor.org/packages/3.3/data/annotation/src/contrib/',
        'https://bioconductor.org/packages/3.3/data/experiment/src/contrib/',
    ],
    'source_tmpl': local_name_tmpl,
}

exts_defaultclass = 'RPackage'
exts_filter = ("R -q --no-save", "library(%(ext_name)s)")

