# SIB Swiss Institute of Bioinformatics

easyblock = 'Bundle'

name = 'rPython'
version = '0.0-6'
versionsuffix = '-R-%(rver)s-Python-%(pyver)s'

homepage = 'http://rpython.r-forge.r-project.org/'
description = """This package allows the user to call Python from R"""

toolchain = {'name': 'goolf', 'version': '1.7.20'}

dependencies = [
    ('R', '3.3.1'),
    ('Python', '2.7.11'),
]

name_tmpl = '%(name)s_%(version)s.tar.gz'
ext_options = {
    'source_urls': [
        'http://cran.r-project.org/src/contrib/Archive/%(name)s',  # package archive
        'http://cran.r-project.org/src/contrib/',  # current version of packages
        'http://cran.freestatistics.org/src/contrib',  # mirror alternative for current packages
    ],
    'source_tmpl': name_tmpl,
}

exts_defaultclass = 'RPackage'
exts_filter = ("R -q --no-save", "library(%(ext_name)s)")

# !! order of packages is important !!
exts_list = [
    ('RJSONIO', '1.3-0', ext_options),
    ('rPython', version, ext_options),
]

modextrapaths = {'R_LIBS': ''}

sanity_check_paths = {
    'files': ['rPython/libs/rPython.so'],
    'dirs': [],
}

moduleclass = 'lib'
