easyblock = 'CMakeMake'

name = 'RStudio-Server'
version = '1.3.1093'
versionsuffix = '-Java-%(javaver)s-R-%(rver)s'

homepage = 'https://www.rstudio.com/'
description = """This is the RStudio Server version.
RStudio is a set of integrated tools designed to help you be more productive with R.

The server can be started with:
  rserver --server-daemonize=0 --www-port 8787 --rsession-which-r=$(which R)
"""

toolchain = {'name': 'foss', 'version': '2021a'}

source_urls = ['https://github.com/rstudio/rstudio/archive']
sources = ['v%(version)s.tar.gz']
patches = ['RStudio-Server-1.3.1093_fix_Boost.patch']
checksums = [
    'af8dc5e71ee934043856938af2e2065d1f1efef08aba37962ed03f6ccb8201bb',  # v1.3.1093.tar.gz
    '3dbcf0c409c15f15955efeb59140abf36367787cd4104e536b1d061a5e2a97b7',  # RStudio-Server-1.3.1093_fix_Boost.patch
]

builddependencies = [
    ('pkg-config', '0.29.2'),
    ('CMake', '3.20.1'),
    ('ant', '1.10.9', '-Java-%(javaver)s', True),
]

dependencies = [
    ('Boost', '1.76.0'),
    ('R', '4.1.0'),
    ('Java', '11', '', True),
]

osdependencies = [
    ('pam-devel', 'libpam0g-dev')
]

build_type = "Release"
local_dep_dir = "%(builddir)s/rstudio-%(version)s/dependencies/common"
preconfigopts = ("(cd %s && ./install-dictionaries && "
                 "./install-pandoc && ./install-mathjax) && ") % local_dep_dir
configopts = "-DRSTUDIO_TARGET=Server -DRSTUDIO_BOOST_SIGNALS_VERSION=2"

sanity_check_paths = {
    'files': ["bin/rstudio-server"],
    'dirs': ['bin', 'extras', 'resources', 'www', 'www-symbolmaps', 'R'],
}

moduleclass = 'lang'
