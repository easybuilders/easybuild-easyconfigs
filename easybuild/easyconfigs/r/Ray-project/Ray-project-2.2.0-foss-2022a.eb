    }),
    ('Ray', version, {
        'source_tmpl': '%(namelower)s-%(version)s-cp310-cp310-manylinux2014_x86_64.whl',
        'checksums': ['656768c6f7c15e9ae32cc624b065dfdc99e1a12a0b9aa787602cbcaf8308ab20'],
