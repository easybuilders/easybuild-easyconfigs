# This file is an EasyBuild reciPY as per https://github.com/hpcugent/easybuild
# Author: Pablo Escobar Lopez
# sciCORE - University of Basel
# SIB Swiss Institute of Bioinformatics 

easyblock = 'ConfigureMake'

name = "RSEM"
version = "1.2.31"

homepage = 'http://deweylab.biostat.wisc.edu/rsem/'
description = """ RSEM is a software package for estimating gene and isoform expression 
 levels from RNA-Seq data. The RSEM package provides an user-friendly interface, supports 
 threads for parallel computation of the EM algorithm, single-end and paired-end read data, 
 quality scores, variable-length reads and RSPD estimation. """

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ['https://github.com/deweylab/RSEM/archive/']
sources = ['v%(version)s.tar.gz']

unpack_options = '--strip-components=1'

# RSEM will use bowtie / bowtie2 / STAR if found in user $PATH
# add them as dependencies if required
#dependencies = [
#    ('Bowtie', '1.0.0'),
#]

skipsteps = ['configure', 'install']

buildininstalldir = True

parallel = 1

sanity_check_paths = {
    'files': ["rsem-get-unique", "rsem-sam-validator", 
	      "rsem-tbam2gbam", "rsem-run-gibbs"],
    'dirs': []
}

# add the installation dir to PATH
modextrapaths = {
      'PATH': "",
}

moduleclass = 'bio'
