# This easyconfig was created by the BEAR Software team at the University of Birmingham.
easyblock = 'PythonPackage'

name = 'rmats2sashimiplot'
version = '2.0.4'

homepage = "https://github.com/Xinglab/rmats2sashimiplot"
description = """rmats2sashimiplot produces a sashimiplot visualization of rMATS output. 
rmats2sashimiplot can also produce plots using an annotation file and genomic coordinates. 
The plotting backend is MISO."""

toolchain = {'name': 'foss', 'version': '2021a'}

sources = [SOURCE_TAR_GZ]
checksums = ['2bd76cc2e95a6b3dcd81e0ff212261cd2891d28e4ac314b5211489a6b426a9d3']

dependencies = [
    ('Python', '3.9.5'),
    ('SciPy-bundle', '2021.05'),
    ('matplotlib', '3.4.2'),
    ('Pysam', '0.16.0.1'),
    ('SAMtools', '1.12'),
    ('BEDTools', '2.30.0'),
]

use_pip = True
sanity_pip_check = True
download_dep_fail = True

preinstallopts = '2to3 -w -n src && '

sanity_check_paths = {
    'files': ['bin/rmats2sashimiplot'],
    'dirs': [],
}

modextrapaths = {'PATH': 'bin/'}

sanity_check_commands = [
       ("rmats2sashimiplot -h"),
]

moduleclass = 'bio'
