easyblock = 'RPackage'

name = 'renv'
version = '0.15.4'
versionsuffix = '-R-%(rver)s'

homepage = 'https://rstudio.github.io/renv/'
description = """The renv package helps you create reproducible environments for your R
projects. Use renv to make your R projects more isolated, portable, and
reproducible."""

toolchain = {'name': 'foss', 'version': '2021b'}

source_urls = [
    'https://cran.r-project.org/src/contrib/Archive/%(name)s',  # package archive
    'https://cran.r-project.org/src/contrib/',  # current version of packages
    'https://cran.freestatistics.org/src/contrib',  # mirror alternative for current packages
]
sources = ['%(name)s_%(version)s.tar.gz']
checksums = ['8eba32c49eed53ce396a8963d02dc4877530a251fa6cd973fbd8c3e619d1ce2f']

dependencies = [('R', '4.2.0')]

sanity_check_paths = {
    'files': [],
    'dirs': [name],
}

moduleclass = 'devel'
