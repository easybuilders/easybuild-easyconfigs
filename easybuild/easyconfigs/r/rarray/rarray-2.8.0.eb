easyblock = 'ConfigureMake'

name = 'rarray'
version = '2.8.0'

homepage = 'https://github.com/vanzonr/rarray'
description = "rarray is a C++ library for reference counted multidimensional arrays. It is a header-only implementation that uses templates, which allows most compilers to generate fast code."

# Header-only libraries
toolchain = SYSTEM

github_account = 'vanzonr'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['805c6cc442934980d1bb9dacf5a8cd59af42dd53d3f40038a532fb55cb88ac64']

skipsteps = ['build']

sanity_check_paths = {
    'files': ['include/%(name)s'],
    'dirs': ['include', 'share'],
}

moduleclass = 'lib'
