easyblock='Binary'

name = "ResMap"
version = "1.1.4"
versionsuffix = "-linux64"

homepage = 'http://resmap.sourceforge.net/'
description = """ ResMap (Resolution Map) is a Python (NumPy/SciPy) application with a Tkinter GUI. 
 It is an easy to use software package for computing the local resolution of 3D density maps studied 
 in structural biology, primarily electron cryo-microscopy (cryo-EM). """

toolchain = {'name': 'dummy', 'version': 'dummy'}

source_urls = [('http://sourceforge.net/projects/resmap/files/', 'download')]
sources = ['%(name)s-%(version)s%(versionsuffix)s']

buildininstalldir = True

# don't run any command. Just copy the binary to install_dir
install_cmd = ''

sanity_check_paths = {
    'files': ['%(name)s-%(version)s%(versionsuffix)s'],
    'dirs': []
}

# add the installation dir to PATH
modextrapaths = { 
     'PATH': "",
     }

moduleclass = 'bio'

