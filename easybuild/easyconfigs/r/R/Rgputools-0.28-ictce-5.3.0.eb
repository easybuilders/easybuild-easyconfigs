name = 'Rgputools'
version = '0.28'

homepage = 'https://github.com/nullsatz/gputools/wiki'
description = """This package provides R interfaces to a handful of common functions implemented
  using the Nvidia CUDA toolkit. Some of the functions require at least GPU Compute Capability 1.3."""

toolchain = {'name': 'ictce', 'version': '5.3.0'}

#http://cran.r-project.org/src/contrib/gputools_0.28.tar.gz
#sources = [SOURCE_TAR_GZ]
sources = ['gputools_0.28.tar.gz']
source_urls = [
               'http://cran.us.r-project.org/src/base/R-%s' % version.split('.')[0],  # R itself
               'http://cran.r-project.org/src/contrib/Archive/',  # package archive
               'http://cran.freestatistics.org/src/contrib',  # alternative for packages
              ]

r = 'R'
rver = '3.0.1'
versionsuffix = '-%s-%s' % (r, rver)

dependencies = [
    (r, rver, '-bare'),
    ('CUDA', '5.0.35', '-1', True),
]

start_dir = 'src'

#skipsteps = ['configure', 'install']
skipsteps = ['configure']

preinstallopts = 'touch /home/users/fgeorgatos/.local/easybuild/software/Rgputools/0.28-ictce-5.3.0-R-3.0.1/hello && /bin/true '

premakeopts = 'R_HOME=$EBROOTR/lib64/R '

sanity_check_paths = {
    'files': [],
    'dirs': ['.']
}

options = {'modulename': name}

#moduleclass = 'math'
moduleclass = 'tools'
