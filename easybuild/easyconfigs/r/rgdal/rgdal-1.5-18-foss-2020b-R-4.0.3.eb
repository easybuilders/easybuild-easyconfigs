# This easyconfig was created by Simon Branford of the BEAR Software team at the University of Birmingham.
easyblock = 'RPackage'

name = 'rgdal'
version = '1.5-18'
versionsuffix = '-R-%(rver)s'

homepage = "https://rgdal.r-forge.r-project.org/"
description = """Provides bindings to the 'Geospatial' Data Abstraction Library ('GDAL') (>= 1.11.4 and <= 2.5.0) and
 access to projection/transformation operations from the 'PROJ.4' library."""

toolchain = {'name': 'foss', 'version': '2020b'}

source_urls = [
    'https://cran.r-project.org/src/contrib/Archive/%(name)s',  # package archive
    'https://cran.r-project.org/src/contrib/',  # current version of packages
    'https://cran.freestatistics.org/src/contrib',  # mirror alternative for current packages
]
sources = ['%(name)s_%(version)s.tar.gz']
checksums = ['53467c19bc93d8ea311458eaa281c8c456168ab75e84d76ef5cc6c00f53122df']

dependencies = [
    ('R', '4.0.3'),
    ('GDAL', '3.2.1'),
]

sanity_check_paths = {
    'files': ['rgdal/R/rgdal'],
    'dirs': [],
}

moduleclass = 'geo'
