easyblock = 'PythonPackage'

name = 'rioxarray'
version = '0.1.1'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://github.com/corteva/rioxarray'
description = "geospatial xarray extension powered by rasterio"

toolchain = {'name': 'foss', 'version': '2020a'}

sources = [SOURCELOWER_TAR_GZ]
checksums = ['635bf755beaae9414f5a19cc6dd5bde7a04dfbf38b7a02d152754653f79e4330']

dependencies = [
    ('Python', '3.8.2'),
    ('SciPy-bundle', '2020.03', versionsuffix),
    ('rasterio', '1.1.7', versionsuffix),
    ('pyproj', '2.6.1.post1', versionsuffix),
    ('xarray', '0.16.1', versionsuffix),
]

download_dep_fail = True
use_pip = True
sanity_pip_check = True

moduleclass = 'geo'
