easyblock = 'ConfigureMake'

name = 'RAxML'
version = '7.3.0'
versionsuffix ='-pthreads'

homepage = 'https://github.com/stamatak/standard-RAxML'
description = "RAxML search algorithm for maximum likelihood based inference of phylogenetic trees."

toolchain = {'name': 'goolf', 'version': '1.7.20'}

# download from http://sco.h-its.org/exelixis/countSource726.php
source_urls = ['http://sco.h-its.org/exelixis/resource/download/software/']
sources = [SOURCE_TAR_BZ2]

skipsteps = ['configure', 'install']

buildopts = '-f Makefile.PTHREADS.gcc CC="$CC" && mkdir -p %(installdir)s/bin && cp raxmlHPC-PTHREADS %(installdir)s/bin/ && cd %(installdir)s/bin/ && ln -s raxmlHPC-PTHREADS raxmlHPC'

sanity_check_paths = {
    'files': ["bin/raxmlHPC-PTHREADS"],
    'dirs': [],
}

moduleclass = 'bio'
