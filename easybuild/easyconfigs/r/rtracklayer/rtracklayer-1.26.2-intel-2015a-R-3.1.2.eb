easyblock = 'RPackage'

name = 'rtracklayer'
version = '1.26.2'

homepage = 'http://bioconductor.org/packages/release/bioc/html/rtracklayer.html'
description = """Extensible framework for interacting with multiple genome browsers (currently UCSC built-in) and
 manipulating annotation tracks in various formats (currently GFF, BED, bedGraph, BED15, WIG, BigWig and 2bit
 built-in)."""

toolchain = {'name': 'intel', 'version': '2015a'}

source_urls = ['http://www.bioconductor.org/packages/3.0/bioc/src/contrib/']
sources = ['%(name)s_%(version)s.tar.gz']

r = 'R'
rver = '3.1.2'

versionsuffix = '-%s-%s' % (r, rver)

dependencies = [
    (r, rver),
    ('RCurl', '1.95-4.5', versionsuffix),
    ('XML', '3.98-1.1', versionsuffix),
]

moduleclass = 'math'
