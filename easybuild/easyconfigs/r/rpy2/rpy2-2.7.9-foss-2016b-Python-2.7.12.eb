easyblock = 'PythonPackage'

name = 'rpy2'
version = '2.7.9'
versionsuffix = '-Python-%(pyver)s'

homepage = 'http://rpy.sourceforge.net/'

description = """rpy2 is a redesign and rewrite of rpy. It is providing a low-level 
