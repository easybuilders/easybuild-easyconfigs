homepage = 'http://sourceforge.net/projects/denovoassembler/'
description = """Ray -- Parallel genome assemblies for parallel DNA sequencing. 
Ray assembles reads obtained with new sequencing technologies (Illumina, 454, SOLiD) using MPI 2.2"""
name = 'Ray'
version = '2.3.0'

easyblock = "MakeCp"


# site specific customization, remove at will.
makeopts = 'MAXKMERLENGTH=250 FORCE_PACKING=y'

toolchain = {'name': 'goolf', 'version': '1.4.10'}
toolchainopts = {'usempi': True,'optarch': True}


sources = [SOURCE_TAR_BZ2]
source_urls = ['http://sourceforge.net/projects/denovoassembler/files', 'download']

dependencies = [('zlib','1.2.8')]


files_to_copy = [(["Ray"],'bin')]


sanity_check_paths = {
    'files': ['bin/Ray'],
    'dirs': [],
}

moduleclass = 'bio'
