easyblock = 'ConfigureMake'

name = 'libgpg-error'
version = '1.56'

homepage = 'https://gnupg.org/related_software/libgpg-error/index.html'
description = """Libgpg-error is a small library that defines common error
values for all GnuPG components."""

toolchain = {'name': 'GCCcore', 'version': '14.2.0'}

source_urls = ['https://gnupg.org/ftp/gcrypt/%(name)s/']
sources = [SOURCE_TAR_BZ2]
checksums = ['82c3d2deb4ad96ad3925d6f9f124fe7205716055ab50e291116ef27975d169c0']

builddependencies = [('binutils', '2.42')]

sanity_check_paths = {
    'files': ['bin/gpg-error', 'include/gpg-error.h', 'lib/libgpg-error.%s' % SHLIB_EXT],
    'dirs': ['share']
}

moduleclass = 'system'
