description = """LST-AI - Deep Learning Ensemble for Accurate MS Lesion Segmentation."""

toolchain = {'name': 'foss', 'version': '2023a'}

dependencies = [
    ('CUDA', '12.1.1', '', SYSTEM),
    ('Python', '3.11.3'),
    ('Python-bundle-PyPI', '2023.06'),
    ('SciPy-bundle', '2023.07'),
    ('Pillow', '10.0.0'),
    ('scikit-image', '0.22.0'),
    ('TensorFlow', '2.15.1', versionsuffix),
