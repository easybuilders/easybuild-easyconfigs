easyblock = 'CMakeMake'

name = 'libharu'
version = '2.4.3'

homepage = 'https://github.com/libharu/libharu/'
description = """libHaru is a free, cross platform, open source library for generating PDF files."""

toolchain = {'name': 'GCCcore', 'version': '12.2.0'}

source_urls = [GITHUB_SOURCE]  # https://github.com/libharu/libharu/archive/
sources = ['v%(version)s.tar.gz']
checksums = ['a2c3ae4261504a0fda25b09e7babe5df02b21803dd1308fdf105588f7589d255']

builddependencies = [
    ('binutils', '2.39'),
    ('CMake', '3.24.3'),
]

dependencies = [('libpng', '1.6.38')]

parallel = 1

sanity_check_paths = {
    'files': ['lib64/libhpdf.%s' % SHLIB_EXT],
    'dirs': [
        'include',
        'lib',
        'share',
    ]
}

moduleclass = 'lib'
