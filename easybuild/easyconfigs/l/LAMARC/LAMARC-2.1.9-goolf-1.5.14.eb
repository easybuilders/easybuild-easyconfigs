name = "LAMARC" 
version = "2.1.9" 

homepage = "http://evolution.gs.washington.edu/lamarc/index.html" 
description = """Estimates population-genetic parameters such as population size, population growth rate, recombination rate, and migration rates."""

toolchain = {'version': '1.5.14', 'name': 'goolf'} 

sources = ['%(namelower)s-%(version)s-src.tgz'] 
source_urls = ['http://evolution.gs.washington.edu/lamarc/download/'] 

patches = ['LAMARC-forward-decl-of-Pretty.patch', 'LAMARC-duplicated-forces-doc.patch']

# Probably only for version 2.1.9 which includes wxWidgets 2.9.3
preconfigopts = """
sed -i.b 's/wxWidgets-2.8.12/wxWidgets-2.9.3/' Makefile.in && 
sed -i.b 's/wxProvidedMinorVersion=8/wxProvidedMinorVersion=9/' configure &&
sed -i.b 's/wxProvidedPatchVersion=12/wxProvidedPatchVersion=3/' configure &&
"""

configopts = "--disable-gui --enable-buildwx"

sanity_check_paths = {
    'files': ['bin/lamarc'],
    'dirs': ["."]
}

moduleclass = 'bio'
