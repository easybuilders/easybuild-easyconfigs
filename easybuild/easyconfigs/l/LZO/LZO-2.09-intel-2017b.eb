easyblock = 'ConfigureMake'

name = 'LZO'
version = '2.09'

homepage = 'http://www.oberhumer.com/opensource/lzo/'
description = "Portable lossless data compression library"

source_urls = [homepage + 'download/']
sources = [SOURCELOWER_TAR_GZ]
