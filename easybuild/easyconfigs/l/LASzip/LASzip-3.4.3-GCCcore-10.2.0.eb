easyblock = 'CMakeMake'

name = 'LASzip'
version = '3.4.3'

homepage = 'http://laszip.org/'
description = '''LASzip - a free open source product of rapidlasso GmbH - quickly turns bulky
                  LAS files into compact LAZ files without information loss'''

toolchain = {'name': 'GCCcore', 'version': '10.2.0'}

source_urls = ['https://github.com/%(namelower)s/%(namelower)s/archive/']
sources = ['%(version)s.tar.gz']
checksums = ['862715affa00609b78b4f469ab5529fee659c597efd40b5006b4305dd56c22d3']

builddependencies = [
    ('CMake', '3.18.4'),
    ('binutils', '2.35'),
]

sanity_check_paths = {
    'files': ["lib/liblaszip.%s" % SHLIB_EXT, "include/laszip/laszip_api_version.h"],
    'dirs': ["include/laszip"]
}

moduleclass = 'data'
