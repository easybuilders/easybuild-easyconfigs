easyblock = "ConfigureMake"

name = "libpcap"
version = "1.10.0"

homepage = "https://www.tcpdump.org"
description = "System-independent interface for user-level packet capture."

toolchain = {'name': 'GCCcore', 'version': '11.2.0'}

source_urls = ["https://www.tcpdump.org/release/"]
sources = [SOURCELOWER_TAR_GZ]
checksums = ['8d12b42623eeefee872f123bd0dc85d535b00df4d42e865f993c40f7bfc92b1e']

builddependencies = [
    ('binutils', '2.37'),
    ('Bison', '3.7.6'),
    ('flex', '2.6.4'),
]

sanity_check_paths = {
    'files': ['include/pcap.h', 'lib/libpcap.a', 'lib/libpcap.%s' % SHLIB_EXT, 'lib/libpcap.%s.1' % SHLIB_EXT,
              'lib/libpcap.%s.1.10.0' % SHLIB_EXT],
    'dirs': ['bin', 'lib', 'share/man'],
}

moduleclass = "lib"
