# Author: Jasper Grimm (UoY)
easyblock = 'MesonNinja'

name = 'libgxps'
version = '0.3.2'

homepage = 'https://wiki.gnome.org/Projects/libgxps'
description = "libgxps is a GObject based library for handling and rendering XPS documents."

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = [FTPGNOME_SOURCE]
sources = [SOURCE_TAR_XZ]
checksums = ['6d27867256a35ccf9b69253eb2a88a32baca3b97d5f4ef7f82e3667fa435251c']

builddependencies = [
    ('binutils', '2.44'),
    ('Meson', '1.8.2'),
    ('Ninja', '1.13.0'),
    ('pkgconf', '2.4.3'),
    ('CMake', '3.31.8'),
]

dependencies = [
    ('GLib', '2.85.3'),
    ('GObject-Introspection', '1.84.0'),
    ('cairo', '1.18.4'),
    ('libarchive', '3.8.1'),
    ('freetype', '2.13.3'),
    ('libjpeg-turbo', '3.1.1'),
    ('LibTIFF', '4.7.0'),
    ('libpng', '1.6.50'),
    ('zlib', '1.3.1'),
    ('LittleCMS', '2.17'),
    ('GTK3', '3.24.43'),
]

_bins = [f'xpsto{x}' for x in ['jpeg', 'pdf', 'png', 'ps', 'svg']]

sanity_check_paths = {
    'files': [f'lib/{name}.{SHLIB_EXT}'] + [f'bin/{x}' for x in _bins],
    'dirs': [f'include/{name}', 'lib/pkgconfig'],
}

sanity_check_commands = [f'{x} --help' for x in _bins]

moduleclass = 'lib'
