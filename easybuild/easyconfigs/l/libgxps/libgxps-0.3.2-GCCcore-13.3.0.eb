checksums = ['6d27867256a35ccf9b69253eb2a88a32baca3b97d5f4ef7f82e3667fa435251c']

builddependencies = [
    ('binutils', '2.42'),
    ('Meson', '1.4.0'),
    ('Ninja', '1.12.1'),
    ('pkgconf', '2.2.0'),
    ('CMake', '3.29.3'),
]

dependencies = [
    ('GLib', '2.80.4'),
    ('GObject-Introspection', '1.80.1'),
    ('cairo', '1.18.0'),
    ('libarchive', '3.7.4'),
    ('freetype', '2.13.2'),
    ('libjpeg-turbo', '3.0.1'),
    ('LibTIFF', '4.6.0'),
    ('libpng', '1.6.43'),
    ('zlib', '1.3.1'),
    ('LittleCMS', '2.16'),
    ('GTK3', '3.24.42'),
]

sanity_check_paths = {
    'files': ['lib/%%(name)s.%s' % SHLIB_EXT],
    'dirs': [],
}

moduleclass = 'lib'
