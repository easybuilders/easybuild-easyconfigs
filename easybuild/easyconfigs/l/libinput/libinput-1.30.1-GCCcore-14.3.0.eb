easyblock = 'MesonNinja'

name = 'libinput'
version = '1.30.1'

homepage = 'https://gitlab.freedesktop.org/libinput/libinput/'
description = 'Input device management and event handling library'

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = ['https://gitlab.freedesktop.org/libinput/libinput/-/archive/%(version)s/']
sources = [SOURCELOWER_TAR_GZ]
checksums = ['4339a2b9cc96ede3c120dedaedc61e48ce567808c5229e66587525ea972ef617']

osdependencies = [('libsystemd-dev', 'libudev-dev', 'systemd-devel')]

builddependencies = [
    ('binutils', '2.44'),
    ('Meson', '1.8.2'),
    ('Ninja', '1.13.0'),
    ('Check', '0.15.2'),
]

dependencies = [
    ('libevdev', '1.13.6'),
]

configopts = ' '.join([
    '-Dmtdev=false',
    '-Dlibwacom=false',
    '-Ddebug-gui=false',
])

sanity_check_paths = {
    'files': [f'lib/libinput.{SHLIB_EXT}', 'bin/libinput'],
    'dirs': ['include'],
}

sanity_check_commands = ['libinput -h']

moduleclass = 'tools'
