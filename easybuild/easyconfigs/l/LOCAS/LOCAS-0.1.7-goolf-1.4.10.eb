###############################################################################
# no version is provided in the source file name (locas.tar.gz) so you should run 
# the binary after compilation to verify if the version is correct
##############################################################################

easyblock = 'MakeCp'

name = 'LOCAS'
version = '0.1.7' 

homepage = 'http://ab.inf.uni-tuebingen.de/software/locas/'
description = """ LOCAS is a programm to assemble short reads of second generation 
 sequencing technologies. It explicitly handles low coverage data by allowing mismatches 
 in the overlap alignment of reads."""

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ['http://ab.inf.uni-tuebingen.de/software/locas/']
sources = ['%(namelower)s.tar.gz']

parallel = 1

files_to_copy = [(["locas", "superlocas"], "bin"), "LOCAS_Manual.pdf"]
        
sanity_check_paths = {
    'files': ["bin/locas", "bin/superlocas"],
    'dirs': [""],
}

moduleclass = 'bio'

