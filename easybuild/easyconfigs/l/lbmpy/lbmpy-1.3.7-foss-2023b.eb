easyblock = 'PythonPackage'

name = 'lbmpy'
version = '1.3.7'

homepage = 'https://i10git.cs.fau.de/pycodegen/lbmpy'
description = """Code Generation for Lattice Boltzmann Methods"""

toolchain = {'name': 'foss', 'version': '2023b'}

sources = ['lbmpy-%(version)s.tar.gz']
checksums = ['493d4d2a04a101200b6e217afcf99ed66bfbf430747bacd4cda01f522cbb7ba2']

dependencies = [
    ('Python', '3.11.5'),
    ('pystencils', '1.3.4'),
]

options = {'modulename': 'lbmpy'}

sanity_check_paths = {
    'files': ['lib/python%(pyshortver)s/site-packages/lbmpy/__init__.py'],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'chem'
