easyblock = 'ConfigureMake'

name = 'libspatialite'
version = '5.0.1'
versionsuffix = '-Python-3.8.6'

homepage = "https://www.gaia-gis.it/fossil/libspatialite/home"
description = """SpatiaLite is an open source library intended to extend the SQLite core to support
 fully fledged Spatial SQL capabilities."""

toolchain = {'name': 'GCC', 'version': '10.2.0'}
toolchainopts = {'pic': True}

source_urls = ['https://www.gaia-gis.it/gaia-sins/']
sources = [SOURCE_TAR_GZ]
checksums = [
    'eecbc94311c78012d059ebc0fae86ea5ef6eecb13303e6e82b3753c1b3409e98',  # libspatialite-5.0.1.tar.gz
]

builddependencies = [('CMake', '3.18.4')]

dependencies = [
    ('FreeXL', '1.0.6'),
    ('GEOS', '3.8.2', versionsuffix),
    ('SQLite', '3.33.0'),
    ('PROJ', '7.2.1'),
    ('libxml2', '2.9.10'),
    ('zlib', '1.2.11'),
    ('OpenSSL', '1.1.1h'),
]

configopts = '--disable-geosadvanced --disable-minizip'

sanity_check_paths = {
    'files': ['include/spatialite.h', 'lib/libspatialite.a', 'lib/libspatialite.%s' % SHLIB_EXT],
    'dirs': ['include/spatialite'],
}

moduleclass = 'lib'
