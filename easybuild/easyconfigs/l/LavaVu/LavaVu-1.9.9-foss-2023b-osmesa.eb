            'sed -i "9,11d" LavaVuPython.py && sed -i "s/    import _LavaVuPython/import _LavaVuPython/" '
            'LavaVuPython.py && cd - '
        ],
        'checksums': ['7e31c0d18b8bff3690101df3b12d883c2fdfdada3d88b15b082559b77d7c416d'],
    }),
]

