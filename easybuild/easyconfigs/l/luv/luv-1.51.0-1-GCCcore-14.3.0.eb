easyblock = 'CMakeMake'

name = 'luv'
version = '1.51.0-1'

homepage = 'https://github.com/luvit/luv'
description = """This library makes libuv available to lua scripts. It was made for the luvit project but should
usable from nearly any lua project"""

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = ['https://github.com/luvit/luv/releases/download/%(version)s/']
sources = [SOURCELOWER_TAR_GZ]
checksums = ['dc706d9141c185bdce08b6fc8a9d4df05c3ac3676809ee4e9e37e1553d821237']

builddependencies = [
    ('binutils', '2.44'),
    ('CMake', '4.0.3'),
]

dependencies = [
    ('Lua', '5.4.8'),
]

sanity_check_paths = {
    'files': ['bin/luv'],
    'dirs': [],
}

sanity_check_commands = ['luv -h']

moduleclass = 'lib'
