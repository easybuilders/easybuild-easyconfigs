easyblock = 'ConfigureMake'

name = 'libbsd'
version = '0.11.3'

homepage = 'https://libbsd.freedesktop.org/wiki'
description = """This library provides useful functions commonly found on BSD systems, and lacking on others like GNU
systems, thus making it easier to port projects with strong BSD origins, without needing to embed the same code over
and over again on each project."""

toolchain = {'name': 'GCCcore', 'version': '10.3.0'}

source_urls = ['https://libbsd.freedesktop.org/releases/']
sources = [SOURCE_TAR_XZ]
checksums = ['ff95cf8184151dacae4247832f8d4ea8800fa127dbd15033ecfe839f285b42a1']

builddependencies = [('binutils', '2.36.1')]

dependencies = [('libmd', '1.0.3')]

sanity_check_paths = {
    'files': ['lib/libbsd-ctor.a', 'lib/libbsd.a', 'lib/libbsd.%s' % SHLIB_EXT],
    'dirs': ['include/bsd', 'lib/pkgconfig', 'share/man'],
}

moduleclass = 'lib'
