easyblock = 'PythonPackage'

name = 'libxml2-python'
version = '2.12.10'

homepage = 'https://gitlab.gnome.org/GNOME/libxml2/-/wikis/Python-bindings'
description = """
 Libxml2 is the XML C parser and toolchain developed for the Gnome project
 (but usable outside of the Gnome platform). This is the Python binding."""

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}
toolchainopts = {'pic': True}

source_urls = ['https://download.gnome.org/sources/libxml2/%(version_major_minor)s/']
sources = ['libxml2-%(version)s.tar.xz']
checksums = [
    {'libxml2-2.12.10.tar.xz': 'c3d8c0c34aa39098f66576fe51969db12a5100b956233dc56506f7a8679be995'},
]

builddependencies = [
    ('binutils', '2.42'),
    ('Doxygen', '1.11.0'),
    ('pkgconf', '2.2.0'),
]

dependencies = [
    ('zlib', '1.3.1'),
    ('XZ', '5.4.5'),
    ('Python', '3.12.3'),
    ('libxml2', '2.12.7'),
    ('libiconv', '1.17'),
    ('ICU', '75.1'),
]

start_dir = 'python'

# IMPORTANT: generate setup.py using libxml2's prefix, not this package's.
# Also ensure local imports and headers/libs are visible during PEP 517 steps.
preinstallopts = (
    'cd .. && '
    ' ./configure --prefix=$EBROOTLIBXML2 && '   # makes ROOT point to libxml2
    ' cd python && '
    # belt & braces: if anything still writes a wrong ROOT, fix it in-place:
    " perl -0777 -pe \"s|^ROOT = r\\'.*\\'|ROOT = r\\'$EBROOTLIBXML2\\'|m\" -i setup.py && "
    # make local generator importable & headers/libs discoverable:
    ' export PYTHONPATH=$PWD:$PYTHONPATH && '
    ' export PKG_CONFIG_PATH=$EBROOTLIBXML2/lib/pkgconfig:$EBROOTLIBXML2/lib64/pkgconfig:$PKG_CONFIG_PATH && '
    ' export C_INCLUDE_PATH=$EBROOTLIBXML2/include:$EBROOTLIBXML2/include/libxml2:$C_INCLUDE_PATH && '
    ' export LIBRARY_PATH=$EBROOTLIBXML2/lib:$EBROOTLIBXML2/lib64:$LIBRARY_PATH && '
    ' export LD_LIBRARY_PATH=$EBROOTLIBXML2/lib:$EBROOTLIBXML2/lib64:$LD_LIBRARY_PATH && '
)

# Keep our environment during the PEP 517 build
installopts = '--no-build-isolation'

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

options = {'modulename': 'libxml2'}

moduleclass = 'lib'
