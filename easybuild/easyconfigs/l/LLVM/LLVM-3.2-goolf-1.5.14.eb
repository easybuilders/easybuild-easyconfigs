name = "LLVM"
version = "3.2"

homepage = 'http://llvm.org'
description = """The LLVM Core libraries provide a target-independent optimizer and native code generation support."""

toolchain = {'name': 'goolf', 'version': '1.5.14'}
toolchainopts = {}  # toolchain options, e.g. opt, pic, usempi, optarch, ...

sources = ['%(namelower)s-%(version)s.src.tar.gz']
source_urls = ['http://llvm.org/releases/%(version)s']

patches = []

dependencies = []

# For llvmpy / Numba:
configopts = '--enable-optimized --enable-pic'  
premakeopts = 'REQUIRES_RTTI=1'

# The sanity test MUST be tuned before going production and submitting your contribution to upstream git repositories
sanity_check_paths = {
    'files': ["lib/libLLVMCore.a", "include/llvm-c/Core.h"],
    'dirs': ["include/llvm", ]
}

moduleclass = 'lib'
