easyblock = "EB_libint2"

name = 'libint2'
version = '2.0.3-stable'

homepage = 'http://www.files.chem.vt.edu/chem-dept/valeev/software/libint/libint.html'
description = """Libint library is used to evaluate the traditional (electron repulsion) and certain novel two-body
 matrix elements (integrals) over Cartesian Gaussian functions used in modern atomic and molecular theory."""


toolchain = {'name': 'goolf', 'version': '1.4.10'}
toolchainopts = {'pic': True}

sources = ['libint-%s.tgz' % version]
source_urls = ['http://downloads.sourceforge.net/project/libint/libint-for-mpqc']

configopts = "--with-pic --with-cxx-optflags='-O1' --enable-shared"

sanity_check_paths = {
    'files': ['lib/libint2.a'],
    'dirs': ['include'],
}

moduleclass = 'chem'
