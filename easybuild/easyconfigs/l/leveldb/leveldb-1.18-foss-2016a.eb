easyblock = 'MakeCp'

name = 'leveldb'
version = '1.18'

homepage = 'https://github.com/google/leveldb'
description = """
LevelDB is a fast key-value storage library written at Google that provides an 
ordered mapping from string keys to string values.
"""
toolchain = {'name': 'foss', 'version': '2016a'}

sources = ['v%(version)s.tar.gz']
source_urls = ['https://github.com/google/leveldb/archive/']

files_to_copy = [
    (['libleveldb.so.1.18','libleveldb.a'],'lib'),
    (['include/leveldb/*.h'],'include/leveldb')
    ]

postinstallcmds=[
    'cd %(installdir)s/lib; ln -s libleveldb.so.1.18 libleveldb.so.1',
    'cd %(installdir)s/lib; ln -s libleveldb.so.1.18 libleveldb.so',
]


sanity_check_paths = {
    'files': ['lib/libleveldb.so','lib/libleveldb.a','include/leveldb/cache.h','include/leveldb/table.h'],
    'dirs': [],
}

moduleclass = 'devel'
