easyblock = 'MakeCp'

name = 'libzeep'
version = '3.0.5'

homepage = 'https://github.com/mhekkel/libzeep'
description = """Libzeep was originally developed to make it easy to create SOAP servers."""

toolchain = {'name': 'gompi', 'version': '2019b'}

source_urls = ['https://github.com/mhekkel/%(namelower)s/archive/']
sources = ['%(version)s.tar.gz']
checksums = ['2c88a50f0d041570510910c4311f8ab6fe7e7a5b17af0bd3b2ab89f372c9f7c5']

dependencies = [
    ('bzip2', '1.0.8'),
    ('zlib', '1.2.11'),
    ('XZ', '5.2.4'),
    ('Boost', '1.71.0')
]

skipsteps = ['configure']
configopts = '--with-boost=$BOOST_ROOT '

files_to_copy = [('libzeep.a')]

sanity_check_paths = {
    'files': ['libzeep.a'],
    'dirs': ['']
}

moduleclass = 'devel'
