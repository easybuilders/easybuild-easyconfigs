# Author: Jasper Grimm (UoY)

easyblock = 'Tarball'

name = 'LTR_retriever'
version = '3.0.4'

homepage = 'https://github.com/oushujun/LTR_retriever'
description = """LTR_retriever is a highly accurate and sensitive program for
 identification of LTR retrotransposons; The LTR Assembly Index (LAI) is also
 included in this package.
"""

toolchain = {'name': 'GCC', 'version': '12.3.0'}

github_account = 'oushujun'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['2eb30fb19acba38b49d8c1be27e3895d5dc4f07e8cc4d494a9c83cc9f26a3b3b']

dependencies = [
    ('Perl', '5.36.1'),
    ('BLAST+', '2.14.1'),
    ('RepeatMasker', '4.2.1'),
    ('HMMER', '3.4'),
    ('CD-HIT', '4.8.1'),
    ('TRF', '4.09.1'),
]

sanity_check_paths = {
    'files': ['LTR_retriever'],
    'dirs': ['bin', 'database'],
}

sanity_check_commands = [("LTR_retriever -h 2>&1 | grep 'Usage: LTR_retriever'", '')]

modextrapaths = {'PATH': ''}

moduleclass = 'bio'
