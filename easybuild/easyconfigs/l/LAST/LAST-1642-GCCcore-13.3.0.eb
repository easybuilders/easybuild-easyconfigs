easyblock = 'ConfigureMake'

name = 'LAST'
version = "1642"

homepage = 'https://gitlab.com/mcfrith/last'
description = "LAST: find & align related regions of sequences"

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}
toolchainopts = {'cstd': 'c++11'}

source_urls = ['https://gitlab.com/mcfrith/last/-/archive/%(version)s']
sources = ['last-%(version)s.zip']
checksums = ['5eb7480fd23e735f23b6becd92f2e5ced28043911b833523062c7427d8526cc2']

skipsteps = ['configure']

buildopts = 'CC="$CC" CXX="$CXX" CFLAGS="$CFLAGS" CXXFLAGS="$CXXFLAGS -pthread -DHAS_CXX_THREADS"'

installopts = 'prefix=%(installdir)s'

sanity_check_paths = {
    'files': ['bin/lastal', 'bin/lastdb'],
    'dirs': [],
}

moduleclass = 'bio'
