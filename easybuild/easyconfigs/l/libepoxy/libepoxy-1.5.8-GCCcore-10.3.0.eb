easyblock = 'MesonNinja'

name = 'libepoxy'
version = '1.5.8'

homepage = 'https://github.com/anholt/libepoxy'
description = "Epoxy is a library for handling OpenGL function pointer management for you"

toolchain = {'name': 'GCCcore', 'version': '10.3.0'}

github_account = 'anholt'
source_urls = [GITHUB_LOWER_SOURCE]
sources = ['%(version)s.tar.gz']
checksums = ['0cd80cb040b75cbe77fadd45c48282ebab82d845c597ce11ee5e8cb9c1efeabb']

builddependencies = [
    ('binutils', '2.36.1'),
    ('Meson', '0.58.0'),
    ('Ninja', '1.10.2'),
    ('pkg-config', '0.29.2'),
]

dependencies = [
    ('X11', '20210518'),
    ('Mesa', '21.1.1'),
]

configopts = '-Degl=no --libdir %(installdir)s/lib '

sanity_check_paths = {
    'files': ['include/epoxy/%s' % x for x in ['common.h', 'gl_generated.h', 'gl.h', 'glx_generated.h', 'glx.h']] +
             ['lib/libepoxy.%s' % SHLIB_EXT],
    'dirs': ['lib']
}

moduleclass = 'lib'
