easyblock = 'ConfigureMake'

name = 'libepoxy'
version = '1.4.3'

homepage = 'https://github.com/anholt/libepoxy'
description = "Epoxy is a library for handling OpenGL function pointer management for you."

toolchain = {'name': 'intel', 'version': '2017a'}

source_urls = ['https://github.com/anholt/libepoxy/releases/download/%(version)s']
sources = [SOURCELOWER_TAR_XZ]
checksums = ['0b808a06c9685a62fca34b680abb8bc7fb2fda074478e329b063c1f872b826f6']

dependencies = [('Mesa', '17.1.6')]

sanity_check_paths = {
    'files': ['lib/libepoxy.%s' % SHLIB_EXT, 'lib/pkgconfig/epoxy.pc'],
    'dirs': ['include/epoxy'],
}

moduleclass = 'lib'
