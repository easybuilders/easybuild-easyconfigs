easyblock = 'CMakeMake'

name = 'libavif'
version = '1.3.0'

homepage = 'https://github.com/AOMediaCodec/libavif'
description = """This library aims to be a friendly, portable C implementation
of the AV1 Image File Format, as described here:
https://aomediacodec.github.io/av1-avif/
"""

toolchain = {'name': 'GCCcore', 'version': '14.2.0'}

source_urls = ['https://github.com/AOMediaCodec/libavif/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['0a545e953cc049bf5bcf4ee467306a2f113a75110edf59e61248873101cd26c1']

builddependencies = [
    ('binutils', '2.42'),
    ('CMake', '3.31.3'),
    ('NASM', '2.16.03'),
    ('Meson', '1.6.1'),
    ('Ninja', '1.12.1'),
    ('Rust', '1.85.1'),
    ('pkgconf', '2.3.0'),
]

dependencies = [
    ('libyuv', '20251204'),
]

sanity_check_paths = {
    'files': ['lib/libavif.%s' % SHLIB_EXT, 'include/avif/avif.h'],
    'dirs': [],
}

moduleclass = 'tools'
