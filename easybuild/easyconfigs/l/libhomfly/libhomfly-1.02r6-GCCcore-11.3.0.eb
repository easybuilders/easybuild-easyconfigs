easyblock = 'ConfigureMake'

name = 'libhomfly'
version = '1.02r6'

homepage = 'https://github.com/miguelmarco/libhomfly'
description = "Library to compute the homfly polynomial of a link."

toolchain = {'name': 'GCCcore', 'version': '11.3.0'}

source_urls = ['https://github.com/miguelmarco/libhomfly/releases/download/%(version)s']
sources = [SOURCE_TAR_GZ]
checksums = ['f990d991d29a590c54b09eff68bc209c4cf2b8b12d945351688d2db8a0d30979']

builddependencies = [
    ('Autotools', '20220317'),
    ('binutils', '2.38'),
]

dependencies = [
    ('GMP', '6.2.1'),
    ('gc', '8.2.2'),
]

preconfigopts = "autoreconf --install && "

sanity_check_paths = {
    'files': ['include/homfly.h'] + ['lib/libhomfly.%s' % e for e in ['a', SHLIB_EXT]],
    'dirs': [],
}

moduleclass = 'math'
