easyblock = 'MesonNinja'

name = 'libwnck'
version = '43.3'

homepage = 'https://gitlab.gnome.org/GNOME/libwnck'
description = """libwnck is Window Navigator Construction Kit, i.e. a library to use for writing pagers and taskslists
and stuff."""

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = ['https://gitlab.gnome.org/GNOME/libwnck/-/archive/%(version)s/']
sources = [SOURCELOWER_TAR_GZ]
checksums = ['5b73be090c2bc5185a81ac73bb3105864595ed0d4d260917a28f64e9780c103f']

builddependencies = [
    ('binutils', '2.44'),
    ('Meson', '1.8.2'),
    ('Ninja', '1.13.0'),
]

dependencies = [
    ('GLib', '2.85.3'),
    ('GTK3', '3.24.43'),
    ('GObject-Introspection', '1.84.0'),
]

sanity_check_paths = {
    'files': [f'lib/libwnck-3.{SHLIB_EXT}'],
    'dirs': [],
}

sanity_check_commands = [
    'wnckprop --help',
]

moduleclass = 'vis'
