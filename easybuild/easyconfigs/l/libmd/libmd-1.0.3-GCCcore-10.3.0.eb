easyblock = 'ConfigureMake'

name = 'libmd'
version = '1.0.3'

homepage = 'https://www.hadrons.org/software/libmd'
description = """This library provides message digest functions found on BSD systems either on their libc (NetBSD,
OpenBSD) or libmd (FreeBSD, DragonflyBSD, macOS, Solaris) libraries and lacking on others like GNU systems."""

toolchain = {'name': 'GCCcore', 'version': '10.3.0'}

source_urls = ['https://archive.hadrons.org/software/libmd/']
sources = [SOURCE_TAR_XZ]
checksums = ['5a02097f95cc250a3f1001865e4dbba5f1d15554120f95693c0541923c52af4a']

builddependencies = [('binutils', '2.36.1')]

sanity_check_paths = {
    'files': ['include/md5.h', 'include/sha256.h', 'lib/libmd.a',
              'lib/libmd.%s' % SHLIB_EXT, 'lib/pkgconfig/libmd.pc'],
    'dirs': ['share/man'],
}

moduleclass = 'lib'
