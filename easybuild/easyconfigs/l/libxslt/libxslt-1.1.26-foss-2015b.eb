easyblock = 'ConfigureMake'

name = 'libxslt'
version = '1.1.26'

homepage = 'http://xmlsoft.org/'

description = "XSL Transformations, is a language for transforming XML documents into other XML documents (or HTML/textual output)."

toolchain = {'name': 'foss', 'version': '2015b'}

sources = ['%(name)s-%(version)s.tar.gz']
source_urls = ["ftp://xmlsoft.org/libxml2/"]

dependencies = [
    ('zlib', '1.2.8'),
]

moduleclass = 'devel'
