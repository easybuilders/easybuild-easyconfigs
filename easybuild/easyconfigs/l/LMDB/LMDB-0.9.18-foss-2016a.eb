easyblock = 'MakeCp'

name = 'LMDB'
version = '0.9.18'

homepage = 'https://github.com/LMDB/lmdb'
description = """
OpenLDAP's Lightning Memory-Mapped Database (LMDB) library.
"""
toolchain = {'name': 'foss', 'version': '2016a'}

sources = ['%(name)s_%(version)s.tar.gz']
source_urls = ['https://github.com/LMDB/lmdb/archive/']

files_to_copy = [
    (['liblmdb.so', 'liblmdb.a'],'lib'),
    (['lmdb.h'], 'include')
    ]

sanity_check_paths = {
    'files': ['lib/liblmdb.so','lib/liblmdb.a','include/lmdb.h'],
    'dirs': [],
}

moduleclass = 'devel'
