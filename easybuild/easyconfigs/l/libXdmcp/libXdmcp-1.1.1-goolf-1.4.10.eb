name = 'libXdmcp'
version = '1.1.1'

homepage = 'http://xorg.freedesktop.org/'
description = "libXdmcp: X Display Manager Control Protocol library from X.org"

sources = [SOURCE_TAR_BZ2]
source_urls = ['http://xorg.freedesktop.org/releases/individual/lib/']

toolchain = {'name': 'goolf', 'version': '1.4.10'}

builddependencies = [
    ('Autoconf', '2.69'),
    ('pkg-config', '0.27.1'),
]

dependencies = [
    ('xorg-macros', '1.17'),
    ('xproto', '7.0.23'),
]

preconfigopts = "ACLOCAL='aclocal -I $EBROOTXORGMINMACROS/share/aclocal' ./autogen.sh && "

sanity_check_paths = {
    'files': [],
    'dirs': ['.']
}

moduleclass = 'lib'
