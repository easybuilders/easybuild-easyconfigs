easyblock = 'ConfigureMake'

name = 'libXdmcp'
version = '1.1.1'

homepage = 'http://xorg.freedesktop.org/'
description = """The libXdmcp package contains a library implementing the X Display Manager Control Protocol.
 This is useful for allowing clients to interact with the X Display Manager."""

sources = [SOURCE_TAR_BZ2]
source_urls = ['http://xorg.freedesktop.org/releases/individual/lib/']

toolchain = {'name': 'goolf', 'version': '1.4.10'}
toolchainopts = {'optarch': True}

builddependencies = [
    ('Autoconf', '2.69'),
    ('pkg-config', '0.27.1'),
]

dependencies = [
    ('xorg-macros', '1.17'),
    ('xproto', '7.0.23'),
]

preconfigopts = "ACLOCAL='aclocal -I $EBROOTXORGMINMACROS/share/aclocal' ./autogen.sh && "

sanity_check_paths = {
    'files': ['lib/libXdmcp.%s' % SHLIB_EXT],
    'dirs': [],
}

moduleclass = 'vis'
