easyblock = 'ConfigureMake'

name = 'libusb'
version = '1.0.9'

homepage = 'http://libusb.org/'
description = """libusb is a C library that gives applications easy access to USB devices on many different
 operating systems."""

toolchain = {'name': 'intel', 'version': '2016a'}

source_urls = [SOURCEFORGE_SOURCE]
sources = [SOURCE_TAR_BZ2]

sanity_check_paths = {
    'files': ['include/libusb-%(version_major_minor)s/libusb.h', 'lib/libusb-%(version_major_minor)s.a',
              'lib/libusb-%%(version_major_minor)s.%s' % SHLIB_EXT],
    'dirs': ['lib/pkgconfig'],
}

moduleclass = 'lib'
