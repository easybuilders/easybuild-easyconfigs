    ('networkx', '2.5.1'),
    ('SciPy-bundle', '2021.05'),
    ('Biopython', '1.79'),
    ('Yasm', '1.3.0'),
    ('pyfaidx', '0.6.3.1'),
    ('python-isal', '0.11.0'),
]

