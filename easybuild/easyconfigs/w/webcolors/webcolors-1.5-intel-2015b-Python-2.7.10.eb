easyblock = 'PythonPackage'

name = 'webcolors'
version = '1.5'

homepage = 'https://github.com/ubernostrum/webcolors'
description = """A library for working with color names and color value formats defined by the HTML and
 CSS specifications for use in documents on the Web."""

toolchain = {'name': 'intel', 'version': '2015b'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]

python = 'Python'
pyver = '2.7.10'
versionsuffix = '-%s-%s' % (python, pyver)

dependencies = [(python, pyver)]

shortpyver = '.'.join(pyver.split('.')[:2])
sanity_check_paths = {
    'files': ['lib/python%s/site-packages/webcolors.py' % shortpyver],
    'dirs': [],
}

moduleclass = 'lib'
