easyblock = 'ConfigureMake'

name = 'WCSLIB'
version = '8.3'

homepage = 'https://www.atnf.csiro.au/people/mcalabre/WCS/'
description = """The FITS "World Coordinate System" (WCS) standard defines keywords
and usage that provide for the description of astronomical coordinate systems in a
FITS image header."""

toolchain = {'name': 'GCC', 'version': '12.3.0'}
toolchainopts = {'pic': True}

source_urls = ['http://www.atnf.csiro.au/people/mcalabre/WCS']
sources = [SOURCELOWER_TAR_BZ2]
checksums = ['431ea3417927bbc02b89bfa3415dc0b4668b0f21a3b46fb8a3525e2fcf614508']

builddependencies = [
    ('binutils', '2.38'),
    ('M4', '1.4.19'),
    ('flex', '2.6.4'),
]

dependencies = [
    ('CFITSIO', '4.3.0'),
    ('PGPLOT', '5.2.2'),
]

configopts = ' '.join([
     '--with-cfitsiolib=$EBROOTCFITSIO/lib',
     '--with-cfitsioinc=$EBROOTCFITSIO/include',
     '--with-pgplotlib=$EBROOTPGPLOT/lib',
     '--with-pgplotinc=$EBROOTPGPLOT/include',
])

sanity_check_paths = {
    'files': [
        'bin/wcsgrid', 'bin/wcsware',
        'lib/libwcs-%(version)s.a', 'lib/libwcs.%s' % SHLIB_EXT,
        'lib/libpgsbox-%(version)s.a', 'lib/libpgsbox.%s' % SHLIB_EXT],
    'dirs': ['include'],
}

sanity_check_commands = ["wcsgrid --help 2>&1 | grep '^Usage: wcsgrid'"]

moduleclass = 'geo'
