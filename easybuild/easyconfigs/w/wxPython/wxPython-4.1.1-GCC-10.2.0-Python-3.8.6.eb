name = 'wxPython'
version = '4.1.1'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://www.wxpython.org'
description = """wxPython is a GUI toolkit for the Python programming language.
 It allows Python programmers to create programs with a robust,
 highly functional graphical user interface, simply and easily.
 It is implemented as a Python extension module (native code)
 that wraps the popular wxWidgets cross platform GUI library,
 which is written in C++."""

toolchain = {'name': 'GCC', 'version': '10.2.0'}

source_urls = [PYPI_SOURCE]
sources = ['%(name)s-%(version)s.tar.gz']
patches = [
    ('%(name)s-4.1.1_fix_install_path.patch', 0),
]
checksums = [
    '00e5e3180ac7f2852f342ad341d57c44e7e4326de0b550b9a5c4a8361b6c3528',  # wxPython-4.1.1.tar.gz
    '307374899ea90f0c8fff8b53a6dc4f6abcf3ace87a0f30a5e0dcbfb7970a25f0',  # wxPython-4.1.1_fix_install_path.patch
]

dependencies = [
    ('Python', '3.8.6'),
    ('libpng', '1.6.37'),
    ('zlib', '1.2.11'),
    ('libjpeg-turbo', '2.0.5'),
    ('LibTIFF', '4.1.0'),
    ('expat', '2.2.9'),
    ('GTK+', '3.24.23'),
    ('GLib', '2.66.1'),
    ('GConf', '3.2.6'),
    ('GST-plugins-base', '1.18.4'),
    ('Mesa', '20.2.1'),
    ('libGLU', '9.0.1'),
    ('LibSoup', '2.72.0'),
    ('WebKitGTK+', '2.27.4'),
]

# needed because wxWidgets is built as part of wxPython (not added as a dependency)
modextrapaths = {'LD_LIBRARY_PATH': 'lib/python%(pyshortver)s/site-packages/wx'}

sanity_check_paths = {
    'files': ["lib/python3.8/site-packages/wx/libwx_baseu-3.1.so.5"],
    'dirs': ["lib/python3.8/site-packages/wx"]
}

moduleclass = 'vis'
