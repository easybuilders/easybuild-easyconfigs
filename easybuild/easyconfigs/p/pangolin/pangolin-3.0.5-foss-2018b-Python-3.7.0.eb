        'sources': [{'download_filename': 'v0.0.4.tar.gz', 'filename': 'constellations-0.0.4.tar.gz'}],
        'checksums': ['67a3bbe18f67f96e3c1929e2ebd2b44c0bb1855ea1f22820cd058c30d5002837'],
    }),
    ('amply', '0.1.4', {
        'checksums': ['cb12dcb49d16b168c02be128a1527ecde50211e4bd94af76ff4e67707f5a2d38'],
