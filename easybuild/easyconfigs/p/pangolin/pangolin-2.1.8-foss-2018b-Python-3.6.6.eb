easyblock = 'PythonBundle'

name = 'pangolin'
version = '2.1.8'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://cov-lineages.org/pangolin.html'
description = "Software package for assigning SARS-CoV-2 genome sequences to global lineages."

toolchain = {'name': 'foss', 'version': '2018b'}

dependencies = [
    ('Biopython', '1.74', versionsuffix),
    ('DendroPy', '4.4.0'),
    ('IQ-TREE', '1.6.12'),
    ('MAFFT', '7.427', '-with-extensions'),
    ('minimap2', '2.13'),
    ('pandas', '1.0.1', versionsuffix),
    ('Pysam', '0.15.4', versionsuffix),
    ('Python', '3.6.6'),
    ('snakemake', '5.13.0', versionsuffix),
]

use_pip = True
sanity_pip_check = True

github_account = 'cov-lineages'
exts_default_options = {'source_urls': [PYPI_SOURCE]}
exts_list = [
    ('amply', '0.1.4', {
        'checksums': ['cb12dcb49d16b168c02be128a1527ecde50211e4bd94af76ff4e67707f5a2d38'],
    }),
    ('PuLP', '2.4', {
        'checksums': ['b2aff10989b3692e3a59301a0cb0acddeb25dcea378f8804c86007075eae55b5'],
    }),
    ('lineages', '2020-05-19-2', {
        'source_urls': ['https://github.com/%(github_account)s/lineages/archive'],
        'sources': ['2020-05-19-2.tar.gz'],
        'checksums': ['d38b352920256b23ce25aac79c0c59b8a67a3205aad5a9406e4bacb549f09b96'],
    }),
    ('pangoLEARN', '2021-01-30', {
        'modulename': 'pangoLEARN',
        'source_urls': ['https://github.com/%(github_account)s/pangoLEARN/archive'],
        'sources': ['2021-01-30.tar.gz'],
        'checksums': ['51633800eaf6b9c40725ddf5eca011e40b051eea2e686dc331bbe6022f115d9d'],
    }),
    ('scikit-learn', '0.23.1', {
        'modulename': 'sklearn',
        'checksums': ['e3fec1c8831f8f93ad85581ca29ca1bb88e2da377fb097cf8322aa89c21bc9b8'],
    }),
    ('wheel', '0.34.0', {
        'checksums': ['a69231973dccde8558f80f2ef058335a1d0bc1b55b2a5a2dfb5097e151e3c498'],
    }),
    ('pycountry', '20.7.3', {
        'checksums': ['81084a53d3454344c0292deebc20fcd0a1488c136d4900312cbd465cf552cb42'],
    }),
    ('epiweeks', '2.1.2', {
        'checksums': ['bc33d1942fb0b21fcc613501f9eaa18499b6a3ca2a76f49df81c9b26563d7a3f'],
    }),
    ('datafunk', '0.0.8', {
        'source_urls': ['https://github.com/cov-ert/datafunk/archive'],
        'sources': ['v0.0.8.tar.gz'],
        'checksums': ['ecc853033c72998910386ce7375a7a2177ab28198863dc6d9b1cbfc217be9976'],
    }),
    (name, version, {
        'source_urls': [GITHUB_SOURCE],
        'sources': ['v%(version)s.tar.gz'],
        'checksums': ['8139c01f7213a4292d4c869360a11c09beb7ce4283763bbd4b6181a7eb144a16'],
    }),
]

sanity_check_paths = {
    'files': ['bin/%(name)s'],
    'dirs': [],
}

sanity_check_commands = [
    "%(name)s -v && "
    "%(name)s -pv && "
    "%(name)s -lv"
]

moduleclass = 'bio'
