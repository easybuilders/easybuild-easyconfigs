]

sanity_check_paths = {
    'files': ['bin/%s' % x for x in local_binaries],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

sanity_check_commands = [
    'pangolin -v',
    'pangolin -pv',
    'scorpio -v',
]

moduleclass = 'bio'
