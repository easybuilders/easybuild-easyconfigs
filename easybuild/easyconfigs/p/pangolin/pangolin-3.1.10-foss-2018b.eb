easyblock = 'PythonBundle'

name = 'pangolin'
version = '3.1.10'

homepage = 'https://cov-lineages.org/pangolin.html'
description = "Software package for assigning SARS-CoV-2 genome sequences to global lineages."

toolchain = {'name': 'foss', 'version': '2018b'}

dependencies = [
    ('Biopython', '1.79', '-Python-%(pyver)s'),
    ('gofasta', '0.0.5', '', True),
    ('minimap2', '2.20'),
    ('Pysam', '0.16.0.1', '-Python-%(pyver)s'),
    ('Python', '3.9.5'),
    ('SciPy-bundle', '2021.05', '-Python-%(pyver)s'),
    ('snakemake', '5.13.0', '-Python-%(pyver)s'),
    ('UShER', '0.4.1', '-Python-%(pyver)s'),
]

use_pip = True
sanity_pip_check = True

github_account = 'cov-lineages'
exts_list = [
    ('pangoLEARN', '2021-07-28', {
        'modulename': 'pangoLEARN',
        'source_urls': ['https://github.com/%(github_account)s/pangoLEARN/archive'],
        'sources': [{'download_filename': '2021-07-28.tar.gz', 'filename': 'pangoLEARN-2021-07-28.tar.gz'}],
        'checksums': ['dddcca5af02d55d85fac06624c4c4116739c06e9102505e82e2b797ce823a2be'],
    }),
    ('scorpio', '0.3.12', {
        'source_urls': ['https://github.com/%(github_account)s/scorpio/archive'],
        'sources': [{'download_filename': 'v0.3.12.tar.gz', 'filename': 'scorpio-0.3.12.tar.gz'}],
        'checksums': ['48390ed1c1a79bb5f801083042cdeddee060e2277f40c293fd30384882aced81'],
    }),
    ('constellations', '0.0.13', {
        'source_urls': ['https://github.com/%(github_account)s/constellations/archive'],
        'sources': [{'download_filename': 'v0.0.13.tar.gz', 'filename': 'constellations-0.0.13.tar.gz'}],
        'checksums': ['4aa3edae9491a59621ef6a3b5bbd21a13c68355986f6c097e46a1397d5b1d24b'],
    }),
    ('pango-designation', '1.2.56', {
        'source_urls': ['https://github.com/%(github_account)s/pango-designation/archive'],
        'sources': [{'download_filename': 'v1.2.56.tar.gz', 'filename': 'pango-designation-1.2.56.tar.gz'}],
        'checksums': ['a437f001e5fd518b486ec3e62ade973358a0cbee6f7eb10641218172af5f1731'],
    }),
    (name, version, {
        'source_urls': [GITHUB_SOURCE],
        'sources': [{'download_filename': 'v%(version)s.tar.gz', 'filename': SOURCE_TAR_GZ}],
        'checksums': ['c531fb500998cfbdf03e74c28b1e95438b8410b371d1bb9e522263cd2ae87ffa'],
    }),
]

sanity_check_paths = {
    'files': ['bin/%(name)s'],
    'dirs': [],
}

sanity_check_commands = [
    "%(name)s -v && "
    "%(name)s -pv"
]

moduleclass = 'bio'
