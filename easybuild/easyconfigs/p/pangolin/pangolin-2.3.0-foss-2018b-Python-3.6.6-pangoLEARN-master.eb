easyblock = 'PythonBundle'

name = 'pangolin'
version = '2.3.0'
versionsuffix = '-Python-%(pyver)s-pangoLEARN-master'

homepage = 'https://cov-lineages.org/pangolin.html'
description = "Software package for assigning SARS-CoV-2 genome sequences to global lineages."

toolchain = {'name': 'foss', 'version': '2018b'}

dependencies = [
    ('Biopython', '1.74', '-Python-%(pyver)s'),
    ('gofasta', '0.0.3', '', True),
    ('minimap2', '2.17'),
    ('pandas', '1.0.1', '-Python-%(pyver)s'),
    ('Pysam', '0.16.0.1', '-Python-%(pyver)s'),
    ('Python', '3.6.6'),
    ('snakemake', '5.13.0', '-Python-%(pyver)s'),
]

use_pip = True
sanity_pip_check = True

github_account = 'cov-lineages'
exts_default_options = {'source_urls': [PYPI_SOURCE]}
exts_list = [
    ('pangoLEARN', '2021-02-21', {
        'modulename': 'pangoLEARN',
        'source_urls': ['https://github.com/%(github_account)s/pangoLEARN/archive'],
        'sources': [{'download_filename': '2021-02-21.tar.gz', 'filename': 'pangoLEARN-2021-02-21.tar.gz'}],
        'checksums': ['006f0048866111c98ad7c549fb536665c311cb0b0d7156d1fd1cc01bb19b292a'],
    }),
    ('amply', '0.1.4', {
        'checksums': ['cb12dcb49d16b168c02be128a1527ecde50211e4bd94af76ff4e67707f5a2d38'],
    }),
    ('PuLP', '2.4', {
        'checksums': ['b2aff10989b3692e3a59301a0cb0acddeb25dcea378f8804c86007075eae55b5'],
    }),
    ('threadpoolctl', '2.1.0', {
        'checksums': ['ddc57c96a38beb63db45d6c159b5ab07b6bced12c45a1f07b2b92f272aebfa6b'],
    }),
    ('scikit-learn', '0.23.1', {
        'modulename': 'sklearn',
        'checksums': ['e3fec1c8831f8f93ad85581ca29ca1bb88e2da377fb097cf8322aa89c21bc9b8'],
    }),
    ('wheel', '0.34.0', {
        'checksums': ['a69231973dccde8558f80f2ef058335a1d0bc1b55b2a5a2dfb5097e151e3c498'],
    }),
    (name, version, {
        'source_urls': [GITHUB_SOURCE],
        'sources': [{'download_filename': 'v%(version)s.tar.gz', 'filename': SOURCE_TAR_GZ}],
        'checksums': ['e18dedc43cdeee77847ca211f88e980debe32c343a281774ce36ffcf3f5fca0a'],
    }),
]

sanity_check_paths = {
    'files': ['bin/%(name)s'],
    'dirs': [],
}

sanity_check_commands = [
    "%(name)s -v && "
    "%(name)s -pv"
]

moduleclass = 'bio'
