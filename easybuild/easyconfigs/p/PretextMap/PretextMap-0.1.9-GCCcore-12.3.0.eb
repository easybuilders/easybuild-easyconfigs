easyblock = 'MesonNinja'

name = 'PretextMap'
version = '0.1.9'

homepage = 'https://github.com/sanger-tol/PretextMap/'
description = """Paired REad TEXTure Mapper. Converts SAM formatted read pairs into genome contact maps."""

toolchain = {'name': 'GCCcore', 'version': '12.3.0'}

sources = [{
    'filename': '%(version)s.tar.gz',
    'git_config': {
        'url': 'https://github.com/sanger-tol',
        'repo_name': '%(name)s',
        'tag': '%(version)s',
        'recursive': True,
        'keep_git_dir': True,
    },
}]
checksums = [None]

builddependencies = [
    ('binutils', '2.40'),
    ('Meson', '1.1.1'),
    ('Ninja', '1.11.1'),
    ('Clang', '16.0.6'),
]

preconfigopts = 'CXX=clang && '
configure_cmd = 'meson setup --buildtype=release --unity on'
runtest = 'meson test'

sanity_check_paths = {
    'files': [],
    'dirs': ['bin']
}

sanity_check_commands = ["command -v PretextMap"]

moduleclass = 'tools'
