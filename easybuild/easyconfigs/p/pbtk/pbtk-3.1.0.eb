easyblock = 'Binary'

name = 'pbtk'
version = '3.1.0'

homepage = 'https://github.com/PacificBiosciences/$(name)s'
description = """pb replacement of pbbam """

toolchain = SYSTEM

source_urls = ["https://github.com/PacificBiosciences/pbtk"]
sources = ["releases/download/v%(version)s/%(name)s.tar.gz"]

extract_sources = True

postinstallcmds = [
   'find %(installdir)s -type f -exec chmod +x {} \;'
]

sanity_check_paths = {
    'files': ['bam2fasta', 'bam2fastq', 'ccs-kinetics-bystrandify', 'extracthifi', 'pbindex', 'pbindexdump', 'pbmerge', 'zmwfilter',],
    'dirs': [''],
}

moduleclass = 'bio'