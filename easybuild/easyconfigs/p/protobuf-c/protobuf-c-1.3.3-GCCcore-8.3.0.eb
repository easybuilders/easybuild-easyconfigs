easyblock = 'ConfigureMake'

name = 'protobuf-c'
version = '1.3.3'

homepage = 'https://github.com/protobuf-c/protobuf-c'
description = """This is protobuf-c, a C implementation of the Google Protocol Buffers data serialization format"""

toolchain = {'name': 'GCCcore', 'version': '8.3.0'}

github_account = 'protobuf-c'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['8515da8b84ea36768ae69a52f9ede8d718936d6058077265b6e458cfc55f8bdb']

builddependencies = [
    ('Autotools', '20180311'),
    ('binutils', '2.32'),
    ('gettext', '0.20.1'),
    ('pkg-config', '0.29.2'),
]

dependencies = [
    ('protobuf', '3.10.0'),
]

preconfigopts = './autogen.sh && '

sanity_check_paths = {
    'files': ['bin/protoc-c'],
    'dirs': [],
}

sanity_check_commands = ["protoc-c --help"]

moduleclass = 'devel'
