easyblock = 'ConfigureMake'

name = 'protobuf-c'
version = '1.5.0'

homepage = 'https://github.com/protobuf-c/protobuf-c'
description = """This is protobuf-c, a C implementation of the Google Protocol Buffers data serialization format"""

toolchain = {'name': 'GCC', 'version': '12.2.0'}

github_account = 'protobuf-c'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['d4cb022d55f49796959b07a9d83040822e39129bc0eb28f4e8301da17d758f62']

builddependencies = [
    ('Autotools', '20220317'),
    ('binutils', '2.39'),
    ('gettext', '0.21.1'),
    ('pkg-config', '0.29.2'),
]

dependencies = [
    ('protobuf', '23.0'),
]

preconfigopts = './autogen.sh && '

sanity_check_paths = {
    'files': ['bin/protoc-c'],
    'dirs': [],
}

sanity_check_commands = ["protoc-c --help"]

moduleclass = 'devel'
