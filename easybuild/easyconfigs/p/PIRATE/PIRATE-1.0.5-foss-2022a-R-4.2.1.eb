easyblock = 'Tarball'

name = 'PIRATE'
version = '1.0.5'
versionsuffix = '-R-%(rver)s'

homepage = 'https://github.com/SionBayliss/PIRATE'
description = "A toolbox for pangenome analysis and threshold evaluation."

toolchain = {'name': 'foss', 'version': '2022a'}

github_account = 'SionBayliss'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['d5d7e657558eadae301a3198bccfd5ee04daddab1a872049d8a74cb71c35f20b']

dependencies = [
    ('Perl', '5.34.1'),
    ('BioPerl', '1.7.8'),
    ('BLAST+', '2.13.0'),
    ('CD-HIT', '4.8.1'),
    ('DIAMOND', '2.1.0'),
    ('FastTree', '2.1.11'),
    ('MAFFT', '7.505', '-with-extensions'),
    ('MCL', '14.137'),
    ('parallel', '20220722'),
    ('R', '4.2.1'),
    ('R-bundle-Bioconductor', '3.15', versionsuffix),
]

sanity_check_paths = {
    'files': ['bin/PIRATE'],
    'dirs': ['scripts', 'test', 'tools'],
}

sanity_check_commands = [
    "PIRATE --help",
    "PIRATE --check",
]

moduleclass = 'bio'
