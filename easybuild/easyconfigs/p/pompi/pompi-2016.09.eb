easyblock = "Toolchain"

name = 'pompi'
version = '2016.09'
local_pgisuffix = '-GCC-5.4.0-2.26'

homepage = 'http://www.pgroup.com/index.htm'
description = """Toolchain with PGI C, C++ and Fortran compilers, alongside OpenMPI."""

toolchain = SYSTEM

local_compver = '16.7'

dependencies = [
    ('PGI', local_compver, local_pgisuffix),
    ('OpenMPI', '1.10.4', '', ('PGI', '%s%s' % (local_compver, local_pgisuffix))),
]

moduleclass = 'toolchain'
