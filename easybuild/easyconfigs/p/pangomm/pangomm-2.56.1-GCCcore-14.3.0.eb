easyblock = 'MesonNinja'

name = 'pangomm'
version = '2.56.1'

homepage = 'https://gitlab.gnome.org/GNOME/pangomm'
description = 'This is pangomm, a C++ API for Pango.'

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = [FTPGNOME_SOURCE]
sources = [SOURCE_TAR_XZ]
checksums = ['539f5aa60e9bdc6b955bb448e2a62cc14562744df690258040fbb74bf885755d']

builddependencies = [
    ('binutils', '2.44'),
    ('Meson', '1.8.2'),
    ('Ninja', '1.13.0'),
    ('Perl', '5.40.2'),
    ('pkgconf', '2.4.3'),
    ('mm-common', '1.0.7'),
]

dependencies = [
    ('Pango', '1.57.0'),
    ('cairomm', '1.19.0'),
    ('GLibmm', '2.85.0'),
    ('libsigc++', '3.8.0'),
]

configopts = '-Ddefault_library=both'

sanity_check_paths = {
    'files': [f'lib/libpangomm-2.48.{SHLIB_EXT}', 'lib/libpangomm-2.48.a'],
    'dirs': ['include'],
}

moduleclass = 'lib'
