    }),
    ('ruamel.yaml.clib', '0.2.6', {
        'modulename': False,
        'checksums': ['4ff604ce439abb20794f05613c374759ce10e3595d1867764dd1ae675b85acbd'],
    }),
    ('ruamel.yaml', '0.17.20', {
        'checksums': ['4b8a33c1efb2b443a93fcaafcfa4d2e445f8e8c29c528d9f5cdafb7cc9e4004c'],
    }),
    (name, version, {
