    ('Python', '3.13.1'),
    ('SciPy-bundle', '2025.06'),
    ('Biopython', '1.85'),
    ('Cython', '3.1.1'),
    ('scikit-learn', '1.7.0'),
    ('tqdm', '4.67.1'),
]

exts_list = [
    ('phykit', version, {
        'checksums': ['ebac0b87a5b4b028c366b1b3255571051ee2b8e6fa636b2312254d0816917951'],
    }),
]

sanity_check_commands = ["phykit -h"]

moduleclass = 'bio'
