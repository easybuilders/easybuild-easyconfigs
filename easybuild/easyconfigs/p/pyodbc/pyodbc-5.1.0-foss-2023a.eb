easyblock = 'PythonBundle'

name = 'pyodbc'
version = '5.1.0'

homepage = 'https://github.com/mkleehammer/pyodbc'
description = """pyodbc is an open source Python module that makes
 accessing ODBC databases simple. It implements the DB API 2.0
 specification but is packed with even more Pythonic convenience."""

toolchain = {'name': 'foss', 'version': '2023a'}

dependencies = [
    ('Python', '3.11.3'),
    ('unixODBC', '2.3.12'),
]

use_pip = True
sanity_pip_check = True

exts_list = [
    (name, version, {
        'checksums': ['397feee44561a6580be08cedbe986436859563f4bb378f48224655c8e987ea60'],
    }),
]

moduleclass = 'tools'
