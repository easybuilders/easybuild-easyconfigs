easyblock = 'CMakeMake'

name = 'Paraview'
version = '4.1.0'

homepage = "http://www.paraview.org"
description = "Paraview is a scientific parallel visualizer"

toolchain = {'name': 'goolf', 'version': '2014a'}
toolchainopts = {'usempi': True, 'pic': True}

download_suffix = 'download.php?submit=Download&version=v%(version_major_minor)s&type=source&os=all&downloadFile='
source_urls = ['http://www.paraview.org/paraview-downloads/%s' % download_suffix]
sources = ["ParaView-v%(version)s-source.tar.gz"]

dependencies = [
               ('Qt','4.8.5'), 
               ('Python','2.7.6'), 
               ('Mesa', '9.2.2', '-OSMesa-Gallium')]

builddependencies = [('CMake', '2.8.12.1')] 

configopts  = " -DBUILD_SHARED_LIBS=ON -DPARAVIEW_USE_MPI=ON -DPARAVIEW_ENABLE_PYTHON=ON "
configopts  += " -DPARAVIEW_BUILD_QT_GUI=OFF -DVTK_USE_X=OFF -DOPENGL_INCLUDE_DIR=$EBROOTMESA/include "
configopts  += " -DOPENGL_gl_LIBRARY:STRING= -DOPENGL_glu_LIBRARY=$EBROOTMESA/lib/libGLU.so -DVTK_OPENGL_HAS_OSMESA=ON"
configopts  += " -DOSMESA_INCLUDE_DIR=$EBROOTMESA/include -DOSMESA_LIBRARY=$EBROOTMESA/lib/libOSMesa.so"
configopts  += " -DPYTHON_INCLUDE_PATH=$EBROOTPYTHON/include/python2.7  -DPYTHON_LIBRARY=$EBROOTPYTHON/lib/libpython2.7.so"

separate_build_dir = True

moduleclass = 'vis'
