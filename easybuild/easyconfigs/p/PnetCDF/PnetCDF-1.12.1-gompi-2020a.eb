easyblock = 'ConfigureMake'

name = 'PnetCDF'
version = "1.12.1"

homepage = 'https://trac.mcs.anl.gov/projects/parallel-netcdf'
description = "Parallel netCDF: A Parallel I/O Library for NetCDF File Access"

toolchain = {'name': 'gompi', 'version': '2020a'}

source_urls = ['https://parallel-netcdf.github.io/Release/']
sources = [SOURCELOWER_TAR_GZ]
checksums = ['56f5afaa0ddc256791c405719b6436a83b92dcd5be37fe860dea103aee8250a2']

# with version 1.11.0 the name of tarball changed to pnetcdf
# instead of parallel-netcdf
modextravars = {'PNETCDF': '%(installdir)s'}

sanity_check_paths = {
    'files': ['bin/pnetcdf_version'],
    'dirs': ['include', 'lib'],
}

moduleclass = 'data'
