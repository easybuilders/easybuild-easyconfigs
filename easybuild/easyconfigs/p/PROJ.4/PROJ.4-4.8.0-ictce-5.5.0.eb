easyblock = 'ConfigureMake'

name = 'PROJ.4'
version = '4.8.0'

homepage = 'http://trac.osgeo.org/proj/'
description = """PROJ.4 Cartographic Projections library """

toolchain = {'name': 'ictce','version': '5.5.0'}

source_urls = ['http://download.osgeo.org/proj/']
sources = ['proj-%(version)s.tar.gz']

sanity_check_paths = {
    'files': ['bin/proj', 'include/proj_api.h', 'lib/libproj.a', 'lib/libproj.so'],
    'dirs': ['lib/pkgconfig'],
}

moduleclass = 'geo'
