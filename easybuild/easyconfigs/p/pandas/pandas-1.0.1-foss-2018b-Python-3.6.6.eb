easyblock = 'PythonBundle'

name = 'pandas'
version = '1.0.1'
versionsuffix = '-Python-%(pyver)s'

homepage = "https://pypi.python.org/pypi/pandas/"
description = """pandas is an open source, BSD-licensed library providing high-performance, easy-to-use data structures
 and data analysis tools for the Python programming language."""

toolchain = {'name': 'foss', 'version': '2018b'}

dependencies = [
    ('Python', '3.6.6'),
    ('numexpr', '2.6.5', versionsuffix),
    ('Bottleneck', '1.3.2', versionsuffix),
]

download_dep_fail = True
use_pip = True
sanity_pip_check = True

exts_default_options = {'source_urls': [PYPI_SOURCE]}

exts_list = [
    ('Cython', '0.29.21', {
        'checksums': ['e57acb89bd55943c8d8bf813763d20b9099cc7165c0f16b707631a7654be9cad'],
    }),
    (name, version, {
        'checksums': ['3c07765308f091d81b6735d4f2242bb43c332cc3461cae60543df6b10967fe27'],
    }),
]

moduleclass = 'lib'
