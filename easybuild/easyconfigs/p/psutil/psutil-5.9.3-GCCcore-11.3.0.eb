        'source_urls': ['https://github.com/giampaolo/psutil/archive'],
        'sources': [SOURCE_TAR_GZ],
        'checksums': ['7ccfcdfea4fc4b0a02ca2c31de7fcd186beb9cff8207800e14ab66f79c773af6'],
    }),
]

moduleclass = 'lib'
