easyblock = 'PythonPackage'

name = 'propy'
version = '1.0'

homepage = ""
description = """ Propy is a protein description software. He allows to analyze Sequence-derived
		  structural and physicochemical features, which are very useful to representing
		  and distinguishing proteins or peptides of different structural, functional and
		  interaction properties, which have been widely used in developing methods and 
		  software for predicting protein structural and functional classes, protein-protein
		  interactions, drug-target interactions, protein substrates, among others... """

toolchain = {'name': 'foss', 'version': '2017a'}

sources = ['propy-1.0.tar.gz']
source_urls = ['https://storage.googleapis.com/google-code-archive-downloads/v2/code.google.com/protpy/']

dependencies = [('Python', '2.7.13')]

sanity_check_paths = {
    'files': ['lib/python2.7/site-packages/%(name)s/PyPro.py'],
    'dirs': []
}

moduleclass = 'chem'
