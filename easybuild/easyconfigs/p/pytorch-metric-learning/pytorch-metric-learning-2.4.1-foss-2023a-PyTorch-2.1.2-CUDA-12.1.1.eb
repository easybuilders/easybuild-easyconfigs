easyblock = 'PythonPackage'

name = 'pytorch-metric-learning'
version = '2.4.1'
local_pytorch_version = '2.1.2'
versionsuffix = '-PyTorch-' + local_pytorch_version + '-CUDA-%(cudaver)s'

homepage = 'https://github.com/KevinMusgrave/pytorch-metric-learning'
description = "PyTorch Metric Learning"

toolchain = {'name': 'foss', 'version': '2023a'}

sources = [SOURCELOWER_TAR_GZ]
checksums = ['77c70e9a89f41eed3e94c5d61d24a19ec66696c950f244f893ea03c57db59dad']

dependencies = [
    ('CUDA', '12.1.1', '', SYSTEM),
    ('Python', '3.11.3'),
    ('SciPy-bundle', '2023.07'),
    ('PyTorch', local_pytorch_version, '-CUDA-%(cudaver)s'),
    ('scikit-learn', '1.3.1'),
    ('tqdm', '4.66.1'),
]


download_dep_fail = True
use_pip = True
sanity_pip_check = True

moduleclass = 'lib'
