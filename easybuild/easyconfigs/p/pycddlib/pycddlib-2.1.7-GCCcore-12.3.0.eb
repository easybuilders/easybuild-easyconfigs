easyblock = 'PythonPackage'

name = 'pycddlib'
version = '2.1.7'

homepage = "https://pypi.org/project/pycddlib/"
description = """pycddlib is a Python wrapper for Komei Fukuda's cddlib."""

toolchain = {'name': 'GCCcore', 'version': '12.3.0'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]
checksums = ['6d0be26049ee303181a1433fc5d57c78fe231b458bdf86855887ca8de83fb55e']

dependencies = [('Python', '3.11.3'),
                ('cddlib', '0.94m')]

options = {'modulename': 'cdd'}
use_pip = True

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'lib'
