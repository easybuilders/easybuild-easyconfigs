easyblock = 'PythonPackage'

name = 'pylibxc'
version = '7.0.0'

homepage = 'https://libxc.gitlab.io'
description = """
The python bindings of libxc. Libxc is a library of exchange-correlation functionals for
density-functional theory. The aim is to provide a portable, well tested and reliable set of exchange
and correlation functionals.
"""

toolchain = {'name': 'gfbf', 'version': '2025a'}

source_urls = ['https://gitlab.com/libxc/libxc/-/archive/%(version)s/']
sources = [SOURCE_TAR_GZ]
checksums = ['a3981e0781cdf2904576dc364c6b07bd63bd4c629775a8d5488a743cc59fa68c']

builddependencies = [
    ('CMake', '3.31.3'),
    ('Perl', '5.40.0'),
]

dependencies = [
    ('Python', '3.13.1'),
    ('SciPy-bundle', '2025.06'),
]

moduleclass = 'chem'
