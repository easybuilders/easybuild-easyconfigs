# This file is an EasyBuild reciPY as per https://github.com/hpcugent/easybuild
# Author: Pablo Escobar Lopez
# sciCORE - University of Basel
# SIB Swiss Institute of Bioinformatics 

easyblock = 'Tarball'

name = 'PAGIT'
version = 'V1'
versionsuffix = '.64bit'

homepage = 'http://www.sanger.ac.uk/science/tools/pagit'
description = """PAGIT addresses the need for software to generate high quality draft genomes"""

toolchain = {'name': 'dummy', 'version': ''}

source_urls = ['ftp://ftp.sanger.ac.uk/pub/resources/software/pagit/']
sources = ['%(name)s.%(version)s%(versionsuffix)s.tgz']

osdependencies = ['tcsh']

modextrapaths = {
       'PATH': "bin:%(installdir)s/PAGIT/bin:%(installdir)s/PAGIT/bin/pileup_v0.5/:%(installdir)s/PAGIT/bin/pileup_v0.5/ssaha2:%(installdir)s/PAGIT/IMAGE/:%(installdir)s/PAGIT/ABACAS:%(installdir)s/PAGIT/ICORN:%(installdir)s/PAGIT/RATT",
       'PERL5LIB': 'PAGIT/lib',
}

modextravars = {
    'PAGIT_HOME':'%(installdir)s/PAGIT',
    'PILEUP_HOME':'%(installdir)s/PAGIT/bin/pileup_v0.5',
    'ICORN_HOME':'%(installdir)s/PAGIT/ICORN',
    'SNPOMATIC_HOME':'%(installdir)s/PAGIT/bin',
    'RATT_HOME':'%(installdir)s/PAGIT/RATT',
    'RATT_CONFIG':'%(installdir)s/PAGIT/RATT/RATT.config',
}

sanity_check_paths = {
    'files': [],
    'dirs': ['PAGIT'],
}

moduleclass = 'bio'
