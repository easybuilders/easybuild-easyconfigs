easyblock = 'ConfigureMake'

name = 'parallel'
version = '20250922'

homepage = 'https://savannah.gnu.org/projects/parallel/'
description = """parallel: Build and execute shell commands in parallel"""

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = [GNU_SOURCE]
sources = [SOURCELOWER_TAR_BZ2]
checksums = ['ee3ddc3125ef7ddcd97dde5ba64ab7f71874faa2f5d7720acdd3e4bf5265a32b']

builddependencies = [('binutils', '2.44')]

dependencies = [
    ('Perl', '5.40.2'),
    ('Perl-bundle-CPAN', '5.40.2'),
]

sanity_check_paths = {
    'files': ['bin/parallel'],
    'dirs': []
}

sanity_check_commands = [
    'parallel --help',
    'time parallel --csv echo < <(echo -e "task1\ntask2\ntask3")',
]

moduleclass = 'tools'
