easyblock = 'Binary'

name = 'pbsv'
version = '2.9.0'
versionsuffix = '-linux-x86_64'

homepage = 'https://github.com/PacificBiosciences/pbsv'
description = """pbsv is a suite of tools to call and analyze structural variants in diploid genomes from PacBio single molecule real-time sequencing (SMRT) reads. The tools power the Structural Variant Calling analysis workflow in PacBio's SMRT Link GUI."""

toolchain = SYSTEM

source_urls = ["https://github.com/PacificBiosciences/%(name)s"]
sources = ["releases/download/v%(version)s/%(name)s"]
checksums = ['3daf41d28f5d0063f68c49ce790ab17b648f1d2459122f5c13704598342db97c']

extract_sources = False

postinstallcmds = ["cp %(builddir)s/releases/download/v%(version)s/%(name)s %(installdir)s"]

sanity_check_paths = {
    'files': ['pbsv',],
    'dirs': [''],
}

moduleclass = 'bio'