easyblock = 'MakeCp'

name = 'ParsInsert'
version = '1.04'

homepage = 'http://sourceforge.net/projects/parsinsert/'
description = """ParsInsert efficiently produces both a phylogenetic tree and taxonomic classification for sequences
 for microbial community sequence analysis."""

toolchain = {'name': 'ictce', 'version': '5.5.0'}

source_urls = [SOURCEFORGE_SOURCE]
sources = ['%(name)s.%(version)s.tgz']

#runtest = 'TEST'  # required TestData directory is missing?

files_to_copy = [(['ParsInsert'], 'bin')]

sanity_check_paths = {
    'files': ['bin/ParsInsert'],
    'dirs': [],
}

moduleclass = 'bio'
