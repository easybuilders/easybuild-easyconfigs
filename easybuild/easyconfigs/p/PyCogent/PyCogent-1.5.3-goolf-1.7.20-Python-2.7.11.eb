easyblock = 'PythonPackage'
name = 'PyCogent'
version = '1.5.3'

homepage = 'https://github.com/pycogent/pycogent/'
description = """A toolkit for making sense from sequence"""

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = [SOURCEFORGE_SOURCE]
sources = [SOURCE_TGZ]

python = 'Python'
pythonver = '2.7.11'
versionsuffix = '-%s-%s' % (python, pythonver)

dependencies = [
    (python, pythonver),
]

options = {'modulename': 'cogent'}

pyshortver = '.'.join(pythonver.split('.')[:2])
sanity_check_paths = {
    'files': ['lib/python%s/site-packages/cogent-%%(version)s-py%s.egg-info' % (pyshortver, pyshortver)],
    'dirs': ['lib/python%s/site-packages/cogent/align' % pyshortver],
}

moduleclass = 'bio'
