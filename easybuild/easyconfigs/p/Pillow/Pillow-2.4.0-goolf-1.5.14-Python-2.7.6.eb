easyblock = "PythonPackage"

name = "Pillow"
version = "2.4.0"

homepage = 'http://pillow.readthedocs.org'
description = """A fork of the Python Imaging Library"""
toolchain = {'name': 'goolf', 'version': '1.5.14'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_ZIP]

python = "Python"
pythonversion = '2.7.6'
pythonshortversion = ".".join(pythonversion.split(".")[:2])

versionsuffix = "-%s-%s" % (python, pythonversion)
dependencies = [
    (python, pythonversion),
    ('libjpeg-turbo','1.3.0'),
    ('libpng','1.6.10'),
    ('zlib', '1.2.8'),
#    ('liblcms2', ),
#    ('libwebp', ),
#    ('LibTIFF', '4.0.3'),
    ('freetype', '2.5.3'),
]

options = {'modulename': "PIL"}

moduleclass = 'data'

