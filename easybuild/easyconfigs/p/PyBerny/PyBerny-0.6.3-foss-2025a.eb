easyblock = 'PythonBundle'

name = 'PyBerny'
version = '0.6.3'

homepage = 'https://github.com/jhrmnn/pyberny'
description = """PyBerny is an optimizer of molecular geometries with respect to the total energy,
using nuclear gradient information."""

toolchain = {'name': 'foss', 'version': '2025a'}

builddependencies = [
    ('poetry', '2.1.2'),
    ('MOPAC', '23.2.2'),
]

dependencies = [
    ('Python', '3.13.1'),
    ('SciPy-bundle', '2025.06'),
]

github_account = 'jhrmnn'

exts_list = [
    ('pyberny', version, {
        'modulename': 'berny',
        # Allow numpy major version 2
        # One of the test cases needs an extra iteration before it converges
        'preinstallopts': (
            """sed -i 's/0.0.0/0.6.3/' pyproject.toml && """
            """sed -i 's/numpy = "^1.15"/numpy = ">1.15"/' pyproject.toml && """
            """sed -i "s/'aniline.xyz')), 11/'aniline.xyz')), 12/" tests/test_optimize.py && """
        ),
        'testinstall': True,
        'runtest': "pytest tests",
        'source_urls': [GITHUB_LOWER_SOURCE],
        'sources': ['%(version)s.tar.gz'],
        'checksums': ['57c96c9671cf4bd1ced7fd016b300b78f92b9e20ab7199c4782a780b18422dc9'],
    }),
]

sanity_check_paths = {
    'files': ['bin/berny'],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

sanity_check_commands = ["berny -h"]

moduleclass = 'chem'
