# This file is an EasyBuild reciPY as per https://github.com/hpcugent/easybuild
# Author: Pablo Escobar Lopez
# sciCORE - University of Basel
# SIB Swiss Institute of Bioinformatics 

easyblock = 'ConfigureMake'

name = 'PcrClipReads'
version = '837d88c' # git commit to download

homepage = 'https://github.com/lindenb/jvarkit'
description = "Java utilities for Bioinformatics"

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['https://github.com/lindenb/jvarkit/archive/']
sources = ['%(version)s.tar.gz']

builddependencies = [
    ('ant', '1.9.7', '-Java-%(javaver)s', True),
    ('make', '3.82'),
]

dependencies = [
    ('Java', '1.8.0_92', '', True),
    ('libxslt', '1.1.28'),
    ('cURL', '7.44.0'),
]

unpack_options = '--strip-components=1'

buildininstalldir = True

skipsteps = ['configure', 'install']

buildopts = ' pcrclipreads'

sanity_check_paths = {
    'files': ['dist/pcrclipreads.jar'],
    'dirs': [],
}

modloadmsg = "Run 'java -jar $EBROOTPCRCLIPREADS/dist/pcrclipreads.jar '\n"

moduleclass = 'bio'
