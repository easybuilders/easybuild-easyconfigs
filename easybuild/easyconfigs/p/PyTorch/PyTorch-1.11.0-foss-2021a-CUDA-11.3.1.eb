dependencies = [
    ('CUDA', '11.3.1', '', True),
    ('Ninja', '1.10.2'),  # Required for JIT compilation of C++ extensions
    ('Python', '3.9.5'),
    ('protobuf', '3.17.3'),
    ('protobuf-python', '3.17.3'),
