name = 'PETSc'
version = '3.9.1'
versionsuffix = '-Python-2.7.14'

homepage = 'http://www.mcs.anl.gov/petsc'
description = """PETSc, pronounced PET-see (the S is silent), is a suite of data structures and routines for the
 scalable (parallel) solution of scientific applications modeled by partial differential equations."""

toolchain = {'name': 'gmpolf', 'version': '2017.10'}
toolchainopts = {'usempi': True, 'pic': True}

source_urls = ['http://ftp.mcs.anl.gov/pub/petsc/release-snapshots']
sources = [SOURCELOWER_TAR_GZ]

dependencies = [
    ('Boost', '1.61.0', versionsuffix),
    ('Python', '2.7.14', '-bare'),
    ('FIAT', '1.6.0', versionsuffix),
    ('METIS', '5.1.0'),
    ('ParMETIS', '4.0.3'),
    ('SCOTCH', '6.0.4'),
    ('SuiteSparse', '4.5.3', '-%s-%s' % (parmetis, parmetis_ver)),
    ('Hypre', '2.11.2'),
]

builddependencies = [('CMake', '3.10.3')]

configopts = '--LIBS="$LIBS -lrt"'

moduleclass = 'numlib'
