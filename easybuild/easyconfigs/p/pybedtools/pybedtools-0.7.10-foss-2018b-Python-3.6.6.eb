easyblock = 'PythonPackage'

name = 'pybedtools'
version = '0.7.10'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://daler.github.io/pybedtools'
description = "pybedtools wraps and extends BEDTools and offers feature-level manipulations from within Python."

toolchain = {'name': 'foss', 'version': '2018b'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]
checksums = ['518a2311bd33f29cf2ee8fc1a028dda8c8e380c9fc83fcb0fbaa206933174b50']

dependencies = [
    ('Python', '3.6.6'),
    ('BEDTools', '2.27.1'),
    ('Pysam', '0.15.1', versionsuffix),
]

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'bio'
