easyblock = 'CMakeMake'

name = 'pugixml'
version = '1.14'

homepage = 'https://pugixml.org/'
description = "pugixml is a light-weight C++ XML processing library"

toolchain = {'name': 'foss', 'version': '2023a'}
toolchainopts = {'pic': True}

source_urls = ['https://github.com/zeux/%(name)s/archive/']
sources = ['v%(version)s.tar.gz']

builddependencies = [
    ('binutils', '2.38'),
    ('CMake', '3.23.1'),
]

configopts = "-DBUILD_SHARED_LIBS=ON -DPUGIXML_BUILD_SHARED_AND_STATIC_LIBS=ON"


sanity_check_paths = {
    'files': ['include/pugiconfig.hpp', 'include/%(name)s.hpp', 'lib/libpugixml.a', 'lib/libpugixml.so', 'lib/pkgconfig/%(name)s.pc'],
    'dirs': ['lib/cmake/%(name)s'],
}

moduleclass = 'data'

