easyblock = 'PythonPackage'

name = 'pairtools'
version = '0.3.0'

homepage = 'https://github.com/mirnylab/pairtools'
description = "pairtools is a simple and fast command-line framework to process sequencing data from a Hi-C experiment."

toolchain = {'name': 'foss', 'version': '2021b'}

sources = [SOURCE_TAR_GZ]
checksums = ['4931da4b5fcb327d13c9564e6fdda1acf2335e16213a55d2620fe340ae918b53']

dependencies = [
    ('Python', '3.9.6'),
    ('SciPy-bundle', '2021.10'),
    ('Pysam', '0.17.0'),
    ('SAMtools', '1.14'),
    ('lz4', '1.9.3'),
    ('PBGZIP', '20160804'),
]

download_dep_fail = True
use_pip = True

sanity_check_paths = {
    'files': ['bin/pairtools'],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

sanity_check_commands = ["pairtools --help"]

sanity_pip_check = True

moduleclass = 'bio'
