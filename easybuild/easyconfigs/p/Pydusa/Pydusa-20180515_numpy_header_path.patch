@@ -5097,6 +5097,8 @@
    PY_HEADER_NUMPY="-I${PY_PREFIX}/Extras/lib/python/numpy/core/include"
 elif test -d ${PY_PREFIX}/lib/python$PY_VERSION/site-packages/numpy/core/include; then 
