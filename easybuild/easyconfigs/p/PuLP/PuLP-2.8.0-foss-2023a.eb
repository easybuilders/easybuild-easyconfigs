dependencies = [
    ('Python', '3.11.3'),
    ('GLPK', '5.0'),
    ('Cbc', '2.10.11'),
    # Gurobi requires a seperate license
    # ('Gurobi', '9.5.0'),
]

download_dep_fail = True
use_pip = True

sanity_pip_check = True

moduleclass = 'tools'
