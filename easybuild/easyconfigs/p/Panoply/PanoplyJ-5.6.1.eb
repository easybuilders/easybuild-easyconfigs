# Custom easy config for Panoply
# Author Dhanya Pushpadas
# University of Bergen


easyblock = 'Tarball'

name = 'PanoplyJ'
version = '5.6.1'
versionsuffix = '-Java-%(javaver)s'

homepage = 'https://www.giss.nasa.gov/tools/panoply/'

description = """ Panoply plots geo-referenced and other arrays from netCDF, HDF, GRIB, and other datasets. """

toolchain = SYSTEM

source_urls = ['https://www.giss.nasa.gov/tools/panoply/download/']
sources = ['%(name)s-%(version)s.tgz']
checksums = ['8619220a9ea4b2c7f16171cdf38134b0']


dependencies = [('Java', '17.0.4')]
# add the installation dir to PATH
modextrapaths = {
    'PATH': '',
}

modloadmsg = "To execute panoply run panoply.sh\n"

sanity_check_paths = {
    'files': ["panoply.sh"],
    'dirs': [],
}

moduleclass = 'data'
