easyblock = 'PythonPackage'

name = 'pyfaidx'
version = '0.8.1.3'

homepage = 'https://pypi.python.org/pypi/pyfaidx'
description = "pyfaidx: efficient pythonic random access to fasta subsequences"

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}

builddependencies = [('binutils', '2.42')]
dependencies = [
    ('Python', '3.12.3'),
    ('Python-bundle-PyPI', '2024.06'),
]

download_dep_fail = True
sanity_pip_check = True
use_pip = True

sources = [SOURCE_PY3_WHL]
checksums = ['044abb9b7b03fef1cc393ae6831ece80df5c1a4dff295fa33808c6f63a81cdc4']

sanity_check_paths = {
    'files': ['bin/faidx'],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

sanity_check_commands = ["faidx --help"]

moduleclass = 'bio'
