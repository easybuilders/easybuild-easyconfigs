    ('importlib_metadata', '7.0.1', {
        'source_tmpl': SOURCE_PY3_WHL,
        'checksums': ['4805911c3a4ec7c3966410053e9ec6a1fecd629117df5adee56dfc9432a1081e'],
    }),
    (name, version, {
        'source_tmpl': SOURCE_PY3_WHL,
        'checksums': ['2694af8e3f35f1890a03f04c0f89ba245caf24ff9e435f2c494b132f537e70f6'],
