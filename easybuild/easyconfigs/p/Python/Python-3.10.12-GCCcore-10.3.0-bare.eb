name = 'Python'
version = '3.10.12'
versionsuffix = '-bare'

homepage = 'https://python.org/'
description = """Python is a programming language that lets you work more quickly and integrate your systems
 more effectively."""

toolchain = {'name': 'GCCcore', 'version': '10.3.0'}
toolchainopts = {'pic': True}

source_urls = ['https://www.python.org/ftp/%(namelower)s/%(version)s/']
sources = [SOURCE_TGZ]
checksums = ['a43cd383f3999a6f4a7db2062b2fc9594fefa73e175b3aedafa295a51a7bb65c']

builddependencies = [
    ('UnZip', '6.0'),
    ('pkgconf', '1.9.5'),
]

dependencies = [
    ('binutils', '2.36.1'),
    ('bzip2', '1.0.8'),  # required for bz2 package in Python stdlib
    ('zlib', '1.2.11'),
    ('libreadline', '8.2'),
    ('ncurses', '6.4'),
    ('SQLite', '3.42.0'),
    ('XZ', '5.2.5'),
    ('libffi', '3.4.4'),
    ('OpenSSL', '1.1', '', SYSTEM),
]

install_pip = True

moduleclass = 'lang'
