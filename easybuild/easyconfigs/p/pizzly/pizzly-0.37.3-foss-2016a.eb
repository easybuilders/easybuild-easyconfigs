easyblock = "CMakeMake"

name = 'pizzly'
version = '0.37.3'

homepage = 'https://github.com/pmelsted/pizzly/'
description = """Fast fusion detection using kallisto."""

toolchain = {'name': 'foss', 'version': '2016a'}
toolchainopts = {'pic': True, 'usempi': True}

source_urls = ['https://github.com/pmelsted/pizzly/archive/']
sources = ['v%(version)s.tar.gz']

builddependencies = [('CMake', '3.7.2')]

dependencies = [
    ('zlib', '1.2.8'),
    ('bzip2', '1.0.6'),
    ('SeqAn', '2.3.2'),
    ('kallisto', '0.43.1'),
]

skipsteps = ['install']
buildopts = ' && mkdir -p %(installdir)s && cp -r * %(installdir)s/'

#separate_build_dir = True

executables = ['pizzly']
#files_to_copy = [(executables,'bin')]

sanity_check_paths = {
    'files': ["pizzly"],
    'dirs': [],
}

moduleclass = 'bio'

checksums = ['63aae0249176f2394ff81d4732242a69']