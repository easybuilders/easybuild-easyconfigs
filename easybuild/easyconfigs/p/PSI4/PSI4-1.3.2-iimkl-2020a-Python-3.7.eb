version = '1.3.2'
versionsuffix = '-Python-%(pyver)s'

homepage = 'http://www.psicode.org/'
description = """PSI4 is an open-source suite of ab initio quantum chemistry
 programs designed for efficient, high-accuracy simulations of a variety of
 molecular properties. We can routinely perform computations with more than
 2500 basis functions running serially or in parallel.
If you wish to use PSI4 as an import within a python script, first load this module and then:

virtualenv --no-download ${HOME}/ENV
echo -e "\nexport PYTHONPATH=$PYTHONPATH:$(dirname $(dirname $(which psi4)))/lib" >> ${HOME}/ENV/bin/activate
source  ${HOME}/ENV/bin/activate
pip install --no-index pydantic qcelemental

You will only need to do this once. Then, by activating the same virtual environment, you'll have access to
psi4 import in python

"""

toolchain = {'name': 'iimkl', 'version': '2020a'}

source_urls = ['https://github.com/psi4/psi4/archive/']
