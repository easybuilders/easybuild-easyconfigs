easyblock = 'PythonBundle'

name = 'CheckM2'
version = '1.0.2'

homepage = 'https://github.com/chklovski/CheckM2'
description = "Rapid assessment of genome bin quality using machine learning"

toolchain = {'name': 'foss', 'version': '2023a'}

builddependencies = [
    ('scikit-build-core', '0.5.0'),  # required for lightgbm
]

dependencies = [
    ('Python', '3.11.3'),
    ('Python-bundle-PyPI', '2023.06'),
    ('SciPy-bundle', '2023.07'),
    ('TensorFlow', '2.13.0'),
    ('scikit-learn', '1.3.1'),
    ('tqdm', '4.66.1'),
    ('DIAMOND', '2.1.8'),
]

use_pip = True

exts_list = [
    ('lightgbm', '4.3.0', {
        'checksums': ['006f5784a9bcee43e5a7e943dc4f02de1ba2ee7a7af1ee5f190d383f3b6c9ebe'],
    }),
    (name, version, {
        'source_urls': ['https://github.com/chklovski/CheckM2/archive/'],
        'sources': ['%(version)s.tar.gz'],
        'checksums': ['9d3129e4d0b53acc38519a259cc1e20a215dff0cbce51cef874545ca2fff005a'],
    }),
]

sanity_check_paths = {
    'files': ['bin/checkm2'],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

sanity_check_commands = ["checkm2 -h"]

sanity_pip_check = True

moduleclass = 'bio'
