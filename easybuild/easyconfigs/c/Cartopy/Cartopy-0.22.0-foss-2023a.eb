    ('Cython', '3.0.8'),
    ('Fiona', '1.9.5'),
    ('GDAL', '3.7.1'),
    ('GEOS', '3.12.0'),
    ('matplotlib', '3.7.2'),
    ('pyproj', '3.6.0'),
    ('SciPy-bundle', '2023.07'),
    ('Shapely', '2.0.1'),
    ('lxml', '4.9.2'),
    ('Pillow', '10.0.0'),
    ('PROJ', '9.2.0'),
    ('PyYAML', '6.0'),
]

use_pip = True
sanity_pip_check = True

exts_list = [
    ('OWSLib', '0.29.3', {
        'checksums': ['3baf34058458b933767ee43e632174cb0baebf49d326da179faacb9772f98539'],
    }),
    ('pyepsg', '0.4.0', {
