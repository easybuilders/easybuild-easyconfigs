easyblock = 'Bundle'

name = 'CESM-deps'
version = '2'

homepage = 'http://www.cesm.ucar.edu/models/cesm2/'
description = """CESM is a fully-coupled, community, global climate model that provides state-of-the-art
 computer simulations of the Earth's past, present, and future climate states. 
This module provides the installation dependancies. You must check out CESM from git in your workspace."""

toolchain = {'name': 'intel', 'version': '2020b'}

dependencies = [
    ('CMake', '3.18.4'),
    ('Python', '2.7.18'),
    ('Perl', '5.32.0'),
    ('XML-LibXML', '2.0206'),
    ('ESMF', '8.0.1'),
    # not compatible with newer svn
    ('Subversion', '1.10.7'),
    ('netCDF', '4.7.4'),
    ('git', '2.28.0', '-nodocs'),
    ('netCDF-Fortran', '4.5.3'),
    ('netCDF-C++4', '4.3.1'),
    ('PnetCDF', '1.12.1'),
]

moduleclass = 'geo'
