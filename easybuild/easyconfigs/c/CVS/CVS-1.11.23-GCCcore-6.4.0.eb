    '400f51b59d85116e79b844f2d5dbbad4759442a789b401a94aa5052c3d7a4aa9',  # cvs-1.11.23.tar.bz2
    '3c0ee6509c4622778c093316437a5b047c51820e11cee3ed3a405c2a590a9ff4',  # CVS-1.11.23-zlib-1.patch
    '6a1aa65acfbb41b7639adc70248d908981f172c2529bb52d84359713f9541874',  # CVS-1.11.23-getline.patch
]

builddependencies = [('binutils', '2.28')]

dependencies = [('zlib', '1.2.11')]

sanity_check_paths = {
    'files': ['bin/cvs', 'bin/cvsbug', 'bin/rcs2log'],
    'dirs': [],
}

moduleclass = 'devel'
