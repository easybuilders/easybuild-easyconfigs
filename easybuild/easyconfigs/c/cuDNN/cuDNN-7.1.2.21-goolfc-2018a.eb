easyblock = 'Tarball'

# The full version of the library can be found using
# strings -a cuda/lib64/libcudnn_static.a | grep cudnn_version_
# Download and rename.
name = 'cuDNN'
version = '7.1.2.21'

homepage = 'https://developer.nvidia.com/cudnn'
description = """The NVIDIA CUDA Deep Neural Network library (cuDNN) is a GPU-accelerated library of primitives for
    deep neural networks."""

# goolfc 2018a uses CUDA 9.1
toolchain = {'name': 'goolfc', 'version': '2018a'}

# Nvidia developer registration required.
# Download link: https://developer.nvidia.com/rdp/cudnn-download
sources = ['%(namelower)s-9.1-linux-x64-v%(version)s.tgz']

checksums = [
    'c61000ed700bc5a009bc2e135bbdf736c9743212b2174a2fc9018a66cc0979ec',  # cudnn-9.1-linux-x64-v7.1.2.21.tgz
]

sanity_check_paths = {
    'files': ['include/cudnn.h', 'lib64/libcudnn_static.a'],
    'dirs': ['include', 'lib64'],
}

moduleclass = 'numlib'
