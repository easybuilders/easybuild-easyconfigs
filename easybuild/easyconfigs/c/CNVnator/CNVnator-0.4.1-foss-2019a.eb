easyblock = 'CmdCp'

name = 'CNVnator'
version = '0.4.1'

homepage = 'https://github.com/abyzovlab/CNVnator'
description = """CNVnator is a tool for CNV discovery and genotyping 
from depth-of-coverage by mapped reads."""

toolchain = {'name': 'foss', 'version': '2019a'}

source_urls = ['https://github.com/abyzovlab/CNVnator/archive/']
sources = ['v%(version)s/%(name)s_v%(version)s.tar.gz']
checksums = ['2e1cc2897feca859873c68214166a6f766e2d535d0521950dd352faacb7ab37c']

dependencies = [
    ('Perl', '5.28.1'),
]

skipsteps = ['build']

files_to_copy = [(['cnvnator2VCF.pl'], 'bin')]


sanity_check_paths = {
    'files': ['bin/cnvnator2VCF.pl'],
    'dirs': [],
}

moduleclass = 'bio'
