name = 'calibre'
version = '8.6.0'

# see VersionDate in caps3 output:

easyblock = 'Binary'

homepage = 'https://calibre-ebook.com/about'
description = """calibre is a powerful and easy to use e-book manager. Users say it’s outstanding and a must-have. 
It’ll allow you to do nearly everything and it takes things a step beyond normal e-book software. It’s also 
completely free and open source and great for both casual users and computer experts."""

toolchain = SYSTEM

source_urls = ['https://github.com/kovidgoyal/calibre/releases/download/v%(version)s']
sources = ['%(name)s-%(version)s-x86_64.txz']
checksums = ['f9c69d40ece16e0011b58ec85c7dc3e62ae980b54afa46c21306ae941d2ef95f']
extract_sources = True
sanity_check_paths = {
    'files': ['bin/ebook-convert'],
    'dirs': [],
}
postinstallcmds = [
    "/cvmfs/soft.computecanada.ca/easybuild/bin/setrpaths.sh --path %(installdir)s --add_path '$ORIGIN/../lib'"
]
moduleclass = 'data'
