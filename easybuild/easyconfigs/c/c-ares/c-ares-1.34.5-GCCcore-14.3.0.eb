easyblock = 'ConfigureMake'

name = 'c-ares'
version = '1.34.5'

homepage = 'https://c-ares.org/'
description = "c-ares is a C library for asynchronous DNS requests (including name resolves)"

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}
toolchainopts = {'pic': True}

github_account = 'c-ares'
source_urls = [GITHUB_SOURCE]
sources = ['cares-1_27_0.tar.gz']
checksums = ['de6a839d47b93174ba260187a084027ea681a91ffe12f2d5f20645652eae246c']

builddependencies = [
    ('binutils', '2.44'),
    ('Autotools', '20250527'),
]

preconfigopts = "autoreconf -i -f &&"

sanity_check_paths = {
    'files': ['lib/libcares.a', 'lib/libcares.so', 'lib/pkgconfig/libcares.pc'],
    'dirs': ['include', 'share/man'],
}

moduleclass = 'lib'
