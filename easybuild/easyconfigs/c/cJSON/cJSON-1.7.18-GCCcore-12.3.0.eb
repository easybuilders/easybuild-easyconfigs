easyblock = 'CMakeMake'

name = 'cJSON'
version = '1.7.18'

homepage = 'https://github.com/DaveGamble/cJSON'
description = """Ultralightweight JSON parser in ANSI C"""

toolchain = {'name': 'GCCcore', 'version': '12.3.0'}

github_account = 'DaveGamble'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['3aa806844a03442c00769b83e99970be70fbef03735ff898f4811dd03b9f5ee5']

builddependencies = [('CMake', '3.31.1')]

sanity_check_paths = {
    'files': ['include/%(namelower)s/cJSON.h', 'lib64/lib%(namelower)s.so'],
    'dirs': ['include', 'lib64', 'lib64/pkgconfig', 'lib64/cmake'],
}

moduleclass = 'lib'
