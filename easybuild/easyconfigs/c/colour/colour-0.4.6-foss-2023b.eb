easyblock = 'PythonPackage'

name = 'colour'
version = '0.4.6'

homepage = 'https://colour.readthedocs.io/en/develop/index.html'
description = """Colour is an open-source Python package providing a comprehensive number of algorithms 
and datasets for colour science."""

toolchain = {'name': 'foss', 'version': '2023b'}

source_urls = ['https://github.com/colour-science/%(name)s/archive/refs/tags/']
sources = ['v%(version)s.tar.gz']
patches = ['colour-0.4.6_make-compatible-with-older-numpy.patch']

builddependencies = [
    ('hatchling', '1.18.0'),
]

dependencies = [
    ('Python', '3.11.5'),
    ('Python-bundle-PyPI', '2023.10'),
    ('imageio', '2.34.1'),
    ('SciPy-bundle', '2023.11'),
    ('typing-extensions', '4.10.0'),
    ('matplotlib', '3.8.2'),
    ('networkx', '3.2.1'),
    ('pydot', '3.0.4'),
    ('OpenColorIO', '2.4.2'),
    ('OpenImageIO', '3.0.6.1'),
    ('tqdm', '4.66.2'),
    ('python-xxhash', '3.4.1'),
    ('trimesh', '4.5.3'),
]


moduleclass = 'vis'
