easyblock = 'MesonNinja'

name = 'cairomm'
version = '1.19.0'

homepage = 'http://cairographics.org'
description = "The Cairomm package provides a C++ interface to Cairo."

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = ['http://cairographics.org/releases/']
sources = [SOURCE_TAR_XZ]
checksums = ['8b14f03a0e5178c7ff8f7b288cb342a61711c84c9fbed6e663442cfcc873ce5b']

builddependencies = [
    ('Meson', '1.8.2'),
    ('Ninja', '1.13.0'),
    ('M4', '1.4.20'),
    ('mm-common', '1.0.7'),
]

dependencies = [
    ('cairo', '1.18.4'),
    ('libsigc++', '3.8.0'),
]

configopts = '-Ddefault_library=both'

sanity_check_paths = {
    'files': [f'lib/libcairomm-1.16.{SHLIB_EXT}'],
    'dirs': [],
}

moduleclass = 'vis'
