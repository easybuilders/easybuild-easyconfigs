easyblock = 'ConfigureMake'

name = 'ctags'
version = '5.8'

homepage = 'http://ctags.sourceforge.net/'
description = """Ctags generates an index (or tag) file of language objects found in source files that allows these
 items to be quickly and easily located by a text editor or other utility."""

toolchain = SYSTEM

source_urls = [SOURCEFORGE_SOURCE]
sources = [SOURCE_TAR_GZ]
checksums = ['0e44b45dcabe969e0bbbb11e30c246f81abe5d32012db37395eb57d66e9e99c7']

sanity_check_paths = {
    'files': ['bin/ctags'],
    'dirs': ['share/man'],
}

moduleclass = 'devel'
