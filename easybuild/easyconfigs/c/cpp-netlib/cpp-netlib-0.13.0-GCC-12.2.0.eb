easyblock = 'CMakeMake'

name = 'cpp-netlib'
version = '0.13.0'

homepage = 'https://cpp-netlib.org'
description = """A collection of open-source libraries for high level network programming."""

toolchain = {'name': 'GCC', 'version': '12.2.0'}
toolchainopts = {'pic': True}

sources = [{
    'filename': '%(name)s-%(version)s-git.tar.xz',
    'git_config': {
        'url': 'https://github.com/cpp-netlib',
        'repo_name': 'cpp-netlib',
        'commit': 'cpp-netlib-0.13.0-final',
        'recursive': True,
        'keep_git_dir': False,
    },
}]
checksums = ['d356789167c20d554fc319ead1a2b830b321326b5900110911055549339727b5']

builddependencies = [
    ('binutils', '2.39'),
    ('CMake', '3.24.3'),
    ('Boost', '1.81.0'),
]

# dependencies = [
#     ('OpenSSL', '1.1', '', SYSTEM),
# ]

configopts = '-DCPP-NETLIB_STATIC_BOOST=ON '

sanity_check_paths = {
    'files': ['lib/libgmock.a', 'lib64/libcppnetlib-client-connections.a'],
    'dirs':  ['lib', 'lib64', 'include']
}

moduleclass = 'devel'
