        'f9b77f8d6a12a499a146ca6ac1b4fba26268956e308f7272753d53f92cd5b830',
    'NVIDIA-Linux-x86_64-%s.run' % nv_version:
        'c854bb2dc3368c0127dc08a85bd902f8558a5149085af13d061c612cf06c2913',
}]

moduleclass = 'system'
