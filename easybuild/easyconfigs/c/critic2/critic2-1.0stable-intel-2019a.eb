easyblock = 'ConfigureMake'

name = 'critic2'
version = '1.0stable'

homepage = 'https://aoterodelaroza.github.io/critic2/'
description = """Critic2 is a program for the analysis of quantum mechanical calculation results in molecules and periodic solids."""

toolchain = {'name': 'intel', 'version': '2019a'}


source_urls = ['https://github.com/aoterodelaroza/critic2/archive/'] 
sources = ['%(version)s.tar.gz']

preconfigopts = "touch COPYING && autoreconf && " 

builddependencies = [
    ('Autoconf', '2.69'),
]

dependencies = [
    ('libxc', '4.3.4'),    
]

sanity_check_paths = {
    'files': ["bin/critic2"],
    'dirs': ["bin"],
}

moduleclass = 'chem'
