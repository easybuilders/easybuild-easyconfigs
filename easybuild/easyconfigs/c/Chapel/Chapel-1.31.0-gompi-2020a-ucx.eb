    'dirs': [],
}

modextrapaths = {
    'PATH': 'chapel-1.31.0/bin/linux64-x86_64',
}

modextravars = {
    'CHPL_HOME': '%(installdir)s/chapel-1.31.0',
    'CHPL_HOST_PLATFORM': 'linux64',
    'GEN_LFLAGS': '-L%(installdir)s/chapel-1.31.0/third-party/jemalloc/install/target/linux64-x86_64-native-gnu-none/lib'
    'CHPL_COMM': 'gasnet',
    'CHPL_COMM_SUBSTRATE': 'ibv',
    'CHPL_LAUNCHER': 'gasnetrun_ibv',
    'CHPL_GASNET_SEGMENT': 'large',
    'CHPL_TARGET_CPU': 'native',
    'GASNET_PHYSMEM_MAX': '1G',
    'GASNET_PHYSMEM_NOPROBE': '1',
    'GASNET_IBV_SPAWNER': 'ssh',
    'GASNET_ODP_VERBOSE': '0',
}

modaltsoftname = "chapel-ucx"

