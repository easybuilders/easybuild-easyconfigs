toolchain = {'name': 'GCCcore', 'version': '12.3.0'}

source_urls = ['https://capnproto.org/']
sources = ['capnproto-c++-%(version)s.tar.gz']
checksums = ['0f7f4b8a76a2cdb284fddef20de8306450df6dd031a47a15ac95bc43c3358e09']

