# easyconfig file for Code_Saturne
# author: Metin Cakircali (Juelich Supercomputing Centre)
name = 'Code_Saturne'
version = '5.3.0'

# extra option for the SLURM batch system
slurm = True

homepage = 'https://www.code-saturne.org'
description = """Code_Saturne solves the Navier-Stokes equations 
for 2D, 2D-axisymmetric and 3D flows, steady or unsteady, 
laminar or turbulent, incompressible or weakly dilatable, 
isothermal or not, with scalars transport if required.

Code_Saturne %(version)s%(versionsuffix)s is installed in
$EBROOTCODE_SATURNE
"""
toolchain = {'name': 'intel', 'version': '2018a'}

sources = [{
    'source_urls': ['https://github.com/code-saturne/code_saturne/archive/'],
    'filename': 'v%(version)s.tar.gz'
}]
checksums = ['df1bd7784311842a3930bd2ab9490d261d7860c330ee0c3d6070c2b67e0d6734']

builddependencies = [
    ('Autotools', '20170619'),
    ('gettext', '0.19.8.1'),
    ('Bison', '3.0.4'),
    ('flex', '2.6.4'),
]

dependencies = [
    ('Python', '2.7.14'),
    ('PyQt', '4.12.1', '-Python-%(pyver)s'),
    ('HDF5', '1.8.20'),
    ('CGNS', '3.3.1'),
    ('ParMETIS', '4.0.3'),
    ('SCOTCH', '6.0.6'),
    ('ParaView', '5.4.1', '-OSMesa'),
]

# better to configure these dependents explicitly
configopts = ['--with-cgns=$EBROOTCGNS --with-metis=$EBROOTPARMETIS --with-scotch=$EBROOTSCOTCH']

parallel = 32

modloadmsg = "To benefit from shell completion for %(name)s commands and options,\n"
modloadmsg += "you may also source a bash completion file by;\n"
modloadmsg += ". $CS_BASH\n"

moduleclass = 'cae'
