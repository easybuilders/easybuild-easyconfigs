easyblock = "PythonPackage"

name = 'cutadapt'
version = '1.16'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://cutadapt.readthedocs.org/en/stable/'
description = """cutadapt removes adapter sequences from high-throughput sequencing data. This is usually 
 necessary when the read length of the sequencing machine  is longer than the molecule that is sequenced, for 
 example when sequencing microRNAs."""

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['https://github.com/marcelm/cutadapt/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['1dad7570be002f214f2188636cacc479e0fb675d8567335960cf1185906cf2c3']

dependencies = [
    ('Python', '2.7.11'),
]

sanity_check_paths = {
    'files': ['bin/cutadapt'],
    'dirs': [],
}

moduleclass = 'bio'
