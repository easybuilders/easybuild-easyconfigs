easyblock = "PythonPackage"

name = 'cutadapt'
version = '1.14'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://opensource.scilifelab.se/projects/cutadapt/'
description = """ Cutadapt finds and removes adapter sequences, primers, poly-A tails and
 other types of unwanted sequence from your high-throughput sequencing reads. """

toolchain = {'name': 'intel', 'version': '2017a'}

sources = [SOURCELOWER_TAR_GZ]
checksums = ['f32990a8b2f8b53f8f4c723ada3d256a8e8476febdd296506764cc8e83397d3d']

dependencies = [
    ('Python', '2.7.13'),
]

sanity_check_paths = {
    'files': ['bin/cutadapt'],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'bio'
