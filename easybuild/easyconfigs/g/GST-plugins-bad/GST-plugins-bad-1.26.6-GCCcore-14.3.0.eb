easyblock = 'MesonNinja'

name = 'GST-plugins-bad'
version = '1.26.6'

homepage = 'https://gstreamer.freedesktop.org/'
description = """GStreamer is a library for constructing graphs of media-handling
 components. The applications it supports range from simple
 Ogg/Vorbis playback, audio/video streaming to complex audio
 (mixing) and video (non-linear editing) processing."""

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = ['https://gstreamer.freedesktop.org/src/gst-plugins-bad']
sources = [SOURCELOWER_TAR_XZ]
checksums = ['b3bf4b1ad3017eac1fcf1209eae8a61208f8ef43b9b1ef99b9366acf14d74a79']

builddependencies = [
    ('binutils', '2.44'),
    ('Meson', '1.8.2'),
    ('Ninja', '1.13.0'),
    ('GObject-Introspection', '1.84.0'),
    ('gettext', '0.25'),
    ('pkgconf', '2.4.3'),
    ('Bison', '3.8.2'),
]

dependencies = [
    ('zlib', '1.3.1'),
    ('bzip2', '1.0.8'),
    ('GLib', '2.85.3'),
    ('GStreamer', '1.26.5'),
    ('GST-plugins-base', version),
    ('Gdk-Pixbuf', '2.42.12'),
    ('X11', '20250608'),
    ('OpenGL', '2025.09'),
    ('Graphene', '1.10.8'),
    ('librsvg', '2.61.0'),
    ('OpenJPEG', '2.5.3'),
    ('OpenEXR', '3.3.4'),
    ('libwebp', '1.5.0'),
    ('libaom', '3.10.0'),
    ('SVT-AV1', '3.1.2'),
    ('x265', '4.1'),
    ('libde265', '1.0.16'),
    ('FAAD2', '2.11.2'),
]

configopts = '-Dgpl=enabled'

modextrapaths = {
    'GST_PLUGIN_PATH': 'lib/gstreamer-1.0',
}

sanity_check_paths = {
    'files': ['bin/gst-transcoder-1.0', 'bin/playout'] +
             [f'lib/libgst{x}-1.0.{SHLIB_EXT}' for x in ['adaptivedemux', 'badaudio', 'codecs', 'player']],
    'dirs': ['include', 'share']
}

moduleclass = 'vis'
