easyblock = 'ConfigureMake'

name = 'Guix'
version = '0.10.0'

homepage = 'https://www.gnu.org/software/guix/'
description = """The GNU Guix package manager, in addition to standard package management features, supports
 transactional upgrades and roll-backs, unprivileged package management, per-user profiles, and more"""

source_urls = ['ftp://alpha.gnu.org/gnu/guix/']
sources = [SOURCELOWER_TAR_GZ]

toolchain = {'name': 'GCC', 'version': '4.9.3-2.25'}

dependencies = [
    ('bzip2', '1.0.6'),
    ('Guile', '2.0.11'),
    ('libgcrypt', '1.7.0'),
    ('SQLite', '3.13.0'),
]

sanity_check_paths = {
    'files': ['bin/guix', 'bin/guix-daemon', 'etc/bash_completion.d/guix', 'libexec/guix-authenticate',
              'sbin/guix-register'],
    'dirs': ['lib', 'libexec/guix', 'share'],
}

moduleclass = 'tools'
