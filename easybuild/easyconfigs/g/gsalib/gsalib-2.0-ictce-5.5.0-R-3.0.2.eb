easyblock = 'RPackage'

name = 'gsalib'
version = '2.0'

homepage = 'http://cran.r-project.org/web/packages/gsalib/'
description = """Utility functions for GATK analyses of genome sequence data"""

toolchain = {'name': 'ictce', 'version': '5.5.0'}

source_urls = ['http://cran.r-project.org/src/contrib/']
sources = ['%(name)s_%(version)s.tar.gz']

r = 'R'
rver = '3.0.2'
versionsuffix = '-%s-%s' % (r, rver)

dependencies = [
                (r, rver),
               ]

moduleclass = 'math'
