easyblock = 'JAR'

name = 'GEMmotif'
version = '3.4'
versionsuffix = '-Java-%(javaver)s'

homepage = 'http://groups.csail.mit.edu/cgs/gem/'
description = """GEM is a scientific software for studying protein-DNA
interaction at high resolution using ChIP-seq/ChIP-exo data.  It can also be
applied to CLIP-seq and Branch-seq data."""

toolchain = SYSTEM

source_urls = ['http://groups.csail.mit.edu/cgs/gem/download/']
sources = ['gem.v%(version)s.tar.gz']
checksums =['f9960cb46342642e7ea004590795eb7e6121ee6061f21085c072231300edc4fd']

dependencies = [
    ('Java', '11', '', SYSTEM),
]

install_cmds = [
    'tar -zxvf gem.v%(version)s.tar.gz',
    'cp -R gem/* %(installdir)s',
]

sanity_check_paths = {
    'files': ["gem.jar"],
    'dirs': [],
}

modloadmsg = """To execute GEM run: java -jar $EBROOTGEMMOTIF/gem.jar\n"""

moduleclass = 'bio'
