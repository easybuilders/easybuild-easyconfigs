easyblock = 'MesonNinja'

name = 'GLibmm'
version = '2.85.0'

homepage = 'https://www.gtk.org/'
description = """C++ bindings for Glib"""

toolchain = {'name': 'GCCcore', 'version': '14.2.0'}
toolchainopts = {'pic': True}

source_urls = ['https://ftp.gnome.org/pub/gnome/sources/glibmm/%(version_major_minor)s/']
sources = ['%(namelower)s-%(version)s.tar.xz']
checksums = ['0771306711299fbf62e53c752d53ed581635127167a6cc79ae05f2b8421d29d7']

builddependencies = [
    ('binutils', '2.42'),
    ('pkgconf', '2.3.0'),
    ('Meson', '1.6.1'),
    ('Ninja', '1.12.1'),
]

dependencies = [
    ('GLib', '2.85.1'),
    ('libsigc++', '3.8.0'),
]

configopts = '-Ddefault_library=both'

sanity_check_paths = {
    'files': ['lib/libglibmm-2.68.%s' % SHLIB_EXT, 'lib/libgiomm-2.68.%s' % SHLIB_EXT,
              'include/glibmm-2.68/glibmm.h', 'include/giomm-2.68/giomm.h'],
    'dirs': ['lib/pkgconfig'],
}

moduleclass = 'vis'
