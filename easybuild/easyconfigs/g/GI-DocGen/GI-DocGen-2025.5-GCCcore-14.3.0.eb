# Author: Jasper Grimm (UoY)
easyblock = 'PythonBundle'

name = 'GI-DocGen'
version = '2025.5'

homepage = 'https://gitlab.gnome.org/GNOME/gi-docgen'
description = """
GI-DocGen is a document generator for GObject-based libraries. GObject is
the base type system of the GNOME project. GI-Docgen reuses the
introspection data generated by GObject-based libraries to generate the API
reference of these libraries, as well as other ancillary documentation.
"""

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

builddependencies = [
    ('binutils', '2.44'),
    ('hatchling', '1.27.0'),
]

dependencies = [
    ('Python', '3.13.5'),
    ('Python-bundle-PyPI', '2025.07'),
]

exts_list = [
    ('Markdown', '3.10', {
        'source_tmpl': '%(namelower)s-%(version)s.tar.gz',
        'checksums': ['37062d4f2aa4b2b6b32aefb80faa300f82cc790cb949a35b8caede34f2b68c0e'],
    }),
    ('typogrify', '2.1.0', {
        'checksums': ['f0aa004e98032a6e6be4c9da65e7eb7150e36ca3bf508adbcda82b4d003e61ee'],
    }),
    ('smartypants', '2.0.2', {
        'checksums': ['39d64ce1d7cc6964b698297bdf391bc12c3251b7f608e6e55d857cd7c5f800c6'],
    }),
    ('gi-docgen', version, {
        'modulename': 'gidocgen',
        'source_tmpl': 'gi_docgen-%(version)s.tar.gz',
        'checksums': ['7fb2b5370d99849e52e74e9e584b7eeb5b5a3a95493d6752c88c0d251777f4bf'],
    }),
]

sanity_check_paths = {
    'files': ['bin/%(namelower)s'],
    'dirs': ['lib/python%(pyshortver)s/site-packages/gidocgen'],
}

moduleclass = 'tools'
