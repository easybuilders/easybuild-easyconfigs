easyblock = 'ConfigureMake'

name = 'gnucobol'
version = '3.0-rc1'

homepage = 'https://sourceforge.net/projects/open-cobol/'
description = """GnuCOBOL (formerly OpenCOBOL) is a free COBOL compiler. cobc translates COBOL source to executable using intermediate C, designated C compiler and linker."""

toolchain = {'name': 'GCC', 'version': '4.9.2'}

sources = [SOURCELOWER_TAR_XZ]
source_urls = ['http://downloads.sourceforge.net/open-cobol/gnucobol-3.0-rc1.tar.xz']

dependencies = [
        ('DB', '5.0.26'),
        ('GMP', '6.0.0a'),
        ('libtool', '2.4.6'),
        ('ncurses', '6.0'),
        ]
        
sanity_check_paths = {
    'files': ['bin/cobc'],
    'dirs': [],
}

moduleclass = 'lang'

