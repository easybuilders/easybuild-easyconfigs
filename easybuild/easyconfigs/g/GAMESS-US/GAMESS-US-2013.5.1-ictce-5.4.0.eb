easyblock = 'GamessUS'
name = 'GAMESS-US'
version = '2013.5.1'

homepage = 'http://www.msg.ameslab.gov/gamess/'
description = """The General Atomic and Molecular Electronic Structure System (GAMESS)
is a general ab initio quantum chemistry package."""

toolchain = {'name': 'ictce', 'version': '5.4.0'}
toolchainopts = {'openmp': True, 'usempi': True}

source_urls = [
    'http://www.msg.chem.iastate.edu/GAMESS/download/dist.source.shtml',  # GAMESS-US sources
]
sources = [
    '%(name)s-%(version)s.tar.gz',
]
patches = ['compddi.patch']

moduleclass = 'chem'
