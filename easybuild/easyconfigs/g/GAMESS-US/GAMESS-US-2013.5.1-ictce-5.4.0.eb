name = 'GAMESS-US'
version = '2013.5.1'

homepage = 'http://www.msg.ameslab.gov/gamess/'
description = """The General Atomic and Molecular Electronic Structure System (GAMESS)
is a general ab initio quantum chemistry package."""

toolchain = {'name': 'ictce', 'version': '5.4.0'}
toolchainopts = {'openmp': True, 'usempi': True}

source_urls = [
    'http://www.msg.chem.iastate.edu/GAMESS/download/dist.source.shtml',  # GAMESS-US sources
]
sources = [SOURCE_TAR_GZ]
patches = ['compddi.patch', 'rungms.patch']

moduleclass = 'chem'
modextrapaths = { 'PATH' : '' }
modloadmsg = "GAMESS has been made available at no cost to both academic and commercial users. However, it has not been released into the public domain, nor under an open-source licence. By accessing and using this installation of GAMESS, you represent that you and your research group agree to the GAMESS licence, which is available at http://www.msg.ameslab.gov/gamess/License_Agreement.html."
