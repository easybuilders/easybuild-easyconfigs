easyblock = 'CMakeMake'

name = 'GARFIELD++'
version = '2025.01'

description = '''Garfield++ is a toolkit for the detailed simulation of detectors
    which use gases or semi-conductors as sensitive medium'''
homepage = 'https://garfieldpp.web.cern.ch/'

toolchain = {'name': 'foss', 'version': '2023b'}

builddependencies = [
    ('CMake', '3.27.6'),
]

dependencies = [
    ('ROOT', '6.32.10'),
    ('GSL', '2.7'),
]

source_urls = ['https://gitlab.cern.ch/garfield/garfieldpp/-/archive/%(version)s/']
sources = ['garfieldpp-%(version)s.tar.gz']
checksums = ['0343aa4a5984ecfc52561c931c844658494afe768fbfedab65e7bfd7a7b503b3']

modextrapaths = {
     'GARFIELD_HOME': '',
     'HEED_DATABASE': 'share/Heed/database',
}

sanity_check_paths = {
    'dirs': ['include', 'lib', 'share'],
    'files': [],
}

moduleclass = 'phys'
