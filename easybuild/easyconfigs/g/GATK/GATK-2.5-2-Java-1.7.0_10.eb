name = 'GATK'
version = '2.5-2'

homepage = 'http://www.broadinstitute.org/gatk/'
description = """
 The Genome Analysis Toolkit or GATK is a software package developed at the Broad Institute 
 to analyse next-generation resequencing data. The toolkit offers a wide variety of tools,
 with a primary focus on variant discovery and genotyping as well as strong emphasis on 
 data quality assurance. Its robust architecture, powerful processing engine and 
 high-performance computing features make it capable of taking on projects of any size."""

toolchain = {'name': 'dummy', 'version': 'dummy'}

sources = ['%s-%s.tar.bz2' % ("GenomeAnalysisTK", version)]
source_urls = ['http://www.broadinstitute.org/gatk/download']

java = 'Java'
javaver = '1.7.0_10'

dependencies = [(java, javaver)]

sanity_check_paths = {
    'files': ["GenomeAnalysisTK.jar"],
    'dirs': ["resources"],
}

moduleclass = 'bio'
