easyblock = "CMakeMakeCp"

name = 'grenedalf'
version = "0.6.3"

homepage = "https://github.com/lczech/grenedalf"
description = """Toolkit for Population Genetic Statistics from Pool-Sequenced Samples, e.g., in Evolve and Resequence experiments."""

toolchain = {"name": "GCCcore", "version": "13.3.0"}

github_account = 'lczech'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['4bb143a746c8bec66471798f0aa1d56c800c596b000600e5916d58d94d612d5b']

builddependencies = [
    ("CMake", "3.31.1"),
]

files_to_copy = [
    (['bin/%(namelower)s'], 'bin'),
]

sanity_check_paths = {
    "files": [
        'bin/%(namelower)s'
    ],
    "dirs": ['bin'],
}

sanity_check_commands = ['grenedalf --version']

moduleclass = "bio"
