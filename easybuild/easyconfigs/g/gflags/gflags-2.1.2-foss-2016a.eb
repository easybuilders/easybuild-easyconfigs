easyblock = 'CMakeMake'

name = 'gflags'
version = '2.1.2'

homepage = 'https://github.com/gflags/gflags'
description = """
The gflags package contains a C++ library that implements commandline flags processing. It includes built-in support for standard types such as string and the ability to define flags in the source file in which they are used. 
"""
toolchain = {'name': 'foss', 'version': '2016a'}

sources = ['v%(version)s.tar.gz']
source_urls = ['https://github.com/gflags/gflags/archive/']

sanity_check_paths = {
    'files': ['bin/gflags_completions.sh','lib/libgflags.a','lib/libgflags_nothreads.a','include/gflags/gflags_completions.h'],
    'dirs': [],
}

builddependencies = [
    ('CMake', '3.4.1'),
]

moduleclass = 'devel'
