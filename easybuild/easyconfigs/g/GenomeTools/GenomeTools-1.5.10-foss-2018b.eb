easyblock = 'ConfigureMake'

name = 'GenomeTools'
version = "1.5.10"

homepage = 'http://genometools.org'
description = """A comprehensive software library for efficient processing of structured genome
  annotations"""

toolchain = {'name': 'foss', 'version': '2018b'}

source_urls = ['https://github.com/genometools/genometools/archive']
sources = ['v%(version)s.tar.gz']
checksums = ['a6aa7f158a3cef90fea8d0fe24bfad0c3ee96b17b3ba0c1f6462582593af679e']

dependencies = [
    ('cairo', '1.14.12'),
    ('Pango', '1.42.4'),
]

skipsteps = ['configure']
installopts = 'prefix=%(installdir)s'

sanity_check_paths = {
    'files': ['bin/gt'],
    'dirs': [],
}
sanity_check_commands = ['gt -help']

modextrapaths = {
    'PATH': "",
}

moduleclass = 'bio'
