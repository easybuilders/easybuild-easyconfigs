easyblock = "Toolchain"

name = 'gofb'
version = '2024a'

homepage = '(none)'
description = """GNU Compiler Collection (GCC) based compiler toolchain with OpenMPI and FlexiBLAS"""

toolchain = SYSTEM

local_comp = ('GCC', '13.3.0')

dependencies = [
    local_comp,
    ('OpenMPI', '5.0.3', '', local_comp),
    ('FlexiBLAS', '3.4.4', '', local_comp),
]

moduleclass = 'toolchain'
