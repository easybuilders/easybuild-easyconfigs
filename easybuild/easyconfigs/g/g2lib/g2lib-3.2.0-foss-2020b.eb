name = 'g2lib'
version = '3.2.0'

homepage = 'https://www.nco.ncep.noaa.gov/pmb/codes/GRIB2/'
description = """Library contains GRIB2 encoder/decoder and search/indexing routines."""

toolchain = {'name': 'foss', 'version': '2020b'}

source_urls = [homepage]
sources = ['%(name)s-%(version)s.tar']
#patches = ['g2lib-3.1.0_makefile.patch']
checksums = [
    '9d3866de32e13e80798bfb08dbbea9223f32cec3fce3c57b6838e76f27d5a1d3',  # g2lib-3.2.0.tar
#    '702f76c77638fb36b662caf96890a69f19c507778c92aa1e163898b150cc8282',  # g2lib-3.1.0_makefile.patch
]

dependencies = [
    ('JasPer', '2.0.24'),
    ('libpng', '1.6.37'),
]

buildopts = 'CFLAGS="$CFLAGS -DLINUXG95 -D__64BIT__" FFLAGS="$FFLAGS -cpp -I. -fallow-argument-mismatch -fallow-invalid-boz -fno-range-check" FC=$FC CC=$CC '

# parallel build tends to fail
parallel = 1

moduleclass = 'data'
