easyblock = 'Toolchain'

name = 'gmpit'
version = '2021a'

homepage = '(none)'
description = """GNU Compiler Collection (GCC) based compiler toolchain,
 including MPItrampoline for MPI support."""

toolchain = SYSTEM

local_gccver = '10.3.0'

# compiler toolchain dependencies
dependencies = [
    ('GCC', local_gccver),  # includes both GCC and binutils
    ('MPItrampoline', '3.3.1', '', ('GCC', local_gccver)),
]

moduleclass = 'toolchain'
