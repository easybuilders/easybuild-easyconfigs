easyblock = 'MakeCp'

name = 'genometools'
version = '1.5.3'

homepage = 'http://genometools.org'
description = """GenomeTools: A Comprehensive Software Library for Efficient Processing of
  Structured Genome Annotations."""

toolchain = {'name': 'foss', 'version': '2015b'}

source_urls = ['http://genometools.org/pub/']
sources = [SOURCE_TAR_GZ]

builddependencies = [
    ('cairo', '1.14.6'),
    ('Pango', '1.39.0'),
]

buildopts = ['64bit=yes with-hmmer=yes']

files_to_copy = []
#[(['flash'], 'bin')]

sanity_check_paths = {
    'files': [],
    'dirs': [],
}

moduleclass = 'bio'
