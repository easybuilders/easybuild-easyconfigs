easyblock = 'CMakeMake'

name = 'GOTCHA'
version = '1.0.3'

homepage = 'https://github.com/LLNL/GOTCHA'
description = """
 Gotcha is a library that wraps functions.
 Tools can use gotcha to install hooks into other libraries,
 for example putting a wrapper function around libc's malloc.
"""

toolchain = {'name': 'GCC', 'version': '8.3.0'}

sources = [{
    'filename': 'v%(version)s.tar.gz',
    'git_config': {
        'url': 'https://github.com/LLNL',
        'repo_name': '%(name)s',
        'tag': 'v%(version)s',
    },
}]
checksums = ['bc1996763477dae549f14f1d4f09797e43440c18f5007ea15bee8b90e9e902a1']

builddependencies = [
    ('CMake', '3.20.1'),
]


sanity_check_paths = {
    'files': ['include/%(namelower)s/%(namelower)s.h', 'include/%(namelower)s/gotcha_types.h', 'lib/libgotcha.so'],
    'dirs': [],
}

moduleclass = 'lib'
