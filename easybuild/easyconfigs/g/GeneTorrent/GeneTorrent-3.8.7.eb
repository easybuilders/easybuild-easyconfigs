easyblock = 'ConfigureMake'


name = 'GeneTorrent'
version = '3.8.7'

homepage = 'https://cghub.ucsc.edu/index.html'
description = """ GeneTorrent is a command-line tool required to download datasets
held in repositories at the Cancer Genomics Hub. """

toolchain = {'name': 'dummy', 'version': ''}

source_urls = ['https://cghub.ucsc.edu/software/downloads/GeneTorrent/%(version)/']
sources = ['GeneTorrent-%(version).tar.gz']

configopts = ' --with-boost=yes --with-xerces=yes --with-xqilla=yes '

dependencies = [
    ('Xerces-C++', '3.1.1', '', True),
    ('cURl', '7.43.0', '', True),
    ('XQilla', '2.3.0', '', True),
    ('Boost', '1.55.0', '', True),
    ('pkg-config', '0.28', '', True),
    ('GCC', '4.8.4', '', True),
]

osdependencies = [('openssl-devel','pyOpenSSL')]

moduleclass = 'bio'

