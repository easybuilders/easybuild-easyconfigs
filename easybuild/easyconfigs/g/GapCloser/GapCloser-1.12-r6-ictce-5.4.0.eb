easyblock = "MakeCp"

name = 'GapCloser'
version = '1.12-r6'

homepage = 'http://soap.genomics.org.cn/index.html'
description = """Close the gaps emerging during the scaffolding process of SOAPdenovo or other assemblers, using the abundant pair relationships of short reads.""" 

toolchain = {'name': 'ictce', 'version': '5.4.0'}
toolchainopts = {'optarch': True, 'pic': True}

source_urls = [("http://sourceforge.net/projects/soapdenovo2/files/GapCloser/src/r6", "download")]
sources = ['%(name)s-src-v%(version)s.tgz']

maxparallel = 1 # may not be necessary, but quick anyway

files_to_copy = [(['Release/GapCloser'], 'bin'), 'GapCloser_Manual.pdf', 'LICENSE']

sanity_check_paths = {
    'files': ['bin/GapCloser'],
    'dirs': [],
}
