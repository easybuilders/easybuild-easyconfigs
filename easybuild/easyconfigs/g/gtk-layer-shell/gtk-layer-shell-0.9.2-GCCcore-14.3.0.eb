easyblock = 'MesonNinja'

name = 'gtk-layer-shell'
version = '0.9.2'

homepage = 'https://github.com/wmww/gtk-layer-shell'
description = """A library to create panels and other desktop components for Wayland using the Layer Shell protocol.
GTK3 version."""

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = ['https://github.com/wmww/gtk-layer-shell/archive/refs/tags/']
sources = ['v%(version)s.tar.gz']
checksums = ['526dd95c083e2a73eafd8baa1f5d676a36cb80fc8e7b304cbe3efebd62f0600c']

builddependencies = [
    ('binutils', '2.44'),
    ('Meson', '1.8.2'),
    ('Ninja', '1.13.0'),
    ('pkgconf', '2.4.3'),
    ('Vala', '0.56.18'),
]

dependencies = [
    ('GTK3', '3.24.43'),
    ('GObject-Introspection', '1.84.0'),
]

sanity_check_paths = {
    'files': [f'lib/libgtk-layer-shell.{SHLIB_EXT}'],
    'dirs': ['include/gtk-layer-shell'],
}

moduleclass = 'vis'
