easyblock = 'Toolchain'

name = 'golf'
version = '2021a'

homepage = '(none)'
description = """GNU Compiler Collection (GCC) based compiler toolchain, including
 OpenBLAS (BLAS and LAPACK support) and FFTW."""

toolchain = SYSTEM

local_gccver = '10.3.0'

dependencies = [
    ('GCC', local_gccver),
    ('OpenBLAS', '0.3.15', '', ('GCC', local_gccver)),
    ('FFTW', '3.3.9', '-serial', ('GCC', local_gccver)),
]

moduleclass = 'toolchain'
