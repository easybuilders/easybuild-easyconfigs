easyblock = 'ConfigureMake'

name = 'gettext'
version = '0.19.8'
pyver = '2.7.12'
pyshortver = '2.7'
pysubver = '-bare'
versionsuffix = '-Python-%s%s' % (pyver, pysubver)

homepage = 'http://www.gnu.org/software/gettext/'

description = """
 GNU `gettext' is an important step for the GNU Translation Project, as it is
 an asset on which we may build many other steps. This package offers to
 programmers, translators, and even users, a well integrated set of tools
 and documentation.
"""

toolchain = {'name': 'GCCcore', 'version': '6.3.0'}

sources = [SOURCE_TAR_GZ]
source_urls = [GNU_SOURCE]

dependencies = [
    ('libxml2', '2.9.4', versionsuffix),
    ('ncurses', '6.0'),
]

osdependencies = [
    ('binutils'),
]

configopts = '--without-emacs --with-libxml2-prefix=$EBROOTLIBXML2'

moduleclass = 'vis'
