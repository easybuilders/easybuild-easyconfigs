name = 'grep'
version = '2.15'

description = "grep: GNU grep"
homepage = 'http://www.gnu.org/software/grep/grep.html'

source_urls = [GNU_SOURCE]
sources = [SOURCELOWER_TAR_XZ]
toolchain = {'name': 'ictce', 'version': '7.1.2'}

configopts = ' --disable-perl-regexp '

sanity_check_paths = {
    'files': ["bin/grep"],
    'dirs': [],
}

moduleclass = 'tools'
