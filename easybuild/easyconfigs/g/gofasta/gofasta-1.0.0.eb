easyblock = 'GoPackage'

name = 'gofasta'
version = '1.0.0'

homepage = 'https://github.com/virus-evolution/gofasta'
description = """Some functions for dealing with alignments, 
developed to handle SARS-CoV-2 data as part of the COG-UK project."""

toolchain = SYSTEM

github_account = 'virus-evolution'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['7d59c7be3741a375115028a4eb1531b5aa4e3dcaf713154e8d9a91fdf2b227bf']

builddependencies = [
    ('Go', '1.16.5'),
]

sanity_check_commands = ['%(name)s -h']

sanity_check_paths = {
    'files': ['bin/%(name)s'],
    'dirs': [],
}

moduleclass = 'bio'
