easyblock = 'ConfigureMake'

name = 'GMAP-GSNAP'
version = '2013-11-27'

homepage = 'http://research-pub.gene.com/gmap/'
description = """GMAP: A Genomic Mapping and Alignment Program for mRNA and EST Sequences
 GSNAP: Genomic Short-read Nucleotide Alignment Program"""

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ['http://research-pub.gene.com/gmap/src/']
sources = ['%(namelower)s-%(version)s.tar.gz']

dependencies = [
    ('bzip2', '1.0.6'),
    ('zlib', '1.2.7'),
]

# make sure the gzip, gunzip and compress binaries are available after installation
sanity_check_paths = {
    'files': ["bin/gmap", "bin/gsnap"],
    'dirs': [],
}

moduleclass = 'tools'
