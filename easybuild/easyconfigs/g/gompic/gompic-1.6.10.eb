easyblock = "Toolchain"

name = 'gompic'
version = '1.6.10'

homepage = '(none)'
description = """GNU Compiler Collection (GCC) based compiler toolchain,
 including OpenMPI for MPI support."""

toolchain = {'name': 'dummy', 'version': 'dummy'}

compname = 'GCC'
compver = '4.8.2'

mpilib = 'OpenMPI'
mpiver = '1.7.3'

cudaname = 'CUDA'
cudaver = '5.5.22'

# compiler toolchain dependencies
dependencies = [
    (compname, compver),
    (mpilib, mpiver, '-' + cudaname + '-' + cudaver, (compname, compver)),
]

moduleclass = 'toolchain'
