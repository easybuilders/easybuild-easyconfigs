easyblock = 'RPackage'

name = 'GENESPACE'
version = '1.2.3'

homepage = 'https://github.com/jtlovell/GENESPACE'
description = """Construct pan-gene sets and other comparative genomics analyses from synteny-
and orthogroup-constrained blast hits."""

toolchain = {'name': 'foss', 'version': '2025a'}

github_account = "jtlovell"
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['1b87f40af79b391bc2be9653ac3de4ead7011f08848c5b47af95692b67c82d00']

dependencies = [
    ('R', '4.5.1'),
    ('R-bundle-Bioconductor', '3.22', '-R-%(rver)s'),
    ('OrthoFinder', '2.5.5'),
    ('MCScanX', '1.0.0'),
]

sanity_check_paths = {
    'files': ['%(name)s/R/%(name)s'],
    'dirs': [],
}

moduleclass = 'bio'
