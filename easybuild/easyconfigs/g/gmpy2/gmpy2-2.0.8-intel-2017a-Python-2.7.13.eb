easyblock = 'PythonPackage'

name = 'gmpy2'
version = '2.0.8'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://github.com/aleaxit/gmpy'
description = "GMP/MPIR, MPFR, and MPC interface to Python 2.6+ and 3.x"

toolchain = {'name': 'intel', 'version': '2017a'}

sources = [SOURCE_ZIP]

dependencies = [
    ('Python', '2.7.13'),
    ('GMP', '6.1.2'),
    ('MPFR', '3.1.5'),
    ('MPC', '1.0.3'),
]

moduleclass = 'math'
