easyblock = 'ConfigureMake'

name = 'GObject-Introspection'
version = '1.50.0'
pyver = '2.7.12'
pyshortver = '2.7'
pysubver = '-bare'
versionsuffix = '-Python-%s%s' % (pyver, pysubver)

homepage = 'https://wiki.gnome.org/GObjectIntrospection/'

description = """
 GObject introspection is a middleware layer between C libraries
 (using GObject) and language bindings. The C library can be scanned at
 compile time and generate a metadata file, in addition to the actual
 native C library. Then at runtime, language bindings can read this
 metadata and automatically provide bindings to call into the C library."""

toolchain = {'name': 'GCCcore', 'version': '6.3.0'}

source_urls = [FTPGNOME_SOURCE]
sources = [SOURCELOWER_TAR_XZ]

builddependencies = [
    ('cairo', '1.15.4', versionsuffix),
    ('Python', pyver, pysubver),
]

dependencies = [
    ('GLib', '2.51.0', versionsuffix),
    ('libffi', '3.2.1'),
]

osdependencies = [
    ('autoconf'),
    ('automake'),
    ('binutils'),
    ('bison'),
    ('flex'),
    ('libtool'),
]

preconfigopts = "env GI_SCANNER_DISABLE_CACHE=true "

# avoid using hard-coded path to 'python' in shebang of scripts
buildopts = "PYTHON=python"

modextrapaths = {
    'GI_TYPELIB_PATH': 'share',
    'XDG_DATA_DIRS': 'share',
}

sanity_check_paths = {
    'files': ['bin/g-ir-%s' % x for x in
              ['annotation-tool', 'compiler', 'generate', 'scanner']] +
             ['lib/libgirepository-1.0.%s' % x for x in ['so', 'a']],
    'dirs': ['include', 'share']
}

moduleclass = 'devel'
