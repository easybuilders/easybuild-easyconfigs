# Author: Jasper Grimm (UoY)
easyblock = 'ConfigureMake'

name = 'gspell'
version = '1.13.2'

homepage = 'https://gitlab.gnome.org/GNOME/gspell'
description = "gspell provides a flexible API to add spell-checking to a GTK application."

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}

source_urls = [FTPGNOME_SOURCE]
sources = [SOURCE_TAR_XZ]
checksums = ['8195e5b4b9184849f93a6a42f781f0b3c6542451bef2eb818a8479e259f739c6']

builddependencies = [
    ('binutils', '2.42'),
    ('Vala', '0.56.18'),
    ('pkgconf', '2.2.0'),
]

dependencies = [
    ('GLib', '2.80.4'),
    ('GTK3', '3.24.42'),
    ('GObject-Introspection', '1.80.1'),
    ('enchant-2', '2.8.12'),
]

configopts = '--enable-introspection --enable-vala'

sanity_check_paths = {
    'files': ['bin/%(name)s-app1', 'lib/lib%%(name)s-1.%s' % SHLIB_EXT],
    'dirs': ['include/%(name)s-1'],
}

moduleclass = 'tools'
