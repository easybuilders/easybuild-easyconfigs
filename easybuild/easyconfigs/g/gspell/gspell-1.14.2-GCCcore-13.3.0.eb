# Author: Jasper Grimm (UoY)
easyblock = 'MesonNinja'

name = 'gspell'
version = '1.14.2'

homepage = 'https://gitlab.gnome.org/GNOME/gspell'
description = "gspell provides a flexible API to add spell-checking to a GTK application."

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}

source_urls = [FTPGNOME_SOURCE]
sources = [SOURCE_TAR_XZ]
checksums = ['4ec7e5accc9013281bacd6bbc00006be733818b81ba3fe332c1e876c7e1e1477']

builddependencies = [
    ('binutils', '2.42'),
    ('Meson', '1.4.0'),
    ('Ninja', '1.12.1'),
    ('Vala', '0.56.18'),
    ('pkgconf', '2.2.0'),
]

dependencies = [
    ('GLib', '2.80.4'),
    ('GTK3', '3.24.42'),
    ('GObject-Introspection', '1.80.1'),
    ('enchant-2', '2.8.12'),
]

# disable building API reference, since this isn't done offline
configopts = '-Dgtk_doc=false'

sanity_check_paths = {
    'files': ['bin/%(name)s-app1', 'lib/lib%%(name)s-1.%s' % SHLIB_EXT],
    'dirs': ['include/%(name)s-1'],
}

moduleclass = 'tools'
