easyblock = 'PythonBundle'

name = 'GEOUNED'
version = '1.5.1'

homepage = 'https://github.com/GEOUNED-org/GEOUNED'
description = """A tool to convert from CAD to CSG & CSG to CAD for Monte Carlo
 transport codes (MCNP & OpenMC)."""

toolchain = {'name': 'foss', 'version': '2023b'}

dependencies = [
    ('Python', '3.11.5'),
    ('tqdm', '4.66.2'),
    ('FreeCAD', '1.0rc2'),
]

use_pip = True

exts_download_dep_fail = True

exts_list = [
    ('geouned', version, {
        'checksums': ['33906c244396145a49c8ec67ff757060623d6b8186984f35991b537770ffd701'],
    }),
]

sanity_check_commands = ["geouned_cadtocsg --help"]

moduleclass = 'tools'
