easyblock = 'CMakeMake'

name = 'g_mmpbsa'
version = '20151012'

homepage = 'http://rashmikumari.github.io/g_mmpbsa/'
description = """The tool calculates components of binding energy using MM-PBSA method except 
the entropic term and energetic contribution of each residue to the binding 
using energy decomposition scheme."""

toolchain = {'name': 'intel', 'version': '2015a'}


# only through git, make your own tarball.
# e.g. git clone -depth=1 https://github.com/RashmiKumari/g_mmpbsa
sources = [SOURCELOWER_TGZ]

builddependencies = [
    ('CMake', '3.2.2'),
]

dependencies = [
    ('GROMACS', '4.6.5'),
    ('APBS', '1.4.1'),
    ('FFTW', '3.3.4')
]


configopts = '-DGMX_PATH=$EBROOTGROMACS  '
configopts += '-DAPBS14=on  '
configopts += '-DAPBS_INSTALL=$EBROOTAPBS '
configopts += '-DFFTW_LIB=$EBROOTFFTW/lib '

sanity_check_paths = {
    'files': ['bin/g_mmpbsa','bin/energy2bfac'],
    'dirs': []
}

moduleclass = 'bio'
