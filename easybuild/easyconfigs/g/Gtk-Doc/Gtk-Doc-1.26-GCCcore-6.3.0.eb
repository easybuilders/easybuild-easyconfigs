easyblock = 'ConfigureMake'

name = 'Gtk-Doc'
version = '1.26'

homepage = 'https://www.gtk.org/gtk-doc'
description = "GTK-Doc is a project which was started to generate API documentation from comments added to C code."

toolchain = {'name': 'GCCcore', 'version': '6.3.0'}

source_urls = ['https://download.gnome.org/sources/gtk-doc/%(version_major_minor)s']
sources = [SOURCELOWER_TAR_XZ]
checksums = ['bff3f44467b1d39775e94fad545f050faa7e8d68dc6a31aef5024ba3c2d7f2b7']

builddependencies = [
    ('binutils', '2.27'),
    ('ITSTool', '2.0.2'),
    ('libxml2', '2.9.4'),
]

sanity_check_paths = {
    'files': ['bin/gtkdoc-check', 'bin/gtkdocize', 'bin/gtkdoc-mkhtml', 'bin/gtkdoc-mkman', 'bin/gtkdoc-mkpdf'],
    'dirs': ['lib/cmake', 'share'],
}

moduleclass = 'tools'
