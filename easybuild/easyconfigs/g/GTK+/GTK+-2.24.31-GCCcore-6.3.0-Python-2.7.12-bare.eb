easyblock = 'ConfigureMake'

name = 'GTK+'
version = '2.24.31'
pyver = '2.7.12'
pyshortver = '2.7'
pysubver = '-bare'
versionsuffix = '-Python-%s%s' % (pyver, pysubver)

homepage = 'https://developer.gnome.org/gtk+/stable/'

description = """
 The GTK+ 2 package contains libraries used for creating graphical
 user interfaces for applications.
"""

toolchain = {'name': 'GCCcore', 'version': '6.3.0'}

source_urls = [FTPGNOME_SOURCE]
sources = [SOURCELOWER_TAR_XZ]

builddependencies = [
    ('Python', '2.7.12', '-bare'),
]

dependencies = [
    ('ATK', '2.22.0', versionsuffix),
    ('Gdk-Pixbuf', '2.36.0', versionsuffix),
    ('GObject-Introspection', '1.50.0', versionsuffix),
    ('Pango', '1.40.3', versionsuffix),
]

configopts = """\
    --disable-silent-rules\
    --disable-glibtest\
    --enable-introspection=yes\
    --disable-visibility\
"""

moduleclass = 'vis'
