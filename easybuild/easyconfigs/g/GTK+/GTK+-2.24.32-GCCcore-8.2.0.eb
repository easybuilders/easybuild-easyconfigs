easyblock = 'ConfigureMake'

name = 'GTK+'
version = '2.24.32'

homepage = 'https://developer.gnome.org/gtk+/stable/'
description = """
 The GTK+ 2 package contains libraries used for creating graphical user interfaces for applications.
"""

toolchain = {'name': 'GCCcore', 'version': '8.2.0'}

source_urls = [FTPGNOME_SOURCE]
sources = [SOURCELOWER_TAR_XZ]
checksums = ['b6c8a93ddda5eabe3bfee1eb39636c9a03d2a56c7b62828b359bf197943c582e']

builddependencies = [
    ('binutils', '2.31.1'),
    ('GObject-Introspection', '1.60.0', '-Python-3.7.2'),
    ('pkg-config', '0.29.2'),
]
dependencies = [
    ('ATK', '2.32.0'),
    ('Gdk-Pixbuf', '2.38.1'),
    ('Pango', '1.43.0'),
    ('FriBidi', '1.0.5'),
]

configopts = "--disable-silent-rules --disable-glibtest --enable-introspection=yes --disable-visibility "

moduleclass = 'vis'
