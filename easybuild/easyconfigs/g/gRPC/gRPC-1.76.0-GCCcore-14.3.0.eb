easyblock = 'CMakeMake'

name = 'gRPC'
version = '1.76.0'

homepage = 'https://grpc.io/'
description = """gRPC is a modern, open source, high-performance remote procedure call (RPC)
framework that can run anywhere. gRPC enables client and server applications to
communicate transparently, and simplifies the building of connected systems."""

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}
toolchainopts = {'pic': True}

github_account = 'gRPC'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['0af37b800953130b47c075b56683ee60bdc3eda3c37fc6004193f5b569758204']

builddependencies = [
    ('binutils', '2.44'),
    ('CMake', '3.31.8'),
    ('pkgconf', '2.4.3'),
]
dependencies = [
    ('OpenSSL', '3', '', SYSTEM),
    ('Abseil', '20250512.1'),
    ('c-ares', '1.34.5'),
    ('protobuf', '31.1'),
    ('zlib', '1.3.1'),
    ('RE2', '2025-07-22'),
]

configopts = "-DBUILD_SHARED_LIBS=ON -DgRPC_ABSL_PROVIDER=package -DgRPC_CARES_PROVIDER=package "
configopts += "-DgRPC_PROTOBUF_PROVIDER=package -DgRPC_RE2_PROVIDER=package -DgRPC_SSL_PROVIDER=package "
configopts += "-DgRPC_ZLIB_PROVIDER=package "

sanity_check_paths = {
    'files': [
        'bin/grpc_cpp_plugin', 'bin/grpc_csharp_plugin', 'bin/grpc_node_plugin', 'bin/grpc_objective_c_plugin',
        'bin/grpc_php_plugin', 'bin/grpc_python_plugin', 'bin/grpc_ruby_plugin', f'lib/libgrpc.{SHLIB_EXT}',
        f'lib/libgrpc++.{SHLIB_EXT}'
    ],
    'dirs': ['include/grpc', 'include/grpc++', 'include/grpcpp'],
}

moduleclass = 'lib'
