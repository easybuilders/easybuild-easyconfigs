easyblock = 'CMakeMake'

name = 'g2clib'
version = '1.9.0'

homepage = 'https://github.com/NOAA-EMC/NCEPLIBS-g2c'
description = """Library contains GRIB2 encoder/decoder ('C' version)."""

toolchain = {'name': 'GCCcore', 'version': '13.2.0'}
toolchainopts = {'pic': True}

source_urls = ['https://github.com/NOAA-EMC/NCEPLIBS-g2c/archive/refs/tags/']
sources = ['v%(version)s.tar.gz']
checksums = ['5554276e18bdcddf387a08c2dd23f9da310c6598905df6a2a244516c22ded9aa']

builddependencies = [
    ('binutils', '2.40'),
    ('CMake', '3.27.6'),
]

dependencies = [
    ('JasPer', '4.0.0'),
    ('libpng', '1.6.40'),
    ('libjpeg-turbo', '3.0.1'),
]

sanity_check_paths = {
    'files': ['lib/libg2c.%s' % SHLIB_EXT],
    'dirs': ['include'],
}

moduleclass = 'data'
