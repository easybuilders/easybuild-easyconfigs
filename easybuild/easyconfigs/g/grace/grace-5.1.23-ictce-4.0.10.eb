name = 'grace'
version = '5.1.23'

homepage = 'http://cgit.freedesktop.org/xorg/util/macros'
description = """X.org macros utilities."""

source_urls = ['ftp://plasma-gate.weizmann.ac.il/pub/grace/src/stable']
sources = [SOURCE_TAR_GZ]

toolchain = {'name': 'ictce', 'version': '4.0.10'}


sanity_check_paths = {
    'files': ['bin/xmgrace'],
    'dirs': [],
}

dependencies = [
    ('motif', '2.3.4'),
    ('netCDF', '4.2.1.1'),
]


runtest = 'tests'

# we also need to run make links right before or after make install.
installopts = 'links'
moduleclass = 'vis'
