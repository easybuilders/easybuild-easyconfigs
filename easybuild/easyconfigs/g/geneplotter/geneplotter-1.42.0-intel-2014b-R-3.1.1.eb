easyblock = 'RPackage'

name = 'geneplotter'
version = '1.42.0'

homepage = 'http://www.bioconductor.org/packages/2.14/bioc/html/geneplotter.html'
description = """R package, graphics related functions for Bioconductor"""

toolchain = {'name': 'intel', 'version': '2014b'}

source_urls = ['http://www.bioconductor.org/packages/2.14/bioc/src/contrib/']
sources = ['%s_%s.tar.gz' % (name, version)]

r = 'R'
rver = '3.1.1'
versionsuffix = '-%s-%s' % (r, rver)

dependencies = [
                (r, rver),
                ('annotate', '1.42.1', versionsuffix),
               ]

moduleclass = 'vis'
