easyblock = 'ConfigureMake'

name = 'ECL'
version = '16.1.3'

homepage = 'https://common-lisp.net/project/ecl/'
description = """ECL (Embeddable Common-Lisp) is an interpreter of the Common-Lisp language as described
 in the X3J13 Ansi specification, featuring CLOS (Common-Lisp Object System), conditions, loops, etc,
 plus a translator to C, which can produce standalone executables"""

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['https://gitlab.com/embeddable-common-lisp/ecl/-/archive/ECL-%(version)s/']
sources = ['ecl-ECL-%(version)s.tar.gz']
checksums = ['e0a275787367e14a5754eb2a9d582a9c2b269d0b1f1fa41942565bbeed9fa97c']

parallel = 1

sanity_check_paths = {
    'files': ['bin/ecl', 'bin/ecl-config'],
    'dirs': ['include', 'lib', 'share'],
}

moduleclass = 'lang'
