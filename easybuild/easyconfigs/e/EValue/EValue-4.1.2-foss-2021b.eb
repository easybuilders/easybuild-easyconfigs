easyblock = 'RPackage'

name = 'EValue'
version = '4.1.2'

homepage = 'https://github.com/mayamathur/evalue_package'
description = """The EValue package allows users to calculate bounds and E-values for unmeasured confounding in
observational studies and meta-analyses. The package also includes functions for the assessment of selection bias
and differential misclassification and the joint impact of all three types of bias."""

toolchain = {'name': 'foss', 'version': '2021b'}

source_urls = [
    'https://github.com/mayamathur/evalue_package/archive/'
]
sources = ['%s.tar.gz' % version]
checksums = ['d82f9d40ba1db37ca815d3fd9478371c9ddf8863a43ba81c2e1d8ef1f130fb71']

dependencies = [
    ('R', '4.1.2'),
    ('MetaUtility', '20211031'),
]

preinstallopts = "cp -r EValue/* ./ &&"

sanity_check_paths = {
    'files': [],
    'dirs': ['%(name)s'],
}

moduleclass = 'tools'
