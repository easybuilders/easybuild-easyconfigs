easyblock = 'ConfigureMake'

name = 'expat'
version = '2.2.5'

homepage = 'https://libexpat.github.io'

description = """
 Expat is an XML parser library written in C. It is a stream-oriented parser
 in which an application registers handlers for things the parser might find
 in the XML document (like start tags)
"""

toolchain = {'name': 'GCCcore', 'version': '7.3.0'}
toolchainopts = {'pic': True}

source_urls = ['https://github.com/libexpat/libexpat/releases/download/R_%s/' % version.replace('.', '_')]
sources = [SOURCELOWER_TAR_BZ2]
checksums = ['d9dc32efba7e74f788fcc4f212a43216fc37cf5f23f4c2339664d473353aedf6']

builddependencies = [
    ('binutils', '2.30'),
]

sanity_check_paths = {
    'files': ['include/expat.h', 'lib/libexpat.a', 'lib/libexpat.%s' % SHLIB_EXT],
    'dirs': []
}

moduleclass = 'tools'
