easyblock = 'ConfigureMake'

name = 'ELPA'
version = '2015.11.001'

homepage = 'http://elpa.rzg.mpg.de'
description = """Eigenvalue SoLvers for Petaflop-Applications ."""

toolchain = {'name': 'intel', 'version': '2016a'}
toolchainopts = {'optarch': True, 'usempi': True}

source_urls = 'http://elpa.mpcdf.mpg.de'
sources = [SOURCELOWER_TAR_GZ]

configopts = 'LIBS="$LIBS $LIBLAPACK" LDFLAGS="$LDFLAGS $LIBBLACS" SCALAPACK_LDFLAGS="$LIBSCALAPACK" SCALAPACK_FCFLAGS="-I$SCALAPACK_INC_DIR"'
buildopts = 'V=1'

moduleclass = 'math'
