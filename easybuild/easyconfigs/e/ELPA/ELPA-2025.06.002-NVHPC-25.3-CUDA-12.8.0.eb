name = 'ELPA'
version = '2025.06.002'

homepage = 'https://elpa.mpcdf.mpg.de/'
description = "Eigenvalue SoLvers for Petaflop-Applications."

toolchain = {'name': 'NVHPC', 'version': '25.3-CUDA-%(cudaver)s'}
toolchainopts = {'openmp': True, 'usempi': True, 'pic': True}

source_urls = ['https://elpa.mpcdf.mpg.de/software/tarball-archive/Releases/%(version)s/']
sources = [{'download_filename': 'elpa-%(version)s.tar.gz', 'filename': SOURCE_TAR_GZ}]
patches = [
    '%(name)s-2025.06.002_fix-hardcoded-perl-path.patch',
    '%(name)s-2023.05.001_fix_AVX512_support.patch',
]
checksums = [
    {'ELPA-2025.06.002.tar.gz': 'de3180c06e2b0dbb56939e84ad1a5fd1684465bd38ad2196792d0f4028937fda'},
    {'ELPA-2025.06.002_fix-hardcoded-perl-path.patch':
     '9a5b860a01934c8071ab9a20ba01696df2d4fd892d3c688293973f7926748412'},
    {'ELPA-2023.05.001_fix_AVX512_support.patch': 'ecf08b64fe1da432a218040fa45d4ecfbb3269d58cb018b12da5a2d854bf96be'},
]

builddependencies = [
    ('Python', '3.13.1'),
    ('Perl', '5.40.0'),
]
dependencies = [('CUDA', '12.8.0', '', SYSTEM)]

preconfigopts = 'export LDFLAGS="-lm $LDFLAGS" && '
# ELPA has a bit of trouble with the mixed OpenMP+MPI environment in NVHPC:
# - allow ELPA to change the number of threads at runtime
configopts = '--enable-runtime-threading-support-checks --enable-allow-thread-limiting '
# - disable openmp during the build to avoid MPI checks to fail
configopts += '--without-threading-support-check-during-build '

# When building in parallel, the file test_setup_mpi.mod is sometimes
# used before it is built, leading to an error. This must be a bug in
# the makefile affecting parallel builds.
maxparallel = 1

moduleclass = 'math'
