easyblock = 'MakeCp'

name = 'EPA-ng'
version = '0.3.8'

homepage = 'https://github.com/pierrebarbera/epa-ng'
description = "EPA-ng - Fast, parallel, highly accurate Maximum Likelihood Phylogenetic Placement"

toolchain = {'name': 'GCC', 'version': '12.3.0'}

github_account = 'pierrebarbera'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['d1db23919f49cfad202b18623e5eb30c3d6cedcc1705b944221daea8131cbb74']

builddependencies = [
    ('binutils', '2.40'),
    ('CMake', '3.26.3'),
    ('make', '4.4.1'),
    ('flex', '2.6.4'),
    ('Bison', '3.8.2'),
]

dependencies = [
    ('zlib', '1.2.13'),
]

files_to_copy = ['bin']

sanity_check_paths = {
    'files': ['bin/%(namelower)s'],
    'dirs': [],
}

sanity_check_commands = ['%(namelower)s --version']

moduleclass = 'bio'
