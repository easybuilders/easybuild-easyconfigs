easyblock = "ConfigureMake"

name = 'ENT'
version = '1.0.2'

homepage = "http://dna.engr.uconn.edu/?page_id=25"
description = """ENT is a highly scalable genotype 
phasing algorithm based on entropy minimization. 
ENT is capable of phasing both unrelated and related 
genotypes coming from complex pedigrees."""

toolchain = {'name': 'dummy', 'version': 'dummy'}

source_urls = ['http://dna.engr.uconn.edu/~software/ent/']
sources = ['ent_%(version)s.tar.gz']

checksums = ['cbcc1923476443d2c80319802acc286d']

buildopts = 'all'

skipsteps = ['install']
skipsteps = ['configure']

dependencies = [
     ('GCC', '4.7.2'),
]
sanity_check_paths = {
    'files': ['ent'],
    'dirs': [],
}

moduleclass = 'bio'

