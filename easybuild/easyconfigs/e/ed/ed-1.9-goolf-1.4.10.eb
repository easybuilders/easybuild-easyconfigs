easyblock = 'ConfigureMake'

name = 'ed'
version = '1.9'

homepage = 'http://www.gnu.org/software/ed/ed.html'
description = """GNU ed is a line-oriented text editor."""

toolchain = {'name': 'goolf', 'version': '1.4.10'}

sources = [SOURCE_TAR_GZ]
source_urls = [GNU_SOURCE]

sanity_check_paths = {
    'files': ['bin/ed'],
    'dirs': [],
}

moduleclass = 'tools'
