easyblock = 'EB_EasyBuildMeta'

name = 'EasyBuild'
version = '4.0.0.dev0'
versionsuffix = '-on-par-with-eb393'

local_framework_commit = '2d2a964cd'
local_easyblocks_commit = '732b08413'
local_easyconfigs_commit = '7661cfb8a2'

homepage = 'https://easybuilders.github.io/easybuild'
description = """EasyBuild is a software build and installation framework
 written in Python that allows you to install software in a structured,
 repeatable and robust way."""

toolchain = {'name': 'dummy', 'version': 'dummy'}

source_urls = [
    'https://github.com/easybuilders/easybuild-framework/archive/',
    'https://github.com/easybuilders/easybuild-easyblocks/archive/',
    'https://github.com/easybuilders/easybuild-easyconfigs/archive/',
]
# order matters a lot, to avoid having dependencies auto-resolved (--no-deps easy_install option doesn't work?)
sources = [
    {
        'download_filename': '%s.tar.gz' % local_framework_commit,
        'filename': 'easybuild-framework-4.0-alpha-%s.tar.gz' % local_framework_commit,
    },
    {
        'download_filename': '%s.tar.gz' % local_easyblocks_commit,
        'filename': 'easybuild-easyblocks-4.0-alpha-%s.tar.gz' % local_easyblocks_commit,
    },
    {
        'download_filename': '%s.tar.gz' % local_easyconfigs_commit,
        'filename': 'easybuild-easyconfigs-4.0-alpha-%s.tar.gz' % local_easyconfigs_commit,
    },
]

# EasyBuild is a (set of) Python packages, so it depends on Python
# usually, we want to use the system Python, so no actual Python dependency is listed
allow_system_deps = [('Python', SYS_PYTHON_VERSION)]

moduleclass = 'tools'
