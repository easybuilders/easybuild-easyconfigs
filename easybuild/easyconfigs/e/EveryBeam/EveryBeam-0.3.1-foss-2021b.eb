easyblock = 'CMakeMake'

name = 'EveryBeam'
version = '0.3.1'

homepage = 'https://git.astron.nl/RD/EveryBeam'
description = """ The EveryBeam library is a library that provides the antenna response pattern 
for several instruments, such as LOFAR (and LOBES), SKA (OSKAR), MWA, JVLA, etc."""

toolchain = {'name': 'foss', 'version': '2021b'}

source_urls = ['https://git.astron.nl/RD/EveryBeam/-/tags/']
# sources = [{'download_filename': 'download', 'filename': '%(namelower)s-v%(version)s.tar.bz2'}]

sources = [{
    'filename': 'EveryBeam-v0.3.1.tar.gz',
    'git_config': {
        'url': 'https://git.astron.nl/RD',
        'repo_name': 'EveryBeam',
        'commit': '2d15b2a1 ',
        'recursive': True,
        'keep_git_dir': True,
    },
}]

# as the tarball is created locally, we cannot really use checksums

builddependencies = [
    ('binutils', '2.37'),
    ('CMake', '3.22.1'),
    ('pkg-config', '0.29.2'),
]

dependencies = [
    ('FFTW', '3.3.10'),
    ('HDF5', '1.12.1'),
    ('HDF5', '1.12.1'),
    ('GSL', '2.7'),
    ('FlexiBLAS', '3.0.4'),
    ('casacore', '3.4.0'),
]

configopts = ' -Wno-dev '

sanity_check_paths = {
    'files': [('lib/libeverybeam-hamaker.so', 'lib/libeverybeam-lobes.so', 'lib/libeverybeam-oskar.so',
               'lib/libeverybeam-skamidbeam.so', 'lib/libeverybeam.so', 'lib/liboskar_beam_utils.a')],
    'dirs': ['include', 'share'],
}

moduleclass = 'lib'
