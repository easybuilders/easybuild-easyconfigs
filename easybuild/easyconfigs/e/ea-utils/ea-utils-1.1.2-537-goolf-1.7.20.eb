easyblock = 'ConfigureMake'

name = 'ea-utils'
version = '1.1.2-537'

homepage = 'https://code.google.com/p/ea-utils'
description = """Command-line tools for processing biological sequencing data. Barcode demultiplexing,
 adapter trimming, etc."""

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['https://storage.googleapis.com/google-code-archive-downloads/v2/code.google.com/ea-utils/']
sources = ['%(name)s.%(version)s.tar.gz']

patches = ['ea-utils-1.1.2-537-makefile.patch']

dependencies = [
    ('zlib', '1.2.8'),
    ('ncurses', '5.9'),
    ('GSL', '1.16'),
]

skipsteps = ['configure', 'build']

preinstallopts = ' CFLAGS="$CFLAGS -I." CPPFLAGS="$CPPFLAGS -I." CC=$CC PREFIX=%(installdir)s '

sanity_check_paths = {
    'files': ['bin/%s' % x for x in ['fastq-clipper', 'fastq-join', 'fastq-mcf', 'fastq-multx', 'fastq-stats']],
    'dirs': [],
}

moduleclass = 'bio'
