easyblock = 'Nix'

name = 'Erlang'
version = '19.0.2'

homepage = 'https://www.erlang.org/'
description = """Erlang is a programming language used to build massively scalable 
soft real-time systems with requirements on high availability. Some of its uses 
are in telecoms, banking, e-commerce, computer telephony and instant messaging. 
Erlang's runtime system has built-in support for concurrency, distribution and 
fault tolerance."""

toolchain = SYSTEM

nix_profile = '/cvmfs/soft.computecanada.ca/nix/var/nix/profiles/erlang-%(version)s'
nix_attribute = 'erlangR19'

moduleclass = 'lang'

