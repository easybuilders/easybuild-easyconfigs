easyblock = 'RPackage'

name = 'biomaRt'
version = '2.20.0'

homepage = 'http://www.bioconductor.org/packages/2.14/bioc/html/biomaRt.html'
description = """R package, Interface to BioMart databases (e.g. Ensembl, COSMIC ,Wormbase and Gramene)"""

toolchain = {'name': 'intel', 'version': '2014b'}

source_urls = ['http://www.bioconductor.org/packages/2.14/bioc/src/contrib/']
sources = ['%s_%s.tar.gz' % (name, version)]

r = 'R'
rver = '3.1.1'
versionsuffix = '-%s-%s' % (r, rver)

dependencies = [
                (r, rver),
                ('XML', '3.98-1.1', versionsuffix),
                ('RCurl', '1.95-4.3', versionsuffix),
               ]

moduleclass = 'data'
