easyblock = 'Binary'

name = 'babel'
version = '2.17.0'

homepage = 'https://babel.pocoo.org/en/latest/'
description = """Babel is an integrated collection of utilities that assist in internationalizing and localizing Python applications, with an emphasis on web-based applications."""

toolchain = SYSTEM

# this is a bundle of Python packages
exts_defaultclass = 'PythonPackage'

builddependencies = [('Python', '3.12')]
preinstallopts = ['python -m venv %(installdir)s/venv && source %(installdir)s/venv/bin/activate && ']
install_cmd = 'pip install'
installopts = '--no-index --no-deps -r requirements-%(version)s.txt'
sources = ['requirements-%(version)s.txt']
postinstallcmds = ['mkdir %(installdir)s/bin; ln -s %(installdir)s/venv/bin/pybabel %(installdir)s/bin']

sanity_check_paths = {
    'files': ['bin/pybabel'],
    'dirs': ['venv/lib/python3.12/site-packages/babel']
}
moduleclass = 'lib'
