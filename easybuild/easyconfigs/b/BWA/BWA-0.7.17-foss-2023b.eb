name = 'BWA'
version = '0.7.17'
homepage = 'https://bio-bwa.sourceforge.net/'
description = """Burrows-Wheeler Aligner (BWA) is an efficient program that aligns
 relatively short nucleotide sequences against a long reference sequence such as the human genome."""
toolchain = {'name': 'foss', 'version': '2023b'}
toolchainopts = {'pic': True}
source_urls = ['https://github.com/lh3/%(name)s/archive/']
sources = ['v%(version)s.tar.gz']
checksums = [('sha512','114e61b7cc5edcb67172d1eca7be1fa670ea33dd48b5c02c98318e254871363775c0dab327fd7ee7023200a5fedc745fa01cbe0fd9550d783f091d4df6926f48')]

prebuildopts = 'export CFLAGS="$CFLAGS -fcommon" && '
prebuildopts += "sed -i -e 's|^CC=|#CC=|g' -e 's|^CFLAGS=|#CFLAGS=|g' -e 's|^LIBS=|LIBS= $(LDFLAGS) |g' Makefile && "

moduleclass = 'bio'
