# This file is an EasyBuild reciPY as per https://github.com/hpcugent/easybuild
# Author: Pablo Escobar Lopez
# Swiss Institute of Bioinformatics
# Biozentrum - University of Basel

easyblock = 'MakeCp'

name = 'Barrnap'
version = '0.4.2'

homepage = 'http://www.vicbioinformatics.com/software.barrnap.shtml'
description = """ Barrnap predicts the location of ribosomal RNA genes in genomes. 
 It supports bacteria (5S,23S,16S), archaea (5S,5.8S,23S,16S), mitochondria (12S,16S) 
 and eukaryotes (5S,5.8S,28S,18S). """

toolchain = {'name': 'dummy', 'version': ''}

source_urls = ['https://github.com/Victorian-Bioinformatics-Consortium/barrnap/archive/']
sources = ['%(version)s.tar.gz']

# this is just a perl script but includes a "make test" option to verify it's working
buildopts = ' test'

files_to_copy = ["*"]
        
sanity_check_paths = {
    'files': ["bin/barrnap", "README.md"],
    'dirs': ["binaries", "db", "examples"],
}

moduleclass = 'bio'
