easyblock = 'PythonPackage'

name = 'bsddb3'
version = '6.2.5'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://pypi.org/project/bsddb3/'
description = """bsddb3 is a nearly complete Python binding of the
Oracle/Sleepycat C API for the Database Environment, Database, Cursor,
Log Cursor, Sequence and Transaction objects."""

toolchain = {'name': 'goolfc', 'version': '2017b'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]
#checksums = ['72fafe29ba00633483aed39e405442226ef66d2ddc1021a39527ae1522b7067a']

# osdependencies = [('libdb5.3-dev')]
dependencies = [('Python', '2.7.14')]

use_pip = True

preinstallopts = 'unset LIBS && '

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'data'
