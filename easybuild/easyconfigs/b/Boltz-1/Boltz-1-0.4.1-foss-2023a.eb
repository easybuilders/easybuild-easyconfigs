    "sed -i -e "
    r"'s/==.*/\",/g' -e "
    "'s/torch>=2.2/torch/g' -e "
    "'16d' -e "  # delete rdkit dep - pip check fail even RDKit is there
    "'s/pandas>=2.2.2/pandas/g' "
    "pyproject.toml && "
)

