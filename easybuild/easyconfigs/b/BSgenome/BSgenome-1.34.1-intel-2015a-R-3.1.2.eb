easyblock = 'RPackage'

name = 'BSgenome'
version = '1.34.1'

homepage = 'http://bioconductor.org/packages/release/bioc/html/BSgenome.html'
description = """Infrastructure for Biostrings-based genome data packages."""

toolchain = {'name': 'intel', 'version': '2015a'}

source_urls = ['http://www.bioconductor.org/packages/3.0/bioc/src/contrib/']
sources = ['%(name)s_%(version)s.tar.gz']

r = 'R'
rver = '3.1.2'

versionsuffix = '-%s-%s' % (r, rver)

dependencies = [
    (r, rver),
    ('rtracklayer', '1.26.2', versionsuffix),
]

moduleclass = 'math'
