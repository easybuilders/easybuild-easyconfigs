name = 'Boost'
version = '1.87.0'

modaltsoftname = 'boost-core'
versionsuffix = '-core'
hidden = True

homepage = 'https://www.boost.org/'
description = """Boost provides free peer-reviewed portable C++ source libraries."""

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}
toolchainopts = {'pic': True}

source_urls = ['https://boostorg.jfrog.io/artifactory/main/release/%(version)s/source/', 'https://archives.boost.io/release/%(version)s/source']
sources = ['%%(namelower)s_%s.tar.gz' % '_'.join(version.split('.'))]
checksums = ['f55c340aa49763b1925ccf02b2e83f35fdcf634c9d5164a2acb87540173c741d']

# In order to build `libboost_numpy*`
builddependencies = [('numpy', '2.1.1'),]

dependencies = [
    ('bzip2', '1.0.8'),
    ('zlib', '1.2.13'),
    ('XZ', '5.4.2'),
    ('zstd', '1.5.5'),
    ('ICU', '73.2'),
]

multi_deps = {'Python': ['3.10', '3.11', '3.12', '3.13']}

# disable MPI, build Boost libraries with tagged layout
boost_mpi = False
tagged_layout = True

moduleclass = 'devel'
