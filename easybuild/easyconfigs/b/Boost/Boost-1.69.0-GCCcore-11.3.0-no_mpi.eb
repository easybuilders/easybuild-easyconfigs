name = 'Boost'
version = '1.69.0'
versionsuffix = '-no_mpi'

homepage = 'https://www.boost.org/'
description = """Boost provides free peer-reviewed portable C++ source libraries."""

toolchain = {'name': 'GCCcore', 'version': '11.3.0'}
toolchainopts = {'pic': True}

source_urls = ['https://dl.bintray.com/boostorg/release/%(version)s/source/']
sources = ['%%(namelower)s_%s.tar.gz' % '_'.join(version.split('.'))]
checksums = ['9a2c2819310839ea373f42d69e733c339b4e9a19deab6bfec448281554aa4dbb']

builddependencies = [
    ('binutils', '2.38'),
]

dependencies = [
    ('bzip2', '1.0.8'),
    ('zlib', '1.2.12'),
    ('XZ', '5.2.5'),
]

configopts = '--without-libraries=python,mpi'

# Don't build boost_mpi
boost_mpi = False
boost_multi_thread = True

moduleclass = 'devel'
