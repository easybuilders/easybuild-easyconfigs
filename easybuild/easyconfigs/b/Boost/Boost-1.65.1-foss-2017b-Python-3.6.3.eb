name = 'Boost'
version = '1.65.1'
versionsuffix = '-Python-%(pyver)s'

homepage = 'http://www.boost.org/'
description = """Boost provides free peer-reviewed portable C++ source libraries."""

toolchain = {'name': 'foss', 'version': '2017b'}
toolchainopts = {'pic': True, 'usempi': True}

source_urls = [SOURCEFORGE_SOURCE]
sources = ['%%(namelower)s_%s.tar.gz' % '_'.join(version.split('.'))]

# Fixes this ./boost/python/detail/wrap_python.hpp:50:23: fatal error: pyconfig.h: No such file or directory
# See also https://svn.boost.org/trac10/ticket/11120
patches = ['Boost_python_binding.patch']

checksums = [
    'a13de2c8fbad635e6ba9c8f8714a0e6b4264b60a29b964b940a22554705b6b60', # Boost
    '83664870ea329feb2fb1e06ec01ab3f9876d9f467a34b0f01089e611e6d694c8' # Patch
]

dependencies = [
    ('bzip2', '1.0.6'),
    ('zlib', '1.2.11'),
    ('Python', '3.6.3'),
]

# also build boost_mpi
boost_mpi = True

# Compile Boost with -std=c++11, see https://gist.github.com/dennycd/5890475 and https://groups.google.com/forum/#!topic/fenics-support/yrseUpq3PSA
# -stdlib is left out, because that is an option for M*X (MacOS) only
# Strangely enough, it does cause the option -std=c++11 to be not recognized anymore..
buildopts = 'cxxflags="$CXXFLAGS -std=c++11" linkflags="$LDFLAGS -std=c++11" '

moduleclass = 'devel'
