name = 'Boost'
version = '1.64.0'
pyver = '2.7.13'
pyshortver = '2.7'
pysubver = '-bare'
versionsuffix = '-Python-%s%s' % (pyver, pysubver)

homepage = 'http://www.boost.org/'

description = """
 Boost provides free peer-reviewed portable C++ source libraries.
"""

toolchain = {'name': 'iimpi', 'version': '2017b'}
toolchainopts = {'pic': True, 'usempi': True}

source_urls = [SOURCEFORGE_SOURCE]
sources = ['%%(namelower)s_%s.tar.gz' % '_'.join(version.split('.'))]
checksums = ['0445c22a5ef3bd69f5dfb48354978421a85ab395254a26b1ffb0aa1bfd63a108']

# from https://github.com/boostorg/mpi/commit/f5bdcc1ebfe954bb64835f2a0efd94471da42207
patches = ['Boost-1.64.0-mpi-primitives.patch']

builddependencies = [
    ('Python', pyver, pysubver),
]

dependencies = [
    ('bzip2', '1.0.6'),
    ('zlib', '1.2.11'),
]

# also build boost_mpi
boost_mpi = True

moduleclass = 'devel'
