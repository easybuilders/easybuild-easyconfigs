easyblock = 'MakeCp'

name = 'BCFtools'
version = '1.1'

homepage = 'http://www.htslib.org//'
description = """ SAM Tools provide various utilities for manipulating alignments in the SAM format, 
 including sorting, merging, indexing and generating alignments in a per-position format."""

toolchain = {'name': 'goolf', 'version': '1.4.10'}
toolchainopts = {'optarch': True, 'pic': True}

sources = [SOURCELOWER_TAR_BZ2]
source_urls = [('http://sourceforge.net/projects/samtools/files/samtools/%s' % (version), 'download')]

patches = ['BCFtools_Makefile.patch']

dependencies = [
    ('zlib', '1.2.7'),
]

files_to_copy = [(["vcfutils.pl", "bcftools", "plot-vcfstats"], 'bin')]

sanity_check_paths = {
    'files': ["bin/vcfutils.pl", "bin/bcftools", "bin/plot-vcfstats"],
    'dirs': [],
}

moduleclass = 'bio'
