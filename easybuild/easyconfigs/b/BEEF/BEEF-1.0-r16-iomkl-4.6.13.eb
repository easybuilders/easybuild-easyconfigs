easyblock = 'ConfigureMake'

name = 'BEEF'
version = '1.0-r16'

homepage = 'http://suncat.stanford.edu/facility/software/functional'
description = """ BEEF is a library implementing the Bayesian Error
Estimation Functional, a description of which can be found here:

http://dx.doi.org/10.1103/PhysRevB.85.235149"""

toolchain = {'name': 'iomkl', 'version': '4.6.13'}
toolchainopts = {'openmp': False, 'usempi': False}

sources = [SOURCELOWER_TAR_BZ2]

sanity_check_paths = {
    'files': ['bin/bee', 'lib/libbeef.a'],
    'dirs': []
}

moduleclass = 'chem'
