easyblock = 'ConfigureMake'

name = 'BEEF'
version = '0.1.3-2822afe'

homepage = 'https://github.com/vossjo/libbeef'
description = """libbeef is a package providing the class of BEEF-vdW functionals and Bayesian error estimates to Fortran- or C-based DFT codes."""

toolchain = {'name': 'intel', 'version': '2017a'}
toolchainopts = {'openmp': False, 'usempi': False}

# To make a source tarball from the git repository with unique version:
# git clone https://github.com/vossjo/libbeef.git
# cd libbeef && git reset --hard <commit_SHA> && cd -
# commit_SHA = 2822afe3da255a57b078779201f2fd6582b9a5e7
# cd .. && tar cfz beef-<VERSION>.tar.gz libbeef

configopts = 'CC="$CC"'

sanity_check_paths = {
    'files': ['bin/bee', 'lib/libbeef.a'],
    'dirs': [],
}

moduleclass = 'chem'
