easyblock = 'ConfigureMake'

name = 'BLAST+'
version = '2.17.0'

homepage = 'https://blast.ncbi.nlm.nih.gov/'
description = """Basic Local Alignment Search Tool, or BLAST, is an algorithm
for comparing primary biological sequence information, such as the amino-acid
sequences of different proteins or the nucleotides of DNA sequences."""

toolchain = {'name': 'gompi', 'version': '2025a'}
toolchainopts = {'usempi': True, 'pic': True}

source_urls = ['https://ftp.ncbi.nlm.nih.gov/blast/executables/%(namelower)s/%(version)s/']
sources = ['ncbi-blast-%(version)s+-src.tar.gz']
patches = ['BLAST+-2.17.0_fix-removed-boost-dummy-cond.patch']
checksums = [
    {'ncbi-blast-2.17.0+-src.tar.gz': '502057a88e9990e34e62758be21ea474cc0ad68d6a63a2e37b2372af1e5ea147'},
    {'BLAST+-2.17.0_fix-removed-boost-dummy-cond.patch':
     'c0bed1448441f3c7582357053cb5d38fcdcdfaf45d0c4a4c04f315d22ce5574d'},
]

builddependencies = [('cpio', '2.15')]

dependencies = [
    ('zlib', '1.3.1'),
    ('bzip2', '1.0.8'),
    ('zstd', '1.5.6'),
    ('PCRE', '8.45'),
    ('Boost', '1.88.0'),
    ('GMP', '6.3.0'),
    ('libpng', '1.6.48'),
    ('libjpeg-turbo', '3.1.0'),
    ('LMDB', '0.9.31'),
    ('SQLite', '3.47.2'),
    ('PCRE2', '10.45'),
    ('util-linux', '2.41'),
    ('OpenSSL', '3', '', SYSTEM),
    ('LibTIFF', '4.7.0'),
    ('libxml2', '2.13.4'),
    ('freetype', '2.13.3'),
    ('Python', '3.13.1'),
    ('LZO', '2.10'),
    ('Perl', '5.40.0'),
]

# remove line that prepends system paths to $PATH from configure script
preconfigopts = r'sed -i "s|^PATH=\(.*\)$|#PATH=\1 |" %(start_dir)s/src/build-system/configure && '

_base_configopts = "--with-z=$EBROOTZLIB --with-bz2=$EBROOTBZIP2 "
_base_configopts += "--with-pcre=$EBROOTPCRE --with-boost=$EBROOTBOOST "
_base_configopts += "--with-gmp=$EBROOTGMP --with-png=$EBROOTLIBPNG "
_base_configopts += "--with-jpeg=$EBROOTLIBJPEGMINTURBO --with-lmdb=$EBROOTLMDB "
_base_configopts += "--with-openssl=$EBROOTOPENSSL --with-tiff=$EBROOTLIBTIFF "
_base_configopts += "--with-libxml=$EBROOTLIBXML2 --with-freetype=$EBROOTFREETYPE "
_base_configopts += "--with-zstd=$EBROOTZSTD --with-lzo=$EBROOTLZO --with-perl=$EBROOTPERL "

# Building both shared and static libs in configopts:
configopts = [f'{_base_configopts} {x}' for x in ('--with-dll', '--with-static')]

sanity_check_paths = {
    'files': ['bin/blastn', 'bin/blastp', 'bin/blastx',
              'lib/libblast.a', 'lib/libblast.%s' % SHLIB_EXT],
    'dirs': ['include'],
}

moduleclass = 'bio'
