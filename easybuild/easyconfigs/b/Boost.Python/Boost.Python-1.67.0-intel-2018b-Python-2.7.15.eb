checksums = ['8aa4e330c870ef50a896634c931adf468b21f8a69b77007e45c444151229f665']

dependencies = [
    ('Python', '2.7.15'),
    ('Boost', version),
]

only_python_bindings = True

moduleclass = 'lib'
