easyblock = 'ConfigureMake'

name = 'Babel'
version = '2.0.0'

homepage = 'https://computation.llnl.gov/casc/components'
description = """Babel is a high-performance language interoperability tool."""

toolchain = {'name': 'intel', 'version': '2015b'}

source_urls = ['https://computation.llnl.gov/casc/components/docs/']
sources = [SOURCELOWER_TAR_GZ]

dependencies = [('Java', '1.7.0_80', '', True)]

# avoid that javac crashes due to possible strict memory limitations (via ulimit)
preconfigopts = "_JAVA_OPTIONS='-Xmx512m'"
prebuildopts = preconfigopts
preinstallopts = preconfigopts

configopts = "--enable-python=no"

libs = ['chasmlite', 'parsifal', 'sidl', 'sidlstub_cxx', 'sidlstub_f77', 'sidlstub_f90', 'sidlstub_java', 'sidlx']
sanity_check_paths = {
    'files': ['bin/babel%s' % x for x in ['', '-cc', '-config', '-cxx', '-f77', '-f90', '-libtool']] +
             ['lib/lib%s.%s' % (l, x) for l in libs for x in ['a', SHLIB_EXT]],
    'dirs': ['include', 'share'],
}

moduleclass = 'tools'
