easyblock = 'PackedBinary'

name = 'BBTools'
version = '39.56'
versionsuffix = '-Java-%(javaver)s'

homepage = 'https://bbmap.org/'
description = """
BBTools is a suite of fast, multithreaded bioinformatics tools designed for analysis of DNA and RNA
sequence data. BBTools can handle common sequencing and bioinformatics file formats such as fastq,
fasta, sam, bam, scarf, fasta+qual, gff, gtf, vcf, and gzip/bgzip/bzip2 compressed files.
"""

toolchain = SYSTEM

github_account = 'bbushnell'

source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['38ddc2ca996ad928a8efc9359cb17d6c9311587c5a1374be00147db9e6b5bb23']

dependencies = [
    ('Java', '17'),
]

sanity_check_paths = {
    'files': ['bbversion.sh'],
    'dirs': ['config', 'current', 'jni', 'pipelines', 'resources'],
}

sanity_check_commands = ['bbversion.sh']

moduleclass = 'bio'
