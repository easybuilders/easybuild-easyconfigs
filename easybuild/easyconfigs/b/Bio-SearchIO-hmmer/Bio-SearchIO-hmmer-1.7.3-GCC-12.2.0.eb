dependencies = [
    ('Perl', '5.36.0'),
    ('BioPerl', '1.7.8'),
]

options = {'modulename': 'Bio::SearchIO::hmmer3'}

sanity_check_paths = {
    'files': ['bin/bp_%s.pl' % x for x in ['hmmer_to_table', 'parse_hmmsearch']],
    'dirs': [],
}

