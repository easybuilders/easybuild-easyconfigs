easyblock = "PythonPackage"

name = 'bigfloat'
version = '0.3.0'
versionsuffix = "-Python-%(pyver)s"

homepage = 'http://bigfloat.readthedocs.io/en/latest/'
description = """The bigfloat package is a Python package providing arbitrary-precision correctly-rounded
 binary floating-point arithmetic. It is implemented as a Cython wrapper around the GNU MPFR library"""

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['https://pypi.python.org/packages/source/b/bigfloat/']
sources = ['%(namelower)s-%(version)s.tar.gz']
checksums = ['262ebf31eaff44175dc52db7642f407a2acad3245bda1fdb30c4817d28c1a775']

dependencies = [
    ('Python', '2.7.11'),
    ('MPFR', '3.1.4')
]

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages/bigfloat/core.py']
}

moduleclass = 'math'
