# This easyconfig was created by the BEAR Software team at the University of Birmingham.
easyblock = 'Tarball'

name = 'Talairach'
version = '2.4.3'

homepage = "http://www.talairach.org/"
description = """The Talairach Client reports Talairach labels for user-defined coordinates."""

toolchain = SYSTEM

source_urls = ['http://www.talairach.org/']
sources = [{'filename': '%(namelower)s-%(version)s.jar', 'download_filename': '%(namelower)s.jar', 'extract_cmd': 'cp %s %(builddir)s'}]
checksums = ['09a8495facb7a98b26cf8acf68aa437fe4f60322a325031ec74d7cad31dc2c38']

dependencies = [('Java', '11')]

postinstallcmds = ["cd %(installdir)s && mv %(namelower)s-%(version)s.jar %(namelower)s.jar"]

sanity_check_paths = {
    'files': ['%(namelower)s.jar'],
    'dirs': [],
}

modloadmsg = """The .jar file for %(name)s has been added to the Java CLASSPATH, so you can load %(name)s with
the relevant: java org.%(namelower)s.command"""

moduleclass = 'bio'
