easyblock = 'ConfigureMake'

name = 'tblis'
version = '1.3.0'

homepage = "https://github.com/devinamatthews/tblis"
description = """TBLIS is a library and framework for performing tensor
 operations, especially tensor contraction, using native algorithms."""

toolchain = {'name': 'foss', 'version': '2025a'}

github_account = "devinamatthews"

source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['b46c257f27eaa25dabb09d5cb7bd28f77a86519f0f32262f3b687ffc41c0d62b']

sanity_check_paths = {
    'files': [
        'include/tblis/tblis.h',
        f'lib/libtblis.{SHLIB_EXT}',
    ],
    'dirs': []
}

moduleclass = 'lib'
