easyblock = 'PerlModule'

name = 'Test-Number-Delta'
version = '1.06'

homepage = 'http://search.cpan.org/perldoc?Test%3A%3ANumber%3A%3ADelta'
description = """Perl Test: Compare the difference between numbers against a given tolerance."""

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ['http://www.cpan.org/modules/by-module/Test']
sources = [SOURCE_TAR_GZ]

perl = 'Perl'
perlver = '5.16.3'
perlverextra = ''
versionsuffix = '-%s-%s%s' % (perl, perlver, perlverextra)

dependencies = [
    (perl, perlver, perlverextra),
    ('Test-Cmd', '1.08', versionsuffix),
]

options = {'modulename': 'Test::Number::Delta'}

perlmajver = perlver.split('.')[0]
sanity_check_paths = {
    'files': ['lib/perl%s/site_perl/%s/Test/Number/Delta.pm' % (perlmajver, perlver)],
    'dirs': [],
}

moduleclass = 'data'
