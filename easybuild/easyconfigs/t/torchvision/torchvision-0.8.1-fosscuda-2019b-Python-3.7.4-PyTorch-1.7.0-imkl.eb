easyblock = 'PythonPackage'

name = 'torchvision'
version = '0.8.1'
local_pytorch_version = '1.7.0'
versionsuffix = '-Python-%%(pyver)s-PyTorch-%s-imkl' % local_pytorch_version

homepage = 'https://github.com/pytorch/vision'
description = " Datasets, Transforms and Models specific to Computer Vision"

toolchain = {'name': 'fosscuda', 'version': '2019b'}

source_urls = ['https://github.com/pytorch/vision/archive']
sources = ['v%(version)s.tar.gz']
checksums = ['c46734c679c99f93e5c06654f4295a05a6afe6c00a35ebd26a2cce507ae1ccbd']

builddependencies = [('CMake', '3.15.3')]

dependencies = [
    ('Python', '3.7.4'),
    ('Pillow-SIMD', '6.0.x.post0'),
    ('PyTorch', local_pytorch_version, '-Python-%(pyver)s-imkl'),
]

use_pip = True
download_dep_fail = True

preinstallopts = 'export TORCH_CUDA_ARCH_LIST="3.5 3.7 5.2 6.0 6.1 7.0 7.2 7.5" && '

sanity_pip_check = True

moduleclass = 'vis'
