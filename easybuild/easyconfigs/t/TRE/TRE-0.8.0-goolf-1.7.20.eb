easyblock = 'ConfigureMake'

name = 'TRE'
version = '0.8.0'

homepage = 'https://laurikari.net/tre/'
description = """The free and portable approximate regex matching library"""

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['http://laurikari.net/tre/']
sources = ['%(namelower)s-%(version)s.tar.gz']

sanity_check_paths = {
    'files': ['bin/agrep', 'lib/libtre.so', 'include/tre/tre.h'],
    'dirs': [],
}

moduleclass = 'lib'
