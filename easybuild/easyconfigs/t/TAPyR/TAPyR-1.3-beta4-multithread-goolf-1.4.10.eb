# This file is an EasyBuild reciPY as per https://github.com/hpcugent/easybuild
# Author: Pablo Escobar Lopez
# Swiss Institute of Bioinformatics
# Biozentrum - University of Basel

easyblock = 'MakeCp'

name = 'TAPyR'
version = '1.3-beta4-multithread' 

homepage = 'http://www.tapyr.net/'
description = """ TAPyR is an efficient Tool for the local Alignment 
 of Pyrosequencing Reads produced by the GS FLX (454) Genome Analyzer 
 technology against a reference genome sequence. """

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ['http://kdbio.inesc-id.pt/~tapyr/src/']
sources = ['P-%(name)s.tar.gz']

makeopts = ' all CC=$CC'

parallel = 1

files_to_copy = [(["tapyr", "batch-tapyr"], "bin"), "README.txt"]
        
sanity_check_paths = {
    'files': ["bin/tapyr", "bin/batch-tapyr", "README.txt"],
    'dirs': [""],
}

moduleclass = 'bio'

