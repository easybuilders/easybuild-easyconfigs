name = 'TensorRT'
version = '8.0.1.6'

homepage = 'https://developer.nvidia.com/tensorrt'
description = """NVIDIA TensorRT is a platform for high-performance deep learning inference"""

toolchain = {'name': 'fosscuda', 'version': '2021a'}

# Requires manual download from 
# https://developer.nvidia.com/nvidia-tensorrt-8x-download
sources = ['%(name)s-%(version)s.Linux.x86_64-gnu.cuda-11.3.cudnn8.2.tar.gz']
checksums = ['def6a5ee50bed25a68a9c9e22ec671a8f29ee5414bde47c5767bd279e5596f88']

builddependencies = [ 
    ('protobuf', '3.17.3'),
]

dependencies = [ 
    ('Python', '3.9.5'),
    ('cuDNN', '8.2.2.26', '-CUDA-11.4.0', True),
    ('protobuf-python', '3.17.3')
]

moduleclass = 'lib'
