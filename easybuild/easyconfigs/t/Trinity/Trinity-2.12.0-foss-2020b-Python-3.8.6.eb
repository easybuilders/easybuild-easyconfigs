name = 'Trinity'
version = '2.12.0'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://trinityrnaseq.github.io'
description = """Trinity represents a novel method for the efficient and robust de novo reconstruction
 of transcriptomes from RNA-Seq data. Trinity combines three independent software modules: Inchworm,
 Chrysalis, and Butterfly, applied sequentially to process large volumes of RNA-Seq reads."""

toolchain = {'name': 'foss', 'version': '2020b'}
toolchainopts = {'optarch': True}

source_urls = ['https://github.com/trinityrnaseq/trinityrnaseq/releases/download/v%(version)s']
sources = ['%(namelower)srnaseq-v%(version)s.FULL.tar.gz']
patches = ['trinityrnaseq-v2.12.0_bamsifter.patch']
checksums = [
    '0d47dc433cc3003e1c732b97da605e29c6ccafa38cd52cdb8ecc42399a9195d0',  # trinityrnaseq-v2.12.0.FULL.tar.gz
    '97262400f851905f055a921543aead9d3252d610a05ee44e7831b2ab64ff5e2b',  # trinityrnaseq-v2.12.0_bamsifter.patch
]

builddependencies = [
    ('Autotools', '20200321'),
    ('CMake', '3.18.4'),
]

dependencies = [
    ('Java', '11', '', True),
    ('ant', '1.10.8', '-Java-%(javaver)s', True),
    ('Perl', '5.32.0'),
    ('Python', '3.8.6'),
    ('SciPy-bundle', '2020.11'),
    ('Bowtie2', '2.4.2'),
    ('HTSlib', '1.11'),
    ('Jellyfish', '2.3.0'),
    ('kallisto', '0.46.2'),
    ('ncurses', '6.2'),
    ('Salmon', '1.4.0'),
    ('SAMtools', '1.11'),
    ('zlib', '1.2.11'),
]

withsampledata = True

moduleclass = 'bio'
