name = 'Trinity'
version = '2.14.0'

homepage = 'https://trinityrnaseq.github.io'
description = """Trinity represents a novel method for the efficient and robust de novo reconstruction
 of transcriptomes from RNA-Seq data. Trinity combines three independent software modules: Inchworm,
 Chrysalis, and Butterfly, applied sequentially to process large volumes of RNA-Seq reads."""

toolchain = {'name': 'foss', 'version': '2021b'}
toolchainopts = {'optarch': True}

source_urls = ['https://github.com/trinityrnaseq/trinityrnaseq/releases/download/Trinity-v%(version)s']
sources = ['trinityrnaseq-v%(version)s.FULL.tar.gz']
checksums = ['8adf0c6890f9c9b29c21080dee29a174c60a9e32f5f2a707af86bac4c9fca4ea']

builddependencies = [
    ('Autotools', '20200321'),
    ('CMake', '3.22.1'),
]

dependencies = [
    ('Java', '11','', True),
    ('ant', '1.10.7', '-Java-%(javaver)s', True),
    ('Perl', '5.34.0'),
    ('Python', '3.9.6'),
    ('SciPy-bundle', '2021.10'),
    ('Bowtie2', '2.4.4'),
    ('HTSlib', '1.14'),
    ('Jellyfish', '2.3.0'),
    ('kallisto', '0.48.0'),
    ('ncurses', '6.2'),
    ('Salmon', '1.4.0'),
    ('SAMtools', '1.14'),
    ('zlib', '1.2.11'),
]

withsampledata = True

moduleclass = 'bio'
