easyblock = 'CMakeMake'

name = 'tomlplusplus'
version = '3.4.0'

homepage = 'https://github.com/marzer/tomlplusplus'
description = """
Header-only TOML config file parser and serializer for modern C++.
"""

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}

source_urls = ['https://github.com/marzer/tomlplusplus/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['8517f65938a4faae9ccf8ebb36631a38c1cadfb5efa85d9a72e15b9e97d25155']

builddependencies = [
    ('binutils', '2.42'),
    ('CMake', '3.29.3'),
]

sanity_check_paths = {
    'files': [],
    'dirs': ['include/toml++', 'lib/cmake/tomlplusplus', 'share/tomlplusplus'],
}

moduleclass = 'lib'
