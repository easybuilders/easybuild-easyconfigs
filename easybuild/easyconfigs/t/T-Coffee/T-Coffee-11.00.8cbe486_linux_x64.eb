# This file is an EasyBuild reciPY as per https://github.com/hpcugent/easybuild
# Author: Pablo Escobar Lopez
# sciCORE - University of Basel
# SIB Swiss Institute of Bioinformatics 

easyblock='Binary'

name = "T-Coffee"
version = "11.00.8cbe486"
versionsuffix = "_linux_x64"

homepage = 'http://www.tcoffee.org/Projects/tcoffee/'
description = """ T-Coffee is a multiple sequence alignment package. You can use T-Coffee to 
 align sequences or to combine the output of your favorite alignment methods (Clustal, Mafft, 
 Probcons, Muscle...) into one unique alignment """

toolchain = {'name': 'dummy', 'version': ''}

source_urls = ['http://www.tcoffee.org/Packages/Stable/Latest/linux/']
sources = ['T-COFFEE_installer_Version_%(version)s%(versionsuffix)s.bin']

install_cmd = './T-COFFEE_installer_Version_%(version)s%(versionsuffix)s.bin --mode unattended --prefix %(installdir)s --user_email dummy@email.com'

modextrapaths = { 
	'PATH': 'perl/bin',
	'PERL5LIB': 'perl/lib/perl5/'
}

# installer adds all these env vars to ~/.bashrc 
modextravars = {
    'DIR_4_TCOFFEE': '$root',
    'MAFFT_BINARIES': '\$DIR_4_TCOFFEE/plugins/linux/',
    'CACHE_4_TCOFFEE': '\$HOME/.t_coffee/cache/',
    'TMP_4_TCOFFEE': '\$HOME/.t_coffee/tmp/',
    'LOCKDIR_4_TCOFFEE': '\$HOME/.t_coffee/lck/',
    'EMAIL_4_TCOFFEE': 'dummy@email.com',
}

sanity_check_paths = {
    'files': ['bin/t_coffee'],
    'dirs': ['mcoffee', 'perl', 'plugins', 'src']
}

moduleclass = 'bio'
