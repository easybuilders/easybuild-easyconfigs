versionsuffix = '-%s-%s' % (python, pythonver)

dependencies = [(python, pythonver)]

sanity_check_paths = {
    'files': ['bin/theano-cache'],
    'dirs': ['lib/python%s/site-packages' % pythonshortver],
}

moduleclass = 'math'
