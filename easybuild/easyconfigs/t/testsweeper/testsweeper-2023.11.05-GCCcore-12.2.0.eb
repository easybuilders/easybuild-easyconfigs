easyblock = 'CMakeMake'

name = 'testsweeper'
version = '2023.11.05'

homepage = 'https://github.com/icl-utk-edu/testsweeper'
description = """
TestSweeper is a C++ testing framework for parameter sweeps.
It handles parsing command line options, iterating over the test space,
and printing results. This simplifies test functions by allowing them to
concentrate on setting up and solving one problem at a time.
"""

toolchain = {'name': 'GCCcore', 'version': '12.2.0'}

github_account = 'icl-utk-edu'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['00da25d87eda96204326997303aae9124803abf9657aee9f0e8b8ac77691aa4d']

builddependencies = [
    ('binutils', '2.39'),
    ('CMake', '3.24.3'),
]

runtest = 'check'

sanity_check_paths = {
    'files': ['include/%(name)s.hh', f'lib/lib%(namelower)s.{SHLIB_EXT}'],
    'dirs': [''],
}

moduleclass = 'tools'
