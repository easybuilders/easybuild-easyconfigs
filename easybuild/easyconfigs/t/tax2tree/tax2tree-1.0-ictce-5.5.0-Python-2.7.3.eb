easyblock = 'PythonPackage'

name = 'tax2tree'
version = '1.0'

homepage = 'http://sourceforge.net/projects/tax2tree/'
description = """Tools for decorating taxonomy information on to a phylogenetic tree"""

toolchain = {'name': 'ictce', 'version': '5.5.0'}
toolchainopts = {'pic': True}

source_urls = [SOURCEFORGE_SOURCE]
sources = ['%(name)s-v%(version)s.tar.gz']

python = 'Python'
pythonver = '2.7.3'
versionsuffix = '-%s-%s' % (python, pythonver)

dependencies = [
    (python, pythonver),
    ('PyCogent', '1.5.3', versionsuffix),
]

options = {'modulename': 't2t'}

pythonshortver = ".".join(pythonver.split(".")[:-1])
sanity_check_paths = {
    'files': ['bin/nlevel'],
    'dirs': ['lib/python%s/site-packages/t2t' % pythonshortver],
}

moduleclass = 'bio'
