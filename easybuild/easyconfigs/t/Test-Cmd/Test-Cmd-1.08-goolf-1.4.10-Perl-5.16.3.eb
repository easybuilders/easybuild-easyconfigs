easyblock = 'PerlModule'

name = 'Test-Cmd'
version = '1.08'

homepage = 'http://search.cpan.org/perldoc?Test%3A%3ACmd'
description = """Perl module for portable testing of commands and scripts."""

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ['http://www.cpan.org/modules/by-module/Test']
sources = [SOURCE_TAR_GZ]

perl = 'Perl'
perlver = '5.16.3'
perlverextra = ''
versionsuffix = '-%s-%s%s' % (perl, perlver, perlverextra)

dependencies = [
    (perl,        perlver, perlverextra),
]

options = {'modulename': 'Test::Cmd'}

moduleclass = 'data'
