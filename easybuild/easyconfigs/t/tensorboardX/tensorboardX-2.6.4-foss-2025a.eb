easyblock = 'PythonBundle'

name = 'tensorboardX'
version = '2.6.4'

homepage = 'https://github.com/lanpa/tensorboardX'
description = "Tensorboard for PyTorch."

toolchain = {'name': 'foss', 'version': '2025a'}

