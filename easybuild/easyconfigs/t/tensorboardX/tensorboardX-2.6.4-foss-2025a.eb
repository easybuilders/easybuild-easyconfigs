    ('Python', '3.13.1'),
    ('SciPy-bundle', '2025.06'),
    ('protobuf-python', '6.31.1'),
]

exts_list = [
    ('tensorboardx', version, {
        'modulename': 'tensorboardX',
        'checksums': ['b163ccb7798b31100b9f5fa4d6bc22dad362d7065c2f24b51e50731adde86828'],
    }),
]

moduleclass = 'vis'
