# This easyconfig was created by the BEAR Software team at the University of Birmingham.
easyblock = 'Bundle'

name = 'Taxonstand'
version = '2.3'
versionsuffix = '-R-%(rver)s'

homepage = "https://cran.r-project.org/package=Taxonstand"
description = """Automated standardization of taxonomic names and removal of orthographic errors in plant species
 names using 'The Plant List' website (www.theplantlist.org)."""

toolchain = {'name': 'foss', 'version': '2020b'}

dependencies = [
    ('R', '4.0.3'),
]

exts_defaultclass = 'RPackage'
exts_filter = ("R -q --no-save", "library(%(ext_name)s)")
exts_default_options = {
    'source_urls': [
        'https://cran.r-project.org/src/contrib/Archive/%(name)s',  # package archive
        'https://cran.r-project.org/src/contrib/',  # current version of packages
        'https://cran.freestatistics.org/src/contrib',  # mirror alternative for current packages
    ],
    'source_tmpl': '%(name)s_%(version)s.tar.gz',
}


# Order is important!
exts_list = [
    (name, version, {
        'checksums': ['bb548326af354f09e599b976760284367222bc7fdfb24923357abfc75797189e'],
    }),
]

modextrapaths = {'R_LIBS': ''}

sanity_check_paths = {
    'files': ['Taxonstand/R/Taxonstand'],
    'dirs': [],
}

moduleclass = 'data'
