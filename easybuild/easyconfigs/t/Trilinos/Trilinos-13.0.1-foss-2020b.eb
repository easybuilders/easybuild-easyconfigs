    ('CMake', '3.18.4'),
    ('SWIG', '4.0.2'),
    ('Doxygen', '1.8.20'),
    ('Perl', '5.32.0'),
]
dependencies = [
    ('Python', '3.8.6'),
    ('SciPy-bundle', '2020.11'),
