name = 'Trilinos'
version = '16.1.0'
versionsuffix = '-zoltan'

homepage = 'https://trilinos.org'
description = """The Trilinos Project is an effort to develop algorithms and enabling technologies
 within an object-oriented software framework for the solution of large-scale, complex multi-physics
 engineering and scientific problems. A unique design feature of Trilinos is its focus on packages."""

toolchain = {'name': 'foss', 'version': '2024a'}
toolchainopts = {'usempi': True, 'pic': True, 'strict': True}

source_urls = ['https://github.com/trilinos/Trilinos/archive/refs/tags/']
sources = ['trilinos-release-%s.tar.gz' % '-'.join(version.split('.'))]
patches = ['Trilinos-16.1.0_fix-missing-tuple.patch']
checksums = [
    {'trilinos-release-16-1-0.tar.gz': 'e9651c88f581049457036cfc01b527a9d3903c257338eeeab942befd7452f23a'},
    {'Trilinos-16.1.0_fix-missing-tuple.patch': '056a97c82833a41d2ff54e0a6f0542ec642cc715aabbca5befe5c020e12b8d26'},
]

builddependencies = [
    ('CMake', '3.29.3'),
    ('SWIG', '4.2.1'),
    ('Perl', '5.38.2'),
]
dependencies = [
    ('Python', '3.12.3'),
    ('SciPy-bundle', '2024.05'),
    ('Boost.Python', '1.85.0'),
    ('Boost', '1.85.0'),
    ('SCOTCH', '7.0.6'),
    ('SuiteSparse', '7.10.1'),
    ('METIS', '5.1.0'),
    ('HDF5', '1.14.5'),
    ('netCDF', '4.9.2'),
    ('MATIO', '1.5.28'),
    ('GLM', '1.0.1'),
    ('ParMETIS', '4.0.3'),
    ('X11', '20240607'),
]

forward_deps = False
build_tests = False
build_shared_libs = True

preconfigopts = 'export CMAKE_INCLUDE_PATH=$EBROOTSUITESPARSE/include/suitesparse:$CMAKE_INCLUDE_PATH &&'

configopts = '-DTrilinos_ENABLE_EXPLICIT_INSTANTIATION=ON '
configopts += '-DKokkos_ENABLE_AGGRESSIVE_VECTORIZATION=ON '
configopts += '-DTPL_SCALAPACK_LIBRARIES="-lscalapack" '
# We might need that for Fluidity Zoltan interface
configopts += '-DZoltan_ENABLE_F90INTERFACE=ON -DZoltan_ENABLE_ParMETIS=ON -DZoltan_ENABLE_Scotch=ON '
# Need to look into that
configopts += '-DTPL_Cholmod_INCLUDE_DIRS=$EBROOTSUITESPARSE/include/suitesparse/ '

moduleclass = 'numlib'
