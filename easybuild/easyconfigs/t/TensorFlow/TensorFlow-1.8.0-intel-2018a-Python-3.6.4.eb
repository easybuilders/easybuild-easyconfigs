    'TensorFlow-1.8.0_remove-msse-hardcoding.patch',
    'TensorFlow-1.6.0_use_64b_alignment.patch',
    'TensorFlow-1.7.0_remove_DATE_defines.patch',
    'TensorFlow-1.8.0_no_grpc.patch',
