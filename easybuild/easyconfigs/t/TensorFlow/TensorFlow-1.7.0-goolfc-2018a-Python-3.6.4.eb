name = 'TensorFlow'
version = '1.7.0'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://www.tensorflow.org/'
description = "An open-source software library for Machine Intelligence"

toolchain = {'name': 'goolfc', 'version': '2018a'}
toolchainopts = {'pic': True}

source_urls = ['https://github.com/tensorflow/tensorflow/archive/']
sources = ['v%(version)s.tar.gz']
patches = [
    'TensorFlow-1.5.0_swig-env.patch',
    'TensorFlow-1.6.0_remove-msse-hardcoding.patch',
    'TensorFlow-1.6.0_dont_expand_cudnn_path.patch',
    'TensorFlow-1.6.0_dont_expand_cuda_path.patch',
]
checksums = [
    '2df5e308357356c9ffb7e9a7816dfa9947bd8928f9d406cf7e851b82853931ea',  # v1.7.0.tar.gz
    '53807290f1acb6a0f2a84f1a0ad9f917ee131c304b3e08679f3cbd335b22c7ef',  # TensorFlow-1.5.0_swig-env.patch
    '0ad82aab981721b1ed4881106d9accd43fe38b863ec147f6a16b278605012099',  # TensorFlow-1.6.0_remove-msse-hardcoding.patch
    '5fc94b7254eafd9f2f03984c35bdbf9557e37931d93613d0b242afbaf9c10168',  # TensorFlow-1.6.0_dont_expand_cudnn_path.patch
    'b2b5af6e28190438bb70f60d4774b9e3bfe60388d67033fc5efbdc636aefc21f',  # TensorFlow-1.6.0_dont_expand_cuda_path.patch
]

builddependencies = [
    ('Bazel', '0.11.1'),
    ('wheel', '0.30.0', versionsuffix),
]

dependencies = [
    ('Python', '3.6.4'),
    ('cuDNN', '7.0.5.15'),
]

preconfigopts = 'export CC_OPT_FLAGS="$CC_OPT_FLAGS -mno-avx512f" && '

cuda_compute_capabilities = ['3.0', '3.2', '3.5', '3.7', '5.0', '6.0', '7.0']

moduleclass = 'lib'
