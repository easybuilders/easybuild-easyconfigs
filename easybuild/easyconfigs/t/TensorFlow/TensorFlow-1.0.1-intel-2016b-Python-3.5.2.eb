easyblock = 'PythonPackage'

name = 'TensorFlow'
version = '1.0.1'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://www.tensorflow.org/'
description = "An open-source software library for Machine Intelligence"

toolchain = {'name': 'intel', 'version': '2016b'}

local_pymaj = '3'
local_pymin = '5'
local_pymajmin = local_pymaj + local_pymin

sources = [
    'tensorflow-%%(version)s-cp%(py)s-cp%(py)sm-manylinux1_x86_64.whl' % {'py': local_pymajmin},
]
checksums = ['bccff4d9b87331d4dcecafa43c970b89']

dependencies = [
    ('Python', '%s.%s.2' % (local_pymaj, local_pymin)),
    ('protobuf-python', '3.2.0', versionsuffix),
]

use_pip = True
unpack_sources = False

sanity_check_paths = {
    'files': ['bin/tensorboard'],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'lib'
