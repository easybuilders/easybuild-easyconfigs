easyblock = 'PythonBundle'

name = 'TEsorter'
version = '1.4.7'

homepage = 'https://github.com/zhangrengang/TEsorter'
description = """
It is coded for LTR_retriever to classify long terminal repeat retrotransposons
(LTR-RTs) at first. It can also be used to classify any other transposable
elements (TEs), including Class I and Class II elements which are covered by the
REXdb database.

Since version v1.4, a GENOME mode is supported to identify TE protein domains
throughout whole genome.
"""

toolchain = {'name': 'foss', 'version': '2023a'}

dependencies = [
    ('Python', '3.11.3'),
    ('BLAST+', '2.14.1'),
    ('HMMER', '3.4'),
    ('Biopython', '1.83'),
    ('zlib-ng', '2.1.6'),
    ('python-isal', '1.6.1'),
]

exts_list = [
    ('xopen', '2.0.2', {
        'checksums': ['f19d83de470f5a81725df0140180ec71d198311a1d7dad48f5467b4ad5df6154'],
    }),
    (name, version, {
        'source_urls': ['https://github.com/zhangrengang/TEsorter/archive/refs/tags'],
        'sources': [f'v{version}.tar.gz'],
        'checksums': ['f68ccedbe03fe95486d755ca1ee7d698ed3ab4779aa32ef5a2df61ca36371aae'],
        'modulename': name,
    }),
]

sanity_check_commands = ['TEsorter --help']

moduleclass = 'bio'
