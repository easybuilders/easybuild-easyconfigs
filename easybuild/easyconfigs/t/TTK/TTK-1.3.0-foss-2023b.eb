easyblock = 'CMakeNinja'

name = 'TTK'
version = '1.3.0'

homepage = "https://topology-tool-kit.github.io"
description = "The Topology ToolKit (TTK) is an open-source library and software collection " \
              "for topological data analysis in scientific visualization."

toolchain = {'name': 'foss', 'version': '2023b'}
toolchainopts = {'pic': True, 'usempi': True}

source_urls = ['https://github.com/topology-tool-kit/%(namelower)s/archive']
sources = ["%(version)s.tar.gz"]
checksums = ['c8b41eed46486968f6f635b10e016a846dc3692965d91e4a5f8df20d41fc655c']

builddependencies = [
    ('CMake', '3.27.6'),
    ('Ninja', '1.11.1'),
]

dependencies = [
    ('Python', '3.11.5'),
    ('zlib', '1.2.13'),
    ('Graphviz', '9.0.0'),
    ('ParaView', '5.12.0'),
    ('Boost', '1.83.0'),
    ('VTK', '9.3.0'),
    ('Eigen', '3.4.0'),
    ('zfp', '1.0.1'),
]

separate_build_dir = True
build_type = 'Release'

configopts = ''
configopts += '-DTTK_ENABLE_EIGEN=ON '
configopts += '-DEigen3_DIR=$EBROOTEIGEN/share/eigen3/cmake '
configopts += '-DTTK_BUILD_PARAVIEW_PLUGINS=ON '
configopts += '-DTTK_BUILD_VTK_PYTHON_MODULE=ON '
configopts += '-DTTK_BUILD_VTK_WRAPPERS=ON '
configopts += '-DTTK_ENABLE_OPENMP=ON '

sanity_check_paths = {
    'files': ['bin/ttkReebSpaceCmd'],
    'dirs': ['bin', 'lib/python%(pyshortver)s', 'share'],
}

modextrapaths = {
    'PV_PLUGIN_PATH': ['bin/plugins/TopologyToolKit'],
    'PYTHONPATH': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'vis'
