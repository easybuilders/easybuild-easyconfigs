easyblock = 'CMakeMake'

name = 'tint2'
version = '17.0.2'

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}

homepage = 'https://gitlab.com/o9000/tint2'
description = "A lightweight panel/taskbar for Linux desktops."

source_urls = ['https://gitlab.com/o9000/tint2/-/archive/v%(version)s']
sources = ['tint2-v%(version)s.tar.gz']
checksums = ['1f101afef2215fd0ad650165f923dbe44cb843a0c283c2974c0ff9a5e9a12f42']

builddependencies = [
    ('CMake', '3.29.3'),
    ('binutils', '2.42'),
]

dependencies = [
    ('GTK3', '3.24.42'),
    ('cairo', '1.18.0'),
    ('Pango', '1.54.0'),
    ('Imlib2', '1.12.3'),
    ('librsvg', '2.60.0'),
]

# Disable startup notification
configopts = "-DENABLE_SN=OFF"

sanity_check_paths = {
    'files': ['bin/tint2'],
    'dirs': ['share/tint2'],
}

sanity_check_commands = ['tint2 -h']

moduleclass = 'vis'
