    ('scikit-learn', '1.5.2'),
    ('Tk', '8.6.14'),
    ('plotly.py', '5.24.1'),
    ('BEDTools', '2.31.1'),
    ('BLAST+', '2.16.0'),
    ('CD-HIT', '4.8.1'),
    ('EMBOSS', '6.6.0'),
    ('HMMER', '3.4'),
    ('MAFFT', '7.526', '-with-extensions'),
    ('PfamScan', '1.6'),
