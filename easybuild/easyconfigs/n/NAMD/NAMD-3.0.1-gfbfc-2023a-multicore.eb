name = 'NAMD'
version = '3.0.1'
versionsuffix = '-multicore'

homepage = 'http://www.ks.uiuc.edu/Research/namd/'
description = """NAMD is a parallel molecular dynamics code designed for high-performance simulation of
 large biomolecular systems."""

toolchain = {'name': 'gfbfc', 'version': '2023a'}
toolchainopts = {'opt': True,'pic': True}

sources = ['NAMD_%(version)s_Source.tar.gz']
patches = [('NAMD_3.0.1_add_cuda_12_arch_file.patch',1)]
checksums = [ '3be0854545c45e58afb439a96708e127aef435d30113cc89adbab8f4b6888733','ca95221091cb96d781627abe2ec50c8b7b81ec1ab4999ef246539a16f8669ae6']


# /bin/csh is required by 'config' script
osdependencies = ['tcsh']

charm_arch = "multicore-linux-x86_64"

namd_cfg_opts = "--with-single-node-cuda"

runtest=False

moduleclass = 'chem'
modaltsoftname = "namd-multicore"

modluafooter = """
family("namd")
"""
