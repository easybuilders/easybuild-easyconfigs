easyblock = 'Toolchain'

name = 'nvompi'
version = '2022.07'

homepage = '(none)'
description = 'NVHPC based compiler toolchain, including OpenMPI for MPI support.'

toolchain = SYSTEM

local_compiler = ('NVHPC', '22.7-CUDA-11.7.0')

dependencies = [
    local_compiler,
    ('OpenMPI', '4.1.4', '', local_compiler),
    ('CUDA', '11.7.0', '', SYSTEM),
]

moduleclass = 'toolchain'
