easyblock = 'Toolchain'

name = 'nvompi'
version = '2023a'

homepage = '(none)'
description = 'NVHPC based compiler toolchain, including OpenMPI for MPI support.'

toolchain = SYSTEM

local_cuda = '12.1.1'
local_compiler = ('NVHPC', '23.7-CUDA-%s' % local_cuda)

dependencies = [
    local_compiler,
    ('CUDA', local_cuda, '', SYSTEM),
    ('OpenMPI', '4.1.5', '', local_compiler),
]

moduleclass = 'toolchain'
