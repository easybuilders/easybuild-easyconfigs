easyblock = 'Toolchain'

name = 'nvompi'
version = '2024.9'

homepage = '(none)'
description = 'NVHPC based compiler toolchain, including OpenMPI for MPI support.'

toolchain = SYSTEM

local_compiler = ('NVHPC', '24.9-CUDA-12.6.0')

dependencies = [
    local_compiler,
    ('OpenMPI', '5.0.3', '', local_compiler),
    ('CUDA', '12.6.0', '', SYSTEM),
]

moduleclass = 'toolchain'
