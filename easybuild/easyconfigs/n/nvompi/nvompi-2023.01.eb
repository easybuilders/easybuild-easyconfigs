easyblock = 'Toolchain'

name = 'nvompi'
version = '2023.01'

homepage = '(none)'
description = 'NVHPC based compiler toolchain, including OpenMPI for MPI support.'

toolchain = SYSTEM

local_compiler = ('NVHPC', '23.1-CUDA-%(cudaver)s')

dependencies = [
    local_compiler,
    ('OpenMPI', '4.1.5', '', local_compiler),
    ('CUDA', '12.0.0', '', SYSTEM),
]

moduleclass = 'toolchain'
