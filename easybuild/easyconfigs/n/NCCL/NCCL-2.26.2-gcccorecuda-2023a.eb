checksums = ['74c6ab40c864d79c2139508e9419de5970cb406ec85f001d5f834d5f5c0c4f3b']

builddependencies = [('binutils', '2.42')]

dependencies = [
    ('CUDA', '12.2.2', '', SYSTEM),
    ('UCX-CUDA', '1.14.1'),
]

moduleclass = 'lib'
