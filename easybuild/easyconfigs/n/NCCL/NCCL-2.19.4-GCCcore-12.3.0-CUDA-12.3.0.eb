name = 'NCCL'
version = '2.19.4'
versionsuffix = '-CUDA-%(cudaver)s'

homepage = 'https://developer.nvidia.com/nccl'
description = """The NVIDIA Collective Communications Library (NCCL) implements multi-GPU and multi-node collective
communication primitives that are performance optimized for NVIDIA GPUs."""

toolchain = {'name': 'GCCcore', 'version': '12.3.0'}

github_account = 'NVIDIA'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s-1.tar.gz']
patches = ['NCCL-2.16.2_fix-cpuid.patch']
checksums = [
    {'v2.19.4-1.tar.gz': 'a3948ade5d83a036dde7ca6d0fee3a960a4de5c7915a9be903a28a747b5babc4'},
    {'NCCL-2.16.2_fix-cpuid.patch': '0459ecadcd32b2a7a000a2ce4f675afba908b2c0afabafde585330ff4f83e277'},
]


builddependencies = [('binutils', '2.40')]

dependencies = [
    ('CUDA', '12.3.0', '', SYSTEM),
    ('UCX-CUDA', '1.14.1', versionsuffix),
]

# default CUDA compute capabilities to use (override via --cuda-compute-capabilities)
cuda_compute_capabilities = ['8.0', '8.6', '8.9', '9.0']

moduleclass = 'lib'
