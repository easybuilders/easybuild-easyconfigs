name = 'NCCL'
version = '2.8.4-1'

homepage = 'https://developer.nvidia.com/nccl'
description = """The NVIDIA Collective Communications Library (NCCL) implements multi-GPU and multi-node collective
communication primitives that are performance optimized for NVIDIA GPUs."""

toolchain = {'name': 'gcccuda', 'version': '2020b'}

source_urls = ['https://github.com/NVIDIA/nccl/archive/']
sources = ['v2.8.4-1.tar.gz']
checksums = ['a5c1b4da6e1608ee63baa87f6df424bba7a8b1cedad597a25d5b4cf8d56d0865']

# cuda_compute_capabilities
# generate ptx code using ptx = ['7.0']

sanity_check_paths = {
    'files': ['include/nccl.h', 'lib/libnccl.%s' % SHLIB_EXT, 'lib/libnccl_static.a'],
    'dirs': ['lib/pkgconfig'],
}

moduleclass = 'lib'
