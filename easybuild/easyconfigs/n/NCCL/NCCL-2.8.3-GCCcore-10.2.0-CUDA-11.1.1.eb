name = 'NCCL'
version = '2.8.3'
local_gcc_ver = '10.2.0'
local_cuda_version = '11.1.1'
versionsuffix = '-CUDA-%s' % local_cuda_version

homepage = 'https://developer.nvidia.com/nccl'
description = """The NVIDIA Collective Communications Library (NCCL) implements multi-GPU and multi-node collective
communication primitives that are performance optimized for NVIDIA GPUs."""

toolchain = {'name': 'GCCcore', 'version': local_gcc_ver}

builddependencies = [('GCC', local_gcc_ver, '', True)]
dependencies = [('CUDAcore', local_cuda_version, '', True)]

github_account = 'NVIDIA'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s-1.tar.gz']
patches = ['NCCL-2.8.3_fix-isend-irecv.patch']
checksums = [
    '3ae89ddb2956fff081e406a94ff54ae5e52359f5d645ce977c7eba09b3b782e6',  # v2.8.3-1.tar.gz
    '04d61ea9b9f0954bed05494017649a68950b6b5e5851d969244f9ab67d5ecc92',  # NCCL-2.8.3_fix-isend-irecv.patch
]

moduleclass = 'lib'
