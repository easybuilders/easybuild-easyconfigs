easyblock = 'PythonPackage'
name = 'nanofilt'
version = '2.5.0'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://github.com/wdecoster/nanofilt'
description = """Filtering and trimming of long read sequencing data."""

toolchain = {'name': 'foss', 'version': '2018b'}

source_urls = ['https://github.com/wdecoster/nanofilt/archive']
sources = [{
    'download_filename': 'v%(version).tar.gz',
    'filename': SOURCE_TAR_GZ
}]
checksums = ['20b0c7377a0a5807b466668bb092c1a4f1891df901aac09723026692baaa8f74']

exts_defaultclass = 'PythonPackage'
dependencies = [
    ('Python', '3.6.6'),
    ('Biopython', '1.73', versionsuffix),
]

use_pip = True

sanity_check_paths = {
    'files': ['bin/NanoFilt'],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'bio'
