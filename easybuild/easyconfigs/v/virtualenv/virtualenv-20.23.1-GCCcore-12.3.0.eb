    ('platformdirs', '3.8.0', {
        'checksums': ['b0cabcb11063d21a0b261d557acb0a9d2126350e63b70cdf7db6347baea456dc'],
    }),
    (name, version, {
        'checksums': ['8ff19a38c1021c742148edc4f81cb43d7f8c6816d2ede2ab72af5b84c749ade1'],
    }),
