    ('zlib', '1.2.11'),
    ('bzip2', '1.0.8'),
    ('cURL', '7.78.0'),
    ('PCRE', '8.45'),
    ('PCRE2', '10.37'),
    ('libdeflate', '1.8'),
    ('libRmath', '4.1.2'),
    ('LIBSVM', '3.25'),
