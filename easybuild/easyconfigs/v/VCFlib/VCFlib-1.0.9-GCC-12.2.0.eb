easyblock = 'CMakeMake'

name = 'VCFlib'
version = '1.0.9'

homepage = 'vcflib'
description = """The Variant Call Format (VCF) is a flat-file, tab-delimited textual format intended to concisely describe reference-indexed variations between individuals. VCF provides a common interchange format for the description of variation in individuals and populations of samples, and has become the defacto standard reporting format for a wide array of genomic variant detectors."""

toolchain = {'name': 'GCC', 'version': '12.2.0'}

source_urls = ['https://github.com/vcflib/vcflib/releases/download/v%(version)s/']
sources = ['vcflib-%(version)s-src.tar.gz']
checksums = ['493204cb8e0515defa1383d56280d00b8efbed55312c6055162f8cb3a4ffb210']

builddependencies = [
    ('CMake', '3.24.3'),
    ('pybind11', '2.10.3'),
]

dependencies = [
    ('HTSlib', '1.17'),
    ('tabixpp', '1.1.0'),
    ('Perl', '5.36.0'),
    ('Python', '3.10.8'),
]

configopts = '-DZIG=OFF'

sanity_check_paths = {
    'files': ['bin/vcfaltcount'],
    'dirs': [],
}

moduleclass = 'bio'
