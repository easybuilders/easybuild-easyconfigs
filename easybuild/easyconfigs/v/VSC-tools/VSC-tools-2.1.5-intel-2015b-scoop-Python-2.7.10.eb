name = 'VSC-tools'
version = '2.1.5'
versionsuffix = '-scoop'

homepage = 'http://hpcugent.github.com/VSC-tools/'
description = """VSC-tools is a set of Python libraries and scripts that are commonly used within HPC-UGent."""

toolchain = {'name': 'intel', 'version': '2015b'}

source_urls = [
    'https://pypi.python.org/packages/source/v/vsc-base/',
    'https://github.com/hpcugent/vsc-processcontrol/archive/',
    'https://github.com/hpcugent/vsc-mympirun/archive/',
    'https://github.com/hpcugent/vsc-mympirun-scoop/archive/',
]
sources = [
    'vsc-base-2.2.4.tar.gz',
    'vsc-processcontrol-1.0.tar.gz',
    'vsc-mympirun-3.4.2.tar.gz',
    'vsc-mympirun-scoop-3.4.0.tar.gz',
]

pyver = '2.7.10'
versionsuffix += '-Python-%s' % pyver
dependencies = [
    ('Python', pyver),
    ('SCOOP', '0.7.1.1', '-Python-%s' % pyver),
]

options = {'modulename': 'vsc'}

moduleclass = 'tools'
