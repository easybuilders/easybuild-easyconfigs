name = 'VSC-tools'
version = '0.1.2'

homepage = 'http://hpcugent.github.com/VSC-tools/'
description = """VSC-tools is a set of Python libraries and scripts that are commonly used within HPC-UGent."""

toolchain = {'name': 'goalf', 'version': '1.1.0-no-OFED'}

sources = [
    'vsc-base-0.95.tar.gz',
    'vsc-mympirun-3.0.5.tar.gz',
]

python = 'Python'
pyver = '2.7.3'
versionsuffix = '-%s-%s' % (python, pyver)

dependencies = [(python, pyver)]

options = {'modulename': 'vsc'}

moduleclass = 'tools'
