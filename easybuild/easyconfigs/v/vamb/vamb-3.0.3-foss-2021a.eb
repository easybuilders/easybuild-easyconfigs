easyblock = 'PythonPackage'

name = 'vamb'
version = '3.0.3'

homepage = 'https://github.com/RasmussenLab/vamb'
description = """
Vamb is a metagenomic binner which feeds sequence composition information from a
contig catalogue and co-abundance information from BAM files into a variational
autoencoder and clusters the latent representation."""

toolchain = {'name': 'foss', 'version': '2021a'}

github_account = 'RasmussenLab'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['b96e075a1477b855a45e47ceac423b8ae3c56db105e5810c8bc34949462099b0']

dependencies = [
    ('binutils', '2.36.1'),
    ('Pysam', '0.16.0.1', '', ('GCC', '10.3.0')),
    ('Python', '3.9.5'),
    ('PyTorch', '1.10.0', '', ('foss', '2021a')),
    ('SciPy-bundle', '2021.05', '', ('foss', '2021a')),
]

download_dep_fail = True
use_pip = True
sanity_pip_check = True

moduleclass = 'bio'
