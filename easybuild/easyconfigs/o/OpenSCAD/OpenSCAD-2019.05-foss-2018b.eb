easyblock = "Binary"

name = "OpenSCAD"
version = "2019.05"

homepage = "https://www.openscad.org/index.html"
description = """ OpenSCAD is software for creating solid 3D CAD models. 
OpenSCAD is not an interactive modeller. Instead it is something like a 
3D-compiler that reads in a script file that describes the object and 
renders the 3D model from this script file.   """

toolchain = {"name": "foss", "version": "2018b"}

source_urls = ["https://files.openscad.org/"]
sources = ["%(name)s-%(version)s-x86_64.AppImage"]

checksums = ["3d3176b10ce8bd136950fa36061f824eee5ffa23cdf5dd91bcf89f5ece6f2592"]
modextrapaths = {"PATH": ""}

postinstallcmds = [
    "mv %(installdir)s/%(name)s-%(version)s-x86_64.AppImage %(installdir)s/openscad && chmod +x %(installdir)s/openscad"
]

sanity_check_paths = {"files": ["openscad"], "dirs": []}

moduleclass = "vis"
