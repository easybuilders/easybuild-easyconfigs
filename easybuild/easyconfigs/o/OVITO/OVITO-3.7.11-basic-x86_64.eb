easyblock = "Tarball"

name = 'OVITO'
version = '3.7.11'
versionsuffix = '-basic-x86_64'

homepage = 'https://www.ovito.org'
description = """OVITO is a scientific visualization and data analysis solution for atomistic and other particle-based
models. It helps scientists gain meaningful and quick insights from numerical simulation results."""

toolchain = SYSTEM

source_urls = ['https://www.ovito.org/download/master/']
sources = ['ovito-basic-%(version)s-x86_64.tar.xz']
checksums = ['a864035d5e8f004c042476d109e803775c3f645313cad01c7ac17ea34d4b64f2']

# Bundled libcrypto libraries are incompatible with at least RHEL 8 derivatives
# causing same issue as: https://bugzilla.redhat.com/show_bug.cgi?id=1829790
postinstallcmds = ['rm %(installdir)s/lib/ovito/libcrypto*']

sanity_check_paths = {
    'files': ['bin/ovito'],
    'dirs': []
}

moduleclass = 'vis'
