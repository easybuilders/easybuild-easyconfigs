easyblock = 'EB_OpenFOAM'

name = 'OpenFOAM'
version = '4.0'
pyver = '2.7.12'
versionsuffix = '-Python-%s' % pyver

homepage = 'http://www.openfoam.com/'

description = """
 OpenFOAM is a free, open source CFD software package. OpenFOAM has an
 extensive range of features to solve anything from complex fluid flows
 involving chemical reactions, turbulence and heat transfer, to solid
 dynamics and electromagnetics.
"""

toolchain = {'name': 'intel', 'version': '2017A'}
toolchainopts = {'cstd': 'c++11'}

source_urls = ['https://github.com/OpenFOAM/OpenFOAM-%(version_major)s.x/archive']
sources = ['version-%(version)s.tar.gz']

checksums = ['294b520811aae87241f3a78423f05952']

patches = ['OpenFOAM-%(version)s-cleanup.patch']

dependencies = [
    ('CGAL', '4.9', '%s-bare' % versionsuffix),
    ('libreadline', '7.0'),
    ('ncurses', '6.0'),
    # OpenFOAM requires 64 bit METIS using 32 bit indexes (array indexes)
    ('METIS', '5.1.0'),
    ('ParaView', '5.1.2', '%s-mpi' % versionsuffix),
    ('SCOTCH', '6.0.4'),
]

osdependencies = [
    ('bison'),
    ('cmake'),
    ('flex'),
]

moduleclass = 'cae'
