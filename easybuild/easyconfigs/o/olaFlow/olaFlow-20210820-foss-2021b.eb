                   "export FOAM_USER_APPBIN=%(installdir)s/bin && "
                   "export FOAM_USER_LIBBIN=%(installdir)s/lib && "
                   "./allMake"]

sanity_check_paths = {
    'files': ["bin/olaFlow", "lib/libwaveGeneration.so"],
    'dirs': []
}

sanity_check_commands = ["olaFlow -help"]

