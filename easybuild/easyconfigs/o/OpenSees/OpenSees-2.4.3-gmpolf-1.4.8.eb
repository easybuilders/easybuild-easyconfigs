name = 'OpenSees'
version = '2.4.3'

homepage = 'http://opensees.berkeley.edu'
description = "OpenSees is"

toolchain = {'name': 'gmpolf', 'version': '1.4.8'}


sources = [
    '%(name)s-%(version)s-20131203.tgz'
]
dependencies = [('Tcl', '8.5.12'),('ParMETIS','3.2.0'),('MUMPS','4.10.0','-parmetis'),('SCOTCH','6.0.0_esmumps'),('BLACS','1.1')]

#Download the source from the svn, and make it a tgz with name, version and date stamp 
#Hint: svn export URL PATH ; tar czf exported_copy.tgz PATH
#The URL = svn://opensees.berkeley.edu/usr/local/svn/OpenSees/trunk
#
source_urls = [
    '/home/bver018/tmp']

# listed make targets exclude 'doc' on purpose
files_to_copy = ["bin"]
sanity_check_paths = {
    'files': ["bin/OpenSeesMP","bin/OpenSeesSP"],
    'dirs': [],
    }
parallel = 1

moduleclass = 'tools'
