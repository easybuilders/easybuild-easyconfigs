# fix old syntax in versioneer.py
_fix_versioneer = "sed -i -e 's/SafeConfigParser()/ConfigParser()/' -e 's/readfp(/read_file(/' versioneer.py && "
# fix version in OpenForceFields-Utilities
_utilities_fix = (
    r"sed -i -e '/\"versioningit\"/d' -e '/dynamic/d' -e  '13 a version = \"0.1.15\"' pyproject.toml && "
)
# fix version in OpenForceFields-Units
_units_fix = r"sed -i -e '/\"versioningit\"/d' -e '/dynamic/d' -e  '13 a version = \"0.3.1\"' pyproject.toml && "
_interchange_fix = r"sed -i -e '/\"versioningit\"/d' -e '/dynamic/d' -e  '13 a version = \"0.4.3\"' pyproject.toml && "
# fix version and license in OpenForceFields-Toolkit
_toolkit_fix = (
    "sed -i -e "
    r"'s/, \"versioningit\"//' "
    "-e '/dynamic/d' "
    r"-e  '18 a version = \"0.16.9\"' "
    "-e 's/:: MIT/:: MIT License/' pyproject.toml && "
)
# fix AmberTools version in GLOBAL_TOOLKIT_REGISTRY
_fix_ambertools_version = (
    """sed -i 's/get_ambertools_version()/"25.2"/' openff/toolkit/utils/ambertools_wrapper.py && """
)

