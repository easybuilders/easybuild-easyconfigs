easyblock = 'PythonPackage'

name = 'OWSLib'
version = '0.24.1'
versionsuffix = '-Python-%(pyver)s'

homepage = 'http://geopython.github.io/OWSLib/'
description = """OWSLib is a Python package for client programming with 
                 Open Geospatial Consortium (OGC) web service (hence OWS) 
                 interface standards, and their related content models."""

toolchain = {'name': 'GCCcore', 'version': '10.2.0'}

sources = [SOURCE_TAR_GZ]
checksums = ['4973c2ba65ec850a3fcc1fb94cefe5ed2fed83aaf2a5e2135c78810ad2a8f0e1']

builddependencies = [
    ('binutils', '2.35'),
]

dependencies = [
    ('Python', '3.8.6'),
    ('PyYAML', '5.3.1'),
    ('pyproj', '3.0.1'),
    ('libxml2', '2.9.10'),
]

download_dep_fail = True
use_pip = True
sanity_pip_check = True

moduleclass = 'lib'
