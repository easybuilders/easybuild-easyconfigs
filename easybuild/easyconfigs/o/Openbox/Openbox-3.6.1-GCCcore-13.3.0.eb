easyblock = 'ConfigureMake'

name = 'Openbox'
version = '3.6.1'

homepage = 'http://openbox.org'
description = "Highly configurable, lightweight, next-generation window manager with extensive standards support."

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}

source_urls = ['http://openbox.org/dist/openbox']
sources = [SOURCELOWER_TAR_GZ]
checksums = ['8b4ac0760018c77c0044fab06a4f0c510ba87eae934d9983b10878483bde7ef7']

builddependencies = [
    ('binutils', '2.42'),
]

dependencies = [
    ('X11', '20240607'),
    ('GLib', '2.80.4'),
    ('Pango', '1.54.0'),
    ('xorg-macros', '1.20.1'),
    ('Imlib2', '1.12.3'),
]

configopts = '--disable-startup-notification --disable-session-management'

sanity_check_paths = {
    'files': ['bin/openbox', 'bin/openbox-session'],
    'dirs': ['share/themes'],
}

sanity_check_commands = ['openbox --help']

moduleclass = 'vis'
