easyblock = 'CMakeMake'

name = 'OpenFAST'
version = '4.0.2'

homepage = 'http://openfast.readthedocs.io/'

description = """OpenFAST is a wind turbine simulation tool which builds on FAST v8.
FAST.Farm extends the capability of OpenFAST to simulate multi-turbine wind farms"""

toolchain = {'name': 'foss', 'version': '2024a'}

source_urls = ['https://github.com/OpenFAST/openfast/archive/refs/tags/']
sources = ['v%(version)s.tar.gz']
checksums = ['791c1098f7d3df33bb3eeb73043badb6987c9014a91ff7547613673429bd380e']

builddependencies = [
    ('CMake', '3.29.3'),
]

configopts = [
    "-DBUILD_SHARED_LIBS=ON -DBUILD_FASTFARM=ON -DOPENMP=ON"
]

sanity_check_paths = {
    'files': ['bin/openfast', 'bin/FAST.Farm',
              'lib/libopenfastlib.%s' % SHLIB_EXT],
    'dirs': ['include/openfast'],
}

sanity_check_commands = [
    "openfast -h",
    "openfast  -v | grep --silent 'OpenMP: Yes'"
]

moduleclass = 'cae'
