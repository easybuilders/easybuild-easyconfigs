easyblock = 'PythonPackage'

name = 'oldest-supported-numpy'
version = '2023b'

homepage = 'http://python.org/'

description = """Oldest supported version of numpy for each version of
python on our stack"""

toolchain = {'name': 'GCCcore', 'version': '12.3.0'}

# this is a bundle of Python packages
exts_defaultclass = 'PythonPackage'

multi_deps = {
    'Python': ['3.10', '3.11']
}

multi_deps_load_default = False
installopts = '--no-index'
sources = ['requirements-%(version)s.txt']
checksums = ['a11f5cfeb6acb4dc85c762cca712f425e6ed3b2d43af096e98524c20acc53a11']

hidden = True

exts_filter = ('python -c "import numpy"', "")

unpack_sources = False
use_pip = True
use_pip_for_deps = True
use_pip_requirement = True
fix_python_shebang_for = ['bin/*']
sanity_pip_check = True
#sanity_check_paths = {
#    'files': ['bin/isympy'],
#}

moduleclass = 'lib'

