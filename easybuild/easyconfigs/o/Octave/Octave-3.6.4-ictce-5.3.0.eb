name = 'Octave'
version = '3.6.4'
versionsuffix = '-Python-2.7.3'

homepage = 'http://www.octave.org/'
description = """Octave: High-level language, intended for numerical computations"""

source_urls = ['ftp://ftp.gnu.org/gnu/octave']
sources = [SOURCELOWER_TAR_BZ2]

toolchain = {'name': 'ictce', 'version': '5.3.0'}
toolchainopts = {'opt': True, 'optarch': True}

dependencies = [
               ('Boost', '1.51.0', versionsuffix),
               ('FIAT', '1.0.0', versionsuffix),
               ('METIS', '5.0.2'),
               ('ParMETIS', '4.0.2'),
               ('ScientificPython', '2.8', versionsuffix),
               ('SCOTCH', '5.1.12b_esmumps'),
               ('SuiteSparse', '3.7.0', '-withparmetis'),  # for CHOLMOD, UMFPACK
               ('Hypre', '2.8.0b'),
               ]

sanity_check_paths = {
    'files': ['bin/octave', 'bin/octave-config'],
    'dirs': []
}

moduleclass = 'math'
