name = 'Octave'
version = '3.6.4'
versionsuffix = '-bare'

homepage = 'http://www.octave.org/'
description = """Octave: High-level language, intended for numerical computations.
 This version is meant to be used as a template, providing for a minimal build."""

source_urls = ['http://ftp.gnu.org/gnu/octave']
sources = [SOURCELOWER_TAR_BZ2]

toolchain = {'name': 'goolf', 'version': '1.4.10'}
toolchainopts = {'opt': True, 'optarch': True}

dependencies = [
    ('PCRE', '8.12'),
    ('Qhull', '2003.1'),
]

sanity_check_paths = {
    'files': ['bin/octave', 'bin/octave-config'],
    'dirs': []
}

moduleclass = 'math'
