easyblock = 'EB_OpenMM'

name = 'OpenMM'
version = '6.3.1'

homepage = 'http://openmm.org/'
description = "A high performance toolkit for molecular simulation."

toolchain = {'name': 'foss', 'version': '2015a'}

source_urls = ['https://github.com/pandegroup/openmm/archive/']
sources = ['%(version)s.tar.gz']

pyver = '2.7.11'

builddependencies = [
    ('CMake', '3.2.3'),
    ('libxml2', '2.9.2'),
    ('SWIG', '3.0.8', '-Python-%s' % pyver),
    ('Doxygen', '1.8.7'),
]

dependencies = [
    ('Python', pyver),
    ('CUDA', '7.0.28', '', True),
]

moduleclass = 'bio'
