name = 'OpenMM'
version = '6.3'

homepage = 'http://openmm.org/'
description = "A high performance toolkit for molecular simulation."

toolchain = {'name': 'foss', 'version': '2015a'}

source_urls = ['https://github.com/pandegroup/openmm/releases']
sources = [SOURCELOWER_TAR_GZ]

builddependencies = [
    ('CMake', '3.2.3'),
    ('libxml2', '2.9.2'),
    ('SWIG', '3.0.8', '-Python-2.7.11'),
    ('Doxygen', '1.8.7'),
]

dependencies = [('Python', '2.7.11')]

moduleclass = 'bio'
