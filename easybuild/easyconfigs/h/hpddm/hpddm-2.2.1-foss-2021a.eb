easyblock = 'MakeCp'

name = 'hpddm'
version = '2.2.1'

homepage = 'https://github.com/hpddm/hpddm'
description = """ HPDDM is an efficient implementation of various domain decomposition 
methods (DDM) such as one- and two-level Restricted Additive Schwarz (RAS) methods, 
the Finite Element Tearing and Interconnecting (FETI) method, and the Balancing 
Domain Decomposition (BDD) method."""

toolchain = {'name': 'foss', 'version': '2021a'}
toolchainopts = {'usempi': True}

source_urls = ['https://github.com/hpddm/hpddm/archive']
sources = ['v%(version)s.tar.gz']
patches = ['%(name)s-%(version)s-makefile.patch']
checksums = [
    'f2e442340ee5257291b9122d2effc48997e925528a71cd8d3eb2e0f239950593',  # v2.2.1.tar.gz
    '2a9254193f70be34204f24703e5e14cb0a041524fce568543c062a93cd825da6',  # hpddm-2.2.1-makefile.patch
]

builddependencies = [
    ('Eigen', '3.3.9'),
]

dependencies = [
    ('Python', '3.9.5'),
    ('SciPy-bundle', '2021.05'),
    ('Hypre', '2.21.0'),
    ('MUMPS', '5.4.0', '-metis'),
    ('METIS', '5.1.0'),
    ('SCOTCH', '6.1.0'),
    ('arpack-ng', '3.8.0'),
]

files_to_copy = [
    (['bin/custom_operator_fortran', 'bin/schwarz_c', 'bin/schwarz_cpp'], 'bin'),
    'lib', 'include']

sanity_check_paths = {
    'files': ['lib/libhpddm_fortran.so', 'lib/libhpddm_python.so', 'lib/libhpddm_c.so'],
    'dirs': []
}

# This might takes around 4 min to run on 4 cores, so we disable it here
# runtest = 'test'

moduleclass = 'math'
