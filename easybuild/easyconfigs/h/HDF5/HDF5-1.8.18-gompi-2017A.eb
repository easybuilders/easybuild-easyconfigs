easyblock = 'EB_HDF5'

name = 'HDF5'
version = '1.8.18'

homepage = 'http://www.hdfgroup.org/HDF5/'

description = """
 HDF5 is a unique technology suite that makes possible the management of
 extremely large and complex data collections.
"""

toolchain = {'name': 'gompi', 'version': '2017A'}
toolchainopts = {'optarch': True, 'pic': True, 'usempi': True}

source_urls = ['http://www.hdfgroup.org/ftp/HDF5/releases/hdf5-%(version)s/src']
sources = [SOURCELOWER_TAR_GZ]

buildopts = 'CXXFLAGS="$CXXFLAGS -DMPICH_IGNORE_CXX_SEEK"'

dependencies = [
    ('Szip', '2.1'),
]

osdependencies = [
    ('zlib-devel'),
]

moduleclass = 'data'
