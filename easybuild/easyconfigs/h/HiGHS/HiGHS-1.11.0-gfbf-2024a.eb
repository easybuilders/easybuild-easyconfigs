easyblock = 'CMakeMake'

name = 'HiGHS'
version = '1.11.0'

homepage = 'https://ergo-code.github.io/HiGHS'
description = """Open source serial and parallel solvers for large-scale sparse linear programming (LP),
mixed-integer programming (MIP), and quadratic programming (QP) models."""

toolchain = {'name': 'gfbf', 'version': '2024a'}

github_account = 'ERGO-Code'
source_urls = [GITHUB_SOURCE]
sources = [{'download_filename': 'v%(version)s.tar.gz', 'filename': '%(name)s-%(version)s.tar.gz'}]
checksums = ['2b44b074cf41439325ce4d0bbdac2d51379f56faf17ba15320a410d3c1f07275']

builddependencies = [
    ('CMake', '3.29.3'),
    ('scikit-build-core', '0.10.6'),
    ('pybind11', '2.13.6'),
]

dependencies = [
    ('Python', '3.12.3'),
    ('SciPy-bundle', '2024.05'),
    ('zlib', '1.3.1'),
]

exts_defaultclass = 'PythonPackage'
exts_list = [
    ('highspy', version, {
        'source_urls': ['https://github.com/ERGO-Code/HiGHS/archive/'],
        'sources': [{'download_filename': 'v%(version)s.tar.gz', 'filename': '%(name)s-%(version)s.tar.gz'}],
        'checksums': ['2b44b074cf41439325ce4d0bbdac2d51379f56faf17ba15320a410d3c1f07275'],
    }),
]

sanity_check_paths = {
    'files': ['bin/highs'],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'lib'
