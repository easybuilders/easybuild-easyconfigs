easyblock = 'Tarball'

name = 'Hadoop'
version = '2.4.0-seagate'

homepage = 'https://github.com/Seagate/hadoop-on-lustre2'
description = """Hadoop MapReduce for Parallel File Systems as provided by Seagate"""

toolchain = {'name': 'dummy', 'version': ''}

sources = ['%(namelower)s-%(version)s.tar.gz']
source_urls = ['https://github.com/Seagate/hadoop-on-lustre2']

java = 'Java'
javaver = '1.7.0_40'

dependencies = [(java, javaver)]

sanity_check_paths = {
    'files': ['bin/hadoop'],
    'dirs': ['bin', 'etc', 'libexec']
}

modextrapaths = {
    'HADOOP_HOME': 'share/hadoop/mapreduce',
    'HADOOP_CONF_DIR': 'share/hadoop/mapreduce/conf'
}

moduleclass = 'devel'
