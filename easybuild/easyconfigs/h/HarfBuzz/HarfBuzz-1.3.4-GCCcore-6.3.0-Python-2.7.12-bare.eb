easyblock = 'ConfigureMake'

name = 'HarfBuzz'
version = '1.3.4'
pyver = '2.7.12'
pyshortver = '2.7'
pysubver = '-bare'
versionsuffix = '-Python-%s%s' % (pyver, pysubver)

homepage = 'http://www.freedesktop.org/wiki/Software/HarfBuzz'

description = """HarfBuzz is an OpenType text shaping engine."""

toolchain = {'name': 'GCCcore', 'version': '6.3.0'}

source_urls = ['http://www.freedesktop.org/software/harfbuzz/release/']
sources = [SOURCELOWER_TAR_BZ2]

builddependencies = [
    ('Python', pyver, pysubver),
]

dependencies = [
    ('cairo', '1.15.4', versionsuffix),
    ('freetype', '2.7'),
    ('GLib', '2.51.0', versionsuffix),
    ('GObject-Introspection', '1.50.0', versionsuffix),
    ('X11', '20161215', versionsuffix),
]

configopts = """\
    --enable-introspection=yes\
    --with-gobject=yes\
    --enable-static\
    --enable-shared\
    --with-cairo\
"""

modextrapaths = {
    'GI_TYPELIB_PATH': 'share',
    'XDG_DATA_DIRS': 'share',
}

sanity_check_paths = {
    'dirs': ['bin', 'lib'],
    'files': ['lib/libharfbuzz.%s' % SHLIB_EXT, 'bin/hb-view'],
}

moduleclass = 'vis'
