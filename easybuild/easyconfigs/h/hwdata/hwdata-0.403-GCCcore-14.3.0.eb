easyblock = 'ConfigureMake'

name = 'hwdata'
version = '0.403'

homepage = 'https://github.com/vcrhonek/hwdata'
description = """hwdata contains various hardware identification and configuration data, such as the pci.ids and
usb.ids databases."""

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = ['https://github.com/vcrhonek/hwdata/archive/refs/tags/']
sources = [V_VERSION_TAR_GZ]

builddependencies = [
    ('binutils', '2.44'),
]

sanity_check_paths = {
    'files': [],
    'dirs': ['share/hwdata'],
}

moduleclass = 'tools'
