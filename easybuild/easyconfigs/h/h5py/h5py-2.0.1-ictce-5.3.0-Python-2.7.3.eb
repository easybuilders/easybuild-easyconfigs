easyblock = "PythonPackage"

name = 'h5py'
version = '2.0.1'

homepage = 'http://code.google.com/p/h5py/'
description = """HDF5 for Python (h5py) is a general-purpose Python interface to the Hierarchical Data Format library,
 version 5. HDF5 is a versatile, mature scientific software library designed for the fast, flexible storage of
 enormous amounts of data."""

toolchain = {'name': 'ictce', 'version': '5.3.0'}
toolchainopts = {'usempi': True}

source_urls = ['http://h5py.googlecode.com/files/']
sources = [SOURCE_TAR_GZ]

python = 'Python'
pythonver = '2.7.3'
versionsuffix = '-%s-%s' % (python, pythonver)

dependencies = [
    (python, pythonver),
    ('HDF5', '1.8.10', '-gpfs'),
    ('mpi4py', '1.3', versionsuffix),  # required for MPI support
]

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'data'
