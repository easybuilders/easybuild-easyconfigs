easyblock = 'PythonBundle'

name = 'h5netcdf'
version = '1.1.0'

homepage = 'https://h5netcdf.org/'
description = """A Python interface for the netCDF4 file-format that reads and writes local or
remote HDF5 files directly via h5py or h5pyd, without relying on the Unidata
netCDF library."""

toolchain = {'name': 'foss', 'version': '2021b'}

dependencies = [
    ('Python', '3.9.6'),
    ('h5py', '3.6.0'),
]

use_pip = True
sanity_pip_check = True

exts_list = [
    (name, version, {
        'checksums': ['932c3b573bed7370ebfc9e802cd60f1a4da5236efb11b36eeff897324d76bf56'],
    }),
]

moduleclass = 'data'
