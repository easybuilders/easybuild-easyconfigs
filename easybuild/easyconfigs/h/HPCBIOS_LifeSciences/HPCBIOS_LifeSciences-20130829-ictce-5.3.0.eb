    ('ClustalW2', '2.1'),
    ('GROMACS', '4.6.1', '-hybrid'),
    ('HMMER', '3.0'),
    ('MrBayes', '3.1.2'),
    ('mpiBLAST', '1.6.0'),
#     ('Rosetta', '3.5'),
]

moduleclass = 'toolchain'
