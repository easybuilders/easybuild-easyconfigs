toolchain = {'name': 'goolf', 'version': '1.7.20'}
easyblock = 'MakeCp'

name = 'hisat2'
version = '2.0.0-beta'

homepage = 'http://ccb.jhu.edu/software/hisat/index.shtml'
description = ""HISAT2 is a fast and sensitive alignment program for mapping next-generation sequencing 
               reads (both DNA and RNA) against the general human population (as well as against a single reference genome).. """

sources = ['%(name)s-%(version)s-source.zip']
source_urls = ['http://ccb.jhu.edu/software/hisat2/downloads/']

executables = [name, 'hisat2-build', 'hisat2-inspect', 'hisat2-build-s', 'hisat2-inspect-s', 'hisat2-align-s', 
               'hisat2-build-l', 'hisat2-inspect-l', 'hisat2-align-l']
files_to_copy = [(executables, 'bin')]


sanity_check_paths = {
    'files': ['bin/%(name)s'],
    'dirs': [],
}

moduleclass = 'bio'
