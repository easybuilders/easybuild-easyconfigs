easyblock = "PackedBinary"

name = 'Hyperspace'
version = '2.2.5'

versionsuffix = '-Java-%(javaver)s'

homepage = 'https://github.com/Actelion/openchemlib-hyperspace'
description = """Cheminformatics tools, workflows and pipelines for substructure search, virtual screening and data analysis."""

toolchain = SYSTEM

sources = [{
    'filename': '%(name)s-%(version)s.tar.gz',
    'git_config': {
        'url': 'https://github.com/Actelion',
        'repo_name': 'openchemlib-hyperspace',
        'commit': '538998a',
        'recursive': True,
    },
}]
checksums = ['3bc3125a6fadf14ff18cf1e347ab0aa24fe51f539498577dba877a090bfdd1da']

dependencies = [
    ('Java', '11'),
    ('Maven', '3.6.3')
]

install_cmd = "cd openchemlib-hyperspace && mvn install && "
install_cmd += "cp -aR  openchemlib-hyperspace-* %(installdir)s"

sanity_check_paths = {
    'files': ['openchemlib-hyperspace-cli/target/openchemlib-hyperspace-cli.jar'],
    'dirs': ['openchemlib-hyperspace-cli', 'openchemlib-hyperspace-core', 'openchemlib-hyperspace-core-gui', 'openchemlib-hyperspace-core-gui2', 'openchemlib-hyperspace-tools', 'openchemlib-hyperspace-virtualmemory'],
}

moduleclass = 'bio'


