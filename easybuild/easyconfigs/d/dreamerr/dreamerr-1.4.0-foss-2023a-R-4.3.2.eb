easyblock = 'RPackage'

name = 'dreamerr'
version = '1.4.0'
versionsuffix = '-R-%(rver)s'

homepage = 'https://cran.r-project.org/web/packages/dreamerr/index.html'
description = """
Set of tools to facilitate package development and make R a more user-friendly place.
Provides a simple, powerful and flexible way to check the arguments passed to functions.
"""

toolchain = {'name': 'foss', 'version': '2023a'}

source_urls = [
    'https://cran.r-project.org/src/contrib/Archive/%(name)s',  # package archive
    'https://cran.r-project.org/src/contrib/',  # current version of packages
    'https://cran.freestatistics.org/src/contrib',  # mirror alternative for current packages
]
sources = ['%(name)s_%(version)s.tar.gz']
checksums = ['3e5e4afd10623b6dac6bb9b8bf0480d41c7422884cfec2d9d9786414f9026a87']

dependencies = [
    ('R', '4.3.2'),
    ('R-bundle-CRAN', '2023.12'),
    ('stringmagic', '1.0.0', '-R-%(rver)s'),
]

sanity_check_paths = {
    'files': [],
    'dirs': ['%(namelower)s'],
}

sanity_check_commands = ['Rscript -e "library(dreamerr)"']

moduleclass = 'devel'
