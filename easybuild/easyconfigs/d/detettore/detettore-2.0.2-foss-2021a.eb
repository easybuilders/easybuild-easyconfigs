# This file is an EasyBuild reciPY as per https://github.com/hpcugent/easybuild
# Author: Iñaki Mtz de Ilarduya Muñoz
# sciCORE - University of Basel
# SIB Swiss Institute of Bioinformatics

easyblock = 'PythonPackage'

name = 'detettore'
version = '2.0.2'

homepage = 'https://github.com/cstritt/detettore'
description = """A program to detect transposable element polymorphisms"""

toolchain = {'name': 'foss', 'version': '2021a'}

source_urls = ['https://pypi.python.org/packages/source/d/detettore']
sources = ['%(name)s-%(version)s.tar.gz']
patches = ['fix_deps.patch']
checksums = [
    '7f290c99f65a49a27d6f2468b05706ea9191af105e758875c22e432533a94218',  # detettore-2.0.2.tar.gz
    '31ed2905533451a68b8a1473a972af73eb595e1829e4fad0cef18a8704bed96c',  # fix_deps.patch
]

dependencies = [
    ('Python', '3.9.5'),
    ('minimap2', '2.20'),
    ('Pysam', '0.16.0.1'),
    ('Biopython', '1.79'),
    ('SciPy-bundle', '2021.05'),
    ('numba', '0.53.1'),
]

use_pip = True
download_dep_fail = True
sanity_pip_check = True


sanity_check_paths = {
    'files': ['bin/detettore'],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

sanity_check_commands = [
    'detettore --help',
]

moduleclass = 'bio'
