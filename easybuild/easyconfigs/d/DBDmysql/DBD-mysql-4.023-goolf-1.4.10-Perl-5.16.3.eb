easyblock = 'PerlModule'

name = 'DBD-mysql'
version = '5.024'

homepage = 'http://search.cpan.org/src/CAPTTOFU/DBD-mysql-4.023/lib/DBD/mysql.pm'
description = """MySQL driver for the Perl5 Database Interface (DBI)"""

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ['http://www.cpan.org/modules/by-module/DBD/CAPTTOFU/']
sources = [SOURCE_TAR_GZ]

perl = 'Perl'
perlver = '5.16.3'
versionsuffix = '-%s-%s' % (perl, perlver)

dependencies = [
    (perl, perlver),
    ("MariaDB", "5.5.29"),
]

options = {'modulename': 'DBD::mysql'}

moduleclass = 'data'
