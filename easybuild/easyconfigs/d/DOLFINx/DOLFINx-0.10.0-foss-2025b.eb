# Based on the work from PR #22700 and #22422

easyblock = 'CMakePythonPackage'

name = 'DOLFINx'
version = '0.10.0'

homepage = 'https://docs.fenicsproject.org/dolfinx/main/python/'

description = """
DOLFINx is the next generation problem solving interface of the FEniCS Project.
"""

toolchain = {'name': 'foss', 'version': '2025b'}

source_urls = ['https://github.com/FEniCS/dolfinx/archive/refs/tags/']
sources = [f'v{version}.post1.tar.gz']
checksums = ['43ebfaf89fcb7809b11b94ba3e8ea8e56a99d724a45c51e99e39a35c577c441e']

builddependencies = [
    ('pkgconf', '2.4.3'),
    ('scikit-build-core', '0.11.5'),
]

dependencies = [
    ('Python', '3.13.5'),
    ('SciPy-bundle', '2025.07'),
    ('Boost', '1.88.0'),
    ('ParMETIS', '4.0.3'),
    ('HDF5', '1.14.6'),
    ('SCOTCH', '7.0.10'),
    ('PETSc', '3.24.0'),
    ('petsc4py', '3.24.0'),
    ('SLEPc', '3.24.0'),
    ('pugixml', '1.15'),
    ('Basix', '0.10.0'),
    ('UFL', '2025.2.0'),
    ('FFCx', '0.10.0'),
    ('gmsh', '4.14.1'),
    ('spdlog', '1.15.3'),
    ('KaHIP', '3.19'),
]

start_dir = 'cpp'

exts_defaultclass = 'PythonPackage'
exts_list = [('fenics-dolfinx', version, {
    'modulename': 'dolfinx',
    'nosource': True,
    'preinstallopts': 'DOLFINX_DIR=%(installdir)s',
    'start_dir': '../python',  # Next to the cpp sub-directory
})]

sanity_check_paths = {
    'files': ['include/dolfinx.h', 'lib/libdolfinx.' + SHLIB_EXT],
    'dirs': ['lib/cmake/dolfinx'],
}

modextrapaths = {
    'DOLFINX_DIR': '.',
}

moduleclass = 'numlib'
