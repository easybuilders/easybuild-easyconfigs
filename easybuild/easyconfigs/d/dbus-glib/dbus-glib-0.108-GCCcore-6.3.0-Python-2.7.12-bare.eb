easyblock = 'ConfigureMake'

name = 'dbus-glib'
version = '0.108'
pyver = '2.7.12'
pyshortver = '2.7'
pysubver = '-bare'
versionsuffix = '-Python-%s%s' % (pyver, pysubver)

homepage = 'http://dbus.freedesktop.org/doc/dbus-glib'
description = """
 D-Bus is a message bus system, a simple way for applications to talk
 to one another.
"""

toolchain = {'name': 'GCCcore', 'version': '6.3.0'}

source_urls = ['http://dbus.freedesktop.org/releases/dbus-glib']
sources = [SOURCE_TAR_GZ]

dependencies = [
    ('GLib', '2.51.0', versionsuffix),
    ('DBus', '1.10.14'),
    ('expat', '2.2.0'),
]

osdependencies = [
    ('binutils'),
]

sanity_check_paths = {
    'dirs': ['include', 'share'],
    'files': ['bin/dbus-binding-tool', 'lib/libdbus-glib-1.%s' % SHLIB_EXT,
              'lib/libdbus-glib-1.a'],
}

moduleclass = 'devel'
