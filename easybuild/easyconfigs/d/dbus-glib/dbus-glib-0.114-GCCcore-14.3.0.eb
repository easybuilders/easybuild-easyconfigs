easyblock = 'ConfigureMake'

name = 'dbus-glib'
version = '0.114'

homepage = 'https://dbus.freedesktop.org/doc/dbus-glib'
description = """D-Bus is a message bus system, a simple way for applications to talk to one another."""

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = ['https://dbus.freedesktop.org/releases/dbus-glib']
sources = [SOURCE_TAR_GZ]
checksums = ['c09c5c085b2a0e391b8ee7d783a1d63fe444e96717cc1814d61b5e8fc2827a7c']

builddependencies = [
    ('binutils', '2.44'),
    ('pkgconf', '2.4.3'),
    ('Python', '3.13.5'),  # Python is needed for building against GLib.
]

dependencies = [
    ('GLib', '2.85.3'),
    ('DBus', '1.16.2'),
    ('expat', '2.7.1'),
]

sanity_check_commands = [
    'dbus-binding-tool --version',
    'dbus-binding-tool --help',
]

sanity_check_paths = {
    'files': ['bin/dbus-binding-tool', 'lib/libdbus-glib-1.%s' % SHLIB_EXT, 'lib/libdbus-glib-1.a'],
    'dirs': ['include', 'share']
}

moduleclass = 'devel'
