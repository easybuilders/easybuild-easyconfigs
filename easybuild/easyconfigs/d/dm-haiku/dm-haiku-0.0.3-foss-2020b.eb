easyblock = 'PythonPackage'

name = 'dm-haiku'
version = '0.0.3'

homepage = 'https://github.com/deepmind/dm-haiku'
description = """Haiku is a simple neural network library for JAX developed 
by some of the authors of Sonnet, a neural network library for TensorFlow."""

toolchain = {'name': 'foss', 'version': '2020b'}

source_urls = ['https://github.com/deepmind/dm-haiku/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['87958397ccb7660bd44882fc3f7d05ff2d1e56285e4742123eeae65ad44e9ddf']

builddependencies = [
    ('binutils', '2.35'),
    ('Bazel', '3.7.2'),
]

dependencies = [
    ('Python', '3.8.6'),
    ('absl-py', '0.13.0'),
    ('pdbfixer', '1.7'),
    ('OpenMM', '7.5.1'),
    ('SciPy-bundle', '2020.11'),
]

download_dep_fail = True

use_pip = True
sanity_pip_check = True

options = {'modulename': 'haiku'}

moduleclass = 'lib'
