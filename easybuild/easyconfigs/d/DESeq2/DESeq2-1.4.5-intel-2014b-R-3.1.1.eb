easyblock = 'RPackage'

name = 'DESeq2'
version = '1.4.5'

homepage = 'http://www.bioconductor.org/packages/2.14/bioc/html/DESeq2.html'
description = """R package, Differential gene expression analysis based on the negative binomial distribution"""

toolchain = {'name': 'intel', 'version': '2014b'}

source_urls = ['http://www.bioconductor.org/packages/2.14/bioc/src/contrib/']
sources = ['%s_%s.tar.gz' % (name, version)]

r = 'R'
rver = '3.1.1'
versionsuffix = '-%s-%s' % (r, rver)

dependencies = [
                (r, rver),
                ('geneplotter', '1.42.0', versionsuffix),
                ('genefilter', '1.46.1', versionsuffix),
               ]

moduleclass = 'data'
