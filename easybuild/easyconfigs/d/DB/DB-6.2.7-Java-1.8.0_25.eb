easyblock = 'CmdCp'

name = 'DB'
version = '6.2.7'

homepage = 'http://www.oracle.com/us/products/database/berkeley-db/je/'
description = """Berkeley DB enables the development of custom data management solutions,
 without the overhead traditionally associated with such custom projects."""

toolchain = {'name': 'dummy', 'version': ''}

# download via http://www.oracle.com/technetwork/products/berkeleydb/downloads/, requires registration
sources = ['je-%(version)s.tar.gz']

java = 'Java'
javaver = '1.8.0_25'
versionsuffix = '-%s-%s' % (java, javaver)
dependencies = [(java, javaver)]

builddependencies = [('ant', '1.9.4', versionsuffix)]

cmds_map = [('.*', 'ant clean jar')]

files_to_copy = [(['build/lib/je.jar'], 'lib')]

sanity_check_paths = {
    'files': ['lib/je.jar'],
    'dirs': [],
}

modextrapaths = {'CLASSPATH': ['lib/je.jar']}

moduleclass = 'tools'
