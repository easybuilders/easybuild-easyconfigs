# This easyconfig was created by the BEAR Software team at the University of Birmingham.
easyblock = 'PythonBundle'

name = 'demultiplex'
version = '1.2.2'
versionsuffix = '-Python-%(pyver)s'

homepage = "https://demultiplex.readthedocs.io/en/latest/index.html"
description = """Versatile NGS demultiplexer with the following features:
Support for FASTA and FASTQ files.Support for gzip and bzip2 compressed files.
Support for multiple reads per fragment, e.g., paired-end."""

toolchain = {'name': 'foss', 'version': '2021a'}

dependencies = [
    ('Python',  '3.9.5'), 
]

use_pip = True
sanity_pip_check = True
 
 
exts_default_options = {
    'source_urls': [PYPI_SOURCE],
    'sanity_pip_check': True,
}

exts_list = [
    (name, version, {
        'checksums': ['27ebc30e52e36048486286348b44806deabb24197e05eb88bbed413676e99181'],
    }),
]

sanity_check_commands = ['demultiplex -h']

moduleclass = 'bio'
