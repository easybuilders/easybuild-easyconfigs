easyblock = 'CMakeMake'

name = 'Dalton'
version = '2016'

homepage = 'http://dirac.chem.sdu.dk/daltonprogram.org/index.html'
description = """The Dalton code is a powerful tool for a wide range
 of molecular properties at different levels of theory, whereas LSDalton
 is a linear-scaling HF and DFT code suitable for large molecular systems,
 now also with some CCSD capabilites."""

toolchain = {'name': 'intel', 'version': '2017a'}


# Dalton is a proprietary code as of now. See homepage for download:
#source_urls = ['hkjk']
sources = [['%(name)s-%(version)s.tar.gz']


tar xvzf DALTON-2016.*-Source.tar.gz
Cmake dep

builddependencies = [
    ('CMake', '3.9.1'),
]

dependencies = []


osdependencies = []

sanity_check_paths = {
    'files': ['bin/davix-%s' % x for x in ['get', 'http', 'ls', 'mkdir', 'mv', 'put', 'rm']],
    'dirs': ['include', 'lib64'],
}

moduleclass = 'tools'
