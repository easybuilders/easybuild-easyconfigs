# tar cfz dalton-<VERSION>.tar.gz dalton
sources = [SOURCELOWER_TAR_GZ]

checksums = ['d0c17c3b890d40224a9179a72e50aa0195484877aab99df04085ce9c9ee980be']

separate_build_dir = True

builddependencies = [
    ('CMake', '3.9.1'),
]

#dependencies = []

#osdependencies = []

sanity_check_paths = {
    'files': ['dalperf', 'dalton', 'dalton.xbin', 'VERSION'],
    'dirs': ['basis', 'tools'],
}

moduleclass = 'chem'
