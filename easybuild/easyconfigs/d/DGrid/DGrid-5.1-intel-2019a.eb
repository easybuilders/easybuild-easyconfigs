easyblock = "MakeCp"

name = 'DGrid'
version = '5.1'

homepage = 'https://www2.cpfs.mpg.de/~kohout/dgrid.html'
description = """DGrid computes and evaluates conceptual quantum quantities 
such as ELF and ELI on gridded fields based on quantum chemical wavefunctions."""

toolchain = {'name': 'intel', 'version': '2019a'}
toolchainopts = {'optarch': True, 'pic': True}

source_urls = ['http://www.cpfs.mpg.de/~kohout/Documents']
sources = ['%(name)s-%(version)s.tar.gz']

files_to_copy = [(['dgrid-5.1'], 'bin')]

postinstallcmds = ['mv %(installdir)s/bin/dgrid-5.1 %(installdir)s/bin/dgrid']

sanity_check_paths = {
    'files': ['bin/dgrid'],
    'dirs': [],
}

moduleclass = 'chem'

