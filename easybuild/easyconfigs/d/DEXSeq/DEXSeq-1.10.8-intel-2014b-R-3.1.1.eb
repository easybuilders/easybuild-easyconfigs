easyblock = 'RPackage'

name = 'DEXSeq'
version = '1.10.8'

homepage = 'http://www.bioconductor.org/packages/2.14/bioc/html/DEXSeq.html'
description = """R package, Inference of differential exon usage in RNA-Seq"""

toolchain = {'name': 'intel', 'version': '2014b'}

source_urls = ['http://www.bioconductor.org/packages/2.14/bioc/src/contrib/']
sources = ['%s_%s.tar.gz' % (name, version)]

r = 'R'
rver = '3.1.1'
versionsuffix = '-%s-%s' % (r, rver)

dependencies = [
                (r, rver),
                ('biomaRt', '2.20.0', versionsuffix),
                ('DESeq2', '1.4.5', versionsuffix),
                ('geneplotter', '1.42.0', versionsuffix),
                ('genefilter', '1.46.1', versionsuffix),
               ]

moduleclass = 'data'
