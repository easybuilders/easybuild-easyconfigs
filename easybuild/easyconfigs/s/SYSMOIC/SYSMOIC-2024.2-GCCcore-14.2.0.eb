easyblock = 'BinariesTarball'

name = 'SYSMOIC'
version = '2024.2'

homepage = 'https://sysmoic.chem.unisa.it/MANUAL/'
description = """SYSMOIC is a research, non-commercial, program package for the calculation and
graphical visualization of a number of time-independent (static) and time-dependent (dynamic)
magnetic and electric molecular property densities, which are invariant with respect to the choice
of the reference origin."""

toolchain = {'name': 'GCCcore', 'version': '14.2.0'}

dependencies = [
    ('freeglut', '3.6.0'),  # Needed for v3d binary
]

source_urls = ['https://sysmoic.chem.unisa.it/DISTRIB/']
sources = ['STABIN_LNX-%(version)s.tar.gz']
checksums = ['67cfa73cff021f160cc5797bd6b8fb158217409a8036aeec2f619c340526773b']

sanity_check_paths = {
    'files': [f'bin/{x}' for x in ['BOCUST', 'JECK', 'mo230xl', 'pack', 'v3d']],
    'dirs': ['bin'],
}

moduleclass = 'chem'
