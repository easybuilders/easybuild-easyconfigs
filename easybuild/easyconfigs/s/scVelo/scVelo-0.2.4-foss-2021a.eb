easyblock = 'PythonBundle'

name = 'scVelo'
version = '0.2.4'

homepage = "https://scvelo.org"
description = """scVelo is a scalable toolkit for estimating and analyzing RNA velocities in single cells using
 dynamical modeling."""

toolchain = {'name': 'foss', 'version': '2021a'}

builddependencies = [('pkg-config', '0.29.2')]

dependencies = [
    ('Python', '3.9.5'),
    ('SciPy-bundle', '2021.05'),
    ('scikit-learn', '0.24.2'),
    ('h5py', '3.2.1'),
    ('matplotlib', '3.4.2'),
    ('networkx', '2.5.1'),
    ('numba', '0.53.1'),
    ('PyTables', '3.6.1'),
    ('statsmodels', '0.12.2'),
    ('libpng', '1.6.37'),
    ('freetype', '2.10.4'),
    ('Tkinter', '%(pyver)s'),
    ('tqdm', '4.61.2'),
    ('Seaborn', '0.11.2'),
    ('loompy', '3.0.7'),
    ('scanpy', '1.8.1'),
    ('typing-extensions', '3.10.0.0'),
]

use_pip = True
sanity_pip_check = True

exts_list = [
    (name, version, {
        'modulename': 'scvelo',
        'source_tmpl': '%(namelower)s-%(version)s.tar.gz',
        'checksums': ['ffacae961993df19034580ae748dc5bda12852e1da517b1f065ad2544850b040'],
    }),
]

moduleclass = 'bio'
