easyblock = 'PythonPackage'

name = 'sixs'
version = '1.0.2'

homepage = "https://pypi.python.org/pypi/sixs/"
description = """Python bindings for 6s. The 6S code is a basic RT code used for
 calculation of lookup tables in the MODIS atmospheric correction algorithm.
 These bindings were developed in the framework of the EOLDAS project. These
 bindings include the fortran code from here for convenience."""

toolchain = {'name': 'foss', 'version': '2015a'}

# no versioned source tarballs available, download from https://github.com/jgomezdans/sixs/archive/master.zip
source_urls = ['https://github.com/jgomezdans/sixs/archive/']
sources = ['master.zip']

patches = ['main-20161219.patch']

python = 'Python'
pyver = '3.5.1'

versionsuffix = "-%s-%s" % (python, pyver)

dependencies = [
    (python, pyver),
]

use_pip = True

py_short_ver = '.'.join(pyver.split('.')[:2])
sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%s/site-packages' % py_short_ver],
}

moduleclass = 'lib'
