checksums = ['229cbf7980496d72de0bfab5bde7148ff3111a99b72c6169d1a04120a52508b4']

dependencies = [
    ('Perl', '5.28.0'),
    ('DB', '18.1.25'),
    ('STAR', '2.6.1c'),
]

# these are the perl libraries dependencies
