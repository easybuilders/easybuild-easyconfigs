name = 'SPM'
version = '8.5236'

matlab = 'MATLAB'
matlab_ver = '2012b'
versionsuffix = "-%s-%s" % (matlab, matlab_ver)

checksums = [ 'e59a3429c3cc8990c40aa9a88698cdc8' ]

homepage = 'http://www.fil.ion.ucl.ac.uk/spm/'
description = """The SPM software package has been designed for the analysis of brain imaging data sequences.
 The sequences can be a series of images from different cohorts, or time-series from the same subject.
 The current release is designed for the analysis of fMRI, PET, SPECT, EEG and MEG."""

toolchain = {'name': 'dummy', 'version': 'dummy'}

source_urls = [
	"http://www.fil.ion.ucl.ac.uk/spm/download/restricted/idyll/",  # spm8
	"http://www.fil.ion.ucl.ac.uk/spm/download/restricted/arlesienne/",  # spm12b
]

sources = [ 'spm%(version_major)s.zip' ]

dependencies = [
    (matlab, matlab_ver),
]

builddependencies = [
    ('GCC', '4.8.2')
]

moduleclass = 'bio'
