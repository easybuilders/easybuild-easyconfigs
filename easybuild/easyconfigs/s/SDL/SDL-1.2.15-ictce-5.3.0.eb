easyblock = 'ConfigureMake'

name = 'SDL'
version = '1.2.15'

homepage = 'http://www.libsdl.org/'
description = "SDL: Simple DirectMedia Layer, a cross-platform multimedia library"

sources = [SOURCE_TAR_GZ]
source_urls = ['http://www.libsdl.org/release/']

toolchain = {'name': 'ictce', 'version': '5.3.0'}

builddependencies = [('Yasm', '1.2.0')]

configopts = ' --disable-nasm --without-x '

sanity_check_paths = {
    'files': ['bin/sdl-config'],
    'dirs': ['lib/libSDL.%s' % SHLIB_EXT]
}

moduleclass = 'lib'
