easyblock = 'MakeCp'

name = 'Seqtk'
version = '1.0-r82b'

homepage = "https://github.com/ndaniel/seqtk"
description = """Seqtk is a fast and lightweight tool for processing sequences 
in the FASTA or FASTQ format. It seamlessly parses both FASTA and FASTQ files 
which can also be optionally compressed by gzip."""

toolchain = {'name': 'foss', 'version': '2016a'}

source_urls = ['https://github.com/ndaniel/seqtk/archive/']
sources = ['%(version)s.tar.gz']

postinstallcmds = ["chmod -R a+rx %(installdir)s/seqtk"]

files_to_copy = [ 'seqtk' ]

sanity_check_paths = {
    'files': files_to_copy,
    'dirs': [],
}

modextrapaths = {'PATH': ['']}

moduleclass = 'bio'


checksums = ['653de70c8fe5e57de69bbd5116a9425e']