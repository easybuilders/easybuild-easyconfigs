easyblock = 'CMakeMake'
name = 'SuperLU'
version = '5.2.1'

homepage = 'http://crd-legacy.lbl.gov/~xiaoye/SuperLU/'
description = """SuperLU is a general purpose library for the direct solution of large, sparse, nonsymmetric systems
 of linear equations on high performance machines."""

toolchain = {'name': 'gmpolf', 'version': '2017.10'}
toolchainopts = {'opt': True, 'pic': True, 'openmp': True}

source_urls = ['http://crd-legacy.lbl.gov/~xiaoye/SuperLU/']
sources = ["superlu_%(version)s.tar.gz"]
checksums = ['28fb66d6107ee66248d5cf508c79de03d0621852a0ddeba7301801d3d859f463']

# Let's store the checksum in order to be sure it doesn't suddenly change

builddependencies = [('CMake', '3.10.3')]
configopts = '-Denable_blaslib=OFF -DBLA_VENDOR=OpenBLAS'

sanity_check_paths = {
    'files': ["include/supermatrix.h", "lib64/libsuperlu.a"],
    'dirs': [],
}

moduleclass = 'numlib'
