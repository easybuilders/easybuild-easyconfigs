easyblock = "Binary"

name = "Sen2Cor"
version = "02.08.00"

homepage = 'http://step.esa.int/main/third-party-plugins-2/sen2cor/'
description = """Sen2Cor is a processor for Sentinel-2 Level 2A product
 generation and formatting; it performs the atmospheric-,
 terrain and cirrus correction of Top-Of- Atmosphere Level 1C input data."""

toolchain = SYSTEM

source_urls = ['https://step.esa.int/thirdparties/sen2cor/2.8.0/']
sources = ['%(name)s-%(version)-Linux64.run']
checksums = ['0b61f903d96f24f073390330f1cf9bf958ee62eb8ece8f5c6419718c9ae2b21e']

install_cmd = "chmod u+x %(name)s-%(version)s-Linux64.run && "
install_cmd += "./%(name)s-%(version)s-Linux64.run --target %(installdir)s"

sanity_check_paths = {
    'files': ['bin/ogrinfo', 'bin/L2A_Process'],
    'dirs': ['bin', 'lib', 'share'],
}

moduleclass = 'tools'
