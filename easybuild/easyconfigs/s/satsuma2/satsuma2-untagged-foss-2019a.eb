#Author: Soheil Soltani, C3SE, Chalmers University of Technology

easyblock = 'CMakeMake'
name      = 'satsuma2'
version   = 'untagged'
key       = '330e3341a1151a978b37'
homepage  = 'https://github.com/bioinfologics/satsuma2'

description = """Satsuma2 is an optimsed version of Satsuma, a tool to reliably align large and complex 
DNA sequences providing maximum sensitivity (to find all there is to find), specificity (to only find real 
homology) and speed (to accomodate the billions of base pairs in vertebrate genomes)."""

toolchain     = {'name' : 'foss', 'version' : '2019a'}
toolchainopts = {'cstd' : 'c++14'}

source_urls   = ['https://github.com/bioinfologics/satsuma2/archive']
sources       = ['untagged-330e3341a1151a978b37.tar.gz']

builddependencies = [
    ('CMake', '3.13.3'),
    ('pkg-config', '0.29.2')
]

sanity_check_paths = {
    'files': ["bin/SatsumaSynteny2"],
    'dirs': ["bin"],
}

moduleclass = 'bio'
