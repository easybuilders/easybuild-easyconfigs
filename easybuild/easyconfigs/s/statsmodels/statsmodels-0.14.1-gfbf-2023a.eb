    }),
    (name, version, {
        'checksums': ['2260efdc1ef89f39c670a0bd8151b1d0843567781bcafec6cda0534eb47a94f6'],
        'preinstallopts': """sed -i 's/name=DISTNAME/name=DISTNAME, version = "%(version)s"/g' setup.py && """,
    }),
]

