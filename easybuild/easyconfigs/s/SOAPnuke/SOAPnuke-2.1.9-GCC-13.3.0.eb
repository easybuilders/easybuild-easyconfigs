easyblock = 'MakeCp'
toolchain = {'name': 'GCC', 'version': '13.3.0'}
sources = ['v2.1.9.tar.gz']
source_urls = ['https://github.com/BGI-flexlab/SOAPnuke/releases/tag/SOAPnuke2.1.9']

checksums = [
    {'v2.1.9.tar.gz': '322655c1f872df84b9c7452b5b5cfcd697648b6b27197f0980ad5afb2ebbacea'},
]

patches = ['SOAPnuke-2.1.9-GCCcore-13.3.0.patch']

builddependencies = [('zlib', '1.3.1'),
                     ('HTSlib', '1.21'),
                     ('libpthread-stubs', '0.4'),]

buildopts = ['&& mkdir bin && mv SOAPnuke bin/ && cp bin/SOAPnuke bin/soapnuke']

files_to_copy = [(['bin/*'], 'bin')]

sanity_check_paths = {
    'files': ['bin/SOAPnuke', 'bin/soapnuke'],
    'dirs': ['bin'],
}

moduleclass = 'bio'
