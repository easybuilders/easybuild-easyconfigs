easyblock = 'PythonBundle'

name = 'slamdunk'
version = '0.4.3'

homepage = 'https://t-neumann.github.io/slamdunk/'
description = """SlamDunk is a novel, fully automated software tool for automated, robust, scalable
 and reproducible SLAMseq data analysis."""

toolchain = {'name': 'foss', 'version': '2021b'}

dependencies = [
    ('Python', '3.9.6'),
    ('HTSlib', '1.14'),
    ('Biopython', '1.79'),  # includes ScyPy-bundle
    ('Pysam', '0.17.0'),
    ('pybedtools', '0.8.2'),
]

use_pip = True
sanity_pip_check = True

exts_list = [
    (name, version, {
        'checksums': ['8475d4cadad3defda6b11de405fc59de917a6e57468f709a1e28b8a0627f2ff5'],
    }),
]

moduleclass = 'bio'
