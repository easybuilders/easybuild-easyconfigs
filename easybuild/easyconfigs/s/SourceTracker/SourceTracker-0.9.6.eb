easyblock = 'Tarball'

name = 'SourceTracker'
version = '0.9.6'

homepage = 'http://sourceforge.net/projects/sourcetracker'
description = """SourceTracker is a Bayesian approach to estimating the proportion of a novel community that comes
 from a set of source environments."""

toolchain = {'name': 'dummy', 'version': 'dummy'}

source_urls = [SOURCEFORGE_SOURCE]
sources = [SOURCELOWER_TAR_GZ]

modextravars = {'SOURCETRACKER_PATH': '$root'}

sanity_check_paths = {
    'files': ['sourcetracker_for_QIIME.r', 'src/SourceTracker.r'],
    'dirs': ['data'],
}

moduleclass = 'bio'
