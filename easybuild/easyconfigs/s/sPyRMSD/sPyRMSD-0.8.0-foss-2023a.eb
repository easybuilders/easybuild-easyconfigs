dependencies = [
    ('Python', '3.11.3'),
    ('SciPy-bundle', '2023.07'),
    ('graph-tool', '2.59'),
    ('networkx', '3.1'),
    ('rustworkx', '0.15.1'),
]

use_pip = True
sanity_pip_check = True

exts_list = [
    ('spyrmsd', version, {
        'checksums': ['401681c5338c06215321c7c3960ca28f22b575118478b7dec6f28b8823b58924'],
    }),
]

moduleclass = 'chem'
