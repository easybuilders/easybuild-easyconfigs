# Author: Pablo Escobar Lopez
# sciCORE - University of Basel
# SIB Swiss Institute of Bioinformatics

easyblock = 'ConfigureMake'

name = 'SNP-sites'
version = '2.3.2'

homepage = 'https://github.com/sanger-pathogens/snp-sites'
description = """Finds SNP sites from a multi-FASTA alignment file"""

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['https://github.com/sanger-pathogens/snp-sites/archive/']
sources = ['%(version)s.tar.gz']

builddependencies = [
    ('Autoconf', '2.69', '', True)
]

dependencies = [
    ('zlib', '1.2.8')
]

parallel = 1

preconfigopts = " autoreconf -i -f &&"

sanity_check_paths = {
    'files': ['bin/snp-sites', 'lib/libsnp-sites.so', 'lib/libsnp-sites.a', 'include/snp-sites/snp-sites.h'],
    'dirs': []
}

moduleclass = 'bio'
