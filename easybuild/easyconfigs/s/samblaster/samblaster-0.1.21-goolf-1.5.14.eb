# New Zealand eScience Infrastructure (NeSI)

name = "samblaster"
version = "0.1.21"

easyblock = "MakeCp"

homepage = "http://github.com/GregoryFaust/samblaster"
description = """samblaster is a fast and flexible program for marking duplicates in read-id grouped paired-end SAM files. 
It can also optionally output discordant read pairs and/or split read mappings to separate SAM files, and/or unmapped/clipped 
reads to a separate FASTQ file. When marking duplicates, samblaster will require approximately 20MB of memory per 1M read pairs.
"""

toolchain = {'version': '1.5.14', 'name': 'goolf'}
toolchainopts = {}

sources = ['v.%(version)s.tar.gz']
source_urls = ['http://github.com/GregoryFaust/samblaster/archive']

files_to_copy = [(['samblaster'], 'bin'), 'LICENSE.txt', 'README.md']

sanity_check_paths = {
    'files': ['bin/samblaster'],
    'dirs': ["."]
}

moduleclass = 'bio'
