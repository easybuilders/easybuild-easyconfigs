easyblock = 'MakeCp'

name = 'Sambamba'
version = '0.6.0'

homepage = 'http://lomereiter.github.io/sambamba'
description = """Sambamba is a high performance modern robust and fast tool (and library), written
  in the D programming language, for working with SAM and BAM files."""

toolchain = {'name': 'foss', 'version': '2015b'}
toolchainopts = {}  # toolchain options, e.g. opt, pic, usempi, optarch, ...

# For sources line to work correctly with --try-software-version, you MUST employ %s OR use a construct like SOURCE_TAR_GZ
sources = ['v%(version)s.tar.gz']
source_urls = ['https://github.com/lomereiter/%(namelower)s/archive']

patches = []

dependencies = [
    ('HTSlib', '1.3'),
    ('LZ4', '131'),
# D programming language: http://dlang.org/
# BioD: https://github.com/biod/BioD
]

# The sanity test MUST be tuned before going production and submitting your contribution to upstream git repositories
sanity_check_paths = {
    'files': [],
    'dirs': []
}

moduleclass = 'bio'
