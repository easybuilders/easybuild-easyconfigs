easyblock = 'PackedBinary'

name = 'snpEff'
version = '5.2'

homepage = 'https://pcingola.github.io/SnpEff/'
description = """SnpEff is a variant annotation and effect prediction tool.
 It annotates and predicts the effects of genetic variants (such as amino 
acid changes)."""

toolchain = SYSTEM

source_urls = ['https://snpeff.blob.core.windows.net/versions/']
sources = ['%%(name)s_v%s_core.zip' % version.replace('.', '_')]
checksums = ['60ad2eec66c4f086b8cc7812e5654dce2dd500dd218774da490326e6a4e585f7']

dependencies = [('Java', '17')]

sanity_check_paths = {
    'files': ['%(name)s.jar', 'SnpSift.jar', 'snpEff.config'],
    'dirs': ['examples', 'galaxy', 'scripts'],
}

usage = "java -jar $EBROOTSNPEFF/snpEff.jar ..."

moduleclass = 'bio'
