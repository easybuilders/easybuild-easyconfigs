description = """Redesigned and improved ChIP-seq broad peak calling tool SICER"""

toolchain = {'name': 'foss', 'version': '2020a'}

dependencies = [
    ('Python', '3.8.2'),
    ('SciPy-bundle', '2020.03', versionsuffix),
    ('BEDTools', '2.29.2'),
