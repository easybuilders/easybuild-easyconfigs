easyblock = "Binary"

name = 'shapeit'
version = '2.r837.GLIBCv2.12'
versionsuffix = '_linux_x86_64'

homepage = 'https://mathgen.stats.ox.ac.uk/genetics_software/shapeit/shapeit.html'
description = """ SHAPEIT is a fast and accurate method for estimation of haplotypes (aka phasing) from genotype or sequencing data.  """

toolchain = {'name': 'dummy', 'version': 'dummy'}

source_urls = ['https://mathgen.stats.ox.ac.uk/genetics_software/shapeit/']
sources = ['shapeit.v%(version)s.Linux.static.tgz']

# Following commands are used to untar the file and copy the content to install directory
install_cmd = "tar xzvf shapeit.v%(version)s.Linux.static.tgz && HOME=%(builddir)s && "
install_cmd += "cp -a %(builddir)s/* %(installdir)s"

sanity_check_paths = {
    'files': ["bin/shapeit", "LICENCE"],
    'dirs': ["example"]
}

moduleclass = 'bio'
