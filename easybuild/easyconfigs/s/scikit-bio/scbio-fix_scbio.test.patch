From: Matt Aton <matthewaton2@gmail.com>
Date: Wed, 15 Jan 2025 14:58:33 -0700
Subject: [PATCH] Move arguments back into _testing.py to ship tests

---
 pyproject.toml         | 2 --
 skbio/util/_testing.py | 2 +-
 2 files changed, 1 insertion(+), 3 deletions(-)

diff --git a/pyproject.toml b/pyproject.toml
index 815d731692..fb79191681 100644
--- a/pyproject.toml
+++ b/pyproject.toml
@@ -3,8 +3,6 @@ requires = ["setuptools", "wheel", "numpy", "cython"]
 
 [tool.pytest.ini_options]
 addopts = [
-    "--pyargs",
-    "skbio",
     "--doctest-modules",
     "--doctest-glob",
     "*.pyx",
diff --git a/skbio/util/_testing.py b/skbio/util/_testing.py
index 4aa6f91a16..2e94df95a4 100644
--- a/skbio/util/_testing.py
+++ b/skbio/util/_testing.py
@@ -425,5 +425,5 @@ def pytestrunner():
     # import here, cause outside the eggs aren't loaded
     import pytest
 
-    errno = pytest.main(args=sys.argv[1:])
+    errno = pytest.main(args=["--pyargs", "skbio"] + sys.argv[1:])
     sys.exit(errno)
