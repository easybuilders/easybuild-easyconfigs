easyblock = 'PythonPackage'

name = 'SymEngine-python'
version = '0.14.0'

homepage = 'https://github.com/symengine/symengine.py'
description = "Python wrappers to the C++ library SymEngine, a fast C++ symbolic manipulation library."

toolchain = {'name': 'gfbf', 'version': '2025b'}

source_urls = ['https://github.com/symengine/symengine.py/archive/refs/tags/']
sources = ['v%(version)s.tar.gz']
patches = ['symengine-cmake-policy.patch']
checksums = [
    {'v%(version)s.tar.gz': '38e742a9b3d03b36f07b2ccba39e7e3d626e37557c26bb03ce575b95cfbd9cc4'},
    {'symengine-cmake-policy.patch': '67ea011564721d531e1fd424414318037ccf69a8e3632783a49f82d5770bbfc3'},
]

builddependencies = [
    ('CMake', '4.0.3'),
    ('Cython', '3.1.2'),
]

dependencies = [
    ('Python', '3.13.5'),
    ('Python-bundle-PyPI', '2025.07'),  # for Cython
    ('SymEngine', '0.14.0'),
]


options = {'modulename': 'symengine'}

moduleclass = 'lib'
