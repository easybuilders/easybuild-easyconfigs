easyblock = 'CMakeMake'

name = 'span-lite'
version = '0.11.0'

homepage = 'https://github.com/martinmoene/span-lite'
description = """
A C++20-like span for C++98, C++11 and later in a single-file header-only library
"""

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}

source_urls = ['https://github.com/martinmoene/span-lite/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['ef4e028e18ff21044da4b4641ca1bc8a2e2d656e2028322876c0e1b9b6904f9d']

builddependencies = [
    ('binutils', '2.42'),
    ('CMake', '3.29.3'),
]

sanity_check_paths = {
    'files': ['include/nonstd/span.hpp'],
    'dirs': ['lib/cmake/span-lite'],
}

moduleclass = 'lib'
