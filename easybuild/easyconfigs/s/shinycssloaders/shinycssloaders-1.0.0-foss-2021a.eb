easyblock = 'Bundle'

name = 'shinycssloaders'
version = '1.0.0'

homepage = 'https://cran.r-project.org/web/packages/shinycssloaders/index.html'
description = """Add spinners to recalculating Shiny outputs"""

toolchain = {'name': 'foss', 'version': '2021a'}


dependencies = [
    ('R', '4.1.0'),
]

exts_default_options = {
    'source_urls': [
        'https://cran.r-project.org/src/contrib/Archive/%(name)s',  # package archive
        'https://cran.r-project.org/src/contrib/',  # current version of packages
        'https://cran.freestatistics.org/src/contrib',  # mirror alternative for current packages
    ],
    'source_tmpl': '%(name)s_%(version)s.tar.gz'
}

exts_defaultclass = 'RPackage'

exts_list = [
    ('shinydisconnect', '0.1.0', {
        'checksums': ['75b74be3819bee237523f55d4f5d64da6243300a0d301a61d01b9f1d831fa892'],
    }),
    ('shinyjs', '2.0.0', {
        'checksums': ['c2cdd9fab41f6b46bb41b288cd9b3fb3a7fe9627b664e3a58a0cb5dd4c19f8ff'],
    }),
    (name, version, {
        'checksums': ['744641836a4cede2bb47caff1b600bff2c3e450dfccd2af4fab0413a8ea87d64'],
    }),
]

modextrapaths = {'R_LIBS_SITE': ''}

sanity_check_paths = {
    'files': [],
    'dirs': [name],
}

moduleclass = 'bio'
