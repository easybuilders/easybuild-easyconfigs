easyblock = 'CMakeMake'

name = 'spglib'
version = '1.16.0'

homepage = 'http://spglib.sourceforge.net/'
description = """Spglib is a C library for finding and handling crystal symmetries."""

toolchain = {'name': 'GCCcore', 'version': '9.3.0'}

source_urls = ['https://github.com/spglib/spglib/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['969311a2942fef77ee79ac9faab089b68e256f21713194969197e7f2bdb14772']

builddependencies = [
    ('binutils', '2.34'),
    ('CMake', '3.16.4'),
]

separate_build_dir = True
configopts = '-DCMAKE_INSTALL_LIBDIR=lib'

sanity_check_paths = {
    'files': ['include/spglib.h', 'lib/libsymspg.a', 'lib/libsymspg.%s' % SHLIB_EXT],
    'dirs': [],
}

moduleclass = 'chem'
