easyblock = 'Tarball'

name = 'Saxon-HE'
version = '11.4'
versionsuffix = '-Java-%(javaver)s'

homepage = 'http://saxon.sourceforge.net'
description = """Open Source SAXON XSLT processor developed by Saxonica Limited."""

toolchain = SYSTEM

source_urls = ['https://sourceforge.net/projects/saxon/files/Saxon-HE/%(version_major)s/Java', 'download']
sources = ['SaxonHE%sJ.zip' % version.replace('.', '-')]
checksums = ['2ec48dde4092862b1d3510d7a673d3149ad48885f8831c7878c9a85d79417094']

dependencies = [('Java', '11')]

local_jarfiles = [
    'saxon-he-%(version)s.jar',
    'saxon-he-test-%(version)s.jar',
    'saxon-he-xqj-%(version)s.jar'
]

sanity_check_paths = {
    'files': local_jarfiles,
    'dirs': [],
}

moduleclass = 'devel'
