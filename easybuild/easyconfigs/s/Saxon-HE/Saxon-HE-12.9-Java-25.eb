easyblock = 'Tarball'

name = 'Saxon-HE'
version = '12.9'
versionsuffix = '-Java-%(javaver)s'

homepage = 'http://saxon.sourceforge.net'
description = """Open Source SAXON XSLT processor developed by Saxonica Limited."""

toolchain = SYSTEM

source_urls = ['https://github.com/Saxonica/Saxon-HE/releases/download/SaxonHE12-9/']
sources = ['SaxonHE%sJ.zip' % version.replace('.', '-')]
checksums = ['f2895bef3794112c650a158be27c39a86e88c1717ebb8e0e88067d1f07635d12']

dependencies = [('Java', '25')]

local_jarfiles = [
    '%(namelower)s-%(version)s.jar', '%(namelower)s-test-%(version)s.jar', '%(namelower)s-xqj-%(version)s.jar'
]

sanity_check_paths = {
    'files': local_jarfiles,
    'dirs': [],
}
moduleclass = 'devel'
