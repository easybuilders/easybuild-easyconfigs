    ('binutils', '2.40'),
    ('CMake', '3.27.6'),
    ('Clang', '17.0.6'),
    ('Ninja', '1.11.1'),
    ('build', '1.0.3'),
    ('patchelf', '0.18.0'),
]

dependencies = [
    ('Python', '3.11.5'),
    ('Qt6', '6.6.3'),
    ('PySide6', '6.6.2'),
]

