easyblock = 'PythonBundle'

name = 'snaptools'
version = '1.4.8'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://github.com/r3fang/SnapTools.git'
description = """A module for working with snap files in Python"""

toolchain = {'name': 'foss', 'version': '2022a'}

dependencies = [
    ('Python', '3.10.4'),
    ('Pysam', '0.20.0'),
    ('h5py', '3.7.0'),
    ('pybedtools', '0.9.0'),
    ('python-louvain', '0.16'),
    ('SciPy-bundle', '2022.05'),
]

use_pip = True

exts_default_options = {'source_urls': [PYPI_SOURCE]}

exts_list = [
    (name, version, {
        'checksums': ['76b9aa1d61024143f80b2de1aea751cd9edc693bfea78107847a4959de38a3e8'],
    }),
]

sanity_pip_check = True

moduleclass = 'tools'
