easyblock = 'MakeCp'

name = 'SKA'
version = '1.0'

homepage = 'https://github.com/simonrharris/SKA'
description = """SKA (Split Kmer Analysis) is a toolkit for prokaryotic DNA sequence analysis using split kmers."""

toolchain = {'name': 'GCCcore', 'version': '14.2.0'}

source_urls = ['https://github.com/simonrharris/SKA/archive/refs/tags']
sources = ['v%(version)s.tar.gz']
checksums = ['fc6110c22c756158b190f50dc11d596265f9b0d09c28725b2b23ed22e2e4fbff']

builddependencies = [
    ('binutils', '2.42'),
    ('make', '4.4.1'),
]

files_to_copy = [
    (['bin/ska'], 'bin'),
]

sanity_check_paths = {
    'files': ['bin/ska'],
    'dirs': [],
}

sanity_check_commands = ["ska --help"]

moduleclass = 'bio'
