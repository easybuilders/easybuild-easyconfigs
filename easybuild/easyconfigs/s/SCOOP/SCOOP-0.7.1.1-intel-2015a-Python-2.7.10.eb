easyblock = 'PythonPackage'

name = 'SCOOP'
version = '0.7.1.1'

homepage = 'http://pyscoop.org/'
description = """SCOOP (Scalable COncurrent Operations in Python) is a distributed task module
 allowing concurrent parallel programming on various environments, from heterogeneous grids to supercomputers."""

toolchain = {'name': 'intel', 'version': '2015a'}

source_urls = [PYPI_LOWER_SOURCE]
sources = [SOURCELOWER_TAR_GZ]

python = 'Python'
pyver = '2.7.10'
pyshortver = '.'.join(pyver.split('.')[:2])
versionsuffix = '-%s-%s' % (python, pyver)

dependencies = [
    (python, pyver),  # python with builtin argparse
    ('Greenlet', '0.4.9', versionsuffix),
    ('PyZMQ', '14.7.0', '%s-zmq4' % versionsuffix),
]

sanity_check_paths = {
    'files': ['lib/python%(pyv)s/site-packages/scoop-%%(version)s-py%(pyv)s.egg' % {'pyv': pyshortver}],
    'dirs': [],
}

moduleclass = 'tools'
