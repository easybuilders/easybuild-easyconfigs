easyblock = 'EB_ScaLAPACK'

name = 'ScaLAPACK'
version = '2.0.2'
blaslib = 'OpenBLAS'
blasver = '0.2.19'
blassuff = '-LAPACK-3.7.0'
versionsuffix = "-%s-%s%s" % (blaslib, blasver, blassuff)

homepage = 'http://www.netlib.org/scalapack/'

description = """
 The ScaLAPACK (or Scalable LAPACK) library includes a subset of LAPACK
 routines redesigned for distributed memory MIMD parallel computers.
"""

toolchain = {'name': 'gompi', 'version': '2017A'}
toolchainopts = {'pic': True}

source_urls = [homepage]
sources = [SOURCELOWER_TGZ]

dependencies = [
    (blaslib, blasver, blassuff),
]

# parallel build tends to fail, so disabling it
parallel = 1

moduleclass = 'numlib'
