easyblock = 'PerlModule'

name = 'XML-LibXML'
version = '2.0116'

homepage = 'http://search.cpan.org/~shlomif/XML-LibXML-2.0116/'
description = """Perl binding for libxml2"""

toolchain = {'name': 'ictce', 'version': '5.5.0'}

source_urls = ['http://cpan.metacpan.org/authors/id/S/SH/SHLOMIF/']
sources = [SOURCE_TAR_GZ]

perl = 'Perl'
perlver = '5.20.0'
perlmajor = perlver.split('.', 1)[0]
versionsuffix = '-%s-%s' % (perl, perlver)

dependencies = [
    (perl, perlver),
    ("libxml2", "2.9.1"),
]

# tests appear to be broken (?)
runtest = False

sanity_check_paths = {
    'files' : ['lib/perl%s/site_perl/%s/x86_64-linux-thread-multi/auto/XML/LibXML/LibXML.so' % (perlmajor, perlver)],
    'dirs' : [],
}

options = {'modulename': 'XML::LibXML'}

moduleclass = 'data'
