name = 'XCrySDen'
version = '1.5.60'

homepage = "http://www.xcrysden.org/"
description = """XCrySDen is a crystalline and molecular structure visualisation program aiming
 at display of isosurfaces and contours, which can be superimposed on crystalline structures and
 interactively rotated and manipulated."""


toolchain = {'name': 'intel', 'version': '2014b'}

bwidget_ver = '1.9.5'

source_urls = [
    "http://www.xcrysden.org/download/", 
    'http://sourceforge.net/projects/tcllib/files/BWidget/%s' % bwidget_ver,
]
sources = [
    SOURCELOWER_TAR_GZ, 
    'bwidget-%s.tar.gz' % bwidget_ver,
]


tcltk_ver = '8.5.12'
dependencies = [
    ('Tcl', tcltk_ver),
    ('Tk', tcltk_ver),
    ('Mesa', '7.11.2'),
]

builddependencies = [
    ('libXmu', '1.1.2'),
]

moduleclass = 'vis'
