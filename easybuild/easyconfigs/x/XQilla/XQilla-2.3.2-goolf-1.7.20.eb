easyblock = 'ConfigureMake'

name = 'XQilla'
version = '2.3.2'

homepage = 'http://xqilla.sourceforge.net/HomePage'

description = """XQilla is an XQuery and XPath 2 library and command line utility written in C++,
implemented on top of the Xerces-C++ library."""

toolchain = {'name': 'goolf', 'version': '1.7.20'}

sources = [SOURCE_TAR_GZ]
source_urls = [
    'http://downloads.sourceforge.net/project/xqilla/',
]

configopts = '--with-xerces=$EBROOTXERCESMINCPLUSPLUS'

xerces_version = '3.1.2'

dependencies = [
    ('Xerces-C++', xerces_version),
]

moduleclass = 'lib'
