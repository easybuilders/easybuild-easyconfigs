name = 'Xmipp'
version = '20150616'

homepage = 'http://xmipp.cnb.csic.es/'
description = "Xmipp is a suite of image processing programs, primarily aimed at single-particle 3D electron microscopy."

# download via http://xmipp.cnb.csic.es/twiki/bin/view/Xmipp/XmippDevelSrcDownload
sources = ['Xmipp-devel-src-%(version)s.tar.gz']
checksums = ['68d42adfe7a0b08ca4fee65c68ebcaa7']

toolchain = {'name': 'intel', 'version': '2015a'}

patches = ['Xmipp-%(version)s_SIZEOF_INT.patch', 'Xmipp_install-script.patch']

dependencies = [
    ('Java', '1.8.0_40', '', True),
    ('Python', '2.7.9'),  # should have a working sqlite, and provide numpy
    ('LibTIFF', '4.0.4beta'),
    ('HDF5', '1.8.14'),
    ('libjpeg-turbo', '1.4.0'),
    ('FFTW', '3.3.4'),
    ('SQLite', '3.8.8.1'),  # must match SQLite used by Python
    ('matplotlib', '1.4.3', '-Python-2.7.9'),
]

moduleclass = 'vis'
