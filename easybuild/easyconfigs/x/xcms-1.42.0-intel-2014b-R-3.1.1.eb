easyblock = 'RPackage'

name = 'xcms'
version = '1.42.0'

homepage = 'http://www.bioconductor.org/packages/release/bioc/html/xcms.html'
description = """Framework for processing and visualization of
 chromatographically separated and single-spectra mass spectral data. Imports
 from AIA/ANDI NetCDF, mzXML, mzData and mzML files. Preprocesses data for
 high-throughput, untargeted analyte profiling.
"""

toolchain = {'name': 'intel', 'version': '2014b'}

source_urls = ['http://bioconductor.org/packages/3.0/bioc/src/contrib/']
sources = ['%(name)s_%(version)s.tar.gz']

r = 'R'
rver = '3.1.1'
versionsuffix = '-%s-%s' % (r, rver)

dependencies = [
    (r, rver),
    ('mzR', '2.0.0', versionsuffix),
]

moduleclass = 'bio'
