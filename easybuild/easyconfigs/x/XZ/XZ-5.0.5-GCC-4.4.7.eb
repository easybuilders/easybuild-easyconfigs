easyblock = 'ConfigureMake'

name = 'XZ'
version = '5.0.5'

homepage = 'http://tukaani.org/xz/'
description = "xz: XZ utilities"

sources = [SOURCELOWER_TAR_BZ2]
source_urls = ['http://tukaani.org/xz/']
toolchain = {'name': 'GCC', 'version': '4.4.7'}

