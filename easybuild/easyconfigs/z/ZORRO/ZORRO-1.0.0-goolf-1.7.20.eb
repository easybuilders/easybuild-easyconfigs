easyblock = 'ConfigureMake'

name = 'ZORRO'
version = '1.0.0'

homepage = 'https://sourceforge.net/projects/probmask/'
description = """ZORRO is a probabilistic masking program that assigns confidence scores to each column in a multiple seqeunce alignment.
 These scores can then be used to account for alignment accuracy in phylogenetic inference pipelines."""

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['https://sourceforge.net/projects/probmask/files/']
sources = ['probmask.tar.gz']
checksums = ['88103806fc578c4c590e42bbb4eb9a1efbd4b3f48dfabf3ca210492db2d3d9f8']

start_dir = 'trunk'

preconfigopts = './autogen.sh && '

sanity_check_paths = {
    'files': ['bin/%s' % x for x in ['zorro', 'FastTree', 'zorro_dist.pl']],
    'dirs': [],
}

moduleclass = 'bio'
