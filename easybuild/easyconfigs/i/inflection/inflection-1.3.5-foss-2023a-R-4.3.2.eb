easyblock = 'RPackage'

name = 'inflection'
version = '1.3.5'
versionsuffix = '-R-%(rver)s'

homepage = 'https://github.com/dchristop/inflection'
description = """inflection is a package that finds the inflection point of a planar curve which is given as a data frame
 of discrete (xi,yi) points"""

toolchain = {'name': 'foss', 'version': '2023a'}

source_urls = ['https://github.com/dchristop/inflection/archive/']
sources = ['%(version)s.tar.gz']
checksums = ['8087db8d60310e7a73956f9c8b1e305a917ce67d47a74acf41dbe16b466dd3a4']

dependencies = [
    ('R', '4.3.2'),
    ('R-bundle-CRAN', '2023.12'),
]

sanity_check_paths = {
    'files': [],
    'dirs': ['%(namelower)s'],
}

moduleclass = 'bio'
