easyblock = 'CMakeMake'

name = 'ip'
version = '5.4.0'

homepage = 'https://github.com/NOAA-EMC/NCEPLIBS-ip'
description = """This library performs binary I/O for the NCEP models,
processing formatted and unformatted byte-addressable data records,
and helping transform little endian files into big endian files."""

toolchain = {'name': 'iimkl', 'version': '2025b'}

source_urls = ["https://github.com/NOAA-EMC/NCEPLIBS-ip/archive/"]
sources = [{'download_filename': 'v%(version)s.tar.gz', 'filename': SOURCE_TAR_GZ}]
checksums = ['918b2cc425d5f1fa7378346cad2d16ad68b03b575adeb40b8b37a7dc3e876041']

builddependencies = [('CMake', '4.0.3')]

sanity_check_paths = {
    'files': ['lib/libip_4.a'],
    'dirs': ['lib', 'include_4'],
}

moduleclass = 'data'
