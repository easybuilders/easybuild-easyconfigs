# This file is an EasyBuild reciPY as per https://github.com/hpcugent/easybuild
# Author: Pablo Escobar Lopez
# sciCORE - University of Basel
# SIB Swiss Institute of Bioinformatics 

easyblock = 'MakeCp'

name = 'INRICH'
version = '1.1'
git_commit = '30c7f7e' # no direct download url so we download the git commit of latest release
versionsuffix = '_%s' % git_commit 

homepage = 'https://atgu.mgh.harvard.edu/inrich/index.html'
description = """INRICH is a pathway analysis tool for genome wide association studies, designed for detecting enriched 
 association signals of LD-independent genomic regions within biologically relevant gene sets."""

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ['https://bitbucket.org/statgen/inrich/get/']
sources = ['%s.tar.bz2' % git_commit]

buildopts = ' CC=$CXX'

files_to_copy = [(['inrich'], 'bin'), 'README.md']

parallel = 1
                
sanity_check_paths = {
    'files': ['bin/inrich'],
    'dirs': [],
}

moduleclass = 'bio'
