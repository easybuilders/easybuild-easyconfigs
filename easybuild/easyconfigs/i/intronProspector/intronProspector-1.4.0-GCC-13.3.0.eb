easyblock = 'ConfigureMake'

name = 'intronProspector'
version = '1.4.0'

homepage = 'https://github.com/diekhans/intronProspector'
description = """
Identify putative introns in RNA-Seq alignments in BAM/SAM alignments.
"""

toolchain = {'name': 'GCC', 'version': '13.3.0'}

source_urls = ['https://github.com/diekhans/intronProspector/archive/refs/tags/']
sources = ['v%(version)s.tar.gz']
checksums = ['3e8055c555cccad973e043dd4e56f8a2125d2893760d63a7ee044a9cb8ba13de']

dependencies = [
    ('HTSlib', '1.21'),
]

sanity_check_paths = {
    'files': ['bin/intronProspector', 'bin/intronProspectorMerge'],
    'dirs': [''],
}

sanity_check_commands = [
    "intronProspector --version",
    "intronProspectorMerge --version",
]

moduleclass = 'bio'
