easyblock = 'ConfigureMake'

name = 'ImageMagick'
version = '7.0.10-35'

homepage = 'https://www.imagemagick.org/'
description = """ImageMagick is a software suite to create, edit, compose, or convert bitmap images"""

toolchain = {'name': 'GCCcore', 'version': '10.2.0'}

source_urls = ['https://github.com/ImageMagick/ImageMagick/archive/']
sources = ['%(version)s.tar.gz']
checksums = ['fca8e29822ac97b5de755d8809ffccc6585df4c4dde61f93d13ce2bd269982b7']

dependencies = [
    ('bzip2', '1.0.8'),
    ('X11', '20201008'),
    ('Ghostscript', '9.53.3'),
    ('JasPer', '2.0.24'),
    ('libjpeg-turbo', '2.0.5'),
    ('LibTIFF', '4.1.0'),
    ('LittleCMS', '2.11'),
]

builddependencies = [
    ('binutils', '2.35'),
    ('pkg-config', '0.29.2'),
]

configopts = "--with-gslib --with-x"

sanity_check_paths = {
    'files': [],
    'dirs': ['bin', 'etc/%(name)s-%(version_major)s',
             'include/%(name)s-%(version_major)s', 'lib', 'share'],
}

modextravars = {'MAGICK_HOME': '%(installdir)s'}

moduleclass = 'vis'
