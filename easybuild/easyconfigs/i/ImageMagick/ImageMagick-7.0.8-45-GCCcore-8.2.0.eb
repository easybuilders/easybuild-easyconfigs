easyblock = 'ConfigureMake'

name = 'ImageMagick'
version = '7.0.8-45'

homepage = 'http://www.imagemagick.org/'
description = """ImageMagick is a software suite to create, edit, compose, or convert bitmap images"""

toolchain = {'name': 'GCCcore', 'version': '8.2.0'}

source_urls = ['https://github.com/ImageMagick/ImageMagick/archive/']
sources = [{
    'download_filename': '%(version)s.tar.gz',
    'filename': SOURCE_TAR_GZ
}]
checksums = ['37dfadbbf8eab0546ba99de50e4eb664a068f711ad39b87c1ee8557ad7ed521b']

dependencies = [
    ('bzip2', '1.0.6'),
    ('X11', '20190311'),
    ('Ghostscript', '9.27'),
    ('JasPer', '2.0.14'),
    ('libjpeg-turbo', '2.0.2'),
    ('LibTIFF', '4.0.10'),
    ('LittleCMS', '2.9'),
]

builddependencies = [
    # use same binutils version that was used when building GCCcore toolchain
    ('binutils', '2.31.1'),
    ('pkg-config', '0.29.2'),
]

configopts = "--with-gslib --with-x"

sanity_check_paths = {
    'files': [],
    'dirs': ['bin', 'etc/%(name)s-%(version_major)s', 'include/%(name)s-%(version_major)s', 'lib', 'share'],
}

modextravars = {'MAGICK_HOME': '%(installdir)s'}

moduleclass = 'vis'
