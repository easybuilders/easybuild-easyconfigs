easyblock = 'ConfigureMake'

name = 'ImageMagick'
version = '7.0.7-30'
local_ghostversion = '9.22'
local_cairoversion = '1.14.12'
versionsuffix = '-Ghostscript-%s-cairo-%s' % (local_ghostversion, local_cairoversion)

homepage = 'http://www.imagemagick.org/'
description = """ImageMagick is a software suite to create, edit, compose, or convert bitmap images"""

toolchain = {'name': 'GCCcore', 'version': '6.4.0'}

source_urls = ['https://launchpad.net/imagemagick/main/%(version)s/+download/']
sources = [SOURCE_TAR_GZ]
checksums = ['8d3aca87b13dc1c17d28f83326201529e5a2936e9b8ee289377a247c615f272c']

dependencies = [
    ('bzip2', '1.0.6'),
    ('X11', '20180131'),
    ('Ghostscript', local_ghostversion, '-cairo-%s' % local_cairoversion),
    ('JasPer', '2.0.14'),
    ('libjpeg-turbo', '1.5.3'),
    ('LibTIFF', '4.0.9'),
    ('LittleCMS', '2.9'),
]

builddependencies = [
    # use same binutils version that was used when building GCCcore toolchain
    ('binutils', '2.28'),
    ('pkg-config', '0.29.2'),
]

configopts = "--with-gslib --with-x"

sanity_check_paths = {
    'files': [],
    'dirs': ['bin', 'etc/%(name)s-%(version_major)s', 'include/%(name)s-%(version_major)s', 'lib', 'share'],
}

modextravars = {'MAGICK_HOME': '%(installdir)s'}

moduleclass = 'vis'
