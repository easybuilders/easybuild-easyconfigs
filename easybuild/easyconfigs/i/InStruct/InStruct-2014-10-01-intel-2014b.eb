easyblock = 'MakeCp'

name = 'InStruct'
version = '3.0.1'

homepage = 'http://smithlab.usc.edu/methpipe/'
description = """InStruct implements the Markov Chain Monte Carlo algorithm for the generalized Bayesian clustering
 method to estimate the self-fertilization rates and cluster individuals into subpopulations simultaneously using
 genotype data consisting of unlinked markers"""

toolchain = {'name': 'intel', 'version': '2014b'}

source_urls = ["ftp://cbsuftp.tc.cornell.edu/BioHPC/var/"]
sources = ['InStruct_sources.zip']

buildopts = 'InStruct'

files_to_copy = ["InStruct"]

modextrapaths = {'PATH': '.'}
sanity_check_paths = {
    'files': ["InStruct"],
    'dirs': [],
}

moduleclass = 'bio'
