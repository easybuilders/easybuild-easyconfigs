dependencies = [
    ('icc', local_compver),
    ('ifort', local_compver),
    ('OpenMPI', '1.10.3', '', ('iccifort', local_compver)),
    ('imkl', '11.3.3.210', '', ('iompi', version)),
]

moduleclass = 'toolchain'
