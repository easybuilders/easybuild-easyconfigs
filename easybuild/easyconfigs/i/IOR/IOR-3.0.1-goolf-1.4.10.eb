name = 'IOR'
version = '3.0.1'

homepage = 'https://github.com/chaos/ior'
description = '''The IOR software is used for benchmarking parallel file systems using POSIX, MPIIO, or HDF5 interfaces. '''
toolchain = {'name': 'goolf', 'version': '1.4.10'}
toolchainopts = {'optarch': True, 'usempi': True, 'pic': True}

preconfigopts= "./bootstrap &&"

builddependencies = [('Autoconf','2.69'),
		     ('Automake','1.13.1')]

source_urls = [' https://github.com/chaos/ior/archive/']
sources = ['%s.zip' % (version)]

sanity_check_paths = {
    'files': ["bin/ior"],
    'dirs': [],
}

moduleclass = 'system'
