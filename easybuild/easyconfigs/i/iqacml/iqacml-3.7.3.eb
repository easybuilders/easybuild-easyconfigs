easyblock = 'Toolchain'

name = 'iqacml'
version = '3.7.3'

homepage = 'http://software.intel.com/en-us/intel-cluster-toolkit-compiler/'
description = """Intel Cluster Toolkit Compiler Edition provides Intel C,C++ and fortran compilers, QLogic MPI and AMD Core Math Library (ACML)."""

toolchain = {'name': 'dummy', 'version': 'dummy'}

compv = '11.1.075'

mlibn = 'ACML'
mlibv = '5.3.0'
mlibs = '-ifort-64bit'
mlib = '%s-%s%s' % (mlibn, mlibv, mlibs)

blacsn = 'BLACS'
blacsv = '1.1'
blacs = '%s-%s' % (blacsn, blacsv)

tcname = 'iiqmpi'
tcver = '3.3.0'
tc = (tcname, tcver)

dependencies = [
    ('icc', compv),
    ('ifort', compv),
    ('QLogicMPI', '2.9-926.1005_rhel5_qlc'),
    (mlibn, mlibv, mlibs),
    (blacsn, blacsv, '', tc),
    ('ScaLAPACK', '1.8.0', '-%s-%s' % (mlib, blacs), tc),
    ('FFTW', '3.3.3', '', tc),
]

modextravars = {
    'MPICH_CC':'icc',
    'MPICH_F77':'ifort',
    'MPICH_F90':'ifort',
}

moduleclass = 'toolchain'
