easyblock = "CMakeMake"

name = 'IQ-TREE'
version = '1.5.6'
versionsuffix = '-OMP'

homepage = 'http://www.iqtree.org'
description = "A fast and effective stochastic algorithm to infer phylogenetic trees by maximum likelihood"

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['https://github.com/Cibiv/IQ-TREE/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['c4441cb251081eb8ee31029bf2e75330be41f86d4dbcb59543de6c0c3d63cc83']

separate_build_dir = True

builddependencies = [('CMake', '3.4.3')]

configopts = ' -DIQTREE_FLAGS=omp'

sanity_check_paths = {
    'files': ['bin/iqtree-omp'],
    'dirs': [],
}

moduleclass = 'bio'
