easyblock = 'Toolchain'

name = 'iccifort'
version = '2019.0.117'
versionsuffix = '-GCC-8.2.0-2.31.1'

homepage = 'http://software.intel.com/en-us/intel-cluster-toolkit-compiler/'
description = "Intel C, C++ & Fortran compilers"

toolchain = SYSTEM

dependencies = [
