easyblock = 'ConfigureMake'

name = 'gawk'
version = '4.0.2'

homepage = 'http://www.gnu.org/software/gawk/gawk.html'
description = "gawk: GNU awk"

source_urls = [GNU_SOURCE]
sources = [SOURCE_TAR_GZ]

toolchain = {'name': 'ictce', 'version': '5.3.0'}

sanity_check_paths = {
    'files': ['bin/gawk'],
    'dirs': []
}

moduleclass = 'lang'
