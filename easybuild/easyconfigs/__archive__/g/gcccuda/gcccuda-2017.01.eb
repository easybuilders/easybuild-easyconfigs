easyblock = "Toolchain"

name = 'gcccuda'
version = '2017.01'

homepage = '(none)'
description = """GNU Compiler Collection (GCC) based compiler toolchain, along with CUDA toolkit."""

toolchain = SYSTEM

comp_name = 'GCC'
comp_ver = '5.4.0-2.26'
comp = (comp_name, comp_ver)

# compiler toolchain dependencies
dependencies = [
    comp,
    ('CUDA', '8.0.61_375.26', '', comp),
]

moduleclass = 'toolchain'
