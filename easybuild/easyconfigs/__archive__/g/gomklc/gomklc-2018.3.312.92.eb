easyblock = "Toolchain"

name = 'gomklc'
version = '2018.3.312.92'

homepage = '(none)'
description = """GNU Compiler Collection (GCC) based compiler toolchain, Intel MKL & OpenMPI. and Cuda"""

toolchain = SYSTEM

local_gccver = '7.3.0'
local_gcccudaver = '2018.3.92'

# specify subtoolchains as builddependencies
# this way they will be considered as subtoolchains but
# are not loaded in the modulefile or software compiled
# with this toolchain
builddependencies = [
    ('gmkl', '2018.3'),
    ('gcccuda', local_gcccudaver),
    ('gmklc', local_gcccudaver),
    ('gompic', version),
]

dependencies = [
    ('GCC', local_gccver),
    ('CUDA', '9.2.148', '', ('GCC', local_gccver)),
    ('OpenMPI', '3.1.2', '', ('gcccuda', local_gcccudaver)),
    ('imkl', '2018.3.222'),
]

hidden = True

moduleclass = 'toolchain'
