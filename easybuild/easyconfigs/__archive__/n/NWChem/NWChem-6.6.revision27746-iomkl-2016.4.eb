    'Dplot_tolrho.patch.gz',
    'Driver_smalleig.patch.gz',
    'Ga_argv.patch.gz',
    'Raman_displ.patch.gz',
    'Ga_defs.patch.gz',
    'Zgesvd.patch.gz',
    'Cosmo_dftprint.patch.gz',
    'Txs_gcc6.patch.gz',
    'Gcc6_optfix.patch.gz',
    'Util_gnumakefile.patch.gz',
    'Util_getppn.patch.gz',
    'Gcc6_macs_optfix.patch.gz',
    'Notdir_fc.patch.gz',
    'Xatom_vdw.patch.gz',
