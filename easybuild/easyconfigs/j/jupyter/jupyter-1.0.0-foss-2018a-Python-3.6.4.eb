easyblock = 'PythonPackage'

name = 'jupyter'
version = '1.0.0'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://jupyter-notebook.readthedocs.io/'
description = """The Jupyter Notebook is a web application that allows you to create and share
documents that contain live code, equations, visualizations, and explanatory text."""

toolchain = {'name': 'foss', 'version': '2018a'}

source_urls = [PYPI_LOWER_SOURCE]
sources = [SOURCELOWER_TAR_GZ]
checksums = ['d9dc4b3318f310e34c82951ea5d6683f67bed7def4b259fafbfe4f1beb1d8e5f']

dependencies = [
    ('Python', '3.6.4'),
    ('matplotlib', '2.1.2', '-Python-%(pyver)s'),
]

use_pip = True
use_pip_for_deps = True

sanity_check_paths = {
    'files': ['bin/jupyter'],
    'dirs': [],
}

moduleclass = 'lang'
