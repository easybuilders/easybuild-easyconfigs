    }),
    ('jaxlib', version, {
        'sources': [
            '%(name)s-v%(version)s.tar.gz',
            {
                'download_filename': '%s.tar.gz' % local_xla_commit,
                'filename': 'xla-%s.tar.gz' % local_xla_commit,
                'extract_cmd': local_extract_cmd,
            },
            {
                'download_filename': '%s.tar.gz' % local_tfrt_commit,
