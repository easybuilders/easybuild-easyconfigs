easyblock = "PythonPackage"

name = 'joblib'
version = '0.8.4'

homepage = 'https://pythonhosted.org/joblib/'
description = """Joblib is a set of tools to provide lightweight pipelining in Python. In particular, joblib offers : 
 1. transparent disk-caching of the output values and lazy re-evaluation (memoize pattern)
 2. easy simple parallel computing
 3. logging and tracing of the execution."""

toolchain = {'name': 'intel', 'version': '2015a'}

sources = ['%(version)s.tar.gz']
source_urls = ['https://github.com/joblib/joblib/archive/']

python = "Python"
pythonversion = '3.4.3'
pyshortver = ".".join(pythonversion.split(".")[:-1])

versionsuffix = "-%s-%s" % (python, pythonversion)

dependencies = [
    (python, pythonversion),
]

pyprefix = 'lib/python%s/site-packages' % pyshortver
eggname = 'joblib-%%(version)s-py%s.egg' % pyshortver
sanity_check_paths = {
    'files': [],
    'dirs': [('%s/%%(name)s' % pyprefix, '%s/%s' % (pyprefix, eggname))],
}

moduleclass = 'lib'
