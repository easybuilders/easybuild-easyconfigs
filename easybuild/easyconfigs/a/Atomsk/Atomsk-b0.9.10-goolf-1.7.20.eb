easyblock = 'MakeCp'

name = 'Atomsk'
version = 'b0.9.10'

homepage = 'http://atomsk.univ-lille1.fr/index.php'
description = "Atomsk is an Open Source command-line program dedicated to the creation, manipulation, and conversion of atomic systems"

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['http://atomsk.univ-lille1.fr/code/']
sources = ['%(namelower)s_%(version)s.tar.gz']

start_dir = 'src'

buildopts = " atomsk LAPACK=${LIBLAPACK}"

files_to_copy = [(['atomsk'], 'bin'), '../*']

sanity_check_paths = {
    'files': ['bin/atomsk'],
    'dirs': [],
}

moduleclass = 'phys'
