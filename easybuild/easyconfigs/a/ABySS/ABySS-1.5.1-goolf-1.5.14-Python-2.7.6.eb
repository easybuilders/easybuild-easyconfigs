name = 'ABySS'
version = '1.5.1'
versionsuffix = '-Python-2.7.6'

homepage = 'http://www.bcgsc.ca/platform/bioinfo/software/abyss'
description = """Assembly By Short Sequences - a de novo, parallel, paired-end sequence assembler"""

toolchain = {'name': 'goolf', 'version': '1.5.14'}
toolchainopts = {'usempi': True}

# eg. http://www.bcgsc.ca/downloads/abyss/abyss-1.3.4.tar.gz
sources = [SOURCELOWER_TAR_GZ]
source_urls = ['https://github.com/bcgsc/abyss/releases/download/%(version)s']

buildopts = 'AM_CXXFLAGS=-Wall'

dependencies = [ 
    ('google-sparsehash', '2.0.2'),
    ('Boost', '1.55.0', versionsuffix),
]
 
sanity_check_paths = {
    'files': ["bin/ABYSS", "bin/ABYSS-P"],
    'dirs': []
}

moduleclass = 'bio'
