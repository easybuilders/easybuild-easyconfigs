easyblock = "ConfigureMake"

name = "argobots"
version = "1.1"

homepage = "https://github.com/pmodels/argobots"
description = """ Argobots is a lightweight, low-level threading and tasking framework. """


toolchain = {'name': 'GCC', 'version': '8.3.0'}

builddependencies = [
    ('Autotools', '20180311'),
    ('Automake', '1.15.1'),
    ('libtool', '2.4.6')
]

sources = [{
    'filename': "v%(version)s.tar.gz",
    'git_config': {
        'url': 'https://github.com/pmodels',
        'repo_name': 'argobots',
        'tag': 'v%(version)s'
    },

}]
checksums = ['c2f9791fc4bead2914b5c83d676fd1a12c8acb2e393b2d406d7a05ab35b598c3']

preconfigopts = "./autogen.sh && "

sanity_check_paths = {
    'files': ['include/abt.h', 'lib/libabt.%s' % SHLIB_EXT],
    'dirs': []
}

moduleclass = 'lib'
