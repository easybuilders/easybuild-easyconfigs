easyblock = 'Bundle'

name = 'apcluster'
version = '1.4.8'

homepage = 'https://cran.r-project.org/web/packages/apcluster/index.html'
description = """Implements Affinity Propagation clustering introduced by Frey and Dueck"""

toolchain = {'name': 'foss', 'version': '2021a'}


dependencies = [
    ('R', '4.1.0'),
]

exts_default_options = {
    'source_urls': [
        'https://cran.r-project.org/src/contrib/Archive/%(name)s',  # package archive
        'https://cran.r-project.org/src/contrib/',  # current version of packages
        'https://cran.freestatistics.org/src/contrib',  # mirror alternative for current packages
    ],
    'source_tmpl': '%(name)s_%(version)s.tar.gz'
}

exts_defaultclass = 'RPackage'

exts_list = [
    (name, version, {
        'checksums': ['12b23d393d2b21ba9e13f82712ad260c0b0ee4e0ba74e32227279a52b114ee53'],
    }),
]

modextrapaths = {'R_LIBS_SITE': ''}

sanity_check_paths = {
    'files': [],
    'dirs': [name],
}

moduleclass = 'bio'
