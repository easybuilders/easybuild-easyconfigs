easyblock = "PythonPackage"

name = 'ASAP3'
version = '3.11.9'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://wiki.fysik.dtu.dk/asap/'
description = """ASAP is a calculator for doing large-scale classical molecular
dynamics within the Campos Atomic Simulation Environment (ASE)."""

toolchain = {'name': 'intel', 'version': '2019a'}

source_urls = [PYPI_LOWER_SOURCE]
sources = [SOURCELOWER_TAR_GZ]
patches = ['ASAP3-3.11.9-report-correct-flags-with-intel.patch']
checksums = [
    'b40874392631eb05dea00ca71365bb6939e6480afae8b706777e958d6e9293ce',  # asap3-3.11.9.tar.gz
    # ASAP3-3.11.9-report-correct-flags-with-intel.patch
    '7277306e5b9b114f98b7047c259ca8d2a72aa629f063824d5379d57f357ca683',
]

builddependencies = [
    ('pkgconfig', '1.5.1', '-python'),
]

dependencies = [
    ('Python', '3.7.2'),
    ('ASE', '3.17.0', versionsuffix),
    ('kim-api', '2.0.2'),
]

use_pip = False
download_dep_fail = True

# required because we're building Python packages using Intel compilers on top of Python built with GCC
check_ldshared = True

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages/%(namelower)s']
}

moduleclass = 'phys'
