# Template for software with Makefile lacking installation target in GCCcore 12.3.0
easyblock = 'MakeCp'

name = 'ASTER'
version = '1.23'

homepage = 'https://github.com/chaoszhang/ASTER'
description = """Accurate Species Tree EstimatoR series;
a family of optimation algorithms for species tree inference implemented in C++.
"""

toolchain = {'name': 'GCCcore', 'version': '12.3.0'}

source_urls = ['https://github.com/chaoszhang/ASTER/archive']
sources = ['v%(version)s.tar.gz']
checksums = ['bd46855f8e760c4c1b2597075627845dd262601d1bb1dc5b7e152f1a56f10d15']

builddependencies = [
    ('binutils', '2.40'),
    ('make', '4.4.1'),
]

files_to_copy = ['bin']

sanity_check_paths = {
    'files': ['bin/caster-site'],
    'dirs': ['bin'],
}

sanity_check_commands = [
    "astral -h 2>&1 | grep %(version)s",
]

moduleclass = 'bio'
