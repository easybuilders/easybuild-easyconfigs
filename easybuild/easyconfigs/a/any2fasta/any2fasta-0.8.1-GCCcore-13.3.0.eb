easyblock = 'Tarball'

name = 'any2fasta'
version = '0.8.1'

homepage = 'https://github.com/tseemann/any2fasta'
description = "Convert various sequence formats to FASTA"

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}

source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.zip']
checksums = ['e3764431bad4448f444c7256c180faa97fa122770a4125effde02593210d173e']

dependencies = [
    ('Perl', '5.38.2'),
]

# https://github.com/tseemann/any2fasta
github_account = 'tseemann'

sanity_check_paths = {
    'files': ['%(name)s'],
    'dirs': [],
}

sanity_check_commands = [
    "%(name)s -h",
    "%(name)s -q %(builddir)s/%(name)s-%(version)s/test/test.fq",
]

modextrapaths = {'PATH': ''}

moduleclass = 'bio'
