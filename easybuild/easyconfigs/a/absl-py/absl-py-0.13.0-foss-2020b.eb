easyblock = 'PythonPackage'

name = 'absl-py'
version = '0.13.0'

homepage = 'https://github.com/abseil/abseil-py'
description = """This repository is a collection of Python library 
code for building Python applications. The code is collected from 
Google's own Python code base, and has been extensively tested and 
used in production."""

toolchain = {'name': 'foss', 'version': '2020b'}

source_urls = ['https://github.com/abseil/abseil-py/archive/']
sources = ['pypi-v%(version)s.tar.gz']
checksums = ['82423ef923465cb628424c93be2fd29bff70f3e6aca90fe5fade6fc4cefca669']

builddependencies = [
    ('binutils', '2.35'),
    ('Bazel', '3.7.2'),
]

dependencies = [
    ('Python', '3.8.6'),
    ('pdbfixer', '1.7'),
    ('SciPy-bundle', '2020.11'),
]

download_dep_fail = True

use_pip = True
sanity_pip_check = True

options = {'modulename': 'absl'}

moduleclass = 'lib'
