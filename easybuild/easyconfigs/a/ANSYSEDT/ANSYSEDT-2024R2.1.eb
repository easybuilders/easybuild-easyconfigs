    sed -i \"s|'/sbin/|'$EPREFIX/sbin/|g\" \"$a\"; \
    sed -i \"s|\`/sbin/|\`$EPREFIX/sbin/|g\" \"$a\"; \
    sed -i \"s|\\\"/sbin/|\\\"$EPREFIX/sbin/|g\" \"$a\"; \
    sed -i \"s|\=/sbin/|\=$EPREFIX/sbin/|g\" \"$a\"; \
    sed -i \"s|^/sbin/|$EPREFIX/sbin/|g\" \"$a\"; \
