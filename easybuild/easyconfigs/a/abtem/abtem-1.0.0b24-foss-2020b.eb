easyblock = 'PythonPackage'

name = 'abtem'
version = '1.0.0b24'

homepage = 'https://imageio.github.io'
description = """abTEM provides a Python API for running simulations
of Transmission Electron Microscopy images. It is written entirely in
Python, which enables easy integration with first-principles codes and
analysis tools accessible from Python, and allows for a simple and
intuitive user interface. The computationally demanding parts are
implemented using jit-compiled Numba code and high-performance
libraries, maintaining speed while ensuring portability.

abTEM works with the Atomic Simulation Environment and the density
functional theory code GPAW to provide an seamless environment for
simulating images from first principles."""

toolchain = {'name': 'foss', 'version': '2020b'}

sources = [SOURCE_TAR_GZ]
checksums = ['503e7775f9764cf8298cbd2d06c4a36a9c83efbd84d58721eee638adfd1e626e']

dependencies = [
    ('Python', '3.8.6'),
    ('SciPy-bundle', '2020.11'),
    ('ASE', '3.22.0'),
    ('h5py', '3.1.0'),
    ('numba', '0.53.1'),
    ('pyFFTW', '0.12.0'),
    ('tqdm', '4.60.0'),
    ('imageio', '2.9.0'),
]

download_dep_fail = True
use_pip = True
sanity_pip_check = True

moduleclass = 'vis'
