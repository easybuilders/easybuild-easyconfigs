easyblock = 'MakeCp'

name = 'Arboretum2'
version = '2.3.0'

homepage = 'https://pages.discovery.wisc.edu/~sroy/arboretum/index.html'
description = """Arboretum: reconstruction and analysis of the evolutionary history
 of condition-specific transcriptional programs """

toolchain = {'name': 'GCC', 'version': '10.3.0'}

source_urls = ['https://github.com/Roy-lab/Arboretum2.0/archive/refs/tags/']
sources = ['v%(version)s.tar.gz']
patches = ['fix_makefile_libpath.patch']
checksums = [
    {'v2.3.0.tar.gz': '700f2fa8154b80bf7deb337789f1e65891e3c4d4dcb75c33ad65ad96bade481d'},
    {'fix_makefile_libpath.patch': '9c205cda46eee9e2ef79d15b1c77cb9f0ced67f6a061df58b3c0c73a6100ca0c'},
]

dependencies = [
    ('GSL', '2.7'),
]

files_to_copy = ['arboretum']

postinstallcmds = ["chmod +x %(installdir)s/arboretum"]

sanity_check_paths = {
    'files': ['arboretum'],
    'dirs': [],
}

modextrapaths = {'PATH': ''}
sanity_check_commands = ['arboretum -h']

moduleclass = 'bio'
