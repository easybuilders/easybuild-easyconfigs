easyblock = 'PythonBundle'

name = 'awscli'
version = '2.17.54'

homepage = 'https://pypi.python.org/pypi/awscli'
description = 'Universal Command Line Environment for AWS'

toolchain = {'name': 'GCCcore', 'version': '13.2.0'}

builddependencies = [
    ('binutils', '2.40'),
    ('CMake', '3.27.6'),  # required for awscrt
]

dependencies = [
    ('Python', '3.11.5'),
    ('PyYAML', '6.0.1'),
    ('ruamel.yaml', '0.18.6'),
]

use_pip = True

exts_list = [
    ('jmespath', '1.0.1', {
