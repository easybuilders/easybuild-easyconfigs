    }),
    ('s3transfer', '0.10.2', {
        'source_tmpl': SOURCE_PY3_WHL,
        'checksums': ['eca1c20de70a39daee580aef4986996620f365c4e0fda6a86100231d62f1bf69'],
    }),
    ('prompt_toolkit', '3.0.47', {
        'source_tmpl': SOURCE_PY3_WHL,
        'checksums': ['0d7bfa67001d5e39d02c224b663abc33687405033a8c422d0d675a5a13361d10'],
    }),
    ('distro', '1.9.0', {
