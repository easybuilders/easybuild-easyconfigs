    ('Python', '3.13.5'),
    ('Python-bundle-PyPI', '2025.07'),
    ('SciPy-bundle', '2025.07'),
    ('matplotlib', '3.10.5'),
    ('numba', '0.62.0'),
    ('dask', '2025.9.1'),
    ('pyFFTW', '0.15.1'),
    ('zarr', '3.1.5'),
    ('jupyter-server', '2.17.0'),
    ('ipympl', '0.9.8'),
    ('tqdm', '4.67.1'),
    ('ASE', '3.26.0'),
]

exts_list = [
    (name, version, {
        'sources': ['%(namelower)s-%(version)s.tar.gz'],
        'checksums': ['0619ef38fd2a7d2f173ed454857d72664baee155bd9e101564b5accb40a8e10f'],
    }),
]

moduleclass = 'phys'
