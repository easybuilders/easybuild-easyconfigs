easyblock = 'PythonBundle'

name = 'aiida-shell'
version = '0.7.1'

homepage = 'https://aiida-shell.readthedocs.io/en/latest/'
description = """AiiDA plugin that makes running shell commands easy.
Run any shell executable without writing a dedicated plugin or parser.
"""

toolchain = {'name': 'foss', 'version': '2023a'}
toolchainopts = {'pic': True}

builddependencies = [
    ('poetry', '1.5.1'),  # Poetry, importlib-metadata
]

dependencies = [
    ('Python', '3.11.3'),
    ('dill', '0.3.7'),
    ('aiida-core', '2.5.1'),
]

exts_list = [
    (name, version, {
        'sources': [f'aiida_shell-{version}.tar.gz'],
    }),
]

moduleclass = 'tools'
