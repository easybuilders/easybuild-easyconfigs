easyblock = 'PythonBundle'

name = 'ARIBA'
version = '2.14.6'

homepage = 'http://sanger-pathogens.github.io/ariba/'
description = "Antimicrobial Resistance Identification By Assembly"

toolchain = {'name': 'foss', 'version': '2021a'}

dependencies = [
    ('Python', '3.9.5'),
    ('Bowtie2', '2.4.4'),
    ('CD-HIT', '4.8.1'),
    ('MUMmer', '3.23'),
    ('BeautifulSoup', '4.10.0'),
    ('Biopython', '1.79'),
    ('DendroPy', '4.5.2'),
    ('matplotlib', '3.4.2'),
    ('Fastaq', '3.17.0'),
    ('Pysam', '0.16.0.1'),
]

use_pip = True
sanity_pip_check = True

exts_list = [
    ('pymummer', '0.10.3', {
        'checksums': ['986555d36828bd90bf0e63d9d472e5b20c191f0e51123b5252fa924761149fc2'],
    }),
    ('ariba', version, {
        'source_urls': ['https://github.com/sanger-pathogens/%(namelower)s/archive/refs/tags'],
        'sources': ['v%(version)s.tar.gz'],
        'checksums': ['d07ae161e18cb5d90fca37f87922c3f109e10a3e97e7b49c449ece870ed36370'],
    }),
]

sanity_check_commands = ['ariba version']

moduleclass = 'bio'
