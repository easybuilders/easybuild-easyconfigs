easyblock = 'ConfigureMake'

name = 'AUTO-07p'
version = "0.9.3"

homepage = 'https://github.com/auto-07p'
description = """AUTO is a publicly available software for continuation and bifurcation problems in ordinary differential equations originally written in 1980 and widely used in the dynamical systems community."""

toolchain = {'name': 'gompi', 'version': '2020a'}

source_urls = ['https://github.com/auto-07p/auto-07p/archive']
source_urls = ['https://github.com/auto-07p/auto-07p/archive/refs/heads']
sources = ['v%(version)s.tar.gz']
sources = ['master.tar.gz']
#checksums = ['fd23d513873a59be565a44b43a4483189b52dfdcdc718d61f3c022ebbadd8fa1']

#dependencies = [
#    ('zlib', '1.2.11'),
#]

configopts = '--with-mpi'

runtest = 'check'

sanity_check_paths = {
    'files': ['bin/auto'],
    'dirs': []
}

moduleclass = 'bio'
