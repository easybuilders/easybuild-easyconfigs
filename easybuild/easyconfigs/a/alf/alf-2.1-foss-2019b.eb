easyblock = 'ConfigureMake'

name = 'alf'
version = '2.1'

homepage = 'https://github.com/cconroy20/alf'
description = """Absorption Line Fitter, alf, is a program for fitting the absorption line optical-NIR spectrum of an old (& 1 Gyr) stellar system."""

toolchain = {'name': 'foss', 'version': '2019b'}

source_urls = ['https://github.com/cconroy20/alf/releases/download/%(version)s/']
sources = ['v%(version)s.tar.gz']

patches = ['alf_2.1_make.patch']

skipsteps = ['configure', 'install']

buildininstalldir=True

start_dir = 'src'

parallel=1

modextrapaths = {'PATH': 'alf-2.1/bin', 'PYTHONPATH': 'alf-2.1/scripts'}

sanity_check_paths = {
    'files': ['alf-2.1/bin/alf.exe'],
    'dirs': []
}

moduleclass = 'phys'
