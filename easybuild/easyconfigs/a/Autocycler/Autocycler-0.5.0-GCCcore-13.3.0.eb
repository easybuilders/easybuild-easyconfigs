easyblock = 'Cargo'

name = 'Autocycler'
version = '0.5.0'

homepage = 'https://github.com/rrwick/Autocycler'
description = """Autocycler is a tool for generating consensus long-read
assemblies for bacterial genomes.  It is the successor to Trycycler, and for
most users, I recommend Autocycler over Trycycler."""

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}

source_urls = ['https://github.com/rrwick/Autocycler/archive/refs/tags/']
sources = ['v%(version)s.tar.gz']
checksums = ['70efff324fc9b0a4ad70bef7984c4eb78b69b989011aa17eea4b5d75b5b9c5ff']

builddependencies = [
    ('binutils', '2.42'),
    ('Rust', '1.83.0'),
]

offline = False

sanity_check_paths = {
    'files': ['bin/autocycler'],
    'dirs': ['bin']
}

sanity_check_commands = ["%(namelower)s --help"]

moduleclass = 'bio'
