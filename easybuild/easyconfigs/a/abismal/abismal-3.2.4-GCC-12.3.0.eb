easyblock = 'ConfigureMake'

name = 'abismal'
version = '3.2.4'

homepage = 'https://github.com/smithlabcode/abismal'
description = """Another Bisulfite Mapping Algorithm (abismal) is a read mapping program for
bisulfite sequencing in DNA methylation studies.
"""

toolchain = {'name': 'GCC', 'version': '12.3.0'}

sources = [SOURCE_TAR_GZ]
source_urls = ['https://github.com/smithlabcode/%(name)s/releases/download/v%(version)s/']
checksums = ['822e5efe322f989c561a1fb728bd6f57f49d94033620eb1bc5046f22a8492544']

builddependencies = [
    ('Autotools', '20220317'),
]

dependencies = [
    ('zlib', '1.2.13'),
    ('HTSlib', '1.18')
]

sanity_check_paths = {
    'files': ['bin/%(namelower)s'],
    'dirs': []
}

sanity_check_commands = [
    "%(namelower)s -v"
]

moduleclass = 'bio'
