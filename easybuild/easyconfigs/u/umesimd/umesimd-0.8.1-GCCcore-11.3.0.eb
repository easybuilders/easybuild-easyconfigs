easyblock = 'CMakeMake'
name = 'umesimd'
version = '0.8.1'

description = """
UME::SIMD is an explicit vectorization library. The library defines homogeneous interface for accessing functionality of SIMD registers of AVX, AVX2, AVX512 and IMCI (KNCNI, k1om) instruction set.
"""

homepage = 'https://github.com/edanor/umesimd'
source_urls = ['https://github.com/edanor/umesimd/archive']
sources = ['v%(version)s.zip']

toolchain = {'name': 'GCCcore', 'version': '11.3.0'}

#test_cmd = 'cd %(builddir)s/%(name)s-%(version)s/unittest && '
#runtest = 'CXX=g++ ISA=avx2 BUILD=release_O3 make executable -k && ./gcc.out'

sanity_check_paths = {
  'files': ['include/ume/simd/UMESimd.h'], 
  'dirs': ['include/ume/simd']
}

