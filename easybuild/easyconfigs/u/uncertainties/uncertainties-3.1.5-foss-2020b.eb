# This easyconfig was created by Simon Branford of the BEAR Software team at the University of Birmingham.
easyblock = 'PythonPackage'

name = 'uncertainties'
version = '3.1.5'

homepage = "https://uncertainties-python-package.readthedocs.io"
description = """The uncertainties package is a free, cross-platform program that transparently handles calculations
 with numbers with uncertainties (like 3.14+/-0.01). It can also yield the derivatives of any expression. The
 uncertainties package takes the pain and complexity out of uncertainty calculations. Error propagation is not to be
 feared anymore!"""

toolchain = {'name': 'foss', 'version': '2020b'}

multi_deps = {'Python': ['3.8.6', '2.7.18']}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]
checksums = ['9122c1e7e074196883b4a7a946e8482807b2f89675cb5e3798b87e0608ede903']

use_pip = True
download_dep_fail = True
sanity_pip_check = True

moduleclass = 'data'
