easyblock = 'PythonBundle'

name = 'umitools'
version = '0.3.4'

homepage = 'https://github.com/weng-lab/umitools'
description = """A toolset for handling sequencing data with unique molecular identifiers (UMIs)"""

toolchain = {'name': 'foss', 'version': '2022b'}


dependencies = [
    ('Python', '3.10.8'),
    ('networkx', '3.0'),
    ('Pysam', '0.21.0'),
]

use_pip = True

exts_list = [
    ('editdistance', '0.6.2', {
        # https://github.com/roy-ht/editdistance/issues/105
        'source_tmpl': 'v%(version)s.tar.gz',
        'source_urls': ['https://github.com/roy-ht/editdistance/archive/refs/tags/'],
        'checksums': ['f6a785597719fc2300c717cd9db5b07a4dcde02f'],
    }),
    (name, version, {
        'modulename': 'umitools',
        'checksums': ['0bbb97fb4abb162af82e30916fba0ab19921b215'],
    }),
]

sanity_pip_check = True

moduleclass = 'tools'
