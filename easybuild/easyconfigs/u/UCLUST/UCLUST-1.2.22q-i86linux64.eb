# This file is an EasyBuild reciPY as per https://github.com/easybuilders/easybuild

easyblock = 'Binary'

name = 'UCLUST'
version = '1.2.22q'
versionsuffix = '-i86linux64'

homepage = 'https://www.drive5.com/usearch/index.html'
description = """UCLUST: Extreme high-speed sequence clustering, alignment and database search."""

toolchain = SYSTEM

# licensed for use with PyNAST and QIIME, see http://www.drive5.com/uclust/downloads1_2_22q.html
source_urls = ['https://www.drive5.com/%(namelower)s/']
local_uclust_bin = 'uclust%s%s_%s' % (version[-1], version[:-1], versionsuffix[1:])
sources = [local_uclust_bin]

checksums = ['1c547e21747efe7154fc2d93eebcb810740dd54ba5523e439e4a79ed8b120c7c']

install_cmd = "mkdir -p %%(installdir)s/bin && mv %s %%(installdir)s/bin/%%(namelower)s" % local_uclust_bin

sanity_check_paths = {
    'files': ['bin/%(namelower)s'],
    'dirs': [],
}

moduleclass = 'bio'
