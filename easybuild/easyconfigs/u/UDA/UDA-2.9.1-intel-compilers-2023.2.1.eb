easyblock = 'CMakeNinja'

name = 'UDA'
version = '2.9.1'

homepage = 'https://ukaea.github.io/UDA/'
description = """Universal Data Access"""

toolchain = {'name': 'intel-compilers', 'version': '2023.2.1'}
toolchainopts = {'pic': True}

source_urls = ['https://github.com/ukaea/UDA/archive/refs/tags']
sources = ['%(version)s.zip']
checksums = ['50b77bfdf1edab8304e5edd1f35f3505b8eaf64eb6b62a65da235702df5ec07a']

builddependencies = [
    ('CMake', '3.27.6'),
    ('Ninja', '1.11.1'),
    ('libMemcached', '1.0.18'),
]

dependencies = [
    ('libxml2', '2.11.5'),
    ('libtirpc', '1.3.4'),
    ('Boost', '1.83.0'),
    ('fmt', '10.2.1'),
    ('spdlog', '1.12.0'),
    ('CapnProto', '1.0.1.1'),
    ('OpenSSL', '1.1', '', SYSTEM),
]
max_parallel = 1

configopts = '-DBUILD_SHARED_LIBS=ON '
configopts += '-DBOOST_ROOT=${EBROOTBOOST} '
configopts += '-DENABLE_CAPNP=ON '
configopts += '-DSSLAUTHENTICATION=ON '

# Specify UDA hostname and port

# modextravars = {
#    'UDA_HOST': '',
#    'UDA_PORT': '',
# }
modextravars = {
    'UDA_HOST': 'io-ls-uda01.iter.org',
    'UDA_PORT': '56565',
}

sanity_check_paths = {
    'files': ['bin/uda_server',
              'bin/install_plugin',
              f'lib/libfatuda_client.{SHLIB_EXT}',
              f'lib/libuda_client.{SHLIB_EXT}',
              f'lib/libuda_plugins.{SHLIB_EXT}',
              f'lib/libuda_server.{SHLIB_EXT}', ],
    'dirs':  ['bin', 'etc/plugins',
              'include/uda/plugins',
              'lib/plugins',
              'modulefiles',
              'python_installer']
}

sanity_check_commands = [
    ('uda_cli', '--help'),
]

moduleclass = 'data'
