easyblock = 'CMakeMake'

name = 'uncrustify'
version = '0.82.0'

homepage = 'https://github.com/uncrustify/uncrustify'
description = '''
A source code beautifier for C, C++, C#, Objective-C, D, Java, Pawn and Vala.
'''

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = ['https://github.com/uncrustify/uncrustify/releases/download/uncrustify-%(version)s/']
sources = [SOURCELOWER_TAR_GZ]
checksums = ['3bb56ebdb16397d6c9dc6b5be8ed6e16ee158399019485d1c8fc4980f864a8bb']

builddependencies = [
    ('binutils', '2.44'),
    ('CMake', '4.0.3'),
    ('Python', '3.13.5'),
]

sanity_check_paths = {
    'files': ['bin/uncrustify'],
    'dirs': ['share/doc/uncrustify/'],
}
sanity_check_commands = ['uncrustify --version']

moduleclass = 'tools'
