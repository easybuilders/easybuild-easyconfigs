easyblock = 'CMakeMake'

name = 'UShER'
version = '0.4.1'

homepage = 'https://github.com/yatisht/usher'
description = """UShER is now a package consisting of a family of programs for 
rapid phylogenetic analyses, particularly suitable for the SARS-CoV-2 genomes."""

toolchain = {'name': 'gompi', 'version': '2021a'}

github_account = 'yatisht'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['61acdeaec61f2b376704b4a519bba44b7cffdebf315f8126aba0a80ac3268b0e']

builddependencies = [
    ('CMake', '3.20.1'),
]
dependencies = [
    ('tbb', '2020.3'),
    ('protobuf', '3.17.3'),
    ('MAFFT', '7.487', '-with-extensions'),
    ('Boost', '1.76.0'),
    ('Python', '3.9.5'),
    ('zlib', '1.2.11'),
]

