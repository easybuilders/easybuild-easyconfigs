@@ -33,6 +33,10 @@
 libpord$(PLAT)$(LIBEXT_SHARED):$(OBJS)
 	$(CC) -shared $(OBJS) -o libpord$(PLAT)$(LIBEXT_SHARED)
 
+libpord$(PLAT).so: $(OBJS)
