easyblock = 'PythonPackage'

name = 'MAGeCK'
version = '0.5.4'

homepage = 'https://sourceforge.net/projects/mageck/'
description = "Model-based Analysis of Genome-wide CRISPR-Cas9 Knockout"

#source_urls = [PYPI_SOURCE]
source_urls = 'http://netcologne.dl.sourceforge.net/project/mageck/0.5'
sources = ['%(namelower)s-%(version)s.tar.gz']

toolchain = {'name': 'dummy', 'version': 'dummy'}


osdependencies = [('python-devel', 'python-dev')]


modextrapaths = {'PYTHONPATH': 'lib/python%(pyshortver)s/site-packages/'}

sanity_check_paths = {
    'files': ['bin/mageck', 'bin/RRA'],
        'dirs': ['bin', 'lib'],
	}

	moduleclass = 'bio'
