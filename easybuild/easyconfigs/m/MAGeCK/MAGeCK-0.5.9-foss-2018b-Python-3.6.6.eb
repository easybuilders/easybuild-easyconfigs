easyblock = 'PythonPackage'

name = 'MAGeCK'
version = '0.5.9'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://sourceforge.net/projects/mageck/'
description = """Model-based Analysis of Genome-wide CRISPR-Cas9 Knockout (MAGeCK) is a computational tool
 to identify important genes from the recent genome-scale CRISPR-Cas9 knockout screens technology"""

toolchain = {'name': 'foss', 'version': '2018b'}

source_urls = ['https://sourceforge.net/projects/mageck/files/%(version_major_minor)s/']
sources = ['%(namelower)s-%(version)s.tar.gz']
checksums = ['a83be9fec4d1d4131b5e455324878f3675605bb1263c7788c66ee88103a992bd']

dependencies = [
    ('Python', '3.6.6'),
]

sanity_check_paths = {
    'files': ['bin/mageck', 'bin/mageckGSEA', 'bin/RRA'],
    'dirs': ['lib/python%(pyshortver)s/site-packages/mageck'],
}

moduleclass = 'bio'
