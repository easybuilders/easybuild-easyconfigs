# This easyconfig was created by the BEAR Software team at the University of Birmingham.
easyblock = 'Bundle'

name = 'msigdbr'
version = '7.4.1'
versionsuffix = '-R-%(rver)s'

homepage = "https://cran.r-project.org/package=msigdbr"
description = """Provides the 'Molecular Signatures Database' (MSigDB) gene sets typically used
  with the 'Gene Set Enrichment Analysis' (GSEA) software."""

toolchain = {'name': 'foss', 'version': '2020b'}

dependencies = [
    ('R', '4.0.3'),
]

exts_defaultclass = 'RPackage'
exts_filter = ("R -q --no-save", "library(%(ext_name)s)")
exts_default_options = {
    'source_urls': [
        'https://cran.r-project.org/src/contrib/Archive/%(name)s',  # package archive
        'https://cran.r-project.org/src/contrib/',  # current version of packages
        'https://cran.freestatistics.org/src/contrib',  # mirror alternative for current packages
    ],
    'source_tmpl': '%(name)s_%(version)s.tar.gz',
}


# Order is important!
exts_list = [
    ('babelgene', '21.4', {
        'checksums': ['c0f91ec94312baff35116f328fe47a43a01518f72128635a0c19eab146bd65be'],
    }),
    (name, version, {
        'checksums': ['21cb634e578c8cbc3c8f2c0cf46890356836a481382087a093f322b395287580'],
    }),
]

modextrapaths = {'R_LIBS': ''}

sanity_check_paths = {
    'files': ['msigdbr/R/msigdbr'],
    'dirs': [],
}

moduleclass = 'bio'
