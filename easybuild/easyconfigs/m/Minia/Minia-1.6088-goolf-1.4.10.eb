# This file is an EasyBuild reciPY as per https://github.com/hpcugent/easybuild
# Author: Pablo Escobar Lopez
# Swiss Institute of Bioinformatics
# Biozentrum - University of Basel

easyblock = 'MakeCp'

name = 'Minia'
version = '1.6088'

homepage = 'http://minia.genouest.org/'
description = """ Minia is a short-read assembler based on a de Bruijn graph, capable 
 of assembling a human genome on a desktop computer in a day. The output of Minia is a 
 set of contigs. Minia produces results of similar contiguity and accuracy to other de 
 Bruijn assemblers (e.g. Velvet)."""

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ['http://minia.genouest.org/files/']
sources = [SOURCELOWER_TAR_GZ]

parallel = 1

files_to_copy = [(["minia"], "bin"), "LICENSE", "README", "manual", "test"]
        
sanity_check_paths = {
    'files': ["bin/minia"],
    'dirs': ["manual"],
}

moduleclass = 'bio'

