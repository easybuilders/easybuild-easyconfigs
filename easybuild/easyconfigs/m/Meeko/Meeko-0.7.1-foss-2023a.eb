easyblock = 'PythonPackage'

name = 'Meeko'
version = '0.7.1'

homepage = 'https://github.com/forlilab/Meeko'
description = """"Meeko prepares the input for AutoDock and processes its
output.  It is developed alongside AutoDock-GPU and AutoDock-Vina.  Meeko
parameterizes both small organic molecules (ligands) and proteins and
nucleic acids (receptors)."""

toolchain = {'name': 'foss', 'version': '2023a'}

github_account = 'forlilab'
source_urls = ['https://github.com/forlilab/Meeko/archive/refs/tags/']
sources = ['v%(version)s.tar.gz']
checksums = ['b68416d1660d16ba654235cbe2901570fc78d856f446e7ec42891faac93a34cd']

dependencies = [
    ('Python', '3.11.3'),
    ('PyCairo', '1.25.0'),
    ('RDKit', '2024.03.3'),
    ('gemmi', '0.6.5'),
]

sanity_check_paths = {
    'files': [
        'bin/mk_prepare_ligand.py',
        'bin/mk_prepare_receptor.py',
        'bin/mk_export.py'
    ],
    'dirs': ['bin'],
}

sanity_check_commands = [
    'mk_prepare_ligand.py -h',
    'mk_prepare_receptor.py -h',
    'mk_export.py -h'
]

moduleclass = 'bio'
