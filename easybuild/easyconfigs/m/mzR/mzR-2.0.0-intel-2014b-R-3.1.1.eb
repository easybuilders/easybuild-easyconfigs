easyblock = 'RPackage'

name = 'mzR'
version = '2.0.0'

homepage = 'http://www.bioconductor.org/packages/release/bioc/html/mzR.html'
description = """mzR provides a unified API to the common file formats and
parsers available for mass spectrometry data. It comes with a wrapper for the
ISB random access parser for mass spectrometry mzXML, mzData and mzML files.
The package contains the original code written by the ISB, and a subset of the
proteowizard library for mzML and mzIdentML. The netCDF reading code has
previously been used in XCMS.
"""

toolchain = {'name': 'intel', 'version': '2014b'}

source_urls = ['http://bioconductor.org/packages/3.0/bioc/src/contrib/']
sources = ['%(name)s_%(version)s.tar.gz']

r = 'R'
rver = '3.1.1'
versionsuffix = '-%s-%s' % (r, rver)

dependencies = [
    (r, rver),
    ('netCDF', '4.2.1.1'),
]

moduleclass = 'bio'
