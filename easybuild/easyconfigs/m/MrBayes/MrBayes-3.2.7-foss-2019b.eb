name = 'MrBayes'
version = '3.2.7'

homepage = 'http://mrbayes.csit.fsu.edu'
description = "MrBayes is a program for the Bayesian estimation of phylogeny."

toolchain = {'name': 'foss', 'version': '2019b'}

sources = [{
    'filename': 'MrBayes-3.2.7.tar.gz',
    'git_config': {
        'url': 'https://github.com/NBISweden',
        'repo_name': 'MrBayes',
        'recursive': True,
        'tag': 'v3.2.7'
    },
}]

sources = ['mrbayes-%(version)s.tar.gz']

dependencies = [
    ('beagle-lib', '3.0.2'),
    ('libreadline', '8.0'),
]

builddependencies = [
        ('Autotools', '20180311'),
]

sanity_check_paths = {
    'files': ['bin/mb'],
    'dirs': ['share/'],
}


moduleclass = 'bio'
