builddependencies = [('CMake', '3.23.1')]

dependencies = [
    ('bzip2', '1.0.8'),
    ('zlib', '1.2.12'),
]

sanity_check_paths = {
    'files': ['bin/metaeuk'],
    'dirs': [],
}

sanity_check_commands = ["metaeuk --help"]

moduleclass = 'bio'
