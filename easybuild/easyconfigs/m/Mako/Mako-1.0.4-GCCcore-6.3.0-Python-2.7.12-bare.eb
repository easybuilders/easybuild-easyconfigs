easyblock = 'PythonPackage'

name = 'Mako'
version = '1.0.4'
pyver = '2.7.12'
pyshortver = '2.7'
pysuff = '-bare'
versionsuffix = '-Python-%s%s' % (pyver, pysuff)

homepage = 'http://www.makotemplates.org'

description = """
 A super-fast templating language that borrows the best ideas from the
 existing templating languages
"""

toolchain = {'name': 'GCCcore', 'version': '6.3.0'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]

builddependencies = [
    ('Python', pyver, pysuff),
    ('setuptools', '32.0.0', versionsuffix),
]

sanity_check_paths = {
    'dirs': ['lib/python%s/site-packages/%%(name)s-%%(version)s-py%s.egg' %
             (pyshortver, pyshortver)],
    'files': ['bin/mako-render'],
}

moduleclass = 'devel'
