easyblock = 'MakeCp'

name = 'mpreal'
version = '3.7.2'

homepage = 'https://github.com/advanpix/mpreal'
description = """MPFR C++ (MPREAL): Multiple precision floating point
arithmetic library for C++.
Thread-safe, cross-platform (MSVC, GCC, ICC), one-header C++ library.
Supports C++11 features if available, C++03 compatible otherwise."""

toolchain = SYSTEM

github_account = 'advanpix'
source_urls = [GITHUB_SOURCE]
sources = ['mpfrc++-%(version)s.tar.gz']
checksums = ['5e31deda0809da078bff43eda7d1117545818f4704f97289c92c34b6f91c2923']

skipsteps = ['build']

files_to_copy = [(['mpreal.h'], 'include')]

sanity_check_paths = {
    'files': ['include/mpreal.h'],
    'dirs': [],
}

moduleclass = 'lib'
