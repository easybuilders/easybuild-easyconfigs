# Author: Erik B Knudsen
# United Neux

easyblock = 'CMakeMake'

name = 'McStas'
version = '3.6.1'

homepage = 'https://mcstas.org'
description = "McStas is a Monte Carlo ray tracing neutron instrumentaton and experiment simulation packages."

toolchain = {'name': 'foss', 'version': '2023a'}

source_urls = ["https://github.com/mccode-dev/McCode/archive/refs/tags/"]
sources = ['v%(version)s.tar.gz']
checksums = ['b9359f400b348261675fd026a4c1c0dc1b3c46bd396e875d439d78e3dd667815']

builddependencies = [
    ('CMake', '3.31.8'),
    ('Bison', '3.8.2'),
    ('flex', '2.6.4'),
]

dependencies = [
    ('Python', '3.11.3'),
    ('SciPy-bundle', '2023.07'),
    ('PyYAML', '6.0'),
    ('mcpl', '2.2.0'),
]

configopts = ' '.join([
    '-DMCVERSION=%(version)s',
    '-DBUILD_MCSTAS=ON',
    '-DBUILD_MCXRUN=ON',
    '-DENSURE_NCRYSTAL=OFF',
    '-DENSURE_MCPL=OFF',  # Use mcpl from dependency instead of rebuilding it
    '-DBUILD_TOOLS=OFF',
    '-DMCCODE_USE_LEGACY_DESTINATIONS=OFF'
])

sanity_check_paths = {
    'files': ["bin/mcstas"],
    'dirs': ['share/mcstas/resources/samples', 'share/mcstas/resources/share', 'share/mcstas/resources/optics'],
}

sanity_check_commands = [
    "mcstas -v"
]

modextravars = {'MCSTAS': "%(installdir)s/%(namelower)s/%(version)s"}

moduleclass = 'phys'
