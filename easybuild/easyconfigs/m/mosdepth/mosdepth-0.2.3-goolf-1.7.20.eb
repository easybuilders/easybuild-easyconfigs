easyblock='Binary'

name = "mosdepth"
version = "0.2.3"

homepage = 'https://github.com/brentp/mosdepth/'
description = "fast BAM/CRAM depth calculation for WGS, exome, or targeted sequencing"

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['https://github.com/brentp/mosdepth/releases/download/v%(version)s/']
sources = ['%(name)s']
checksums = ['0aaeb283b296e5ee0a2d819b4842b92289145ed17a37210144f0e02edd3629c4']

dependencies = [
    ('HTSlib', '1.7'),
]

install_cmd = "mkdir -p %(installdir)s/bin &&"
install_cmd += "cp mosdepth %(installdir)s/bin/"

sanity_check_paths = {
    'files': ['bin/mosdepth'],
    'dirs': []
}

moduleclass = 'bio'
