easyblock = "Tarball"

name = 'Minimac2'
version = '2014.9.15'

homepage = 'http://genome.sph.umich.edu/wiki/Minimac2'
description = """minimac2 is an improved version of Minimac. 
It is designed to work on phased genotypes and can handle very 
large reference panels with hundreds or thousands of haplotypes."""

toolchain = {'name': 'intel', 'version': '2015b'}

source_urls = ['http://csg.sph.umich.edu/cfuchsb/']
sources = ['minimac2.%(version)s.tgz']

dependencies = [('zlib', '1.2.8')]

modextrapaths = {'PATH': ''}

sanity_check_paths = {
    'files': ["minimac2", "minimac2-omp"],
    'dirs': []
}

moduleclass = 'bio'
