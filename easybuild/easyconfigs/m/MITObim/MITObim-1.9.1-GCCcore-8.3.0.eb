easyblock = "CmdCp"

name = 'MITObim'
version = '1.9.1'

homepage = "https://github.com/chrishah/MITObim"
description = """The MITObim procedure (mitochondrial baiting and iterative mapping) represents
 a highly efficient approach to assembling novel mitochondrial genomes of non-model organisms
 directly from total genomic DNA derived NGS reads."""

toolchain = {'name': 'GCCcore', 'version': '8.3.0'}

source_urls = ['https://raw.githubusercontent.com/chrishah/MITObim/v1.9.1/']
sources = [{'filename': 'MITObim.pl', 'extract_cmd': "cp %s ."}]
checksums = ['8f83be5391db8a282e8c193b23e53c8d99c9894fb6990ea06de1321207ba6dd3']

dependencies = [
    ('Perl', '5.30.0'),
    ('MIRA', '4.0.2', '', True),
]

cmds_map = [('MITObim.pl', "chmod a+rx MITObim.pl")]

files_to_copy = [
    (['MITObim.pl'], 'bin'),
]

sanity_check_paths = {
    'files': ["bin/MITObim.pl"],
    'dirs': []
}

moduleclass = "bio"
