easyblock = 'Tarball'

name = 'mlst'
version = '2.32.2'

homepage = "https://github.com/tseemann/mlst"
description = "Scan contig files against PubMLST typing schemes"

toolchain = {'name': 'foss', 'version': '2024a'}

source_urls = ['https://github.com/tseemann/mlst/archive/refs/tags/']
sources = ['v2.32.2.tar.gz']
checksums = ['39ccb39e9b3ba6d0e235281626ac2f2c39811aa509e5eb12c949f58bc65e04bf']

dependencies = [
    ('Perl', '5.38.2'),
    ('Perl-bundle-CPAN', '5.38.2'),
    ('any2fasta', '0.8.1'),
    ('BLAST+', '2.16.0'),
]

sanity_check_paths = {
    'files': ['bin/%(name)s'],
    'dirs': ['scripts', 'db'],
}

sanity_check_commands = [
    "mlst --help",
]

moduleclass = 'bio'
