name = 'Mothur'
version = '1.46.1'

homepage = 'https://www.mothur.org/'
description = """Mothur is a single piece of open-source, expandable software
 to fill the bioinformatics needs of the microbial ecology community."""

toolchain = {'name': 'foss', 'version': '2020b'}
toolchainopts = {'usempi': True, 'cstd': 'c++11'}

source_urls = ['https://github.com/mothur/mothur/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['29b500b3c92d726cde34922f697f2e47f0b7127d76d9a6fb167cc2b8ba3d00fd']    # v1.46.1.tar.gz

dependencies = [
    ('Python', '3.8.6'),
    ('Boost.Python', '1.74.0'),
    ('HDF5', '1.10.7'),
    ('libreadline', '8.0'),
    ('ncurses', '6.2'),
    ('zlib', '1.2.11'),
]

sanity_check_commands = ['mothur --help']

moduleclass = 'bio'
