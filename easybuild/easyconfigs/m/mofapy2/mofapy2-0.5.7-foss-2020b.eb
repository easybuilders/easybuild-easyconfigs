# This easyconfig was created by James Carpenter of the BEAR Software team at the University of Birmingham.
easyblock = 'PythonPackage'

name = 'mofapy2'
version = '0.5.7'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://pypi.org/project/MedPy/'
description = """MOFA is a factor analysis model that provides a general framework for the integration of multi-omic
 data sets in an unsupervised fashion."""

toolchain = {'name': 'foss', 'version': '2020b'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]
patches = ['mofapy2_removeargparse.patch']
checksums = [
    '99d15ce8afbce7f26a60a3ff23fffb48a4b7ba1e1e12244093d916d5f4fe24de',  # mofapy2-0.5.7.tar.gz
    '50f30cb556793fec1d1726222a928ff98b4350f928163a6c70bdfc2cb8918b85',  # mofapy2_removeargparse.patch
]

dependencies = [
    ('Python', '3.8.6'),
    ('SciPy-bundle', '2020.11'),
    ('scikit-learn', '0.23.2'),
    ('h5py', '3.1.0')
]

use_pip = True


sanity_pip_check = True
download_dep_fail = True

moduleclass = 'bio'
