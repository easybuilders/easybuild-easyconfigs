name = 'MeDUSA'
version = '2.1'

easyblock = 'PackedBinary'

homepage = 'http://www2.cancer.ucl.ac.uk/medicalgenomics/medusa/'
description = """MeDUSA is a computational pipeline bringing together numerous software packages
to perform a full analysis of MeDIP-seq data, including sequence alignment, quality control (QC),
and determination and annotation of DMRs."""

toolchain = {'name': 'dummy', 'version': 'dummy'}

source_urls = [('http://www2.cancer.ucl.ac.uk/medicalgenomics/medusa/')]
sources = ['%s_v%s.tar.gz' % (name.lower(), '_'.join(version.split('.')))]

dependencies = [
    ('Perl', '5.16.3-goolf-1.4.10'),
    ('R', '3.0.2-goolf-1.4.10'),
    ('BWA', '0.7.4-goolf-1.4.10'),
    ('SAMtools', '0.1.18-goolf-1.4.10'),
    ('FastQC', '0.10.1-Java-1.7.0_21'),
    ('BEDTools', '2.18.1-goolf-1.4.10'),
    ('Config-Simple', '4.59-goolf-1.4.10-Perl-5.16.3'),
    ('Parallel-ForkManager', '1.06-goolf-1.4.10-Perl-5.16.3')
]


sanity_check_paths = { 
    'files': ['medusa.pl', 'README'],
    'dirs': ['config_files', 'medusa_pipeline', 'perl_scripts', 'R_scripts']
}

moduleclass = 'bio'
