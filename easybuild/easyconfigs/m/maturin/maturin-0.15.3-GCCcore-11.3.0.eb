easyblock = 'PythonBundle'

name = 'maturin'
version = '0.15.3'

homepage = 'https://github.com/pyo3/maturin'
description = """Build and publish crates with pyo3, rust-cpython, cffi and uniffi bindings as   
well as rust binaries as python packages"""

toolchain = {'name': 'GCCcore', 'version': '11.3.0'}

use_pip = True
sanity_pip_check = True

builddependencies = [
    ('binutils', '2.38'),
    ('Rust', '1.65.0'),
]
dependencies = [
    ('Python', '3.10.4'),
]

exts_list = [
    ('setuptools', '65.6.3', {
        'checksums': ['a7620757bf984b58deaf32fc8a4577a9bbc0850cf92c20e1ce41c38c19e5fb75'],
    }),
    ('setuptools-rust', '1.5.2', {
        'checksums': ['d8daccb14dc0eae1b6b6eb3ecef79675bd37b4065369f79c35393dd5c55652c7'],
    }),
    (name, version, {
        'checksums': ['6549802af70bc515ac21a7094234d824ffc95b517da970cf004d7a341dc6d370'],
    }),
]

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'devel'
