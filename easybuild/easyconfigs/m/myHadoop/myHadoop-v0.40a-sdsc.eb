easyblock = 'PackedBinary'

name = 'myHadoop'
version = 'v0.40a-sdsc'

homepage = 'https://github.com/glennklockwood/myhadoop'
description = """myhadoop provides a framework for launching Hadoop clusters 
 within traditional high-performance compute clusters and supercomputers."""

toolchain = {'name': 'dummy', 'version': 'dummy'}
toolchainopts = {}  # toolchain options, e.g. opt, pic, usempi, optarch, ...

sources = ['%(version)s.tar.gz']
source_urls = ['https://github.com/glennklockwood/myhadoop/archive']

patches = [
    'myhadoop-configure.patch',
    'torque.qsub.patch',
]

dependencies = [
    ('Java', '1.7.0_80'),
]

sanity_check_paths = {
    'files': ["bin/myhadoop-configure.sh"],
    'dirs': ["bin","etc","examples"]
}

moduleclass = 'devel'
