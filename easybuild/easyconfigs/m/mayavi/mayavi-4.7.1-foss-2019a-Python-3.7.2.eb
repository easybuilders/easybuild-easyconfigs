        'checksums': ['7c2ac3d5cbec85e8504b3b0b63e9307be12c6d710b46bae372ce6562d41f4fbc'],
    }),
    ('traitsui', '6.1.3', {
        'checksums': ['48381763b181efc58eaf288431d1d92d028d0d97dfdd33eba7809aae8aef814f'],
