easyblock = 'Tarball'

name = 'mirtrace'
version = '1.0.1'
versionsuffix = '-Java-%(javaver)s'

homepage = 'https://friedlanderlab.org/software/mirtrace/'
description = """A quality control and taxonomic tracing tool developed specifically for small RNA sequencing data (sRNA-Seq)."""

toolchain = SYSTEM

source_urls = ['https://github.com/friedlanderlab/mirtrace/releases/download/v%(version)s']
sources = ['%(name)s-v%(version)s.zip']

checksums = ['952e9b07d7a16ee475652683e780ce3e6b9f8261a75c2154893f25ae5177b8cd']

dependencies = [('Java', '17')]

sanity_check_commands = ['java -jar $EBROOTMIRTRACE/mirtrace.jar 2>&1 | grep USAGE']

sanity_check_paths = {
    'files': ['mirtrace.jar'],
    'dirs': [],
}

modloadmsg = "To execute picard run: java -jar $EBROOTMIRTRACE/%(name)s.jar"

moduleclass = 'bio'