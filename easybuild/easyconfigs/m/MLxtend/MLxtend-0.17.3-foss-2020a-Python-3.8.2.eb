easyblock = 'PythonPackage'

name = 'MLxtend'
version = '0.17.3'
versionsuffix = '-Python-%(pyver)s'

homepage = "https://rasbt.github.io/mlxtend/"
description = """Mlxtend (machine learning extensions) is a Python library of useful tools for the day-to-day data
 science tasks."""

toolchain = {'name': 'foss', 'version': '2020a'}

dependencies = [
    ('Python', '3.8.2'),
    ('matplotlib', '3.2.1', versionsuffix),
    ('scikit-learn', '0.23.1', versionsuffix),
    ('SciPy-bundle', '2020.03', versionsuffix),
]

sources = [SOURCELOWER_TAR_GZ]
checksums = ['66d10059630a84c394cd8d82bca62c3da77b9fe6566f03656f2b52e353b8fe06']

download_dep_fail = True
sanity_pip_check = True
use_pip = True

moduleclass = 'data'
