#  mOTUs
#
easyblock = 'PythonPackage'

name = 'mOTUs'
version = '3.0.3'

homepage = 'https://github.com/motu-tool/mOTUs'

description = """
  The mOTU profiler is a computational tool that estimates relative taxonomic abundance of known and currently unknown
  microbial community members using metagenomic shotgun sequencing data.
"""

toolchain = {'name': 'GCCcore', 'version': '11.3.0'}

github_account = 'motu-tool'
source_urls = ['https://github.com/motu-tool/mOTUs/archive/refs/tags/']
sources = ['%(version)s.tar.gz']

builddependencies = [
    ('Python', '3.10.4'),
]

dependencies = [
    ('Python', '3.10.4'),
    ('SAMtools', '1.16.1'),
    ('BWA', '0.7.17'),
]

sanity_check_paths = {
    'files': ['bin/%(namelower)s'],
    'dirs': [],
}
use_pip = 'true'

#  post_install_cmd = "SSL_CERT_FILE=/etc/pki/ca-trust/extracted/pem/tls-ca-bundle.pem motus downloadDB"
#  sanity_check_commands = ['%(namelower)s profile --test']

modextrapaths = {'PATH': ''}

moduleclass = 'bio'
