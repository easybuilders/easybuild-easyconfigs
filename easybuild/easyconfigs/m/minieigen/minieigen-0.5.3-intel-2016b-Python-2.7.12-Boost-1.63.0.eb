easyblock = 'PythonPackage'

name = 'minieigen'
version = '0.5.3'
boostver = '1.63.0'
versionsuffix = '-Python-%%(pyver)s-Boost-%s' % boostver

homepage = 'https://launchpad.net/minieigen/'
description = """A small wrapper for core parts of EIgen, c++ library for linear algebra."""

toolchain = {'name': 'intel', 'version': '2016b'}

sources = [SOURCE_TAR_GZ]
source_urls = [PYPI_SOURCE]

dependencies = [
    ('Boost', boostver, '-Python-%(pyver)s'),
    ('Eigen', '3.3.3'),
    ('Python', '2.7.12'),
]

sanity_check_paths = {
    'files': ['lib/python%%(pyshortver)s/site-packages/minieigen.%s' % SHLIB_EXT],
    'dirs': [],
}

moduleclass = 'lib'
