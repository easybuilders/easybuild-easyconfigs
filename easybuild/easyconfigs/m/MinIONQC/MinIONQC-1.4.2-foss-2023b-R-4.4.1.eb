easyblock = 'Tarball'

name = 'MinIONQC'
version = '1.4.2'
versionsuffix = '-R-%(rver)s'

homepage = 'https://github.com/roblanf/minion_qc'
description = """Fast and effective quality control for MinION and PromethION sequencing data"""

toolchain = {'name': 'foss', 'version': '2023b'}

source_urls = ['https://github.com/roblanf/minion_qc/archive/refs/tags/']
sources = ['%(version)s.tar.gz']
checksums = ['d86b47151ecb1021f508b4c62cfc42d6b3eb7c32f07a26e74528e3c7d793d5db']

dependencies = [
    ('R', '4.4.1'),
    ('R-bundle-CRAN', '2024.06'),
]

modextrapaths = {'PATH': ''}

sanity_check_paths = {
    'files': ['MinIONQC.R'],
    'dirs': [''],
}

sanity_check_commands = ["MinIONQC.R --help 2>&1 | grep 'Usage: %(installdir)s/MinIONQC.R'"]

moduleclass = 'bio'
