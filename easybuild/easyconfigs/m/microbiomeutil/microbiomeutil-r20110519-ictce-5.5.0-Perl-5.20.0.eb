easyblock = 'MakeCp'

name = 'microbiomeutil'
version = 'r20110519'

homepage = 'http://sourceforge.net/projects/cdbfasta/'
description = """fast indexing and retrieval of fasta records from flat file databases."""

toolchain = {'name': 'ictce', 'version': '5.5.0'}

source_urls = [SOURCEFORGE_SOURCE]
sources = [SOURCE_TGZ]

perl = 'Perl'
perlver = '5.20.0'
versionsuffix = '-%s-%s' % (perl, perlver)

dependencies = [
    ('BLAST', '2.2.26', '-Linux_x86_64', True),
    ('cdbfasta', '20100722'),
    (perl, perlver),
]

runtest = 'test'

files_to_copy = [
    (['NAST-iEr/NAST-iEr', 'NAST-iEr/run_NAST-iEr.pl'], 'bin'),
    (['WigeoN/run_WigeoN.pl', 'WigeoN/WigeoN.pl'], 'bin'),
    (['ChimeraSlayer/ChimeraSlayer.pl'], 'bin'),
]

sanity_check_paths = {
    'files': ['bin/NAST-iEr', 'bin/run_NAST-iEr.pl', 'bin/WigeoN.pl', 'bin/run_WigeoN.pl', 'bin/ChimeraSlayer.pl'],
    'dirs': [],
}

moduleclass = 'bio'
