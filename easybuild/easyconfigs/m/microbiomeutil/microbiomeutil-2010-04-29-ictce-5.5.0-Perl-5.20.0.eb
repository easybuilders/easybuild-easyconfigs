easyblock = 'MakeCp'

name = 'microbiomeutil'
version = '2010-04-29'

homepage = 'http://sourceforge.net/projects/microbiomeutil/'
description = """A set of software utilities for processing and analyzing 16S rRNA genes including generating NAST
 alignments, chimera checking, and assembling paired 16S rRNA reads according to reference sequence homology."""

toolchain = {'name': 'ictce', 'version': '5.5.0'}

source_urls = [
    SOURCEFORGE_SOURCE,
    'http://downloads.sourceforge.net/project/microbiomeutil/__OLD_VERSIONS',
]
sources = ['%(name)s_%(version)s.tar.gz']

perl = 'Perl'
perlver = '5.20.0'
versionsuffix = '-%s-%s' % (perl, perlver)

dependencies = [
    ('BLAST', '2.2.22', '-Linux_x86_64', True),
    ('cdbfasta', '20100722'),
    (perl, perlver),
]

runtest = 'test'

files_to_copy = [
    (['NAST-iEr/NAST-iEr', 'NAST-iEr/run_NAST-iEr.pl'], 'bin'),
    (['WigeoN/run_WigeoN.pl', 'WigeoN/WigeoN.pl'], 'bin'),
    (['ChimeraSlayer/ChimeraSlayer.pl'], 'bin'),
]

sanity_check_paths = {
    'files': ['bin/NAST-iEr', 'bin/run_NAST-iEr.pl', 'bin/WigeoN.pl', 'bin/run_WigeoN.pl', 'bin/ChimeraSlayer.pl'],
    'dirs': [],
}

moduleclass = 'bio'
