easyblock = 'PythonPackage'

name = 'molscrub'
version = '0.2.2'

homepage = 'https://github.com/forlilab/molscrub'
description = """"Process large numbers of small molecules for docking with
AutoDock.  May be useful for structure-based modeling in general."""

toolchain = {'name': 'foss', 'version': '2023a'}

github_account = 'forlilab'
source_urls = ['https://github.com/forlilab/molscrub/archive/refs/tags/']
sources = ['%(version)s.tar.gz']
checksums = ['985343bab1c64685a718f90c608e43754b973218e3de157f514cf83e4ccb5199']

dependencies = [
    ('Python', '3.11.3'),
    ('RDKit', '2024.03.3'),
]

sanity_check_paths = {
    'files': [
        'bin/scrub.py',
    ],
    'dirs': [],
}

sanity_check_commands = [
    'scrub.py -h'
]

moduleclass = 'bio'
