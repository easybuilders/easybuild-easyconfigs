easyblock = 'EB_Qt'

name = 'Qt'
version = '4.8.7'
pyver = '2.7.12'
pyshortver = '2.7'
pysubver = '-bare'
versionsuffix = '-Python-%s%s' % (pyver, pysubver)

homepage = 'http://qt.io/'

description = "Qt is a comprehensive cross-platform C++ application framework."

toolchain = {'name': 'GCCcore', 'version': '6.3.0'}
toolchainopts = {'cstd': 'gnu++98'}

source_urls = [
    'http://download.qt.io/official_releases/qt/%(version_major_minor)s/%(version)s/',
    'http://download.qt.io/archive/qt/%(version_major_minor)s/%(version)s/'
]
sources = ['%(namelower)s-everywhere-opensource-src-%(version)s.tar.gz']

patches = ['Qt-%(version)s_phonon-export.patch']

dependencies = [
    ('GLib', '2.51.0', versionsuffix),
    ('libGLU', '9.0.0', versionsuffix),
    ('libpng', '1.6.26'),
    ('X11', '20161215', versionsuffix),
]

osdependencies = [
    ('pkgconfig'),
]

moduleclass = 'devel'
