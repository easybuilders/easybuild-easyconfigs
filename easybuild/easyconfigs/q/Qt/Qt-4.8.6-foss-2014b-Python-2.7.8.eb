name = 'Qt'
version = '4.8.6'

homepage = 'http://qt-project.org/'
description = "Qt is a comprehensive cross-platform C++ application framework."

toolchain = {'name': 'foss', 'version': '2014b'}

source_urls = ['http://download.qt-project.org/official_releases/qt/4.8/4.8.6/']
sources = ['%(namelower)s-everywhere-opensource-src-%(version)s.tar.gz']

python = 'Python'
pyver = '2.7.8'
versionsuffix = '-%s-%s' % (python, pyver)

dependencies = [
    ('GLib', '2.41.2'),
    ('libxcb', '1.10', versionsuffix),
    ('libX11', '1.6.2', versionsuffix),
    ('libXi', '1.7.4', versionsuffix),
]

configopts="-confirm-license -opensource -silent"

sanity_check_paths = {
    'files': ['lib/libQtCore.so'],
	 'dirs': [],
}
moduleclass = 'devel'
