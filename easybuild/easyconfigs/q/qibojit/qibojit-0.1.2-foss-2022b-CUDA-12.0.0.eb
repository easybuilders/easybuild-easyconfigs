easyblock = 'PythonBundle'

name = 'qibojit'
version = '0.1.2'
versionsuffix = '-CUDA-%(cudaver)s'

homepage = 'https://github.com/qiboteam/qibojit'
description = """This package provides acceleration features for Qibo simulations
 using just-in-time (JIT) custom kernel with numba and cupy."""

toolchain = {'name': 'foss', 'version': '2022b'}

dependencies = [
    ('CUDA', '12.0.0', '', SYSTEM),
    ('CuPy', '12.1.0', versionsuffix),
    ('Python', '3.10.8'),
    ('numba', '0.58.1'),
    ('psutil', '5.9.5'),
    ('qibo', '0.2.4'),
]

use_pip = True

exts_list = [
    (name, version, {
        'checksums': ['d01a51434de5c2393274f5c095e0f89feac8be3709f1703da840e45b0c89cb72'],
    }),
]

sanity_pip_check = True

moduleclass = 'quantum'
