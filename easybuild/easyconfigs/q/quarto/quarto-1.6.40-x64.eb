easyblock = 'Tarball'

name = 'quarto'
version = '1.6.40'
versionsuffix = '-x64'

homepage = 'https://quarto.org/'
description = "Quarto is an open-source scientific and technical publishing system built on Pandoc."

toolchain = {'name': 'system', 'version': 'system'}

source_urls = ['https://github.com/quarto-dev/quarto-cli/releases/download/v%(version)s/']
sources = ['%(name)s-%(version)s-linux-amd64.tar.gz']
checksums = ['77be18b02b414847714aeaa73d1a3a397c429c5d75f0bebd77df5c9cf974e7fa']

modextrapaths = {'PATH': ''}

sanity_check_paths = {
    'files': ['bin/%(name)s'],
    'dirs': []
}

sanity_check_commands = ["%(name)s check"]

moduleclass = 'devel'
