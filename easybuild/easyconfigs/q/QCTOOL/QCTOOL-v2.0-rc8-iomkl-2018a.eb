# This easyconfig was created by the BEAR Software team at the University of Birmingham.
easyblock = 'Waf'
name = 'QCTOOL'
version = 'v2.0-rc8'

homepage = "http://www.well.ox.ac.uk/~gav/qctool_v2/index.html"
description = """QCTOOL is a command-line utility program for manipulation and quality control
 of gwas datasets and other genome-wide data."""

toolchain = {'name': 'iomkl', 'version': '2018a'}

sources = ['76dbb1fe92b1.tar.gz']
source_urls = ['https://bitbucket.org/gavinband/qctool/get/']

dependencies = [
    ('zlib', '1.2.11'),
]
preconfigopts = 'ln -s waf-1.5.18 waf && '

sanity_check_paths = {
    'files': ['bin/qctool_v2.0-rc8'],
    'dirs': ['bin'],
}

moduleclass = 'bio'
