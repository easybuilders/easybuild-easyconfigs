easyblock = 'PythonPackage'

name = 'QuTiP'
version = '4.7.1'

homepage = 'http://qutip.org'
description = """QuTiP is open-source software for simulating the dynamics of open quantum systems."""

toolchain = {'name': 'foss', 'version': '2021b'}

source_urls = ['http://github.com/%(namelower)s/%(namelower)s/archive']
sources = ['v%(version)s.tar.gz']
checksums = ['9b40ce42e881061c3fe4f0484bc049d4dc9afc1931826836231313c4f8ab321d']

dependencies = [
    ('Python', '3.9.6'),
    ('matplotlib', '3.4.3'),
]

use_pip = True
download_dep_fail = True
sanity_pip_check = True

# verify installation (takes a while), best performed with > 10 CPUs
# see also http://qutip.org/docs/latest/installation.html#verifying-the-installation
sanity_check_commands = ["python -c 'import qutip.testing as qt; qt.run()'"]

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'chem'
