    'ab03365b23ae3b7c2d93c6f56370e0fd60c6f5b570a8346b84fd42436a1da13b',  # tddfpt-5.4.0.tar.gz
    '8ebbba51e074bda68b7ffad3e32658a9849e1a3b26941adfc778876a1bfe5b38',  # want-2.5.1-base.tar.gz
