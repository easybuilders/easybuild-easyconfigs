easyblock = 'PythonPackage'

name = 'QUAST'
version = '4.4'
versionsuffix = '-Python-%(pyver)s'

homepage = 'http://quast.sourceforge.net/quast'
description = """QUAST evaluates genome assemblies.

QUAST works both with and without a reference genome. 
The tool accepts multiple assemblies, thus is suitable for comparison."""

toolchain = {'name': 'foss', 'version': '2016a'}

source_urls = ['https://github.com/ablab/%(namelower)s/archive/']
sources = ['%(namelower)s_%(version)s.tar.gz']

dependencies = [
    ('Python', '2.7.11'),
    ('Boost', '1.61.0'),
    ('matplotlib', '1.5.1', '-Python-%(pyver)s')
]

options = {'modulename': 'site'}

sanity_check_paths = {
    'files': ['bin/quast.py'],
    'dirs': [''],
}

moduleclass = 'bio'
