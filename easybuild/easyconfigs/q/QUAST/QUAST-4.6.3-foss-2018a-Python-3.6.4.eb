easyblock = 'PythonBundle'

name = 'QUAST'
version = '4.6.3'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://github.com/ablab/%(namelower)s'
description = """QUAST evaluates genome assemblies by computing various metrics.
 It works both with and without reference genomes. The tool accepts multiple
 assemblies, thus is suitable for comparison."""

toolchain = {'name': 'foss', 'version': '2018a'}
toolchainopts = {'pic': True}

dependencies = [
    ('Python', '3.6.4'),
    ('Perl', '5.26.1'),
    ('matplotlib', '2.1.2', versionsuffix),
    ('Java', '1.8.0_162', '', True),
    ('Boost', '1.66.0'),
]

use_pip = True

exts_list = [
    ('simplejson', '3.16.0', {
        'source_urls': ['https://pypi.python.org/packages/source/s/simplejson'],
        'checksums': ['b1f329139ba647a9548aa05fb95d046b4a677643070dc2afc05fa2e975d09ca5'],
    }),
    (name, version, {
        'source_tmpl': 'quast_%(version)s.tar.gz',
        'source_urls': ['https://github.com/ablab/quast/archive/'],
        'checksums': ['d7f5e670563d17d683f6df057086f7b816b6a088266c6270f7114a1406aaab63'],
        'install_target': 'install_full',
        'modulename': 'quast_libs',
    }),
]

postinstallcmds = [
    "cd %(installdir)s/bin && ln -s quast.py quast",
    # test_data doesn't get copied when QUAST 4.6.x is installed with pip
    "cp -a %(builddir)s/QUAST/quast-quast_%(version)s/test_data %(installdir)s/lib/python%(pyshortver)s/site-packages/",
]

sanity_check_paths = {
    'files': ['bin/%(namelower)s', 'bin/%(namelower)s.py', 'bin/meta%(namelower)s.py'],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

sanity_check_commands = [
    "%(namelower)s.py --test",
    "%(namelower)s -h",
]

moduleclass = 'bio'
