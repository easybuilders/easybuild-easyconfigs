easyblock = "PythonPackage"

name = 'qcli'
version = '0.1.0'

homepage = 'https://pypi.python.org/pypi/qcli'
description = """Utilities for parsing command line options and arguments"""

toolchain = {'name': 'ictce', 'version': '5.5.0'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]

python = "Python"
pythonversion = '2.7.7'
pythonshortversion = ".".join(pythonversion.split(".")[:-1])

versionsuffix = "-%s-%s" % (python, pythonversion)

dependencies = [(python, pythonversion)]

sanity_check_paths = {
    'files': ['bin/qcli_make_rst','bin/qcli_make_script'],
    'dirs': ['lib/python%s/site-packages/qcli' % pythonshortversion],
}

moduleclass = 'devel'
