name = 'QIIME'
version = '1.8.0'

homepage = 'http://qiime.sourceforge.net/'
description = """QIIME (canonically pronounced 'Chime') is a pipeline for performing microbial community analysis
 that integrates many third party tools which have become standard in the field."""

toolchain = {'name': 'ictce', 'version': '5.5.0'}

source_urls = [
    'https://github.com/biocore/qiime/archive/',
    'http://greengenes.lbl.gov/Download/Sequence_Data/Fasta_data_files/',
    'http://greengenes.lbl.gov/Download/Sequence_Data/',
    'ftp://greengenes.microbio.me/greengenes_release/gg_13_5/',
]
sources = [
    '%(version)s.tar.gz',
    'gg_13_5_otus.tar.gz',
]
patches = [
    ('core_set_aligned.fasta.imputed', '.'),
    ('lanemask_in_1s_and_0s', '.'),
    'QIIME-1.8.0_print_qiime_config.patch',
    'QIIME-1.8.0_disable-sff-tests.patch',
]

python = 'Python'
pythonver = '2.7.3'
versionsuffix = '-%s-%s' % (python, pythonver)

builddependencies = [('GHC', '6.12.3', '', True)]

dependencies = [
    (python, pythonver),  # also provides numpy
    ('PyNAST', '1.2.1', versionsuffix),
    ('UCLUST', '1.2.22q', '-i86linux64', True),
    ('biom-format', '1.3.1', versionsuffix),
    ('qcli', '0.1.0', versionsuffix),
    ('matplotlib', '1.3.1', versionsuffix),
    ('Emperor', '0.9.3', versionsuffix),
    ('FastTree', '2.1.3'),
    ('CD-HIT', '3.1.1', '-2007-02-01'),
    ('MUSCLE', '3.8.31'),
    ('BLAST', '2.2.22', '-Linux_x86_64', True),
    ('BLAT', '3.5', '-libpng-1.6.9'),
    ('RDP-Classifier', '2.2', '-Java-1.7.0_60', True),
    ('RAxML', '7.3.0', '-hybrid-sse3'),
    ('tax2tree', '1.0', versionsuffix),
    ('R', '3.1.0'),
    ('Mothur', '1.25.0'),
    ('clearcut', '1.0.9'),
    ('cdbfasta', '20100722'),
    ('microbiomeutil', '2010-04-29', '-Perl-5.20.0'),  # provides ChimeraSlayer
    ('BWA', '0.7.10'),
    ('Infernal', '1.0.2'),
    ('AmpliconNoise', '1.27'),
    ('USEARCH', '5.2.236-6.1.544', '-i86linux32', True),
    ('rtax', '0.984', '', True),
    ('ea-utils', '1.1.2-686'),
    ('SeqPrep', '1.1'),
    ('pplacer', '1.1.alpha16'),
    ('gdata', '2.0.17', versionsuffix),
    ('Cytoscape', '2.7.0', '-Java-1.7.0_60', True),
    ('ParsInsert', '1.04'),
    ('SourceTracker', '0.9.6', '', True),
]

moduleclass = 'bio'
