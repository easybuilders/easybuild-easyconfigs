name = 'QIIME'
version = '1.8.0'

homepage = 'http://qiime.sourceforge.net/'
description = """QIIME (canonically pronounced 'Chime') is a pipeline for performing microbial community analysis
 that integrates many third party tools which have become standard in the field."""

toolchain = {'name': 'ictce', 'version': '5.5.0'}

source_urls = ['https://github.com/biocore/qiime/archive/']
sources = ['%(version)s.tar.gz']

python = 'Python'
pythonver = '2.7.7'
versionsuffix = '-%s-%s' % (python, pythonver)

dependencies = [
    (python, pythonver),
    ('PyNAST', '1.2.2', versionsuffix),
    ('UCLUST', '1.2.22q', '-i86linux64', True),
    ('biom-format', '1.3.1', versionsuffix),
    ('qcli', '0.1.0', versionsuffix),
    ('matplotlib', '1.3.1', versionsuffix),
    ('Emperor', '0.9.3', versionsuffix),
    ('FastTree', '2.1.7'),
    ('CD-HIT', '4.6.1', '-2012-08-27'),
    ('MUSCLE', '3.8.31'),
    ('BLAST', '2.2.26', '-Linux_x86_64', True),
    ('Java', '1.7.0_60', '', True),
    ('BLAT', '3.5', '-libpng-1.6.9'),
    ('RDP-Classifier', '2.2', '-Java-1.7.0_60', True),
    ('RAxML', '7.7.6', '-hybrid-sse3'),
    ('tax2tree', '1.0', versionsuffix),
    ('R', '3.1.0'),
    ('Mothur', '1.33.3'),
    ('clearcut', '1.0.9'),
    ('microbiomeutil', 'r20110519', '-Perl-5.20.0'),
    ('BWA', '0.7.10'),
    ('Infernal', '1.0.2'),
    ('AmpliconNoise', '1.29'),
    ('USEARCH', '5.2.236-6.1.544', '-i86linux32', True),
    ('rtax', '0.984', '', True),
    ('ea-utils', '1.1.2-686'),
    ('SeqPrep', '1.1'),
]

modextravars = {
    'BLASTMAT': '$EBROOTBLAST/data',
    'PYRO_LOOKUP_FILE': '$EBROOTAMPLICONNOISE/Data/LookUp_E123.dat',
    'SEQ_LOOKUP_FILE': '$EBROOTAMPLICONNOISE/Data/Tran.dat',
}

moduleclass = 'bio'
