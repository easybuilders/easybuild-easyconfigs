easyblock = "Tarball"

name = 'Queue'
version = '3.3-0'
versionsuffix = '-Java-1.7.0_67'

homepage = 'https://www.broadinstitute.org/gatk/guide/article?id=1306'
description = """ GATK-Queue is command-line scripting framework for defining 
 multi-stage genomic analysis pipelines combined with an execution manager that 
 runs those pipelines from end-to-end."""

toolchain = {'name': 'dummy', 'version': ''}

# download requires registration 
# https://www.broadinstitute.org/gatk/download/auth?package=Queue
sources = [SOURCE_TAR_BZ2]

dependencies = [('Java', '1.7.0_67')]

sanity_check_paths = {
    'files': ["Queue.jar"],
    'dirs': [""]
}

modloadmsg = """ 
To execute Queue execute 'java -jar $EBROOTQUEUE/Queue.jar'
"""

moduleclass = 'bio'

