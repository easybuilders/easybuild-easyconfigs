easyblock = 'ConfigureMake'

name = 'Fluxbox'
version = '1.3.7'
homepage = 'http://fluxbox.org/'
description = "Fluxbox is a lightweight window manager for X11"

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}

source_urls = [SOURCEFORGE_SOURCE]
sources = [SOURCELOWER_TAR_GZ]
patches = ['fluxbox-1.3.7_fix_pointer_comparison.patch']
checksums = [
    {'fluxbox-1.3.7.tar.gz': 'c99e2baa06fff1e96342b20415059d12ff1fa2917ade0173c75b2fa570295b9f'},
    {'fluxbox-1.3.7_fix_pointer_comparison.patch': '5dfa31cef24850162de5febd195bbeddb1f809af7a5981f39f3b3f1a7446a737'},
]

builddependencies = [
    ('binutils', '2.42'),
]

dependencies = [
    ('X11', '20240607'),
]

sanity_check_paths = {
    'files': ['bin/fluxbox'],
    'dirs': ['share/fluxbox']
}

sanity_check_commands = ['fluxbox -h']

moduleclass = 'vis'
