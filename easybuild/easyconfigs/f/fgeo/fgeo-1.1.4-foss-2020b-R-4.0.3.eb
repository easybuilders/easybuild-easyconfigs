# This easyconfig was created by the BEAR Software team at the University of Birmingham.
easyblock = 'Bundle'

name = 'fgeo'
version = '1.1.4'
versionsuffix = '-R-%(rver)s'

homepage = "https://cran.r-project.org/package=fgeo"
description = """To help you access, transform, analyze, and visualize ForestGEO data, we developed a collection of R
 packages (<https://forestgeo.github.io/fgeo/>). This package, in particular, helps you to install and load the
 entire package-collection with a single R command, and provides convenient ways to find relevant documentation. Most
 commonly, you should not worry about the individual packages that make up the package-collection as you can access
 all features via this package. To learn more about ForestGEO visit <https://www.forestgeo.si.edu/>."""

toolchain = {'name': 'foss', 'version': '2020b'}

dependencies = [
    ('R', '4.0.3'),
]

exts_defaultclass = 'RPackage'
exts_filter = ("R -q --no-save", "library(%(ext_name)s)")
exts_default_options = {
    'source_urls': [
        'https://cran.r-project.org/src/contrib/Archive/%(name)s',  # package archive
        'https://cran.r-project.org/src/contrib/',  # current version of packages
        'https://cran.freestatistics.org/src/contrib',  # mirror alternative for current packages
    ],
    'source_tmpl': '%(name)s_%(version)s.tar.gz',
}

# Order is important!
exts_list = [
    ('fgeo.tool', '1.2.6', {
        'checksums': ['e1ebe84c51d1a682d4234c591fc9ebe4981eef3eab1c0fd75487c05e3b552136'],
    }),
    ('fgeo.plot', '1.1.10', {
        'checksums': ['3a0cf9c14432dfaa1771d54d614b185b5f3a3c7de631234a48d68eda2623e751'],
    }),
    ('fgeo.analyze', '1.1.14', {
        'checksums': ['52e1e22a06914345ecd139cbe202d2633c1478adcf578a49deced91a0dded55e'],
    }),
    ('fgeo.x', version, {
        'checksums': ['2b770daea71e68b64953e4d44430f8fda5c167296e122996ab8e9c4873d2976b'],
    }),
    (name, version, {
        'checksums': ['0667a66d70d56b8f3dcafdd5d1db1df8cbd6e0d48ce57416bd23d20266a5af2b'],
    }),
]

modextrapaths = {'R_LIBS': ''}

sanity_check_paths = {
    'files': ['fgeo/R/fgeo'],
    'dirs': [],
}

moduleclass = 'data'
