    {'FunGAP-1.1.1_fix-augustus-calls-in-runbreaker.patch':
     '150b6f79f95d0c8abece42231c5dcedf8610a811db9cc63ac6cc047f0dcfdc64'},
]

dependencies = [
    ('Python', '3.10.4'),
    ('Perl', '5.34.1'),
    ('AUGUSTUS', '3.5.0'),
