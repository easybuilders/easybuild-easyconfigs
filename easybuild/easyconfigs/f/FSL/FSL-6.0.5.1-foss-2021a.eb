    'FSLOUTPUTTYPE': 'NIFTI_GZ',
    'FSLMULTIFILEQUIT': 'TRUE',
    'FSLTCLSH': 'tclsh',
    'FSLWISH': 'wish8.6'
}

sanity_check_commands = ["python -c 'import %(namelower)s' "]

moduleclass = 'bio'
