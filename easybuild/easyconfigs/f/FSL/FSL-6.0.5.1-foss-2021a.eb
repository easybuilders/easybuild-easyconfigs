dependencies = [
    ('Python', '3.9.5'),
    ('Boost', '1.76.0'),
    ('libgd', '2.3.1'),
    ('libxml2', '2.9.10'),
    ('libxml++', '2.40.1'),
    ('SQLite', '3.35.4'),
    ('libpng', '1.6.37'),
    ('Tk', '8.6.11'),
    ('NLopt', '2.7.0'),
    ('freeglut', '3.2.1'),
    ('expat', '2.2.9'),
    ('zlib', '1.2.11'),
    ('VTK', '9.0.1'),
    ('GSL', '2.7'),
    ('Qwt', '6.1.5'),
    ('h5py', '3.2.1'),
]

prebuildopts = 'export CPATH=%(installdir)s/fsl/extras/include:${CPATH} &&'

modextrapaths = {'PYTHONPATH': ['fsl/lib/python%(pyshortver)s/site-packages']}

# The executable files 'imglob' and 'imcp' come from fslpy
exts_defaultclass = 'PythonPackage'
exts_default_options = {
    'download_dep_fail': True,
    'use_pip': True,
}

exts_list = [
    ('fslpy', '3.8.1', {
        'installopts': '--prefix=%(installdir)s/fsl',
        'source_urls': ['https://pypi.python.org/packages/source/f/fslpy/'],
        'checksums': ['9314df8695bc185e9bca2771fef8fd561253fdbcd82b477ebdcbaf090b9205de'],
