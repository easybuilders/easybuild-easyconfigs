name = 'FFTW'
version = '3.3.8'
versionsuffix = '-amd-2.0'

homepage = 'https://developer.amd.com/amd-aocl/fftw/'
description = """FFTW is a C subroutine library for computing the discrete Fourier transform (DFT)
 in one or more dimensions, of arbitrary input size, and of both real and complex data.
 AMD FFTW includes selective kernels and routines optimized for the AMD EPYCâ„¢ processor family."""

toolchain = {'name': 'gompi', 'version': '2019a'}
toolchainopts = {'pic': True}

source_urls = ['https://github.com/amd/amd-fftw/archive/']
sources = [{'download_filename': '2.0.tar.gz', 'filename': 'amd-fftw-2.0.tar.gz'}]
checksums = ['277b43aedbb667eda20611f52772d10c37c26b137bc5ff108554bd5f133a5e58']

# https://github.com/amd/amd-fftw/issues/1
with_long_double_prec = False
with_quad_prec = False

configopts = '--enable-amd-opt'

# https://github.com/amd/amd-fftw/issues/2
# configopts += ' --enable-amd-trans'

runtest = 'check'

moduleclass = 'numlib'
