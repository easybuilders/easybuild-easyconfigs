    ('Python', '3.11.3'),
    ('Python-bundle-PyPI', '2023.06'),
    ('SciPy-bundle', '2023.07'),
    ('NASM', '2.16.01'),
    ('cramjam', '2.9.0', '-with-wheels'),
]

use_pip = True
sanity_pip_check = True

exts_list = [
