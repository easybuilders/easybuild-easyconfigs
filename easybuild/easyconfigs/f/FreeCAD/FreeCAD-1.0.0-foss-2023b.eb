configopts = ''
configopts += ' -DENABLE_DEVELOPER_TESTS=NO'
configopts += ' -DBUILD_TEST=NO'
configopts += ' -DBUILD_FLAT_MESH=YES'
configopts += ' -DBUILD_DESIGNER_PLUGIN=YES'
configopts += ' -DBUILD_DRAWING=YES'
configopts += ' -DFREECAD_QT_MAJOR_VERSION=6'
