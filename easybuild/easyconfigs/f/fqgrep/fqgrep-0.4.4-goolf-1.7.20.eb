# Author: Pablo Escobar Lopez
# sciCORE - University of Basel
# SIB Swiss Institute of Bioinformatics 

easyblock = 'MakeCp'

name = 'fqgrep'
version = '0.4.4'

homepage = 'https://github.com/indraniel/fqgrep'
description = """An approximate sequence pattern matcher for FASTQ/FASTA files"""

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['https://github.com/indraniel/fqgrep/archive/']
sources = ['v%(version)s.tar.gz']

dependencies = [
   ('TRE', '0.8.0'),
   ('zlib', '1.2.8'),
]

files_to_copy = [
    (['fqgrep'], 'bin'), 
    'LICENSE',
    'README',
    'scripts'
]

sanity_check_paths = {
    'files': ['bin/fqgrep'],
    'dirs': [],
}

moduleclass = 'bio'
