easyblock = 'RPackage'

name = 'fixest'
version = '0.11.2'
versionsuffix = '-R-%(rver)s'

homepage = 'https://cran.r-project.org/web/packages/fixest/index.html'
description = "Fast and user-friendly estimation of econometric models with multiple fixed-effects."

toolchain = {'name': 'foss', 'version': '2023a'}

source_urls = [
    'https://cran.r-project.org/src/contrib/Archive/%(name)s',  # package archive
    'https://cran.r-project.org/src/contrib/',  # current version of packages
    'https://cran.freestatistics.org/src/contrib',  # mirror alternative for current packages
]
sources = ['%(name)s_%(version)s.tar.gz']
checksums = ['2dee113a0689e5c4dd842c451d35c9a94a5b37536f9484611a877c1ea10e2b65']

dependencies = [
    ('R', '4.3.2'),
    ('R-bundle-CRAN', '2023.12'),
    ('R-bundle-Bioconductor', '3.18', versionsuffix),
    ('dreamerr', '1.4.0', '-R-%(rver)s'),
]


sanity_check_paths = {
    'files': [],
    'dirs': ['%(namelower)s'],
}

sanity_check_commands = ['Rscript -e "library(fixest)"']

moduleclass = 'bio'
