easyblock = 'ConfigureMake'

name = 'FastME'
version = '2.1.6.4'

homepage = 'http://www.atgc-montpellier.fr/fastme/'
description = "FastME: a comprehensive, accurate and fast distance-based phylogeny inference program."

toolchain = {'name': 'GCC', 'version': '14.2.0'}

source_urls = ['https://gite.lirmm.fr/atgc/FastME/-/raw/master/tarball']
sources = [SOURCELOWER_TAR_GZ]
checksums = ['d9f585671d5514de28b8826c0e287e5a59c84d9a1acbf9256322a17b1fbba388']

builddependencies = [
    ('Autotools', '20240712'),
]

preconfigopts = "autoreconf -if && "

sanity_check_paths = {
    'files': ['bin/fastme'],
    'dirs': []
}

sanity_check_commands = ["fastme --help"]

moduleclass = 'bio'
