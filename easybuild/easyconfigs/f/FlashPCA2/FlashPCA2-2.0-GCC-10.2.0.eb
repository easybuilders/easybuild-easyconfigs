easyblock = 'MakeCp'

name = 'FlashPCA2'
version = '2.0'

homepage = 'https://github.com/gabraham/flashpca'
description = """FlashPCA performs fast principal component analysis (PCA) of single nucleotide polymorphism (SNP) data."""

toolchain = {'name': 'GCC', 'version': '10.2.0'}

source_urls = ['https://github.com/gabraham/flashpca/archive/refs/tags']
sources = ['v%(version)s.tar.gz']
patches = ['%(name)s-%(version)s_CPPFLAGS.patch']

dependencies = [
    ('Boost', '1.74.0'),
    ('Eigen', '3.3.8'),
    ('SpectrA', '0.9.0'),
    ('Boost', '1.74.0'),
    ('PLINK2', '20210701-linux_x86_64', '', True),
]

buildopts = 'CXXFLAGS="$CXXFLAGS -DSPECTRA"'

files_to_copy = [
    (["flashpca2"], 'bin'),
    "NOTE", "release"
]

sanity_check_paths = {
    'files': ["bin/flashpca2", "bin/2bwt-builder"],
    'dirs': [],
}

moduleclass = 'bio'

