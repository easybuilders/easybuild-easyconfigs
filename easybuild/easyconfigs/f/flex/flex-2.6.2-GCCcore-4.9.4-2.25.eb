easyblock = 'EB_flex'

name = 'flex'
version = '2.6.2'

homepage = 'http://flex.sourceforge.net/'
description = """
 Flex (Fast Lexical Analyzer) is a tool for generating scanners. A scanner,
 sometimes called a tokenizer, is a program which recognizes lexical patterns
 in text.
"""

toolchain = {'name': 'GCCcore', 'version': '4.9.4-2.25'}
toolchainopts = {'pic': True}

sources = [SOURCELOWER_TAR_GZ]
source_urls = ['http://prdownloads.sourceforge.net/%(namelower)s']

checksums = [
    'cc6d76c333db7653d5caf423a3335239',  # flex-2.6.2.tar.gz
]

builddependencies = [
    # use same binutils version that was used when building GCC toolchain,
    # to 'bootstrap' this binutils (but avoid a cylic loop)
    ('binutils', '2.25', '', True),
    ('Bison', '3.0.4'),
    ('help2man', '1.47.4'),
]

dependencies = [
    ('M4', '1.4.17'),
]

osdependencies = [
    # use system zlib since the system OpenSSL usually requires it
    ('zlib-devel', 'zlib1g-dev'),
]

moduleclass = 'lang'
