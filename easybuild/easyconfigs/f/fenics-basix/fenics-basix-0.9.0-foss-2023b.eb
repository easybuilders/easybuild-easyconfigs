name = 'fenics-basix'
homepage = 'https://github.com/FEniCS/basix'
description = "Basix is a finite element definition and tabulation runtime library"

versionsuffix = ''

easyblock = 'CMakeMake'

# Version and source
version = '0.9.0'
source_urls = ['https://github.com/FEniCS/basix/archive']
sources = ['v%(version)s.tar.gz']

# Toolchain (adjust to match your target system)
toolchain = {'name': 'GCC', 'version': "13.2.0"}

# Build dependencies
builddependencies = [
    ('CMake', '3.27.6'),
]

# Runtime dependencies
dependencies = [
    ('FlexiBLAS', '3.3.1'),
]

srcdir = "cpp"

sanity_check_paths = {
    'files': ['lib/libbasix.so'],
    'dirs': ['include', 'lib'],
}

moduleclass = 'math'
