easyblock = 'PythonBundle'

name = 'FSLeyes'
version = '1.3.3'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://git.fmrib.ox.ac.uk/fsl/fsleyes/fsleyes'
description = "FSLeyes is the FSL image viewer."

toolchain = {'name': 'foss', 'version': '2021a'}

dependencies = [
    ('Python', '3.9.5'),
    ('matplotlib', '3.4.2'),
    ('wxPython', '4.1.1'),
    ('freeglut', '3.2.1'),
    ('NiBabel', '3.2.1'),
    ('Pillow', '8.2.0'),
    ('h5py', '3.2.1'),
    ('PyOpenGL', '3.1.5'),
]

use_pip = True
sanity_pip_check = True

exts_list = [
    ('fslpy', '3.8.2', {
        'modulename': 'fsl',
        'checksums': ['5c1833aa430325644ed103d38793fcc719a2cbe74d42244e40baad45aa254abf'],
    }),
    ('fsleyes-props', '1.7.3', {
        'checksums': ['d4c368be669cc80b786c1e2788ad1eec72b99708a62ebf01add4914d806c0738'],
    }),
    ('fsleyes-widgets', '0.12.2', {
        'checksums': ['2e96078787f8f009751988a9e9ddea3c8658700402584bcc63dccc974698ee9c'],
    }),
    (name, version, {
        'source_tmpl': '%(namelower)s-%(version)s.tar.gz',
        'checksums': ['cc26ed271c11df48978139a451ce85c9baeaa8765e0dbe33d0407cb0e5bd5d51'],
    }),
]

moduleclass = 'vis'
