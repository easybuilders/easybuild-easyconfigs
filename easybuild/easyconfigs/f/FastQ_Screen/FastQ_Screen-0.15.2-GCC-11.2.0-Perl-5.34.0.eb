# This file is an EasyBuild reciPY as per https://github.com/easybuilders/easybuild

easyblock = 'Tarball'

name = 'FastQ_Screen'
version = '0.15.2'
versionsuffix = '-Perl-%(perlver)s'

homepage = 'http://www.bioinformatics.babraham.ac.uk/projects/fastq_screen/'
description = """FastQ Screen allows you to screen a library of sequences in FastQ
 format against a set of sequence databases so you can see if the composition of the
 library matches with what you expect."""

toolchain = {'name': 'GCC', 'version': '11.2.0'}
toolchainopts = {'pic': True}

source_urls = ['https://github.com/StevenWingett/FastQ-Screen/archive']
sources = ['v%(version)s.tar.gz']

fix_perl_shebang_for = ['fastq_screen']

checksums = ['47ef40e8c7fd40058a1f205496f2277e6be6689b704d12e4073de46485f16a8a']

dependencies = [
    ('Bowtie', '1.3.1'),
    ('Bowtie2', '2.4.4'),
    ('BWA', '0.7.17'),
    ('GDGraph', '1.54', versionsuffix),
    ('Perl', '5.34.0'),
]

modextrapaths = {'PATH': ''}

sanity_check_paths = {
    'files': ['%(namelower)s'],
    'dirs': [],
}

sanity_check_commands = [('%(namelower)s -v')]

moduleclass = 'bio'
