# This file is an EasyBuild reciPY as per https://github.com/easybuilders/easybuild

easyblock = 'Tarball'

name = 'FastQ_Screen'
version = '0.14.1'
versionsuffix = '-Perl-%(perlver)s'

homepage = 'http://www.bioinformatics.babraham.ac.uk/projects/%(namelower)s/'
description = """FastQ Screen allows you to screen a library of sequences in FastQ
 format against a set of sequence databases so you can see if the composition of the
 library matches with what you expect."""

toolchain = {'name': 'foss', 'version': '2020a'}
toolchainopts = {'pic': True}

source_urls = ['https://github.com/StevenWingett/FastQ-Screen/archive']
sources = ['v%(version)s.tar.gz']
patches = ['%(name)s-use-EB-Perl.patch']
checksums = [
    '42985e9edc3178008db3f5e914153609cdadb1b880ba2c9214fa1181ba71b4b3',  # v0.14.1.tar.gz
    '509d91be7eeb3958c300f8973ad3fdd4dcfbd81a33c829f508e1e73049332094',  # FastQ_Screen-use-EB-Perl.patch
]

# Upstream hard-codes Perl path
dependencies = [
    ('Bowtie', '1.2.3'),
    ('Bowtie2', '2.4.1'),
    ('BWA', '0.7.17'),
    ('GDGraph', '1.54', versionsuffix),
    ('Perl', '5.30.2'),
]

modextrapaths = {'PATH': ''}

sanity_check_paths = {
    'files': ['%(namelower)s'],
    'dirs': [],
}

sanity_check_commands = [('%(namelower)s -v')]

moduleclass = 'bio'
