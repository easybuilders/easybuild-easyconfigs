easyblock = 'Tarball'

name = 'FastQ_Screen'
version = '0.15.3'

homepage = 'http://www.bioinformatics.babraham.ac.uk/projects/fastq_screen/'
description = """FastQ Screen allows you to screen a library of sequences in FastQ
 format against a set of sequence databases so you can see if the composition of the
 library matches with what you expect."""

toolchain = {'name': 'GCC', 'version': '12.2.0'}
toolchainopts = {'pic': True}

source_urls = ['https://github.com/StevenWingett/FastQ-Screen/archive']
sources = ['v%(version)s.tar.gz']

checksums = ['002750d78ca50fe0f789e24445e10988e16244f81b4f0189bf2fc4ee8b680be5']

dependencies = [
    ('Bowtie', '1.3.1'),
    ('Bowtie2', '2.5.1'),
    ('BWA', '0.7.17'),
    ('Bismark', '0.24.1'),
    ('gzip', '1.12'),
    ('GDGraph', '1.56'),
    ('Perl', '5.36.0'),
]

modextrapaths = {'PATH': ''}

sanity_check_paths = {
    'files': ['%(namelower)s'],
    'dirs': [],
}

sanity_check_commands = [('%(namelower)s -v')]

moduleclass = 'bio'
