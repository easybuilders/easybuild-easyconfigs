# This file is an EasyBuild reciPY as per https://github.com/easybuilders/easybuild

easyblock = 'Tarball'

name = 'FastQ_Screen'
version = '0.16.0'

homepage = 'https://www.bioinformatics.babraham.ac.uk/projects/%(namelower)s/'
description = """FastQ Screen allows you to screen a library of sequences in FastQ
 format against a set of sequence databases so you can see if the composition of the
 library matches with what you expect."""

toolchain = {'name': 'GCC', 'version': '14.3.0'}

github_account = 'StevenWingett'
source_urls = ['https://github.com/StevenWingett/FastQ-Screen/archive']
sources = ['v%(version)s.tar.gz']
checksums = ['4c193cd4755506a1ecb2ae0e325a4d2e47a26ae093786255be46c38a8d8c16ed']

dependencies = [
    ('Perl', '5.40.2'),
    ('GDGraph', '1.56'),
    ('BWA', '0.7.19'),
    ('Bowtie', '1.3.1'),
    ('Bowtie2', '2.5.4'),
]

fix_perl_shebang_for = ['fastq_screen']

modextrapaths = {'PATH': ''}

sanity_check_paths = {
    'files': ['fastq_screen'],
    'dirs': [],
}

sanity_check_commands = ['fastq_screen -v']

moduleclass = 'bio'
