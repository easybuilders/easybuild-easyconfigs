dependencies = [
    ('libX11', '1.6.3'),
    ('libXcursor', '1.1.14'),
    ('libXinerama', '1.1.3'),
    ('Mesa', '11.1.2'),
    ('libGLU', '9.0.0'),
    ('libpng', '1.6.21'),
    ('libjpeg-turbo', '1.4.2'),
    ('xprop', '1.2.2'),
]

sanity_check_paths = {
    'files': ['bin/fltk-config', 'bin/fluid'],
    'dirs': ['lib'],
}

moduleclass = 'vis'

