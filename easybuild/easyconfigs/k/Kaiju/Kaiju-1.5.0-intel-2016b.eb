easyblock = 'MakeCp'

name = 'Kaiju'
version = '1.5.0'

homepage = 'http://kaiju.binf.ku.dk/'
description = """Kaiju is a program for sensitive taxonomic classification of high-throughput
sequencing reads from metagenomic whole genome sequencing experiments"""

toolchain = {'name': 'intel', 'version': '2016b'}
toolchainopts = {'cstd': 'c++11'}

sources = ['v%(version)s.tar.gz']
source_urls = ['https://github.com/bioinformatics-centre/kaiju/archive/']

patches = ['%(name)s-%(version)s-makefile.patch']

start_dir = 'src'

files_to_copy = ['bin']

sanity_check_paths = {
    'files': ['bin/%s' % x for x in ['kaiju', 'kaiju2krona', 'kaijup', 'kaijuReport', 'kaijux']],
    'dirs': []
}

moduleclass = 'bio'
