easyblock = "PackedBinary"

name = 'Kent_tools'
version = '337'

homepage = 'http://genome.cse.ucsc.edu/'
description = """Kent tools: collection of tools used by the UCSC genome browser."""

toolchain = {'name': 'dummy', 'version': 'dummy'}

# download from http://hgdownload.cse.ucsc.edu/admin/exe/linux.x86_64/, and pack into tarball with:
#   mkdir Kent_tools
#   rsync -aP rsync://hgdownload.cse.ucsc.edu/genome/admin/exe/linux.x86_64/ Kent_tools
#   tar cfvz Kent_tools-20130806.tar.gz Kent_tools
source_urls = ['http://hgdownload.soe.ucsc.edu/admin/exe/']
sources = ['userApps.v%(version)s.src.tgz']

checksums = ['f72b858b544f0754c733cc1413acf284']

install_cmd = "cp -r %(builddir)s/userApps/* %(installdir)s && cd %(installdir)s && make"

sanity_check_paths = {
    'files': ['bin/addCols', 'bin/blat', 'bin/getRna', 'bin/liftOver', 'bin/mafGene', 'bin/splitFile', 'bin/twoBitToFa'],
    'dirs': ['kent', 'scripts'],
}

moduleclass = 'bio'
