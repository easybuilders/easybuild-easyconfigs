# Author: Pablo Escobar Lopez
# Swiss Institute of Bioinformatics
# Biozentrum - University of Basel

easyblock = 'MakeCp'

name = 'kmer'
version = 'r1971'
versionsuffix = '-2014-04-11'

homepage = 'http://kmer.sourceforge.net/'
description = """ The kmer package is a suite of tools for DNA sequence analysis. 
 It provides tools for searching (ESTs, mRNAs, sequencing reads); aligning (ESTs, 
 mRNAs, whole genomes); and a variety of analyses based on kmers."""

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ['http://sourceforge.net/code-snapshots/svn/k/km/kmer/code/']
sources = ['%s-code-%s-trunk.zip' % (name, version[1:])]

dependencies = [('bzip2', '1.0.6')]

parallel = 1

makeopts = ' install'

files_to_copy = ["Linux-amd64/*"]
        
sanity_check_paths = {
    'files': ["bin/%s" % x for x in ["sim4db", "leaff", "meryl", "snapper2"]],
    'dirs': ["lib"],
}

moduleclass = 'bio'

