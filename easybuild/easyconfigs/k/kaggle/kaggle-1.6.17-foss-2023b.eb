    }),
    ('python_slugify', '8.0.4', {
        'modulename': 'slugify',
        'source_tmpl': SOURCE_WHL,
        'checksums': ['276540b79961052b66b7d116620b36518847f52d5fd9e3a70164fc8c50faa6b8'],
