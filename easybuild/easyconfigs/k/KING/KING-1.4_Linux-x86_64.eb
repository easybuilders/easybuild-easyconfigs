easyblock = "Tarball"

name = 'KING'
version = '1.4'
versionsuffix = "_Linux-x86_64"

homepage = 'http://people.virginia.edu/~wc9c/KING/'
description = """ KING is a toolset making use of high-throughput SNP data typically 
 seen in a genome-wide association study (GWAS) or a sequencing project. Applications 
 of KING include family relationship inference and pedigree error checking, population 
 substructure identification, forensics, gene mapping, etc. """

toolchain = {'name': 'dummy', 'version': 'dummy'}

source_urls = ['http://people.virginia.edu/~wc9c/KING/']
sources = ['Linux-%(namelower)s.tar.gz']

sanity_check_paths = {
    'files': ["king"],
    'dirs': []
}

# add the installation dir to PATH
modextrapaths = { 
    'PATH': "",
}

moduleclass = 'bio'

