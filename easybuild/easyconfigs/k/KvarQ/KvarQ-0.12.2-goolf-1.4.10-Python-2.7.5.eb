# Swiss Institute of Bioinformatics (SIB)
# Biozentrum - University of Basel

easyblock = "PythonPackage"

name = 'KvarQ'
version = '0.12.2'

homepage = 'http://www.swisstph.ch/kvarq.html'
description = """ The program KvarQ performs rapid in silico genotyping for selected 
 loci (e.g. phylogenetic SNPs, drug resistance mutations) in bacterial genome sequences 
 in FastQ format. Mapping to a whole-genome reference sequence or de novo assembly or 
 the short reads is not necessary. """

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ['https://github.com/kvarq/kvarq/archive/']
sources = ['v%(version)s.tar.gz']

python = 'Python'
pyver = '2.7.5'
pyshortver = '.'.join(pyver.split('.')[:2])

versionsuffix = "-%s-%s" % (python, pyver)

dependencies = [
    (python, pyver),
]

sanity_check_paths = {
    'files': ['bin/kvarq'],
    'dirs': ["lib/python%s/site-packages/kvarq-%s-py%s-linux-x86_64.egg" % (pyshortver, version, pyshortver)],
}

moduleclass = 'bio'
