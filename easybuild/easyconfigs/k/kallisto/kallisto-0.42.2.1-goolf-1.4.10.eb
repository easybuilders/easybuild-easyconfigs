easyblock = "CMakeMake"

name = 'kallisto'
version = '0.42.2.1'

homepage = 'http://pachterlab.github.io/kallisto/'
description = """ kallisto is a program for quantifying abundances of transcripts from 
 RNA-Seq data, or more generally of target sequences using high-throughput sequencing reads. """

toolchain = {'name': 'goolf', 'version': '1.4.10'}

source_urls = ['https://github.com/pachterlab/kallisto/archive/']
sources = ['v%(version)s.tar.gz']

separate_build_dir = True
 
builddependencies = [('CMake', '2.8.12')]

dependencies = [
    ('zlib', '1.2.8'),
    ('HDF5', '1.8.11'),
]

sanity_check_paths = {
    'files': ["bin/kallisto"],
    'dirs': [""],
}

moduleclass = 'bio'
