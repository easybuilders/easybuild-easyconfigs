easyblock = "CMakeMake"

name = 'KisSplice'
version = '2.4.0-p1'

homepage = 'http://kissplice.prabi.fr/'
description = "A local transcriptome assembler for SNPs, indels and AS events"

toolchain = {'name': 'goolf', 'version': '1.7.20'}

source_urls = ['ftp://pbil.univ-lyon1.fr/pub/logiciel/kissplice/download/']
sources = [SOURCELOWER_TAR_GZ]

builddependencies = [('CMake', '2.8.12')]

dependencies = [
    ('Python', '2.7.11'),
    ('zlib', '1.2.8'),
]

sanity_check_paths = { 
    'files': ["bin/kissplice"],
    'dirs': [],
}

# not sure if needed? 
#modextrapaths = {
    #'PATH': 'libexec/kissplice'
#}

moduleclass = 'bio'
