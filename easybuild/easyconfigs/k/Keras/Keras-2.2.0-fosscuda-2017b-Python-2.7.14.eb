dependencies = [
    ('Python', '2.7.14'),
    ('TensorFlow', '1.8.0', versionsuffix),
    ('Theano', '1.0.2', versionsuffix),
    ('h5py', '2.7.1', versionsuffix),
    ('PyYAML', '3.12', versionsuffix),
]

use_pip = True

