dependencies = [
    ('Python', '3.7.2'),
    ('TensorFlow', '1.13.1', versionsuffix),
    ('Theano', '1.0.4'),
    ('h5py', '2.9.0'),
    ('PyYAML', '5.1'),
]

download_dep_fail = True
use_pip = True

moduleclass = 'math'
